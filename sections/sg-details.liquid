{% endif %}

{% if image_ratio == "portrait" %}
  <style>
    .details-image-{{ section.id }} {
     aspect-ratio: 9.6/12; 
    }
  </style>
{% elsif image_ratio == "landscape" %}
  <style>
    .details-image-{{ section.id }} {
     aspect-ratio: 12/7; 
    }
  </style>
{% elsif image_ratio == "square" %}
  <style>
    .details-image-{{ section.id }} {
     aspect-ratio: 12/12; 
    }
  </style>
{% endif %}

{% if details_align == "center" %}
  <style>
    .details-details-{{ section.id }} {
      margin-left: auto;
      margin-right: auto;
    }
  </style>
{% elsif details_align == "right" %}
  <style>
    .details-details-{{ section.id }} {
      margin-left: auto;
    }
  </style>
{% endif %}

<div class="section-{{ section.id }} details-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      {% if heading != blank %}
        <div class="details-heading-{{ section.id }}">{{ heading }}</div>
      {% endif %}
      <div class="details-items-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="details-item-{{ section.id }}">
            {% unless hide_image %}
              <div class="details-image-{{ section.id }}">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | image_url }}" alt="{{ block.setitngs.image.alt }}" {% if lazy %}lazy="loading"{% endif %}>
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              </div>
            {% endunless %}
            {% if block.settings.title != blank %}
              <p class="details-title-{{ section.id }}">{{ block.settings.title }}</p>
            {% endif %}
            {% if block.settings.text != blank %}
              <p class="details-text-{{ section.id }}">{{ block.settings.text }}</p>
            {% endif %}
            {% if block.settings.details != blank %}
              <div class="details-details-{{ section.id }}">{{ block.settings.details }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
</div>

