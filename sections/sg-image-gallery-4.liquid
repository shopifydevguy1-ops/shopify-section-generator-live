{%- style -%}

  {{  text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .gallery-slider-wrapper-{{ section.id }} {
    position: relative;
  }

  .gallery-slider-{{ section.id }} .swiper-wrapper {
    align-items: center !important;
  }

  .gallery-slide-{{ section.id }} {
    box-sizing: border-box !important;
  }

  .gallery-image-{{ section.id }} {
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
    overflow: hidden;
  }

  .gallery-image-{{ section.id }} img,
  .gallery-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gallery-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .gallery-text-{{ section.id }} {
    margin-top: {{ text_mt_mobile }}px;
    text-align: {{ text_align_mobile }};
  }
  
  .gallery-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .gallery-btn-prev-{{ section.id }},
  .gallery-btn-next-{{ section.id }} {
    position: absolute !important;
    top: 50%;
    width: {{ arrow_size_mobile }}px;
    flex-shrink: 0;
    height: {{ arrow_size_mobile }}px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: 50%;
    background: transparent;
    background: {{ arrow_bg_color | hex_to_rgba: 0.8 }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    padding: 0px;
    z-index: 2;
  }

  .gallery-btn-prev-{{ section.id }} {
    left: 10px;
  }

  .gallery-btn-next-{{ section.id }} {
    right: 10px;
  }

  .gallery-btn-prev-{{ section.id }} svg,
  .gallery-btn-next-{{ section.id }} svg,
  .gallery-btn-prev-{{ section.id }} img,
  .gallery-btn-next-{{ section.id }} img {
    height: {{ arrow_icon_size_mobile }}px;
    flex: 0 0 {{ arrow_icon_size_mobile }}px;
  }

  .gallery-btn-next-{{ section.id }} svg {
    transform: rotate(180deg);
    margin-left: 2px;
  }

  .gallery-btn-prev-{{ section.id }} svg {
    margin-left: -2px;
  }

  .gallery-btn-prev-{{ section.id }} svg path,
  .gallery-btn-next-{{ section.id }} svg path {
    stroke: {{ arrow_color }};
    transition: all 0.3s ease 0s;
  }

  .gallery-btn-prev-{{ section.id }}:hover ,
  .gallery-btn-next-{{ section.id }}:hover {
    transition: all 0.3s ease 0s;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
    background: {{ arrow_bg_hover_color }};
  }

  .gallery-btn-prev-{{ section.id }}:hover svg path,
  .gallery-btn-next-{{ section.id }}:hover svg path {
    stroke: {{ arrow_hover_color }};
    transition: all 0.3s ease 0s;
  }

  .gallery-btn-prev-{{ section.id }}.swiper-button-disabled,
  .gallery-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0.3;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .gallery-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ text_align }};
    }

    .gallery-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .gallery-btn-prev-{{ section.id }},
    .gallery-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
    }

    .gallery-btn-prev-{{ section.id }} {
      left: -{{arrow_size | plus: 10 }}px;
    }
  
    .gallery-btn-next-{{ section.id }} {
      right: -{{arrow_size | plus: 10 }}px;
    }

    .gallery-btn-prev-{{ section.id }} svg,
    .gallery-btn-next-{{ section.id }} svg {
      height: {{ arrow_icon_size }}px;
      flex: 0 0 {{ arrow_icon_size }}px;
    }
  }
  
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}rem;
    }
  </style>
{% endunless %}

{% if margin_horizontal_mobile > 0 %}
  <style>
    .section-{{ section.id }} {
      border-left: solid {{ border_color }} {{ border_thickness }}px;
      border-right: solid {{ border_color }} {{ border_thickness }}px;
    }
    
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: 0px;
        border-right: 0px;
      }
    }
  </style>
{% endif %}

{% if margin_horizontal > 0 %}
  <style>
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: solid {{ border_color }} {{ border_thickness }}px;
        border-right: solid {{ border_color }} {{ border_thickness }}px;
      }
    }
  </style>
{% endif %}

{% if text_custom %}
  <style>
    .gallery-text-{{ section.id }} * {
      font-family: {{ text_font.family }}, {{ text_font.fallback_families }};
      font-weight: {{ text_font.weight }};
      font-style: {{ text_font.style }};
    }
  </style>
{% endif %}

{% if arrow_show_mobile %}
    <style>
        .gallery-btn-prev-{{ section.id }},
        .gallery-btn-next-{{ section.id }} {
            display: flex;
        }
    </style>
{% else %}
    <style>
        .gallery-btn-prev-{{ section.id }},
        .gallery-btn-next-{{ section.id }} {
            display: none;
        }
    </style>
{% endif %}

{% if arrow_show_desktop %}
    <style>
        @media(min-width: 1024px) {
            .gallery-btn-prev-{{ section.id }},
            .gallery-btn-next-{{ section.id }} {
                display: flex;
            }
        }
    </style>
{% else %}
    <style>
        @media(min-width: 1024px) {
            .gallery-btn-prev-{{ section.id }},
            .gallery-btn-next-{{ section.id }} {
                display: none;
            }
        }
    </style>
{% endif %}

{% for block in section.blocks %}
  <style>
    .gallery-image-{{ block.id }},
    .gallery-text-{{ block.id }} {
      width: 100%;
      max-width: {{ block.settings.image_width_mobile }}%;
      margin-left: auto;
      margin-right: auto;
    }

    @media(min-width: 1024px) {
      .gallery-image-{{ block.id }},
      .gallery-text-{{ block.id }} {
         max-width:  {{ block.settings.image_width }}%;
      }
    }
  </style>

  {% if block.settings.image_ratio_mobile == "portrait" %}
    <style>
      .gallery-image-{{ block.id }} {
       aspect-ratio: 9.6/12; 
      }
    </style>
  {% elsif block.settings.image_ratio_mobile == "landscape" %}
    <style>
      .gallery-image-{{ block.id }}{
       aspect-ratio: 12/10; 
      }
    </style>
  {% elsif block.settings.image_ratio_mobile == "square" %}
    <style>
      .gallery-image-{{ block.id }} {
       aspect-ratio: 12/12; 
      }
    </style>
  {% else %}
    <style>
      .gallery-image-{{ block.id }} {
       aspect-ratio: auto; 
      }
    </style>
  {% endif %}
  
  {% if block.settings.image_ratio == "portrait" %}
    <style>
      @media(min-width: 1024px) {
       .gallery-image-{{ block.id }} {
         aspect-ratio: 9.6/12; 
        } 
      }
    </style>
  {% elsif block.settings.image_ratio == "landscape" %}
    <style>
      @media(min-width: 1024px) {
        .gallery-image-{{ block.id }}{
         aspect-ratio: 12/10; 
        }
      }
    </style>
  {% elsif block.settings.image_ratio == "square" %}
    <style>
      @media(min-width: 1024px) {
        .gallery-image-{{ block.id }} {
         aspect-ratio: 12/12; 
        }
      }
    </style>
  {% else %}
    <style>
      @media(min-width: 1024px) {
        .gallery-image-{{ block.id }} {
         aspect-ratio: auto; 
        }
      }
    </style>
  {% endif %}
  
{% endfor %}


<div class="section-{{ section.id }} gallery-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      <div class="gallery-slider-wrapper-{{ section.id }}">
        <div class="gallery-slider-{{ section.id }} swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="gallery-slide-{{ section.id }} swiper-slide">
                <div class="gallery-image-{{ section.id }} gallery-image-{{ block.id }}">
                  {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                </div>
                {% if block.settings.text != blank %}
                  <div class="gallery-text-{{ section.id }} gallery-text-{{ block.id }}">
                    {{ block.settings.text }}
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
        <button class="gallery-btn-prev-{{ section.id }}">
          {% if arrow_left != blank %}
              <img src="{{ arrow_left | image_url }}" alt="{{ arrow_left.alt }}">
          {% else %}
              <svg class="theme-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"></path>
              </svg>
          {% endif %}
        </button>
        <button class="gallery-btn-next-{{ section.id }}">
          {% if arrow_right != blank %}
              <img src="{{ arrow_right | image_url }}" alt="{{ arrow_right.alt }}">
          {% else %}
              <svg class="theme-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"></path>
              </svg>
          {% endif %}
        </button>
      </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  function initImageGallery4() {
    const slider = new Swiper(".gallery-slider-{{ section.id }}", {
      speed: 300,
      spaceBetween: 20,
      loop: true,
      navigation: {
        nextEl: '.gallery-btn-next-{{ section.id }}',
        prevEl: '.gallery-btn-prev-{{ section.id }}',
      },
      breakpoints: {
        320: {
          spaceBetween: {{ slider_gap_mobile }},
          slidesPerView: {{ slider_view_mobile }}
        },
        768: {
          spaceBetween: {{ slider_gap_mobile }},
          slidesPerView: {{ slider_view | times: 0.5 | round: 0 }}
        },
        1024: {
          spaceBetween: {{ slider_gap }},
          slidesPerView: {{ slider_view }}
        }
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initImageGallery4);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initImageGallery4);
     document.addEventListener('shopify:section:load', initImageGallery4);
  }
</script>

