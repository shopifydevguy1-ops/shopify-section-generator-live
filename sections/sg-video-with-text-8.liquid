      .section-{{ section.id }} {
        border-left: solid {{ border_color }} {{ border_thickness }}px;
        border-right: solid {{ border_color }} {{ border_thickness }}px;
      }
    }
  </style>
{% endif %}

{% if video_position_mobile == "top" %}
  <style>
    .video-text-video-{{ section.id }} {
        order: 1;
    }

    .video-text-content-{{ section.id }} {
        order: 2;
    }
  </style>
{% else %}
  <style>
    .video-text-video-{{ section.id }} {
        order: 2;
    }

    .video-text-content-{{ section.id }} {
        order: 1;
    }
  </style>
{% endif %}

{% if video_position == "right" %}
  <style>
    @media(min-width: 1024px) {

      .video-text-video-{{ section.id }} {
          order: 2;
      }

      .video-text-content-{{ section.id }} {
          order: 1;
      }
    }
  </style>
{% else %}
  <style>
    @media(min-width: 1024px) {

      .video-text-video-{{ section.id }} {
          order: 1;
      }

      .video-text-content-{{ section.id }} {
          order: 2;
      }
    }
