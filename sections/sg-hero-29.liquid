                              </g>
                              <defs>
                              <clipPath id="clip0_25_4">
                              <rect width="22" height="22" fill="{{ block.settings.stars_color }}" transform="translate(5 5)"/>
                              </clipPath>
                              </defs>
                            </svg>
                          {% endif %}
                          {% if block.settings.stars_count > 1 %}
