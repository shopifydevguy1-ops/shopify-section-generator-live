                                    <stop offset="50%" stop-color="{{ block.settings.stars_bg_color }}" />
                                    <stop offset="50%" stop-color="{{ block.settings.stars_bg_half_color }}" />
                                    <stop offset="100%" stop-color="{{ block.settings.stars_bg_half_color }}" />
