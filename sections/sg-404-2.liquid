                    {% endif %}
                </a>
            {% endif %} 

        {% elsif block.type == "scrolling" %}

          <div class="error-scrolling-{{ block.id }}">
            <div class="error-scrolling-wrap-{{ block.id }}">
              <div class="error-scrolling-list-{{ block.id }} error-scrolling-list-{{ section.id }}">
                {% for item in (1..10) %}
                  <div class="error-scrolling-item-{{ block.id }}">
                    {% if block.settings.text != blank %}
                      <p class="error-scrolling-text-{{ block.id }}">{{ block.settings.text }}</p>
                    {% endif %}
                    {% unless block.settings.hide_image %}
                      <div class="error-scrolling-image-{{ block.id }}">
                        {% if block.settings.image != blank %}
                          <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image }}" {% if lazy %}loading="lazy"{% endif %}>
                        {% else %}
                          {{ 'image' | placeholder_svg_tag }}
                        {% endif %}
                      </div>
                    {% endunless %}
                  </div>
                {% endfor %}
              </div>
              <div class="error-scrolling-list-{{ block.id }} error-scrolling-list-{{ section.id }}">
                {% for item in (1..10) %}
                  <div class="error-scrolling-item-{{ block.id }}">
                    {% if block.settings.text != blank %}
                      <p class="error-scrolling-text-{{ block.id }}">{{ block.settings.text }}</p>
                    {% endif %}
                    {% unless block.settings.hide_icon %}
                      <div class="error-scrolling-icon-{{ block.id }}">
                        {% if block.settings.icon != blank %}
