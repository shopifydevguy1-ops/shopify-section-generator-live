<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

{%- liquid 
  assign padding_horizontal = section.settings.padding_horizontal
  assign padding_horizontal_mobile = section.settings.padding_horizontal_mobile
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign border_color = section.settings.border_color
  assign border_thickness = section.settings.border_thickness
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign margin_horizontal_mobile = section.settings.margin_horizontal_mobile
  assign margin_horizontal = section.settings.margin_horizontal
  assign background_color = section.settings.background_color
  assign full_width = section.settings.full_width
  assign content_width = section.settings.content_width
  assign lazy = section.settings.lazy
  assign section_radius = section.settings.section_radius

  assign hero_height = section.settings.hero_height
  assign hero_fixed_height = section.settings.hero_fixed_height
  assign hero_fixed_height_mobile = section.settings.hero_fixed_height_mobile

  assign autoplay = section.settings.autoplay
  assign autoplay_delay = section.settings.autoplay_delay

  assign overlay = section.settings.overlay
  assign overlay_color = section.settings.overlay_color

  assign use_gradient = section.settings.use_gradient

  assign arrow_size = section.settings.arrow_size
  assign arrow_size_mobile = section.settings.arrow_size_mobile
  assign arrow_show_desktop = section.settings.arrow_show_desktop
  assign arrow_show_mobile = section.settings.arrow_show_mobile

  assign dots_size = section.settings.dots_size
  assign dots_size_mobile = section.settings.dots_size_mobile
  assign dots_show_desktop = section.settings.dots_show_desktop
  assign dots_show_mobile = section.settings.dots_show_mobile
  assign dots_color = section.settings.dots_color

  assign content_align = section.settings.content_align
  assign content_align_mobile = section.settings.content_align_mobile

  assign content_horizontal_align = ""
  if content_align == "center"
    assign content_horizontal_align = "center"
  elsif content_align == "right"
    assign content_horizontal_align = "end"
  else
    assign content_horizontal_align = "start"
  endif

  assign content_horizontal_align_mobile = ""
  if content_align_mobile == "center"
    assign content_horizontal_align_mobile = "center"
  elsif content_align_mobile == "right"
    assign content_horizontal_align_mobile = "end"
  else
    assign content_horizontal_align_mobile = "start"
  endif

  assign heading_custom = section.settings.heading_custom
  assign heading_font = section.settings.heading_font
  assign heading_size = section.settings.heading_size
  assign heading_size_mobile = section.settings.heading_size_mobile
  assign heading_height = section.settings.heading_height
  assign heading_mt = section.settings.heading_mt
  assign heading_mt_mobile = section.settings.heading_mt_mobile

  assign sub_heading_custom = section.settings.sub_heading_custom
  assign sub_heading_font = section.settings.sub_heading_font
  assign sub_heading_size = section.settings.sub_heading_size
  assign sub_heading_size_mobile = section.settings.sub_heading_size_mobile
  assign sub_heading_height = section.settings.sub_heading_height

  assign link_custom = section.settings.link_custom
  assign link_font = section.settings.link_font
  assign link_size = section.settings.link_size
  assign link_size_mobile = section.settings.link_size_mobile
  assign link_height = section.settings.link_height
  assign link_mt = section.settings.link_mt
  assign link_mt_mobile = section.settings.link_mt_mobile
  
-%}

{%- style -%}

  {{ heading_font | font_face: font_display: 'swap' }}
  {{ sub_heading_font | font_face: font_display: 'swap' }}  
  {{ link_font | font_face: font_display: 'swap' }}  
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
    position: relative;
  }

  .hero-body-{{ section.id }} {
    position: relative;
    height: 100%;    
  }

  .hero-slider-{{ section.id }} {
    width: 100% !important;
    height: 100% !important;
  }

  .hero-slider-{{ section.id }} .swiper-wrapper {
    align-items: stretch !important;
  }

  .hero-slide-{{ section.id }} {
    box-sizing: border-box !important;
    position: relative;
    height: auto !important;
  }

  .hero-slide-{{ section.id }} img,
  .hero-slide-{{ section.id }} svg,
  .hero-slide-{{ section.id }} iframe,
  .hero-slide-{{ section.id }} video {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    box-shadow: none;
    border: 0px;
  }

  .hero-slide-{{ section.id }}:after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: {{ overlay_color | hex_to_rgba: overlay }};
    z-index: 1;
  }

  .hero-image-desktop-{{ section.id }} {
    display: none !important;
  }

  .hero-image-mobile-{{ section.id }} {
    display: block !important;
  }

  .hero-thumbs-slider-wrapper-{{ section.id }} {
    width: 100%;
    position: absolute;
    bottom: 50px;
    left: 0;
    z-index: 2;
    padding: 0px 20px;
  }

  .hero-thumbs-slider-{{ section.id }} {
    width: 100% !important;
  }

  .hero-thumbs-slide-{{ section.id }} {
    box-sizing: border-box !important;
    width: 100% !important;
    padding: 0 !important;
    display: flex !important;
    flex-direction: column;
    justify-content: flex-end;
    align-items: {{ content_horizontal_align_mobile }};
    cursor: default;
    -webkit-user-select: none;
    user-select: none;
    opacity: 0;
    transition: all 0.25s ease 0s;
  }

  .hero-thumbs-slide-{{ section.id }}.swiper-slide-thumb-active {
    opacity: 1;
    transition: all 0.25s ease 0s;
  }

  .hero-thumbs-slide-border-{{ section.id }} {
    display: block !important;
    margin-top: 10px;
    width: 100%;
    height: 2px;
  }

  .hero-thumbs-slider-{{ section.id }} .swiper-wrapper {
    justify-content: start !important;
  }

  .hero-heading-{{ section.id }} {
    margin: 0;  
    text-align: {{ content_align_mobile }};
    margin-top: {{ heading_mt_mobile }}px;
    font-size: {{ heading_size_mobile }}px;
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
  }
  
  .hero-subheading-{{ section.id }} {
    margin: 0;
    text-align: {{ content_align_mobile }};
    font-size: {{ sub_heading_size_mobile }}px;
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
  }

  .hero-link-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 4px;
    max-width: fit-content;
    margin: 0;  
    margin-top: {{ link_mt_mobile }}px;
    font-size: {{ link_size_mobile }}px;
    line-height: {{ link_height }}%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
  }

  .hero-link-{{ section.id }} svg {
    display: block;
    width: 15px;
    flex-shrink: 0;
  }

  .hero-btn-prev-{{ section.id }},
  .hero-btn-next-{{ section.id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    display: flex;
    width: {{ arrow_size_mobile }}px;
    background: transparent;
    border: 0px;
    cursor: pointer;
    padding: 0px;
  }

  .hero-btn-prev-{{ section.id }} svg,
  .hero-btn-next-{{ section.id }} svg {
    display: block;
    width: 100%;
  }

  .hero-btn-prev-{{ section.id }} svg {
    transform: rotate(180deg);
  }

  .hero-btn-prev-{{ section.id }} {
    left: 20px;
  }

  .hero-btn-next-{{ section.id }} {
    right: 20px;
  }

  .hero-btn-prev-{{ section.id }}.swiper-button-disabled,
  .hero-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0.5;
  }

  .hero-pagination-{{ section.id }} {
    position: absolute !important;
    bottom: 12px !important;
    top: unset !important;
    left: 50% !important;
    z-index: 2 !important;
    transform: translateX(-50%) !important;
    margin: 0px auto !important;
    width: 100% !important;
    max-width: fit-content;
    justify-content: center;
    align-items: center;
  }

  .hero-pagination-{{ section.id }} .swiper-pagination-bullet {
    width: {{ dots_size_mobile }}px !important;
    height: {{ dots_size_mobile }}px !important;
    border: 0px !important;
    background-color: var(--dots-color) !important;
    border-radius: 50%;
    opacity: 0.4 !important;
    transition: all 0.25s ease 0s;
  }

  .hero-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
    opacity: 1 !important;
    transition: all 0.25s ease 0s;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .hero-image-desktop-{{ section.id }} {
      display: block !important;
    }
  
    .hero-image-mobile-{{ section.id }} {
      dispaly: none !important;
    }

    .hero-thumbs-slide-{{ section.id }} {
      align-items: {{ content_horizontal_align }};
      width: calc(25% - 25px) !important;
      margin-right: 25px !important;
      opacity: 0.3;
    }

    .hero-thumbs-slide-{{ section.id }}:hover {
      opacity: 1;
      transition: all 0.25s ease 0s;
    }

    .hero-subheading-{{ section.id }} {
      text-align: {{ content_align }};
      font-size: {{ sub_heading_size }}px;
    }

    .hero-heading-{{ section.id }} {
      margin-top: {{ heading_mt }}px;
      text-align: {{ content_align }};
      font-size: {{ heading_size }}px;
    }   

    .hero-link-{{ section.id }} {
      margin-top: {{ link_mt }}px;
      font-size: {{ link_size }}px;
    }

    .hero-link-{{ section.id }} svg {
      transition: all 0.25s ease 0s;
    }

    .hero-link-{{ section.id }}:hover svg {
      transform: translateX(5px);
      transition: all 0.25s ease 0s;
    }

    .hero-btn-prev-{{ section.id }},
    .hero-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
    }

    .hero-btn-prev-{{ section.id }} {
      left: 50px;
    }
  
    .hero-btn-next-{{ section.id }} {
      right: 50px;
    }

    .hero-pagination-{{ section.id }} .swiper-pagination-bullet {
      width: {{ dots_size }}px !important;
      height: {{ dots_size }}px !important;
    }

    .hero-thumbs-slider-{{ section.id }} .swiper-wrapper {
      justify-content: center !important;
      align-items: flex-end;
    }
  }
  
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}px;
    }
  </style>
{% endunless %}

{% if margin_horizontal_mobile > 0 %}
  <style>
    .section-{{ section.id }} {
      border-left: solid {{ border_color }} {{ border_thickness }}px;
      border-right: solid {{ border_color }} {{ border_thickness }}px;
    }
    
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: 0px;
        border-right: 0px;
      }
    }
  </style>
{% endif %}

{% if margin_horizontal > 0 %}
  <style>
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: solid {{ border_color }} {{ border_thickness }}px;
        border-right: solid {{ border_color }} {{ border_thickness }}px;
      }
    }
  </style>
{% endif %}

{% if heading_custom %}
  <style>
    .hero-heading-{{ section.id }} {
      font-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};
      font-weight: {{ heading_font.weight }};
      font-style: {{ heading_font.style }};
    }
  </style>
{% endif %}

{% if sub_heading_custom %}
  <style>
    .hero-subheading-{{ section.id }} {
      font-family: {{ sub_heading_font.family }}, {{ sub_heading_font.fallback_families }};
      font-weight: {{ sub_heading_font.weight }};
      font-style: {{ sub_heading_font.style }};
    }
  </style>
{% endif %}

{% if link_custom %}
  <style>
    .hero-link-{{ section.id }} {
      font-family: {{ link_font.family }}, {{ link_font.fallback_families }};
      font-weight: {{ link_font.weight }};
      font-style: {{ link_font.style }};
    }
  </style>
{% endif %}

{% if hero_height == "adapt_first" %}
  <style>
    .section-{{ section.id }}-settings {
      height: 100%;
    }

    .hero-{{ section.id }} {
      height: 95vh;
    }

    .hero-bg-image-{{ section.id }},
    .hero-bg-video-{{ section.id }} {
      height: 95vh;
    }
    @media(min-width: 1024px) {      
      .section-{{ section.id }}-settings {
        height: 100%;
      }

      .hero-{{ section.id }} {
        height: 95vh;
      }

      .hero-bg-image-{{ section.id }},
      .hero-bg-video-{{ section.id }} {
        height: 95vh;
      }
    }
  </style>
{% elsif hero_height == 'fixed_height' %}  
  <style>      
    .section-{{ section.id }}-settings {
      height: 100%;
    }

    .hero-{{ section.id }} {
      height: {{ hero_fixed_height_mobile }}px;
    }

    .hero-bg-image-{{ section.id }},
    .hero-bg-video-{{ section.id }} {
      height: {{ hero_fixed_height_mobile }}px;
    }

    @media(min-width: 1024px) {
      .section-{{ section.id }}-settings {
        height: 100%;
      }

      .hero-{{ section.id }} {
        height: {{ hero_fixed_height }}px;
      }

      .hero-bg-image-{{ section.id }},
      .hero-bg-video-{{ section.id }} {
        height: {{ hero_fixed_height }}px;
      }
    }
  </style>
{% endif %}

{% if use_gradient %}
  <style>
    .hero-body-{{ section.id }}:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      z-index: 1;
      transition: opacity cubic-bezier(0.65, 0.05, 0.36, 1) .3s;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      width: 100%;
      height: 100%;
      padding: 0;
      pointer-events: none;
      background: linear-gradient(rgb(255 255 255 / 0%) 43%, rgb(255 255 255 / 0) 50%, rgb(255 255 255 / 100%) 100%);
    }
  </style>
{% endif %}

{% if arrow_show_mobile %}
  <style>
    .hero-btn-prev-{{ section.id }},
    .hero-btn-next-{{ section.id }} {
      display: flex;
    }
  </style>
{% else %}
  <style>
    .hero-btn-prev-{{ section.id }},
    .hero-btn-next-{{ section.id }} {
      display: none;
    }
  </style>
{% endif %}

{% if arrow_show_desktop %}
  <style>
    @media(min-width: 1024px) {
      .hero-btn-prev-{{ section.id }},
      .hero-btn-next-{{ section.id }} {
        display: flex;
      }
    }
  </style>
{% else %}
  <style>
    @media(min-width: 1024px) {
      .hero-btn-prev-{{ section.id }},
      .hero-btn-next-{{ section.id }} {
        display: none;
      }
    }
  </style>
{% endif %}

{% if dots_show_mobile %}
  <style>
    .hero-pagination-{{ section.id }} {
      display: flex !important;
    }
  </style>
{% else %}
  <style>
    .hero-pagination-{{ section.id }} {
      display: none !important;
    }
  </style>
{% endif %}

{% if dots_show_desktop %}
  <style>
    @media(min-width: 1024px) {
      .hero-pagination-{{ section.id }} {
        display: flex !important;
      }
    }
  </style>
{% else %}
  <style>
    @media(min-width: 1024px) {
      .hero-pagination-{{ section.id }} {
        display: none !important;
      }
    }
  </style>
{% endif %}

<div class="section-{{ section.id }} hero-{{ section.id }}" style="background-color:{{ background_color }};">
    <div class="section-{{ section.id }}-settings">
      <div class="hero-body-{{ section.id }}">
        <div class="hero-pagination-{{ section.id }} swiper-pagination" style="--dots-color: {{ section.blocks[0].settings.dots_color }};"></div>
        <div class="hero-slider-{{ section.id }} swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <{% if block.settings.url != blank %}a href="{{ block.settings.url }}"{% else %}div{% endif %} class="hero-slide-{{ section.id }} swiper-slide"
                data-heading-color="{{ block.settings.heading_color }}"
                data-subheading-color="{{ block.settings.sub_heading_color }}"
                data-link-color="{{ block.settings.link_color }}"
                data-arrow-color="{{ block.settings.arrow_color }}"
                data-dots-color="{{ block.settings.dots_color }}"
                data-border-color="{{ block.settings.border_color }}">
                {% if block.settings.media_type == "image" %}
                  {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}loading="lazy"{% endif %}  {% if block.settings.image_mobile != blank %}class="hero-image-desktop-{{ section.id }}"{% endif %}>
                    {% if block.settings.image_mobile != blank %}
                      <img src="{{ block.settings.image_mobile | image_url }}" alt="{{ block.settings.image_mobile.alt }}" {% if lazy %}loading="lazy"{% endif %} class="hero-image-mobile-{{ section.id }}">
                    {% endif %}
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                {% else %}
                  {% assign video_id = block.settings.video.id | default: block.settings.video_url.id %}
                  {% assign loop = '&loop=1&playlist=' | append: video_id %}
                  {%- if block.settings.video == null and block.settings.video_url != null -%}
                  {%- if block.settings.video_url.type == 'youtube' -%}
                  <iframe
                    {% if lazy %}data-{% endif %}src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&mute=1&autoplay=1&controls=0&showinfo=0{{ loop }}"                    
                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                    class="lazy"
                  ></iframe>
                  {%- else -%}
                  <iframe
                    {% if lazy %}data-{% endif %}src="https://player.vimeo.com/video/{{ video_id }}?enablejsapi=1&mute=1&muted=1&autoplay=1&controls=0&showinfo=0{{ loop }}" 
                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                    class="lazy"
                  ></iframe>
                  {% endif %}
                  {% else %}
                    <video {% if lazy %}data-{% endif %}src="{{ block.settings.video.sources[1].url }}" autoplay muted playsinline preload="none" loop class="lazy"></video>
                  {% endif %}
                {% endif %}
              </{% if block.settings.url != blank %}a{% else %}div{% endif %}>
            {% endfor %}
          </div>
          <button class="hero-btn-prev-{{ section.id }}">
