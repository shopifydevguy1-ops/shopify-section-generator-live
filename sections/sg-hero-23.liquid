<script>
  function initHero23() {
    let thumbsSwiper;
    let slider;

    function initializeSwipers() {
      // Уничтожаем существующие слайдеры, если они уже есть
      if (thumbsSwiper) thumbsSwiper.destroy(true, true);
      if (slider) slider.destroy(true, true);

      // Инициализация thumbsSwiper
      thumbsSwiper = new Swiper('.hero-thumbs-slider-{{ section.id }}', {
        slidesPerView: 'auto',
        threshold: 2,
        direction: 'horizontal',
        watchSlidesProgress: true,
        slideToClickedSlide: true,
        allowTouchMove: window.innerWidth >= 1024,
      });

      // Инициализация основного слайдера
      slider = new Swiper(".hero-slider-{{ section.id }}", {
        speed: 300,
        spaceBetween: 20,
        loop: true,
        {% if autoplay %}
        autoplay: {
          delay: {{ autoplay_delay }}000,
        },
        {% endif %}
        thumbs: {
          swiper: thumbsSwiper, // Связываем слайдеры
        },
        navigation: {
          nextEl: '.hero-btn-next-{{ section.id }}',
          prevEl: '.hero-btn-prev-{{ section.id }}',
        },
        pagination: {
          el: '.hero-pagination-{{ section.id }}',
          type: 'bullets',
          clickable: true,
        },
        on: {
          slideChange: function () {
            const activeSlide = this.slides[this.activeIndex];
            if (activeSlide) {
              let headingColor = activeSlide.getAttribute('data-heading-color');
              let subHeadingColor = activeSlide.getAttribute('data-subheading-color');
              let linkColor = activeSlide.getAttribute('data-link-color');
              let arrowColor = activeSlide.getAttribute('data-arrow-color');
              let dotsColor = activeSlide.getAttribute('data-dots-color');
              let bordersColor = activeSlide.getAttribute('data-border-color');

              document.querySelectorAll('.hero-heading-{{ section.id }}').forEach(el => {
                el.style.color = headingColor;
              });
              document.querySelectorAll('.hero-subheading-{{ section.id }}').forEach(el => {
                el.style.color = subHeadingColor;
              });
              document.querySelectorAll('.hero-link-{{ section.id }}').forEach(el => {
                el.style.color = linkColor;
              });
              document.querySelectorAll('.hero-btn-prev-{{ section.id }} svg').forEach(el => {
                el.style.color = arrowColor;
              });
              document.querySelectorAll('.hero-btn-next-{{ section.id }} svg').forEach(el => {
                el.style.color = arrowColor;
              });
              document.querySelectorAll('.hero-pagination-{{ section.id }}').forEach(el => {
                el.style.setProperty("--dots-color", dotsColor);
              });
              document.querySelectorAll('.hero-thumbs-slide-border-{{ section.id }}').forEach(el => {
                el.style.backgroundColor = bordersColor;
              });
            }
          },
        },
      });
    }

    // Инициализируем слайдеры при загрузке страницы
    initializeSwipers();

    // Обработчик изменения размера окна
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        initializeSwipers();
      }, 300); // Дебаунс для оптимизации
    });
  }

  document.addEventListener('DOMContentLoaded', initHero23);

  if (Shopify.designMode) {
    document.addEventListener('shopify:section:unload', initHero23);
    document.addEventListener('shopify:section:load', initHero23);
  }
</script>



