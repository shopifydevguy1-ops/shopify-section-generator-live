  <style>
    .works-body-{{ section.id }} {
      grid-template-areas: 
        "media"
        "faq";     
    }
  </style>
{% elsif layout_mobile == 'faq_media' %}
  <style>
    .works-body-{{ section.id }} {
      grid-template-areas: 
        "faq"
        "media";     
    }
  </style>
{% endif %}

{% if layout == 'media_faq'%}
  <style>
    @media(min-width: 1024px) {
      .works-body-{{ section.id }} {
        grid-template-areas: "media faq";    
      }
    }    
  </style>
{% elsif layout == 'faq_media' %}
  <style>
    @media(min-width: 1024px) {
      .works-body-{{ section.id }} {
