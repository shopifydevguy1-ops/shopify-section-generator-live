{%- style -%}

  {{  button_font | font_face: font_display: 'swap' }}
  {{  product_button_font | font_face: font_display: 'swap' }}
  {{  heading_font | font_face: font_display: 'swap' }}
  {{  price_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .featured-body-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: {{ body_gap_mobile }}px;
    position: relative;
  }

  .featured-collection-{{ section.id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ collection_image_radius }}px;
    border: {{ collection_image_border_thickness }}px solid {{ collection_image_border_color }};
    display: flex;
    align-items: center;
  }

  .featured-collection-image-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .featured-collection-image-{{ section.id }} img,
  .featured-collection-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-collection-image-{{ section.id }}::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ overlay_color | hex_to_rgba: overlay }};
    z-index: 1;
  }

  .featured-collection-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    max-width: {{ button_width_mobile }}px;
    margin: 0;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 0.25s ease 0s;
    position: relative;
    font-weight: 700;
    z-index: 2;
  }

  .featured-collection-button-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .featured-collection-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .featured-collection-button-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .featured-collection-button-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .featured-products-{{ section.id }} {
    display: none;
    grid-template-columns: repeat({{ products_row }}, 1fr);
    gap: {{ products_gap }}px;
    align-items: start;
  }

  .featured-product-{{ section.id }} {
    box-sizing: border-box !important;
  }

  .featured-product-image-{{ section.id }} {
    overflow: hidden;
    border-radius: {{ product_image_radius }}px;
    border: {{ product_image_border_thickness }}px solid {{ product_image_border_color }};
    position: relative;
  }

  .featured-product-image-{{ section.id }} img,
  .featured-product-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-product-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .featured-product-image-{{ section.id }} form {
    position: absolute;
    left: 10px;
    right: 10px;
    bottom: 10px;
    transition: all 0.4s ease 0s;
    z-index: 0;
  }

  .featured-product-image-with-link-{{ section.id }} .featured-product-button-{{ section.id }} {
    width: auto;
    position: absolute;
    left: 10px;
    right: 10px;
    bottom: 10px;
    transition: all 0.4s ease 0s;
  }

  .featured-product-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    font-size: {{ product_button_size_mobile }}px;
    color: {{ product_button_color }};
    line-height: {{ product_button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ product_button_padding_vertical_mobile }}px {{ product_button_padding_horizontal_mobile }}px;
    border-radius: {{ product_button_radius }}px;
    transition: all 0.25s ease 0s;
    position: relative;
    font-weight: 700;
    z-index: 2;
    background-color: {{ product_button_bg_color }};
    border: {{ product_button_border_thickness }}px solid {{ product_button_border_color }};
    cursor: pointer;
  }

  .featured-product-button-{{ section.id }}:hover {
    color: {{ product_button_hover_color }};
    background-color: {{ product_button_bg_hover_color }};
    border: {{ product_button_border_thickness }}px solid {{ product_button_border_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .featured-product-heading-{{ section.id }} {
    display: block;
    width: 100%;
    text-align: {{ heading_align_mobile }};
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    font-style: normal;
    z-index: 1;
    position: relative;
  }

  .featured-product-price-{{ section.id }} {
    margin-top: {{ price_mt_mobile }}px;
    display: flex;
    align-items: center;
    gap: 5px;
    z-index: 1;
    position: relative;
  }

  .featured-product-price-{{ section.id }} * {
    margin: 0;
    font-size: {{ price_size_mobile }}px;
    color: {{ price_color }};
    line-height: {{ price_height }}%;
    text-transform: unset;
    font-style: normal;
  }

  .featured-product-compare-price-{{ section.id }} {
    opacity: 0.8;
    font-size: {{ price_size | times: 0.8 }}px;
    color: {{ price_original_color }};
    text-decoration: line-through !important;
  }

  .featured-slider-wrapper-{{ section.id }} {
    min-width: 0;
  }


  .featured-scrollbar-{{ section.id }} {
    position: static !important;
    margin-top: {{ scrollbar_mt }}px;
    background-color: {{ scrollbar_bg_color }};
  }

  .featured-scrollbar-{{ section.id }} .swiper-scrollbar-drag {
    display: block !important;
    background-color: {{ scrollbar_drag_color }};
  }

  .has-secondary-{{ section.id }} {
    position: relative;
  }

  .featured-second-image-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 0 auto;
    display: none !important;
  }

  @keyframes fade-in-{{ section.id }} {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .featured-body-{{ section.id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ body_gap }}px;
    }

    .featured-collection-{{ section.id }} {
      position: sticky;
      top: 0;
    }

    .featured-collection-button-{{ section.id }} {
      max-width: {{ button_width }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }

    .featured-products-{{ section.id }} {
      display: grid;
    }

    .featured-product-{{ section.id }} form {
      transform: translateY(30%);
      opacity: 0;
      transition: all 0.4s ease 0s;
    }

    .featured-product-{{ section.id }}:hover form {
      transform: translateY(0%);
      opacity: 1;
      transition: all 0.4s ease 0s;
    }

    .featured-product-image-with-link-{{ section.id }} .featured-product-button-{{ section.id }} {
      transform: translateY(30%);
      opacity: 0;
      transition: all 0.4s ease 0s;
    }

    .featured-product-{{ section.id }}:hover .featured-product-image-with-link-{{ section.id }} .featured-product-button-{{ section.id }} {
      transform: translateY(0%);
      opacity: 1;
      transition: all 0.4s ease 0s;
    }

    .featured-product-button-{{ section.id }} {
      padding: {{ product_button_padding_vertical }}px {{ product_button_padding_horizontal }}px;
      font-size: {{ product_button_size }}px;
    }

    .featured-product-heading-{{ section.id }} {
      margin-top: {{ heading_mt }}px;
      text-align: {{ heading_align }};
      font-size: {{ heading_size }}px;
    }

    .featured-product-price-{{ section.id }} {
      margin-top: {{ price_mt }}px;
    }

    .featured-product-price-{{ section.id }} * {
      font-size: {{ price_size }}px;
    }

    .featured-slider-wrapper-{{ section.id }} {
      display: none;
    }

    .has-secondary-{{ section.id }}:hover .featured-first-image-{{ section.id }} {
      display: none;
    }
  
    .has-secondary-{{ section.id }}:hover .featured-second-image-{{ section.id }} {
      display: block !important;
      position: static !important;
      -webkit-animation: fade-in-{{ section.id }} 0.5s linear;
      animation: fade-in-{{ section.id }} 0.5s linear;
    }
  }
  
{%- endstyle -%}

