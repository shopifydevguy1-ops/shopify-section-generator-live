  assign percent_height = section.settings.percent_height

  assign detail_title_size = section.settings.detail_title_size
  assign detail_title_size_mobile = section.settings.detail_title_size_mobile
  assign detail_title_color = section.settings.detail_title_color
  assign detail_title_custom = section.settings.detail_title_custom
  assign detail_title_font = section.settings.detail_title_font
  assign detail_title_height = section.settings.detail_title_height

  assign detail_text_size = section.settings.detail_text_size
  assign detail_text_size_mobile = section.settings.detail_text_size_mobile
  assign detail_text_color = section.settings.detail_text_color
