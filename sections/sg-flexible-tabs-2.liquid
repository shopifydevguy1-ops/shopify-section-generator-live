  assign answer_height = section.settings.answer_height
  assign answer_padding_top = section.settings.answer_padding_top

  assign detail_padding_vertical_mobile = section.settings.detail_padding_vertical_mobile
  assign detail_padding_vertical = section.settings.detail_padding_vertical
  assign detail_padding_horizontal_mobile = section.settings.detail_padding_horizontal_mobile
  assign detail_padding_horizontal = section.settings.detail_padding_horizontal
  assign detail_radius = section.settings.detail_radius
  assign detail_border_thickness = section.settings.detail_border_thickness
  assign detail_border_color = section.settings.detail_border_color
