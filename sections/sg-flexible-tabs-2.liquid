  assign detail_text_font = section.settings.detail_text_font
  assign detail_text_height = section.settings.detail_text_height
  
-%}

{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  question_font | font_face: font_display: 'swap' }}
  {{  answer_font | font_face: font_display: 'swap' }}
  {{  percent_font | font_face: font_display: 'swap' }}
  {{  detail_title_font | font_face: font_display: 'swap' }}
  {{  detail_text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .flexible-tabs-body-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ layout_gap_mobile }}px;
  }

  .flexible-tabs-heading-{{ section.id }} {
    width: 100%;
    text-align: {{ heading_align_mobile }};
  }

  .flexible-tabs-heading-{{ section.id }} * {
    margin: 0;
    font-weight: 700;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .flexible-tabs-item-{{ section.id }} {
    width: 100%;
    padding: {{ item_padding_vertical_mobile }}px {{ item_padding_horizontal_mobile }}px;
    border-radius: {{ item_radius }}px;
    border: {{ item_border_thickness }}px solid {{ item_border_color }};
    background-color: {{ item_bg_color }};
    position: relative;
    transition: all 0.25s ease 0s;
  }

  .flexible-tabs-item-{{ section.id }}:hover {
    border-color: {{ item_border_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .flexible-tabs-item-{{ section.id }}:not(:first-child) {
    margin-top: {{ item_mt_mobile }}px;
  }

  .flexible-tabs-item-{{ section.id }}:nth-child(2) {
    margin: 0px;
  }

  .flexible-tabs-toggle-{{ section.id }} {
    display: flex;
    align-items: center;
    cursor: pointer;
    gap: 12px;
    justify-content: space-between;
  }

  .flexible-tabs-arrow-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border-radius: 50%;
    transition: all 0.3s ease 0s;
    background-color: {{ icon_bg_color }};
    border: {{ arrow_border_thickness }}px solid {{ icon_border_color }};
  }

  .flexible-tabs-arrow-{{ section.id }} svg {
    margin-top: 1px;
    width: {{ arrow_size_mobile | times: 0.5 | round: 0 }}px;
    height: {{ arrow_size_mobile | times: 0.5 | round: 0 }}px;
  }

  .flexible-tabs-arrow-{{ section.id }} svg path {
    fill: {{ icon_color }};
  }

  .flexible-tabs-arrow-rotate-{{ section.id }} {
    transition: all 0.3s ease 0s;
    transform: rotate(var(--rotate));
    transform-origin: center;
    transform-box: fill-box;
  }

  .flexible-tabs-question-{{ section.id }} {
    margin: 0px;
    font-size: {{ question_size_mobile }}px;
    color: {{ question_color }};
    line-height: {{ question_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .flexible-tabs-answer-{{ section.id }} {
    transition: all 0.2s ease-in-out;
    overflow: hidden;
  }

  .flexible-tabs-answer-content-{{ section.id }} * {
    font-size: {{ answer_size_mobile }}px;
    color: {{ answer_color }};
    line-height: {{ answer_height }}%;
    text-transform: unset;
  }

  .flexible-tabs-answer-content-{{ section.id }} p {
    min-height: 10px;
  }

  .flexible-tabs-answer-content-{{ section.id }} p:not(:first-child ) {
    margin-top: 10px;
  }

  .flexible-tabs-answer-content-{{ section.id }} *:first-child {
    margin: 0px;
  }

  .flexible-tabs-answer-content-{{ section.id }} ul {
    display: block;
    list-style-type: disc;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    padding-inline-start: 40px;
    unicode-bidi: isolate;
  }

  .flexible-tabs-answer-content-{{ section.id }} a {
    text-decoration: underline;
  }

  .flexible-tabs-height-cals-{{ section.id }} {
    position: relative;
  }

  .flexible-tabs-height-cal-{{ section.id }} {
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    position: absolute;
    top: 0;
    left: 0;
    padding-top: {{ answer_padding_top }}px;
    padding-left: {{ item_padding_horizontal_mobile | plus: item_border_thickness }}px;
    padding-right: {{ item_padding_horizontal_mobile | plus: item_border_thickness }}px;
  }

  .flexible-tabs-circle-{{ section.id }} {
    display: flex !important;
    justify-content: center;
    align-items: center;
    position: relative;
    width: {{ circle_size_mobile }}px;
    height: {{ circle_size_mobile }}px;
    flex-shrink: 0;
  }

  .flexible-tabs-circle-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
  }

  .flexible-tabs-circle-{{ section.id }} span {
    font-size: {{ percent_size_mobile }}px;
    color: {{ percent_color }};
    line-height: {{ percent_height }}%;
    position: absolute;
    font-weight: 700;
  }

  .flexible-tabs-details-{{ section.id }} {
    display: flex;
    gap: 20px;
    align-items: center;
    width: 100%;
    padding: {{ detail_padding_vertical_mobile }}px {{ detail_padding_horizontal_mobile }}px;
    border-radius: {{ detail_radius }}px;
    border: {{ detail_border_thickness }}px solid {{ detail_border_color }};
    background-color: {{ detail_bg_color }};
    position: relative;
  }
  
  .flexible-tabs-details-{{ section.id }} {
    margin-top: {{ detail_mt_mobile  }}px;
  }

  .flexible-tabs-details-title-{{ section.id }} {
    margin: 0px;
    font-size: {{ detail_title_size_mobile }}px;
    color: {{ detail_title_color }};
    line-height: {{ detail_title_height }}%;
    text-transform: unset;
    word-break: break-word;
    font-weight: 700;
  }

  .flexible-tabs-details-text-{{ section.id }} {
    margin: 0px;
    font-size: {{ detail_text_size_mobile }}px;
    color: {{ detail_text_color }};
    line-height: {{ detail_text_height }}%;
    text-transform: unset;
    word-break: break-word;
  }

  .flexible-tabs-details-title-{{ section.id }} + .flexible-tabs-details-text-{{ section.id }} {
    margin-top: 10px;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .flexible-tabs-body-{{ section.id }} {
      grid-template-columns: 1fr 1fr;
      gap: {{ layout_gap }}px;
    }

    .flexible-tabs-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }
  
    .flexible-tabs-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .flexible-tabs-item-{{ section.id }} {
      padding: {{ item_padding_vertical }}px {{ item_padding_horizontal }}px;
    }
    
    .flexible-tabs-item-{{ section.id }}:not(:first-child) {
      margin-top: {{ item_mt }}px;
    }

    .flexible-tabs-item-{{ section.id }}:nth-child(2) {
      margin: 0px;
    }

    .flexible-tabs-question-{{ section.id }} {
      font-size: {{ question_size }}px;
    }

    .flexible-tabs-arrow-{{ section.id }} {
      flex: 0 0 {{ arrow_size }}px;
      height: {{ arrow_size }}px;
    }

    .flexible-tabs-arrow-{{ section.id }} svg {
      width: {{ arrow_size | times: 0.5 | round: 0 }}px;
      height: {{ arrow_size | times: 0.5 | round: 0 }}px;
    }

    .flexible-tabs-height-cal-{{ section.id }} {
      padding-left: {{ item_padding_horizontal | plus: item_border_thickness }}px;
      padding-right: {{ item_padding_horizontal | plus: item_border_thickness }}px;
    }

    .flexible-tabs-answer-content-{{ section.id }} * {
      font-size: {{ answer_size }}px;
    }

    .flexible-tabs-height-cal-{{ section.id }} * {
      font-size: {{ answer_size }}px;
    }

    .flexible-tabs-circle-{{ section.id }} {
      width: {{ circle_size }}px;
      height: {{ circle_size }}px;
    }

    .flexible-tabs-circle-{{ section.id }} span {
      font-size: {{ percent_size }}px;
    }

    .flexible-tabs-details-{{ section.id }} {
      padding: {{ detail_padding_vertical }}px {{ detail_padding_horizontal }}px;
    }
    
    .flexible-tabs-details-{{ section.id }} {
      margin-top: {{ detail_mt }}px;
    }

    .flexible-tabs-details-title-{{ section.id }} {
      font-size: {{ detail_title_size }}px;
    }

    .flexible-tabs-details-text-{{ section.id }} {
      font-size: {{ detail_text_size }}px;
    }
  }
  
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}px;
    }
  </style>
{% endunless %}

{% if margin_horizontal_mobile > 0 %}
  <style>
    .section-{{ section.id }} {
      border-left: solid {{ border_color }} {{ border_thickness }}px;
      border-right: solid {{ border_color }} {{ border_thickness }}px;
    }
    
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: 0px;
        border-right: 0px;
      }
    }
  </style>
{% endif %}

{% if margin_horizontal > 0 %}
  <style>
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: solid {{ border_color }} {{ border_thickness }}px;
        border-right: solid {{ border_color }} {{ border_thickness }}px;
      }
    }
  </style>
{% endif %}

{% if heading_custom %}
  <style>
    .flexible-tabs-heading-{{ section.id }} * {
      font-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};
      font-weight: {{ heading_font.weight }};
      font-style: {{ heading_font.style }};
    }
  </style>
{% endif %}

{% if question_custom %}
  <style>
    .flexible-tabs-question-{{ section.id }} {
      font-family: {{ question_font.family }}, {{ question_font.fallback_families }};
      font-weight: {{ question_font.weight }};
      font-style: {{ question_font.style }};
    }
  </style>
{% endif %}

{% if answer_custom %}
  <style>
    .flexible-tabs-answer-content-{{ section.id }} * {
      font-family: {{ answer_font.family }}, {{ answer_font.fallback_families }};
      font-weight: {{ answer_font.weight }};
      font-style: {{ answer_font.style }};
    }
  </style>
{% endif %}

{% if percent_custom %}
  <style>
    .flexible-tabs-circle-{{ section.id }} span {
      font-family: {{ percent_font.family }}, {{ percent_font.fallback_families }};
      font-weight: {{ percent_font.weight }};
      font-style: {{ percent_font.style }};
    }
  </style>
{% endif %}

{% if detail_title_custom %}
  <style>
    .flexible-tabs-details-title-{{ section.id }} {
      font-family: {{ detail_title_font.family }}, {{ detail_title_font.fallback_families }};
      font-weight: {{ detail_title_font.weight }};
      font-style: {{ detail_title_font.style }};
    }
  </style>
{% endif %}

{% if detail_text_custom %}
  <style>
    .flexible-tabs-details-text-{{ section.id }} {
      font-family: {{ detail_text_font.family }}, {{ detail_text_font.fallback_families }};
      font-weight: {{ detail_text_font.weight }};
      font-style: {{ detail_text_font.style }};
    }
  </style>
{% endif %}

{% if item_shadow %}
  <style>
    .flexible-tabs-item-{{ section.id }} {
      box-shadow: rgba(0, 0, 0, 0.04) 0px 3px 5px;
    }
  </style>
{% endif %}

{% if detail_shadow %}
  <style>
    .flexible-tabs-details-{{ section.id }} {
      box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }

    .flexible-tabs-answer-body-{{ section.id }} {
      padding-bottom: 10px;
      padding-left: 5px; 
      padding-right: 10px;
    }
  </style>
{% endif %}

<div class="section-{{ section.id }} flexible-tabs-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      <div class="flexible-tabs-body-{{ section.id }}">
        {% if heading != blank %}
        <div class="flexible-tabs-heading-{{ section.id }}">
          {{ heading }}
        </div>
        {% endif %}
        <div class="flexible-tabs-wrapper-{{ section.id }}">
          {% assign inside_calc_item = false %}
          <div class="flexible-tabs-height-cals-{{ section.id }}">
            {% for block in section.blocks %}
              {% if block.type == "tab" %}
                {% if inside_calc_item %}
                    </div>
                  </div>
                {% endif %}

                <div class="flexible-tabs-height-cal-{{ section.id }}">
                  <div class="flexible-tabs-answer-body-{{ section.id }}">
                    <div class="flexible-tabs-answer-content-{{ section.id }}">
                      {{ block.settings.answer }}
                    </div>
                  
                {% assign inside_calc_item = true %}
              {% else block.type == "details" %}
                <div class="flexible-tabs-details-{{ section.id }}">
                  {% if block.settings.percent > 0 %}
                    <div class="flexible-tabs-circle-{{ section.id }}">
                      <svg width="100" height="100" viewBox="0 0 36 36" style="background-color: transparent;">
                        <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="{{ circle_progress }}" stroke-width="2" stroke-dasharray="{{ block.settings.percent }}, 100"></path>
                      </svg>
                      <span>{{ block.settings.percent }}%</span>
                    </div>
                  {% endif %}
                  <div class="flexible-tabs-details-content-{{ section.id }}">
                    {% if block.settings.title != blank %}
                      <p class="flexible-tabs-details-title-{{ section.id }}">{{ block.settings.title }}</p>
                    {% endif %}

                    {% if block.settings.text != blank %}
                      <p class="flexible-tabs-details-text-{{ section.id }}">{{ block.settings.text }}</p>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
            {% if inside_calc_item %}
                </div>
              </div>
            {% endif %}
          </div>
          {% assign inside_item = false %}
          {% for block in section.blocks %}
            {% if block.type == "tab" %}
              {% if inside_item %}
                    </div>
                  </div>
                </div>
              {% endif %}

              <div class="flexible-tabs-item-{{ section.id }}">
                <div class="flexible-tabs-toggle-{{ section.id }}">
                  <p class="flexible-tabs-question-{{ section.id }}">{{ block.settings.question }}</p>
                  <div class="flexible-tabs-arrow-{{ section.id }} ">
                    <svg aria-hidden="true" class="ml-[8px] w-[.875em] h-auto" width="14" height="14" viewBox="0 0 10.8 12.8" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0 5.41c0-.33.27-.6.6-.6h9.63a.6.6 0 0 1 0 1.2H.6a.6.6 0 0 1-.6-.6Z"></path>
                        <path class="flexible-tabs-arrow-rotate-{{ section.id }}" d="M5.41 0c.33 0 .6.27.6.6v9.63a.6.6 0 0 1-1.2 0V.6c0-.33.27-.6.6-.6Z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flexible-tabs-answer-{{ section.id }}" style="display: none; height: 0px; padding-top: 0px; padding-bottom: 0px;">
                  <div class="flexible-tabs-answer-body-{{ section.id }}">
                    <div class="flexible-tabs-answer-content-{{ section.id }}">
                      {{ block.settings.answer }}
                    </div>
              {% assign inside_item = true %} 
            {% else block.type == "details" %}
                <div class="flexible-tabs-details-{{ section.id }}">
                  {% if block.settings.percent > 0 %}
                    <div class="flexible-tabs-circle-{{ section.id }}">
                      <svg width="100" height="100" viewBox="0 0 36 36" style="background-color: transparent;">
                        <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="{{ circle_progress }}" stroke-width="2" stroke-dasharray="{{ block.settings.percent }}, 100"></path>
                      </svg>
                      <span>{{ block.settings.percent }}%</span>
                    </div>
                  {% endif %}
                  <div class="flexible-tabs-details-content-{{ section.id }}">
                    {% if block.settings.title != blank %}
                      <p class="flexible-tabs-details-title-{{ section.id }}">{{ block.settings.title }}</p>
                    {% endif %}

                    {% if block.settings.text != blank %}
                      <p class="flexible-tabs-details-text-{{ section.id }}">{{ block.settings.text }}</p>
                    {% endif %}
                  </div>
                </div>
            {% endif %}
          {% endfor %}
                
          {% if inside_item %}
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
</div>

<script>
  function initFlexibleTabs2() {
    const answerPaddingTop = {{ answer_padding_top }};
    const answerPaddingBottom = 0;
  
    const faqs = document.querySelectorAll(
      '.flexible-tabs-item-{{ section.id }}'
    );
    const answers = document.querySelectorAll(
      '.flexible-tabs-answer-{{ section.id }}'
    );
    const answersHeightCalElements = document.querySelectorAll(
      '.flexible-tabs-height-cal-{{ section.id }}'
    );
    const arrows = document.querySelectorAll(
      '.flexible-tabs-arrow-rotate-{{ section.id }}'
    );
  
    let activeIndex = -1;
  
    function openAnswer(index) {
      const height = answersHeightCalElements[index].offsetHeight;
  
      answers[index].style.display = 'block';
      setTimeout(() => {
