                      var formayMoneyForBuyItWith = function(cents, format) {
                        if (typeof cents == 'string') { cents = cents.replace('.',''); }
                        var value = '';
                        var placeholderRegex = /\{\{\s*(\w+)\s*\}\}/;
                        var formatString = (format || this.money_format);
                      
                        function defaultOption(opt, def) {
                           return (typeof opt == 'undefined' ? def : opt);
                        }
                      
                        function formatWithDelimiters(number, precision, thousands, decimal) {
                          precision = defaultOption(precision, 2);
                          thousands = defaultOption(thousands, ',');
                          decimal   = defaultOption(decimal, '.');
                      
                          if (isNaN(number) || number == null) { return 0; }
                      
                          number = (number/100.0).toFixed(precision);
                      
                          var parts   = number.split('.'),
                              dollars = parts[0].replace(/(\d)(?=(\d\d\d)+(?!\d))/g, '$1' + thousands),
                              cents   = parts[1] ? (decimal + parts[1]) : '';
                      
                          return dollars + cents;
                        }
                      
                        switch(formatString.match(placeholderRegex)[1]) {
                          case 'amount':
                            value = formatWithDelimiters(cents, 2);
                            break;
                          case 'amount_no_decimals':
                            value = formatWithDelimiters(cents, 0);
                            break;
                          case 'amount_with_comma_separator':
                            value = formatWithDelimiters(cents, 2, '.', ',');
                            break;
                          case 'amount_no_decimals_with_comma_separator':
                            value = formatWithDelimiters(cents, 0, '.', ',');
                            break;
                        }
                      
                        return formatString.replace(placeholderRegex, value);
                      };
                     
                      function updateShippingMessage(container) {
                        fetch('/cart.js')
                          .then(res => res.json())
                          .then(cart => {
                            const threshold = parseInt(container.dataset.threshold);
                            const currentTotal = cart.total_price;
                            const remaining = threshold - currentTotal;
                  
                            const nofreeText = container.querySelector('.shipping-nofree-text-{{ block.id }}');
                            const freeText = container.querySelector('.shipping-free-text-{{ block.id }}');
                  
                            if (currentTotal >= threshold) {
                              nofreeText?.classList.add('hide-{{ block.id }}');
                              freeText?.classList.remove('hide-{{ block.id }}');
                            } else {
                              nofreeText?.classList.remove('hide-{{ block.id }}');
                              freeText?.classList.add('hide-{{ block.id }}');
                            }
                  
                            const textContainer = container.querySelector('.shipping-text-{{ block.id }}');
                            const amountSpan = textContainer?.querySelector('span');
                            if (amountSpan) {
                              amountSpan.textContent = formayMoneyForBuyItWith(Math.max(remaining, 0), "{{ shop.money_format }}");
                            }
                            
                  
                            const percent = Math.min(currentTotal / threshold, 1);
                            let angle;
                  
                            if (currentTotal === 0) {
                              angle = -35;
                            } else {
                              angle = -35 + (percent * (215 + 35));
                            }
                  
                            const pointer = container.querySelector('#gauge-arrow-{{ block.id }}');
                            if (pointer) {
                              pointer.style.transform = `rotate(${angle}deg) translateX(-50%)`;
                            }
                          });
                        }
                                           
