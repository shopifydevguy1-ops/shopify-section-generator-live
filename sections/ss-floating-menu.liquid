  <style>
    .navigation-tabs-body-{{ section.id }} {
      justify-content: center;
    }
  </style>
{% elsif tabs_align_mobile == 'right' %}
  <style>
    .navigation-tabs-body-{{ section.id }} {
      justify-content: end;
    }
  </style>
