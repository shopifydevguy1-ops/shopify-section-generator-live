<script>
  function loadSwiper(callback) {
    if (window.Swiper) {
      callback();
    } else {
      const script = document.createElement('script');
      script.src = "https://cdn.jsdelivr.net/npm/swiper@6.8.4/swiper-bundle.min.js";
      script.onload = callback;
      document.head.appendChild(script);
    }
  }

  function initFeaturedCollection15(sectionId) {
    let slider;

    function initializeSlider() {
      if (slider) {
        slider.destroy(true, true);
      }

      slider = new Swiper(`.featured-slider-${sectionId}`, {
        speed: 1000,
        loop: true,
        centeredSlides: true,
        navigation: {
          nextEl: `.featured-btn-next-${sectionId}`,
          prevEl: `.featured-btn-prev-${sectionId}`,
        },
        breakpoints: {
          320: {
            spaceBetween: parseInt(document.querySelector(`.featured-slider-${sectionId}`).dataset.gapMobile || 0),
            slidesPerView: parseFloat(document.querySelector(`.featured-slider-${sectionId}`).dataset.viewMobile),
          },
          768: {
            spaceBetween: parseInt(document.querySelector(`.featured-slider-${sectionId}`).dataset.gap || 0),
            slidesPerView: parseFloat(document.querySelector(`.featured-slider-${sectionId}`).dataset.viewMobile),
          },
          1024: {
            spaceBetween: parseInt(document.querySelector(`.featured-slider-${sectionId}`).dataset.gap || 0),
            slidesPerView: 'auto'
          }
        },
        on: {
          slideChangeTransitionStart: function () {
            const featuredSection = document.querySelector(`.featured-${sectionId}`);
            const activeSlide = document.querySelector(`.featured-slider-${sectionId} .swiper-slide-active`);

            if (activeSlide && featuredSection) {
              const newBgColor = activeSlide.dataset.background;
 
              if (newBgColor && newBgColor.toLowerCase() !== 'transparent' && newBgColor.toLowerCase() !== 'rgba(0,0,0,0)') {
                featuredSection.style.backgroundColor = newBgColor;
              } else {
                featuredSection.style.removeProperty('background-color');
              }
            }
          }
        }
      });
      slider.init();
    }

    initializeSlider();

    window.addEventListener('resize', () => {
      clearTimeout(window.sliderResizeTimer);
      window.sliderResizeTimer = setTimeout(() => {
        initializeSlider();
      }, 300);
    });
  }

  function initializeAllFeaturedCollection15Sections() {
    const sections = document.querySelectorAll('[id^="shopify-section-"]');
    sections.forEach(section => {
      if (section.querySelector('.featured-{{ section.id }}')) {
        const sectionId = section.id.replace('shopify-section-', '');
        loadSwiper(() => initFeaturedCollection15(sectionId));
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeAllFeaturedCollection15Sections);
  } else {
    initializeAllFeaturedCollection15Sections();
  }

  if (Shopify.designMode) {
    document.addEventListener('shopify:section:load', (event) => {
      const sectionId = event.detail.sectionId;
      if (event.target.querySelector('.featured-{{ section.id }}')) {
        loadSwiper(() => initFeaturedCollection15(sectionId));
      }
    });
  }
</script>



