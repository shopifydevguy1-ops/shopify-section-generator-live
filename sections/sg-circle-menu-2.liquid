{% comment %} PREVIEW {% endcomment %}
<style>
  .circle-menu-slider-{{ section.id }}.preview .swiper-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
  }

  .circle-menu-slider-{{ section.id }}.preview .circle-menu-item-{{ section.id }} {
    width: 100%;
  }

  .circle-menu-slider-{{ section.id }}.preview .circle-menu-item-{{ section.id }}:not(:first-child) {
    margin-left: {{ slider_gap_mobile }}px;
  } 

  @media(min-width: 1024px) {
    .circle-menu-slider-{{ section.id }}.preview .circle-menu-item-{{ section.id }}:not(:first-child) {
      margin-left: {{ slider_gap }}px;
    } 

    .circle-menu-slider-{{ section.id }}.preview .circle-menu-item-{{ section.id }} {
      width: calc(100% / {{ slider_view }} - ({{ slider_gap }}px * {{ slider_view | minus: 1 }}));
    }
  }
</style>

<div class="section-{{ section.id }} circle-menu-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
  <div class="section-{{ section.id }}-settings">
    <div class="circle-menu-slider-{{ section.id }} swiper preview ">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <{% if block.settings.url  != blank %}a href="{{ block.settings.url }}"{% else %}div{% endif %} class="swiper-slide circle-menu-item-{{ section.id }}"> 
              {% if tag_bottom %}
                <p class="circle-menu-title-{{ section.id }} circle-menu-title-{{ block.id }}">{{ block.settings.title }}</p>
              {% endif %}
              <div class="circle-menu-image-{{ section.id }}">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}">
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              </div>
              <p class="circle-menu-tag-{{ section.id }} circle-menu-tag-{{ block.id }}">{{ block.settings.tag }}</p>
              {% unless tag_bottom %} 
                <p class="circle-menu-title-{{ section.id }} circle-menu-title-{{ block.id }}">{{ block.settings.title }}</p>
              {% endunless %}              
            </{% if block.settings.url != blank %}a{% else %}div{% endif %}>        
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  function circleMenu2() {
    document.querySelector('.circle-menu-slider-{{ section.id }}').classList.remove('preview')
    const slider = new Swiper(".circle-menu-slider-{{ section.id }}", {
      speed: 300,
      breakpoints: {
        320: {
          spaceBetween: {{ slider_gap_mobile }},
          slidesPerView: {{ slider_view_mobile }}
        },
        768: {
          slidesPerView: {{ slider_view }}
        },
        1024: {
          spaceBetween: {{ slider_gap }},
          slidesPerView: {{ slider_view }}
        }
      }
    });
  }

  document.addEventListener('DOMContentLoaded', circleMenu2);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', circleMenu2);
     document.addEventListener('shopify:section:load', circleMenu2);
  }
</script>


