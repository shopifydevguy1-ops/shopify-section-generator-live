{%- style -%}

  {{ title_font | font_face: font_display: 'swap' }}
  {{ tag_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .circle-menu-slider-{{ section.id }} {
    margin-left: -{{ padding_horizontal_mobile }}rem !important;
    margin-right: -{{ padding_horizontal_mobile }}rem !important;
    padding-left: {{ padding_horizontal_mobile }}rem !important;
    padding-right: {{ padding_horizontal_mobile }}rem !important;
  }

  .circle-menu-item-{{ section.id }} {
    padding-top: 5px;
    box-sizing: border-box !important;
    text-decoration: none;
    text-align: center;
    position: relative;
  }
  
  .circle-menu-image-{{ section.id }} {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
    border: {{ item_border_thickness }}px solid {{ item_border_color }};
    padding: 4px;
    aspect-ratio: 1 / 1;
    box-sizing: border-box;
    position: relative;
  }
  
  .circle-menu-image-{{ section.id }} img,
  .circle-menu-image-{{ section.id }} svg {
    display: block;
    border-radius: 50%;
    width: calc(100% - 8px);
    height: calc(100% - 8px);
    object-fit: cover;
    margin: 0;     
    aspect-ratio: 1 / 1;
    position: absolute;
    top: 4px;
    left: 4px;
  }

  .circle-menu-image-{{ section.id }} svg {     
    background-color: #a0a0a0;
  }
  
  .circle-menu-details-{{ section.id }} {
    text-align: center;
  }
  
  .circle-menu-tag-{{ section.id }} {  
    position: absolute; 
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    margin: 0;
    font-size: {{ tag_size_mobile }}px;
    line-height: {{ tag_height }}%;
    padding: {{ tag_padding_vertical_mobile }}px {{ tag_padding_horizontal_mobile }}px;
    border-radius: {{ tag_border_radius }}px;
    color: {{ tag_color }};
    background-color: {{ tag_bg_color }};
    background-image: {{ tag_bg_gradient }};
    text-transform: unset;
    word-wrap: break-word;
    display: inline-block;
    width: 100%;
    max-width: max-content;
  }
  
  .circle-menu-title-{{ section.id }} {
    margin: 0;
    display: block;
    text-transform: unset;
    word-wrap: break-word;
    font-size: {{ title_size_mobile }}px;
    line-height: {{ title_height }}%;
    color: {{ title_color }};
  }
  
  @media(min-width: 1024px) {
    
    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
  
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .circle-menu-slider-{{ section.id }} {
      margin-left: 0px !important;
      margin-right: 0px !important;
      padding-left: 0px !important;
      padding-right: 0px !important;
    }

    .circle-menu-tag-{{ section.id }} {
      font-size: {{ tag_size }}px;
    }

    .circle-menu-title-{{ section.id }} {      
      font-size: {{ title_size }}px;   
    }
    
    .circle-menu-tag-{{ section.id }} {
      font-size: {{ tag_size }}px;
      padding: {{ tag_padding_vertical }}px {{ tag_padding_horizontal }}px;
    }
  }

{%- endstyle -%}
  
{% unless full_width %}
