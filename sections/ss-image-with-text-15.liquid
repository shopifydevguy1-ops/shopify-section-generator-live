  {{  text_font | font_face: font_display: 'swap' }}
  {{  toggle_text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .image-text-body-{{ section.id }} {
    display: grid;
    gap: {{ body_gap_mobile }}px;
  }

  .image-text-image-{{ section.id }} {
    border-radius: {{ image_radius }}px;
    outline: {{ image_border_thickness }}px solid {{ image_border_color }};
    overflow: hidden;
    position: relative;
  }

  .image-text-image-{{ section.id }} img,
  .image-text-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    box-shadow: none;
    border: 0px;
  }

  .image-text-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .image-text-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 30px;
    align-items: {{ content_horizontal_align_mobile }};
    padding: {{ content_padding_vertical_mobile }}px {{ content_padding_horizontal_mobile }}px;
    border-radius: {{ content_radius }}px;
    border: {{ content_border_thickness }}px solid {{ content_border_color }};
    background-color: {{ content_bg_color }};
    overflow: hidden;
  }

  .image-text-item-{{ section.id }} {
    display: none;
  }

  .image-text-item-{{ section.id }}.active {
    display: block;
  }

  .image-text-heading-{{ section.id }} {
    width: 100%;
    text-align: {{ text_align_mobile }};
  }

  .image-text-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    word-break: break-word;
  }

  .image-text-text-{{ section.id }} {
    width: 100%;
    margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
    text-align: {{ text_align_mobile }};
  }

  .image-text-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    line-height: {{ text_height }}%;
    color: {{ text_color }};
    text-transform: unset;
    word-break: break-word;
  }

  .image-text-toggles-{{ section.id }} {
    width: 100%;
  }

  .image-text-toggle-{{ section.id }} {
    width: 100%;
    text-align: {{ text_align_mobile }};
    padding: {{ toggle_text_padding_vertical_mobile }}px 0px;
    border-top: {{ toggle_text_border_thickness }}px solid {{ toggle_text_border_color }};
  }

  .image-text-toggle-{{ section.id }} * {
    margin: 0;
    font-size: {{ toggle_text_size_mobile }}px;
    line-height: {{ toggle_text_height }}%;
    color: {{ toggle_text_color }};
    text-transform: unset;
    word-break: break-word;
    opacity: 0.75;
    transition: all 0.25s ease 0s;
    font-weight: 700;
  }

  .image-text-toggle-{{ section.id }}.active * {
    opacity: 1;
    transition: all 0.25s ease 0s;
  }

  .image-text-toggle-{{ section.id }}:hover * {
    opacity: 1;
    transition: all 0.25s ease 0s;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
