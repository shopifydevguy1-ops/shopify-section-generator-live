        },
        1024: {
            spaceBetween: parseInt(document.querySelector(`.video-slider-slider-{{ section.id }}`).dataset.gap || 0),
            slidesPerView: 1.5,
        }
        }
    });

    const videoItems = document.querySelectorAll(`.video-slider-slide-{{ section.id }}`);
    function handleCenterSlideAutoplay(swiperInstance) {
        swiperInstance.slides.forEach((slide) => {
        const video = slide.querySelector('video');
        const iframeElement = slide.querySelector('iframe');
        const videoButton = slide.querySelector(`.video-slider-action-{{ section.id }}`);
        
        if (video) {
            video.pause();
            video.currentTime = 0;
        }
        if (iframeElement) {
            iframeElement.src = iframeElement.getAttribute('data-src1');
        }
        if (videoButton) {
            videoButton.classList.add('active');
        }
        });

        const activeSlide = swiperInstance.slides[swiperInstance.activeIndex];
        if (activeSlide) {
        const video = activeSlide.querySelector('video');
        const iframeElement = activeSlide.querySelector('iframe');
        const videoButton = activeSlide.querySelector(`.video-slider-action-{{ section.id }}`);
        
        if (video) {
            video.play();
        }
        if (iframeElement) {
            iframeElement.src = iframeElement.getAttribute('data-src2');
        }
        if (videoButton) {
            videoButton.classList.remove('active');
        }
        }
    }

    videoItems.forEach((item) => {
        const video = item.querySelector('video');
        const iframeElement = item.querySelector('iframe');
        const videoButton = item.querySelector(`.video-slider-action-{{ section.id }}`);
        const soundButton = item.querySelector(`.video-slider-sound-{{ section.id }}`);

        if(video || iframeElement) {    
        if(videoButton) {
            videoButton.addEventListener('click', function() {
            if (videoButton.classList.contains('active')) {
                if (video) {      
                video.play();
                }
                if (iframeElement) {
                iframeElement.src = iframeElement.getAttribute('data-src2'); 
                }   
            } else {
                if (video) {
                video.pause();
                }
                if (iframeElement) {
                iframeElement.src = iframeElement.getAttribute('data-src1'); 
                } 
                    
            }
            videoButton.classList.toggle('active'); 
            })  
        }   
        }

        if(video) {
