                          <img src="{{ second_image | image_url }}" alt="{{ second_image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                      {% else %}
                          {{ 'image' |  placeholder_svg_tag }}
                      {% endif %}
                    </div>
                    <div class="image-text-element-{{ section.id }}" style="aspect-ratio: 12/9;">
                      {% if third_image != blank %}
                          <img src="{{ third_image | image_url }}" alt="{{ third_image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                      {% else %}
                          {{ 'image' |  placeholder_svg_tag }}
                      {% endif %}
                    </div>
                    </div>
                  </div>
                {% elsif images_grid == "3" %}
                  <div class="image-text-third-grid-{{ section.id }}">
                    <div class="image-text-first-grid-column-{{ section.id }}">
                        <div class="image-text-element-{{ section.id }}">
                            {% if first_image != blank %}
                                <img src="{{ first_image | image_url }}" alt="{{ first_image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                            {% else %}
                                {{ 'image' |  placeholder_svg_tag }}
