<div class="section-{{ section.id }} testimonials-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
        {% if heading != blank %}
            <div class="testimonials-heading-{{ section.id }}">
                {{ heading }}
            </div>
        {% endif %}

        <div class="testimonials-body-{{ section.id }}">
            <div class="testimonials-image-{{ section.id }}">
                {% if image != blank %}
                    <img src="{{ image | image_url }}" alt="{{ image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                {% else %}
                    {{ 'image' |  placeholder_svg_tag }}
                {% endif %}
            </div>
            <div class="testimonials-slider-wrapper-{{ section.id }}">
                <div class="testimonials-slider-{{ section.id }} swiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide testimonials-slide-image-{{ section.id }}">
                            {% if image != blank %}
                                <img src="{{ image | image_url }}" alt="{{ image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                            {% else %}
                                {{ 'image' |  placeholder_svg_tag }}
                            {% endif %}
                        </div>
                        {% for block in section.blocks %}
                            <div class="testimonials-slide-{{ section.id }} swiper-slide">
                                {% if block.settings.label != blank %}
                                    <p class="testimonials-label-{{ section.id }}">{{ block.settings.label }}</p>
                                {% endif %}
                                {% if block.settings.text != blank %}
                                    <div class="testimonials-text-{{ section.id }}">
                                        {{ block.settings.text }}
                                    </div>
                                {% endif %}

                                {% if block.settings.author != blank %}
                                    <p class="testimonials-author-{{ section.id }}">{{ block.settings.author }}</p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="testimonials-btn-prev-{{ section.id }}">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g id="Left"><path d="M14,17a1,1,0,0,1-.707-.293l-4-4a1,1,0,0,1,0-1.414l4-4a1,1,0,1,1,1.414,1.414L11.414,12l3.293,3.293A1,1,0,0,1,14,17Z"/></g></svg>
                    </div>
                    <div class="testimonials-btn-next-{{ section.id }}">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g id="Left"><path d="M14,17a1,1,0,0,1-.707-.293l-4-4a1,1,0,0,1,0-1.414l4-4a1,1,0,1,1,1.414,1.414L11.414,12l3.293,3.293A1,1,0,0,1,14,17Z"/></g></svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="testimonials-scrollbar-{{ section.id }} swiper-scrollbar"></div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  function initTestimonials15() {
    const slider = new Swiper(".testimonials-slider-{{ section.id }}", {
        speed: 300,
        spaceBetween: 20,
        scrollbar: {
            el: '.testimonials-scrollbar-{{ section.id }}',
            draggable: true,
        },
        navigation: {
          nextEl: '.testimonials-btn-next-{{ section.id }}',
          prevEl: '.testimonials-btn-prev-{{ section.id }}',
        },
        breakpoints: {
            320: {
                spaceBetween: {{ slider_gap_mobile }},
                slidesPerView: {{ slider_view_mobile }}
            },
            1024: {
                spaceBetween: {{ slider_gap }},
                slidesPerView: {{ slider_view }}
            }
        }
    });
  }

  document.addEventListener('DOMContentLoaded', initTestimonials15);
  
  if (Shopify.designMode) {
        document.addEventListener('shopify:section:unload', initTestimonials15);
        document.addEventListener('shopify:section:load', initTestimonials15);
  }
</script>

