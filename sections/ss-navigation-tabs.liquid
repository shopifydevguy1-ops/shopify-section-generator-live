{%- style -%}
  {{  item_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }

  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .navigation-tabs-body-{{ section.id }} {
    display: flex;
    align-items: stretch;
    gap: {{ tabs_gap_mobile }}px;
    overflow-x: auto;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
    margin-left: -{{ padding_horizontal_mobile }}rem;
    margin-right: -{{ padding_horizontal_mobile }}rem;
  }

  .navigation-tabs-body-{{ section.id }}::-webkit-scrollbar {
    display: none;
  }

  .navigation-tabs-item-{{ section.id }} {
    margin-top: 0px;
    width: 100%;
    max-width: fit-content;
    min-width: max-content;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ item_size_mobile }}px;
    font-weight: 700;
    color: {{ item_color }};
    line-height: {{ item_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ item_padding_vertical_mobile }}px {{ item_padding_horizontal_mobile }}px;
    border-radius: {{ item_radius }}px;
    border: 0px;
    border: {{ item_border_thickness }}px solid {{ item_border_color }};
    background-color: transparent;
    background-color: {{ item_bg_color }};
    transition: all 0.25s ease 0s;
    box-shadow: none;
    cursor: pointer;
    position: relative;
  }

  .navigation-tabs-item-{{ section.id }}:hover {
    color: {{ item_hover_color }};
    border-color: {{ item_border_hover_color }};
    background-color: {{ item_bg_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .navigation-tabs-item-{{ section.id }}.active {
    color: {{ item_active_color }};
    border-color: {{ item_border_active_color }};
    background-color: {{ item_bg_active_color }};
    transition: all 0.25s ease 0s;
  }

  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }

    .section-{{ section.id }}-settings {
