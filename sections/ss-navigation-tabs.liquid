<script>
  function isSafari() {  
    const userAgent = navigator.userAgent;  
    return /^((?!chrome|android).)*safari/i.test(userAgent);  
  } 
  
  function initNavigationTabs() {
    let sections = document.querySelectorAll('.shopify-section');  
    let body = document.querySelector('.navigation-tabs-body-{{ section.id }}');
    let titles = "{{ tabs_titles }}";
    let titlesArray = titles.split(",");
    let belowThisSection = false;
    let count = 0;
    if (sections) {  
      sections.forEach((el, i) => {
        let itemId = el.id;
        if (![...el.children].some(child => child.tagName === 'TEMPLATE')) {  
          
if(itemId != "shopify-section-header" && !itemId.includes("footer") && itemId != "shopify-section-announcement-bar") {
  if(belowThisSection) {
    let anchorText = titlesArray[count] || "Title";
    let anchor = `<a href="#${itemId}" class="navigation-tabs-item-{{ section.id }}">${anchorText}</a>`;
    body.insertAdjacentHTML('beforeend', anchor);   
    count++;
  }
  if(itemId == "shopify-section-{{ section.id }}") {
    belowThisSection = true;
  }
}

          
        } 
        
      });  
    }

    setTimeout(() => {
      let items = document.querySelectorAll('.navigation-tabs-item-{{ section.id }}');
      
      if (items) {  
        items.forEach(el => {
          
          el.addEventListener('click', (event) => {  
              event.preventDefault();  
              const targetId = el.getAttribute('href');  
              if (targetId) {  
                  const targetElement = document.querySelector(targetId);  
                  if (targetElement) {  
                      const elementPosition = targetElement.getBoundingClientRect().top + window.scrollY;
                      const offsetPosition = elementPosition - 100;
                      
                      window.scrollTo({  
                          top: offsetPosition,  
                          behavior: 'smooth'
                      });  
                  }  
              }  
          });
        });

        {% if use_highlite %}
          window.addEventListener('scroll', () => {  
            let foundActive = false;  
        
            items.forEach(el => {  
                const targetId = el.getAttribute('href');  
                if (targetId) {  
                    const targetElement = document.querySelector(targetId);  
                    if (targetElement) {  
                        const rect = targetElement.getBoundingClientRect();  
                        const windowHeight = window.innerHeight;  
        
                        const visibleHeight = Math.max(0, Math.min(rect.bottom, windowHeight) - Math.max(rect.top, 0));  
         
                        if (visibleHeight >= (rect.height / 2)) {  
                            if (!foundActive) {  
                                el.classList.add('active');  
                                foundActive = true;
                                const offsetLeft = el.offsetLeft;
                                if (!isSafari()) {
                                  body.scrollTo({  
                                    left: offsetLeft,  
                                    behavior: 'smooth'
                                  });
                                }
                            }  
                        } else {  
                            el.classList.remove('active');  
                        }  
                    }  
                }  
            });  
        }); 
      {% endif %}
      }

      {% if use_sticky %}
        if(sections) {
          sections.forEach(section => {
            if(section.id.includes('{{ section.id }}')) {
              section.style.position = 'sticky';
              section.style.top = '{{ vertical_offset }}px';
              section.style.backgroundColor = '{{ background_color }}';
              section.style.backgroundImage = '{{ background_gradient }}';
              section.style.zIndex = '3';
            }
          })
        }
      {% endif %}
    }, 400);   
  }

  document.addEventListener('DOMContentLoaded', initNavigationTabs);
</script>

