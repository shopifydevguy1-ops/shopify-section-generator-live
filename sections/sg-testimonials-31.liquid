{%- style -%}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  author_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-layout-{{ section.id }} {
    display: grid;
    gap: {{ layout_gap_mobile }}px;
    grid: auto-flow dense auto / repeat(2,minmax(0,1fr));
  }

  .testimonials-item-{{ section.id }} {
    overflow: hidden;
    border-radius: {{ card_radius }}px;
    border: {{ card_border_thickness }}px solid {{ card_border_color }};
  }

  .testimonials-item-{{ section.id }} img,
  .testimonials-item-{{ section.id }} svg,
  .testimonials-item-{{ section.id }} video,
  .testimonials-item-{{ section.id }} iframe {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: 0px;
    box-shadow: none;
  }

  .testimonials-item-{{ section.id }} > svg {
    background-color: #AFAFAF;
  }

  .testimonials-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: {{ content_padding_vertical_mobile | times: 0.5 }}px {{ content_padding_horizontal_mobile }}px {{ content_padding_vertical_mobile }}px {{ content_padding_horizontal_mobile }}px;
  }

  .testimonials-quote-{{ section.id }} {
    margin-left: auto;
    width: {{ quote_size_mobile }}px;
    height: {{ quote_size_mobile }}px;
  }

  .testimonials-quote-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .testimonials-text-{{ section.id }} {
    margin-top: {{ text_mt_mobile }}px;
    text-align: {{ text_align_mobile }};
  }

  .testimonials-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .testimonials-author-{{ section.id }} {
    margin: 0;
    margin-top: {{ author_mt_mobile }}px;
    text-align: {{ author_align_mobile }};   
    font-size: {{ author_size_mobile }}px;
    color: {{ author_color }};
    line-height: {{ author_height }}%;
    text-transform: unset;
    text-decoration: none;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-layout-{{ section.id }} {
      gap: {{ layout_gap }}px;
      grid: auto-flow dense auto / repeat(5,minmax(0,1fr));
    }

    .testimonials-content-{{ section.id }} {
      padding: {{ content_padding_vertical | times: 0.5 }}px {{ content_padding_horizontal }}px {{ content_padding_vertical }}px {{ content_padding_horizontal }}px;
      justify-content: {{ content_vertical_align }};
    }

    .testimonials-quote-{{ section.id }} {
