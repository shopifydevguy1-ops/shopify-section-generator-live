    }
  </style>
{% else %}
  <style>
    .testimonials-pagination-{{ section.id }} {
      display: none !important;
    }
  </style>
{% endif %}

{% if dots_show_desktop %}
  <style>
    @media(min-width: 1024px) {
      .testimonials-pagination-{{ section.id }} {
        display: flex !important;
      }
    }
  </style>
{% else %}
  <style>
    @media(min-width: 1024px) {
      .testimonials-pagination-{{ section.id }} {
        display: none !important;
      }
    }
  </style>
{% endif %}

