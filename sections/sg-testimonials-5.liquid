      .testimonials-slide-{{ section.id }},
      .testimonials-item-{{ section.id }} {
        flex-direction: row;
      }
      
      .testimonials-slide-left-{{ section.id }} {
        flex: 0 1 {{ image_width }}%;
      }

      .testimonials-slide-right-{{ section.id }} {
        flex: 0 1 calc(100% - {{ image_width }}%);
      }
    }
  </style>
