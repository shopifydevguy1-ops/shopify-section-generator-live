{%- liquid 
  assign padding_horizontal = section.settings.padding_horizontal
  assign padding_horizontal_mobile = section.settings.padding_horizontal_mobile
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign border_color = section.settings.border_color
  assign border_thickness = section.settings.border_thickness
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign margin_horizontal_mobile = section.settings.margin_horizontal_mobile
  assign margin_horizontal = section.settings.margin_horizontal
  assign background_color = section.settings.background_color
  assign background_gradient = section.settings.background_gradient
  assign width = section.settings.width
  assign content_width = section.settings.content_width
  assign lazy = section.settings.lazy
  assign section_radius = section.settings.section_radius  
  assign background_style = section.settings.background_style
  assign border_style = section.settings.border_style

  assign layout = section.settings.layout
  assign layout_mobile = section.settings.layout_mobile
  assign layout_gap = section.settings.layout_gap
  assign layout_gap_mobile = section.settings.layout_gap_mobile  

  assign content_align = section.settings.content_align
  assign content_align_mobile = section.settings.content_align_mobile
  assign content_vertical_align = section.settings.content_vertical_align
  assign content_bg_color = section.settings.content_bg_color
  assign content_radius = section.settings.content_radius

  assign image = section.settings.image
  assign image_width = section.settings.image_width
  assign image_radius = section.settings.image_radius
  assign image_border_thickness = section.settings.image_border_thickness
  assign image_border_color = section.settings.image_border_color
  assign image_ratio_mobile = section.settings.image_ratio_mobile

  assign content_horizontal_align = ""
  if content_align == "center"
    assign content_horizontal_align = "center"
  elsif content_align == "right"
    assign content_horizontal_align = "end"
  else
    assign content_horizontal_align = "start"
  endif

  assign content_horizontal_align_mobile = ""
  if content_align_mobile == "center"
    assign content_horizontal_align_mobile = "center"
  elsif content_align_mobile == "right"
    assign content_horizontal_align_mobile = "end"
  else
    assign content_horizontal_align_mobile = "start"
  endif

  assign loading_attribute = 'lazy'
  unless lazy
    assign loading_attribute = 'eager'
  endunless
-%}

{%- style -%}  
  .section-{{ section.id }} {
    position: relative; 
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
    border-radius: {{ section_radius }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    border: {{ border_style }} {{ border_color }} {{ border_thickness }}px;
    border-radius: {{ content_radius }}px;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
    position: relative;
    z-index: 1;
    background-color: {{ content_bg_color }};
  }

  .featured-body-{{ section.id }} {
    display: grid;
    gap: {{ layout_gap_mobile }}px;
    grid-template-columns: 1fr;
  }

  .featured-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: {{ content_vertical_align }};
    align-items: {{ content_horizontal_align_mobile }};
    grid-area: content;
  }

  .featured-image-{{ section.id }} {
    grid-area: image;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
    border-radius: {{ image_radius }}px;
    overflow: hidden;
    position: relative;
    z-index: 1;
  }

  .featured-image-{{ section.id }} img,
  .featured-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit:cover;
  }

  .featured-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .featured-body-{{ section.id }} {
      gap: {{ layout_gap }}px;    
    }

    .featured-content-{{ section.id }} {
      align-items: {{ content_horizontal_align }};
    }
  }
  
{%- endstyle -%}

{% if width == 'custom' %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}px;
    }
  </style>
{% elsif width == 'page' %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: var(--page-width);
    }
  </style>
{% endif %}

{% if layout_mobile == 'content_image'%}
  <style>
    .featured-body-{{ section.id }} {
      grid-template-areas: 
        "content"
        "image";     
    }
  </style>
{% elsif layout_mobile == 'image_content' %}
  <style>
    .featured-body-{{ section.id }} {
      grid-template-areas: 
        "image"
        "content";     
    }
  </style>
{% endif %}

{% if layout == 'content_image'%}
  <style>
    @media(min-width: 1024px) {
      .featured-body-{{ section.id }} {
        grid-template-columns: auto {{ image_width }}%;
        grid-template-areas: "content image";    
      }
    }    
  </style>
{% elsif layout == 'image_content' %}
  <style>
    @media(min-width: 1024px) {
      .featured-body-{{ section.id }} {
        grid-template-columns: {{ image_width }}% auto;
        grid-template-areas: "image content";   
      }
    }   
  </style>
{% endif %}

{% if image_ratio_mobile == "portrait" %}
  <style>
    .featured-image-{{ section.id }} {
     aspect-ratio: 9.6/12; 
    }
  </style>
{% elsif image_ratio_mobile == "landscape" %}
  <style>
    .featured-image-{{ section.id }}{
     aspect-ratio: 12/9; 
    }
  </style>
{% elsif image_ratio_mobile == "square" %}
  <style>
    .featured-image-{{ section.id }} {
     aspect-ratio: 12/12; 
    }
  </style>
{% else %}
  <style>
    .featured-image-{{ section.id }} {
     aspect-ratio: auto; 
    }
  </style>
{% endif %}

{% if image_ratio_mobile == "portrait" %}
  <style>
    @media(min-width: 1024px) {
     .featured-image-{{ section.id }} {
       aspect-ratio: auto; 
      } 
    }
  </style>
{% elsif image_ratio_mobile == "landscape" %}
  <style>
    @media(min-width: 1024px) {
      .featured-image-{{ section.id }}{
       aspect-ratio: auto; 
      }
    }
  </style>
{% elsif image_ratio_mobile == "square" %}
  <style>
    @media(min-width: 1024px) {
      .featured-image-{{ section.id }} {
       aspect-ratio: auto; 
      }
    }
  </style>
{% else %}
  <style>
    @media(min-width: 1024px) {
      .featured-image-{{ section.id }} {
       aspect-ratio: auto; 
      }
    }
  </style>
{% endif %}

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'sub_heading' %}  
      <style>
        {{  block.settings.sub_heading_font | font_face: font_display: 'swap' }}

        .featured-sub-heading-{{ block.id }} {
          width: 100%;
          margin-top: {{ block.settings.sub_heading_mt_mobile }}px;
          text-align: {{ content_align_mobile }};
          position: relative;
          z-index: 2;
        }
      
        .featured-sub-heading-{{ block.id }} * {
          margin: 0;
          font-size: {{ block.settings.sub_heading_size_mobile }}px;
          color: {{ block.settings.sub_heading_color }};
          line-height: {{ block.settings.sub_heading_height }}%;
          text-transform: unset;
        }

        @media(min-width: 1024px) {
          
          .featured-sub-heading-{{ block.id }} {
            margin-top: {{ block.settings.sub_heading_mt }}px;
            text-align: {{ content_align }};
          }
        
          .featured-sub-heading-{{ block.id }} * {
            font-size: {{ block.settings.sub_heading_size }}px;
          }
        }          
      </style>
        
      {% if block.settings.sub_heading_custom %}
        <style>
          .featured-sub-heading-{{ block.id }} * {
            font-family: {{ block.settings.sub_heading_font.family }}, {{ block.settings.sub_heading_font.fallback_families }};
            font-weight: {{ block.settings.sub_heading_font.weight }};
            font-style: {{ block.settings.sub_heading_font.style }};
          }
        </style>
      {% endif %}

    {% when 'heading' %}  
      <style>
        {{  block.settings.heading_font | font_face: font_display: 'swap' }}

        .featured-heading-{{ block.id }} {
          width: 100%;
          margin-top: {{ block.settings.heading_mt_mobile }}px;
          text-align: {{ content_align_mobile }};
          position: relative;
          z-index: 2;
        }
      
        .featured-heading-{{ block.id }} * {
          margin: 0;
          font-size: {{ block.settings.heading_size_mobile }}px;
          color: {{ block.settings.heading_color }};
          line-height: {{ block.settings.heading_height }}%;
          text-transform: unset;
        }

        .featured-heading-{{ block.id }} strong {
          font-weight: 700;
          color: {{ block.settings.heading_accent_color }};
        }

        @media(min-width: 1024px) {
          
          .featured-heading-{{ block.id }} {
            margin-top: {{ block.settings.heading_mt }}px;
            text-align: {{ content_align }};
          }
        
          .featured-heading-{{ block.id }} * {
            font-size: {{ block.settings.heading_size }}px;
          }
        }          
      </style>
        
      {% if block.settings.heading_custom %}
        <style>
          .featured-heading-{{ block.id }} * {
            font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
            font-weight: {{ block.settings.heading_font.weight }};
            font-style: {{ block.settings.heading_font.style }};
          }
        </style>
      {% endif %}

    {% when 'text' %}
      <style>
        {{  block.settings.text_font | font_face: font_display: 'swap' }}
        .featured-text-{{ block.id }} {
          width: 100%;
          margin-top: {{ block.settings.text_mt_mobile }}px;
          text-align: {{ content_align_mobile }};
        }

        .featured-text-{{ block.id }} * {
          margin: 0;          
          font-size: {{ block.settings.text_size_mobile }}px;
          color: {{ block.settings.text_color }};
          line-height: {{ block.settings.text_height }}%;
          text-transform: unset;
        }

        @media(min-width: 1024px) {
          
          .featured-text-{{ block.id }} {
            margin-top: {{ block.settings.text_mt }}px;
            text-align: {{  content_align }};
          }         
          
          .featured-text-{{ block.id }} * {       
            font-size: {{ block.settings.text_size }}px;
          }
        }
      </style>

      {% if block.settings.text_custom %}
        <style>
          .featured-text-{{ block.id }} * {
            font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
            font-weight: {{ block.settings.text_font.weight }};
            font-style: {{ block.settings.text_font.style }};
          }
        </style>          
      {% endif %}  

    {% when 'button' %}  
      <style>
        {{  block.settings.button_font | font_face: font_display: 'swap' }}

        .featured-button-{{ block.id }} {
          display: flex;
          align-items: center;
          justify-content: center;
          max-width: fit-content;
          gap: 10px;
          width: 100%;
          margin: 0;         
          font-size: {{ block.settings.button_size_mobile }}px;
          color: {{ block.settings.button_color }};
          line-height: {{ block.settings.button_height }}%;
          text-align: center;
          text-transform: unset;
          text-decoration: none;
          padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
          border-radius: {{ block.settings.button_radius }}px;
          transition: all 0.3s ease 0s;
          background-color: transparent;
          border: 0px;
          margin-top: {{ block.settings.button_mt_mobile }}px;
          cursor: pointer;
          font-weight: 700;
          position: relative;
          z-index: 1;
        }

        .featured-button-inner-{{ block.id }} {
          margin: 0px;
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 10px;
          text-decoration: none;
        }

        .featured-button-{{ block.id }}:hover {
          color: {{ block.settings.button_hover_color }};
          transition: all 0.25s ease 0s;
        }

        .featured-button-{{ block.id }} svg {
          width: 14px;
          height: 14px;
        }

        .featured-button-{{ block.id }} svg path {
          fill: {{ block.settings.button_color }};
          transition: all 0.25s ease 0s;
        }

        .featured-button-{{ block.id }}:hover svg path {
          fill: {{ block.settings.button_hover_color }};
          transition: all 0.25s ease 0s;
        }

        @media (min-width: 1024px) {
          .featured-button-{{ block.id }} {
            margin-top: {{ block.settings.button_mt }}px;
            padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
            font-size: {{ block.settings.button_size }}px;
          }
        }
      </style>

      {% if block.settings.use_shadow %}
        <style>
          .featured-button-{{ block.id }}:hover {
            -webkit-box-shadow: 0px 0px 8px 2px {{ block.settings.button_bg_color }};
            -moz-box-shadow: 0px 0px 8px 2px {{ block.settings.button_bg_color }};
            box-shadow: 0px 0px 8px 2px {{ block.settings.button_bg_color }};
          }
        </style>
      {% endif %}  

      {% if block.settings.button_custom %}
        <style>
          .featured-button-{{ block.id }} {
            font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};
            font-weight: {{ block.settings.button_font.weight }};
            font-style: {{ block.settings.button_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.button_style == "non_outline" or block.settings.button_style == "non_outline_arrow" %}
        <style>
          .featured-button-{{ block.id }} {
            transition: all 0.3s ease 0s;
            background-color: {{ block.settings.button_bg_color }};
          }
      
          .featured-button-{{ block.id }}:hover {
            transition: all 0.3s ease 0s;
            background-color: {{ block.settings.button_bg_hover_color }};
          }
        </style>
      {% elsif block.settings.button_style == "outline" or block.settings.button_style == "outline_arrow" %}
        <style>          
          .featured-button-{{ block.id }} {
            transition: all 0.3s ease 0s;
            background-color: {{ block.settings.button_bg_color }};
            border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_color }};
          }
      
          .featured-button-{{ block.id }}:hover {
            transition: all 0.3s ease 0s;
            background-color: {{ block.settings.button_bg_hover_color }};
            border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_hover_color }};
          }
        </style>
      {% elsif block.settings.button_style == "link" %}
        <style>
          .featured-button-{{ block.id }} {
            padding: 0px !important;
            -webkit-box-shadow: none !important;
            -moz-box-shadow: none !important;
            box-shadow: none !important;
          }
        </style>
      {% endif %}  
      
     {% when 'tag' %}
       <style>
        {% assign tag_height = block.settings.tag_height | divided_by: 100 %}
        {{  block.settings.tag_font | font_face: font_display: 'swap' }}

        .featured-tag-{{ block.id }} {
          position: absolute;
          left: 50%;
          top: calc(-{{ block.settings.tag_padding_vertical_mobile | times: 2 | plus: block.settings.tag_size_mobile | times: tag_height }}px / 2);
          transform: translateX(-50%);
          z-index: 2;
        }

        .featured-tag-{{ block.id }} * {          
          margin: 0;
          font-size: {{ block.settings.tag_size_mobile }}px;
          color: {{ block.settings.tag_color }};
          line-height: {{ block.settings.tag_height }}%;
          text-transform: unset;
          text-decoration: none;
          word-break: break-word;
        }          
 
        @media(min-width: 1024px) {
          .featured-tag-{{ block.id }} {
            top: calc(-{{ block.settings.tag_padding_vertical | times: 2 | plus: block.settings.tag_size | times: tag_height }}px / 2);
          }

          .featured-tag-{{ block.id }} * {                
            font-size: {{ block.settings.tag_size }}px;
          }  
        }
      </style>

      {% if block.settings.tag_custom %}
        <style>
          .featured-tag-{{ block.id }} * {
            font-family: {{ block.settings.tag_font.family }}, {{ block.settings.tag_font.fallback_families }};
            font-weight: {{ block.settings.tag_font.weight }};
            font-style: {{ block.settings.tag_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.tag_background %}
        <style>
          .featured-tag-{{ block.id }} {
            padding: {{ block.settings.tag_padding_vertical_mobile }}px {{ block.settings.tag_padding_horizontal_mobile }}px;
            background-color: {{ block.settings.tag_bg_color }};
            border-radius: {{ block.settings.tag_radius }}px;
          }

          @media(min-width: 1024px) {
            .featured-tag-{{ block.id }} {
              padding: {{ block.settings.tag_padding_vertical }}px {{ block.settings.tag_padding_horizontal }}px;
            }
          }
        </style>
        {% if block.settings.tag_border == "solid" %}
          <style>
            .featured-tag-{{ block.id }} {
              border: {{ block.settings.tag_border_thickness }}px solid {{ block.settings.tag_border_color }};
            }
          </style>
        {% endif %}
      {% endif %}

    {% when 'badge' %}
       <style>
        {{  block.settings.badge_font | font_face: font_display: 'swap' }}

        .featured-badge-{{ block.id }} {
          display: flex;
          align-items: center;
          gap: 12px;
          text-align: {{  content_align_mobile }}; 
          margin-top: {{ block.settings.badge_mt_mobile }}px;
        }

        .featured-badge-{{ block.id }} * {          
          margin: 0;
          font-size: {{ block.settings.badge_size_mobile }}px;
          color: {{ block.settings.badge_color }};
          line-height: {{ block.settings.badge_height }}%;
          text-transform: unset;
          text-decoration: none;
          word-break: break-word;
        }          

        .featured-badge-{{ block.id }} strong {
          font-weight: 700;
          color: {{ block.settings.badge_accent_color }};
        }
 
        @media(min-width: 1024px) {
          .featured-badge-{{ block.id }}{
            text-align: {{  content_align }};
            margin-top: {{ block.settings.badge_mt }}px;
          }

          .featured-badge-{{ block.id }} * {                
            font-size: {{ block.settings.badge_size }}px;
          }  
        }
      </style>

      {% if block.settings.badge_custom %}
        <style>
          .featured-badge-{{ block.id }} * {
            font-family: {{ block.settings.badge_font.family }}, {{ block.settings.badge_font.fallback_families }};
            font-weight: {{ block.settings.badge_font.weight }};
            font-style: {{ block.settings.badge_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.badge_background %}
        <style>
          .featured-badge-{{ block.id }} {
            padding: {{ block.settings.badge_padding_vertical_mobile }}px {{ block.settings.badge_padding_horizontal_mobile }}px;
            background-color: {{ block.settings.badge_bg_color }};
            border-radius: {{ block.settings.badge_radius }}px;
          }

          @media(min-width: 1024px) {
            .featured-badge-{{ block.id }} {
              padding: {{ block.settings.badge_padding_vertical }}px {{ block.settings.badge_padding_horizontal }}px;
            }
          }
        </style>
        {% if block.settings.badge_border == "solid" %}
          <style>
            .featured-badge-{{ block.id }} {
              border: {{ block.settings.badge_border_thickness }}px solid {{ block.settings.badge_border_color }};
            }
          </style>
        {% endif %}
      {% endif %}

    {% when 'timer' %}
      <style>
        {{  block.settings.number_font | font_face: font_display: 'swap' }}
        {{  block.settings.completed_text_font | font_face: font_display: 'swap' }}

        .featured-timer-wrapper-{{ block.id }} {
          width: 100%;
          justify-content: {{ content_horizontal_align_mobile }};
          margin-top: {{ block.settings.timer_mt_mobile }}px;
          display: flex;
          gap: 10px;
          align-items: center;
          flex-wrap: wrap;
        }
        
        .featured-timer-{{ block.id }} {    
          display: flex;   
          align-items: center;
          gap: {{ block.settings.timer_gap_mobile }}px;
          flex-wrap: wrap;
        }

        .featured-timer-{{ block.id }} .time-block {
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          text-align: center;
        }

        .featured-timer-{{ block.id }} .time-block__num {
          margin: 0;
          font-size: {{ block.settings.number_size_mobile }}px;
          color: {{ block.settings.number_color }};
          line-height: {{ block.settings.number_height }}%;
          text-transform: unset;
          font-weight: 700;
        }

        .featured-timer-text-{{ section.id }} * {
          margin: 0;
          font-size: {{ block.settings.number_size_mobile }}px;
          color: {{ block.settings.text_color }};
          line-height: {{ block.settings.number_height }}%;
          text-transform: unset;
        }

        .featured-timer-{{ block.id }} .time-block__num.colons {
          font-size: {{ block.settings.number_size_mobile | times: 0.8 }}px;
        }

        .featured-completed-text-{{ block.id }} {
          display: none;
          position: relative;    
        }

        .featured-completed-text-{{ block.id }} * {
          margin: 16px 0;
          font-size: {{ block.settings.completed_text_size_mobile }}px;
          color: {{ block.settings.completed_text_color }};
          line-height: {{ block.settings.completed_text_height }}%;
          text-transform: unset;
        }

        @media (min-width: 1024px) {     
          .featured-timer-wrapper-{{ block.id }} {
            margin-top: {{ block.settings.timer_mt }}px;
            justify-content: {{ content_horizontal_align }};
          }

          .featured-timer-{{ block.id }} {
            gap: {{ block.settings.timer_gap }}px;
          }
        
          .featured-timer-{{ block.id }} .time-block__num {
            font-size: {{ block.settings.number_size }}px;
          }

          .featured-timer-text-{{ section.id }} * {
            font-size: {{ block.settings.number_size }}px;
          }

          .featured-timer-{{ block.id }} .time-block__num.colons {
            font-size: {{ block.settings.number_size | times: 0.8 }}px;
