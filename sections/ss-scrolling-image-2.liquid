{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    {% unless full_width %}
      max-width: {{ content_width }}rem;
    {% endunless %}
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .scrolling-image-heading-{{ section.id }} > * {
    padding:0 20px;
    margin: 0;
    font-size: {{ heading_size | times: 0.85 }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-align: {{ heading_align }};
  }

  .scrolling-image-slider-{{ section.id }} {
    margin-top: {{ slider_mt | times: 0.75 | round: 0 }}px;
  }

  .scrolling-image-slide-{{ section.id }} {
    flex: 0 0 {{ card_width_mobile }}px;
    width: 100%;
    max-width: {{ card_width_mobile }}px;
  }

  .scrolling-image-slide-{{ section.id }}.padding-top {
    padding-top: {{ slide_padding_top_mobile }}px;
  }

  .scrolling-image-card-{{ section.id }} {
    display: block;
    width: 100%;
    padding: {{ card_padding_vertical | times: 0.75 | round: 0 }}px {{ card_padding_horizontal | times: 0.75 | round: 0 }}px;
    background-color: {{ card_bg }};
    border-radius: {{ card_radius }}px;
    text-decoration: none;
    border: {{ card_border_thickness }}px solid {{ card_border_color }};
  }

  .scrolling-image-media-{{ section.id }} {
    width: 100%;
    height: 100%;
  }

  .scrolling-image-media-{{ section.id }} svg,
  .scrolling-image-media-{{ section.id }} img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    border-radius: {{ image_radius }}px;
  }

  .scrolling-image-media-{{ section.id }} svg {
    background-color: #a0a0a0;
  }

  .scrolling-image-text-{{ section.id }} {
    margin: 0px;
    margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
    font-size: {{ text_size | times: 0.85 }}px;
    line-height: {{ text_height }}%;
    color: {{ text_color }};
    font-weight: 600;
    text-align: center;
    white-space: normal;
  }

  .scrolling-image-other-text-{{ section.id }} > * {
    margin: 0px;
    margin-top: {{ other_text_mt | times: 0.75 | round: 0 }}px;
    font-size: {{ other_text_size | times: 0.85 }}px;
    line-height: {{ other_text_height }}%;
    color: {{ other_text_color }};
    text-align: center;
    white-space: normal;
  }

  .marquee-horizontal-{{ section.id }} {
      position: relative;
      z-index: 2;
      display: inline-flex;
      overflow: hidden;
      width: 100%;
      -webkit-box-pack: start;
      -webkit-justify-content: flex-start;
      -ms-flex-pack: start;
      justify-content: flex-start;
      -webkit-box-align: center;
      -webkit-align-items: center;
      -ms-flex-align: center;
      align-items: center;
      padding-bottom: 25px;
  }

  .track-horizontal-{{section.id}} {
      padding-left: {{ slider_gap_mobile }}px;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      flex-shrink: 0;
      {% if count != 0 %}
      width: calc(({{ card_width }}px * {{ section.blocks.size | times: 2 }}) + ({{ slider_gap }}px * {{ section.blocks.size | times: 2 }}));
      {% else %}
        width: calc(({{ card_width }}px * {{ section.blocks.size }}) + ({{ slider_gap }}px * {{ section.blocks.size }}));
      {% endif %}
      gap: {{ slider_gap_mobile }}px;
      -webkit-box-pack: start;
      -webkit-justify-content: flex-start;
      -ms-flex-pack: start;
      justify-content: flex-start;
      -webkit-box-align: center;
      -webkit-align-items: center;
      -ms-flex-align: center;
      align-items: center;
      white-space: nowrap;
      will-change: transform;
      {% if count != 0 %}
        animation: marquee-horizontal-{{ slider_direction }} {{ slider_speed | times: 2000 | round: 0 }}ms linear infinite;
      {% else %}
        animation: marquee-horizontal-{{ slider_direction }} {{ slider_speed | times: 1000 | round: 0 }}ms linear infinite;
      {% endif %}
  }

  @keyframes marquee-horizontal-left {
    0% {
        transform: translateZ(0);
        visibility: visible;
    }
    
    100% {
        transform: translate3d(-100%,0,0);
    }
  }

  @keyframes marquee-horizontal-right {
    0% {
        transform: translate3d(-100%,0,0);
        visibility: visible;
    }
    
    100% {
        transform: translateZ(0);
    }
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
