{% if image_ratio_mobile == "portrait" %}
  <style>
    .featured-image-{{ section.id }} {
      aspect-ratio: 9.6/11;
    }
  </style>
{% elsif image_ratio_mobile == "landscape" %}
  <style>
  .featured-image-{{ section.id }} {
    aspect-ratio: 12/8;
  }
  </style>
{% elsif image_ratio_mobile == "square" %}
  <style>
    .featured-image-{{ section.id }} {
      aspect-ratio: 12/12;
    }
  </style>
{% else %}
  <style>
    .featured-image-{{ section.id }} {
      aspect-ratio: auto;
    }
  </style>
{% endif %}

{% if image_ratio == "portrait" %}
  <style>
    @media(min-width: 1024px) {
      .featured-image-{{ section.id }} {
        aspect-ratio: 9.6/11;
      }
    }
    
  </style>
{% elsif image_ratio == "landscape" %}
  <style>
    @media(min-width: 1024px) {
      .featured-image-{{ section.id }} {
        aspect-ratio: 12/8;
      }
    }  
  </style>
{% elsif image_ratio == "square" %}
  <style>
    @media(min-width: 1024px) {
      .featured-image-{{ section.id }} {
        aspect-ratio: 12/12;
      }
    }    
  </style>
{% else %}
  <style>
     @media(min-width: 1024px) {
      .featured-image-{{ section.id }} {
        aspect-ratio: auto;
      }
    }
  </style>
{% endif %}

{% if image_hover %}
  <style>
    .featured-images-{{ section.id }} .featured-second-image-{{ section.id }} {
      display: none;  
    }
    
    @media(min-width: 1024px) {
      .featured-images-{{ section.id }} .featured-first-image-{{ section.id }} {
        -webkit-animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;
        animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;  
      }
  
      .featured-images-{{ section.id }}:hover .featured-first-image-{{ section.id }} {
        display: none;
      }
  
      .featured-images-{{ section.id }}:hover .featured-second-image-{{ section.id }} {
        -webkit-animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;
        animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;   
        display: block;
      } 
    }

    @keyframes opacity{{ section.id | replace: '-', '' }} {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
  </style>
{% endif %}

{% if arrow_hover_effect == "color" %}
  <style>
    .featured-btn-prev-{{ section.id }}:hover,
    .featured-btn-next-{{ section.id }}:hover {
