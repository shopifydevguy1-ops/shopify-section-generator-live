<script>
  function initLetter() {
    var letterTextElements = document.querySelectorAll("[class^='letter-text-']");
  
    window.addEventListener("scroll", function() {
      var scrollPosition = window.scrollY;
      var windowHeight = window.innerHeight;
      var windowMiddle = scrollPosition + windowHeight / 1.7;
      
      letterTextElements.forEach(function(element) {
        var elementMiddle = element.offsetTop + element.offsetHeight / 1.7;
        
        if (elementMiddle >= scrollPosition && elementMiddle <= windowMiddle) {
          element.classList.add("active");
        } else {
          element.classList.remove("active");
        }
      });
    });
  }

  document.addEventListener('DOMContentLoaded', initLetter);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initLetter);
     document.addEventListener('shopify:section:load', initLetter);
  }
</script>

