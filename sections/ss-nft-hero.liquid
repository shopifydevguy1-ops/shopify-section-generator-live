{% stylesheet %}

  * {
    box-sizing: border-box;
  }
  h1,
  h2 {
    text-transform: uppercase;
    margin: 0;
    font-weight: 400;
  }

  h2 {
    font-size: 32px;
    line-height: 44px;
    margin-bottom: 18px;
  }

  a {
    text-decoration: none;
    color: #fff;
    cursor: pointer;
  }

  .link__author-nft {
    color: #e73bcd;
    position: relative;
    padding: 5px 6px;
  }

  .link__author-nft::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 8px;
    border: 1px solid transparent; /*–û–±–≤–æ–¥–∫–∞ –Ω—É–∂–Ω–æ–π —Ç–æ–ª—â–∏–Ω—ã, –Ω–æ –ø—Ä–æ–∑—Ä–∞—á–Ω–∞—è*/
    -webkit-mask: /*4*/ linear-gradient(#fff 0 0) padding-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor; /*5'*/
    mask-composite: exclude; /*5*/
  }

  .button {
    background: transparent;
    border: none;
    color: #fff;
    font-size: 14px;
    width: 183px;
    height: 63px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 9px;
    cursor: pointer;
    text-transform: uppercase;
