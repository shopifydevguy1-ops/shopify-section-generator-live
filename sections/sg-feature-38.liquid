              <div class="feature-heading-{{ section.id }}">{{ heading }}</div>
            {% endif %}
            <div class="feature-toggles-{{ section.id }}">
              {% for block in section.blocks %}
                <div class="feature-toggle-{{ section.id }} {% if forloop.first %}active{% endif %}" id="{{ block.id }}">
                  <p>{{ block.settings.toggle }}</p>
                  <div class="feature-toggle-bg-{{ section.id }}"></div>
                </div>
              {% endfor %}
            </div>
