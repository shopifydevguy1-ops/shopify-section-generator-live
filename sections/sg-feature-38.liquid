</div>

<script>
  function initFeature38() {
    const toggles = document.querySelectorAll('.feature-toggle-{{ section.id }}');
    const images = document.querySelectorAll('.feature-image-{{ section.id }}');
    const texts = document.querySelectorAll('.feature-text-{{ section.id }}');
    const bgs = document.querySelectorAll('.feature-toggle-bg-{{ section.id }}');
    const time = {{ autoplay }} * 1000;
    let currentIndex = 1;
    let intervalId = null;
    let userInteracted = false;

    function setMaxHeight() {
      let maxHeight = 0;
      texts.forEach(text => {
        const height = text.offsetHeight;
        if (height > maxHeight) {
          maxHeight = height;
        }
      });
      texts.forEach(text => {
        text.style.minHeight = `${maxHeight}px`;
      });
    }

    function activateByIndex(index, isUser = false) {
      images.forEach(image => image.classList.remove('active'));
      toggles.forEach(toggle => toggle.classList.remove('active'));
      texts.forEach(text => text.classList.remove('active'));
      if (isUser) {
        bgs.forEach(bg => bg.classList.remove('hide-{{ section.id }}'));
      }

      const toggle = toggles[index];
      const dataId = toggle.id;

      images.forEach(image => {
        if (image.getAttribute('data-id') === dataId) {
          image.classList.add('active');
        }
      });

      texts.forEach(text => {
        if (text.getAttribute('data-id') === dataId) {
          text.classList.add('active');
        }
      });

      if (isUser) {
        bgs.forEach(bg => {        
          bg.classList.add('hide-{{ section.id }}');          
        });
      }

      toggle.classList.add('active');
    }

    function startAutoSwitching() {
      intervalId = setInterval(() => {
        activateByIndex(currentIndex);
        currentIndex = (currentIndex + 1) % toggles.length;
      }, time);
    }

    setMaxHeight();

    window.addEventListener('resize', () => {
      setMaxHeight();
    });

    toggles.forEach((toggle, index) => {
      toggle.addEventListener('click', () => {
        if (!userInteracted) {
          userInteracted = true;
          clearInterval(intervalId);
        }
        activateByIndex(index, true);
        currentIndex = index;
      });
    });

    if (toggles.length > 1) {
      startAutoSwitching();
    }
  }

  document.addEventListener('DOMContentLoaded', initFeature38);

  if (Shopify.designMode) {
    document.addEventListener('shopify:section:unload', initFeature38);
    document.addEventListener('shopify:section:load', initFeature38);
  }
</script>


