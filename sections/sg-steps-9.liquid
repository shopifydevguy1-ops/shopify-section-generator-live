  assign text_custom = section.settings.text_custom
  assign text_font = section.settings.text_font
  assign text_height = section.settings.text_height
  assign text_color = section.settings.text_color
  assign text_mt = section.settings.text_mt
  assign text_mt_mobile = section.settings.text_mt_mobile
  assign text_align = section.settings.text_align
  assign text_align_mobile = section.settings.text_align_mobile
  assign text_active_color = section.settings.text_active_color
  assign text_hover_color = section.settings.text_hover_color

  assign image_border_thickness = section.settings.image_border_thickness
  assign image_border_color = section.settings.image_border_color
  assign image_ratio = section.settings.image_ratio
  assign image_ratio_mobile = section.settings.image_ratio_mobile
  assign image_radius = section.settings.image_radius
  assign image_mt_mobile = section.settings.image_mt_mobile

  assign circle_progress = section.settings.circle_progress
  assign circle_active_progress = section.settings.circle_active_progress
  assign circle_size = section.settings.circle_size
  assign circle_size_mobile = section.settings.circle_size_mobile
  assign circle_bg_color = section.settings.circle_bg_color

  assign step_size = section.settings.step_size
  assign step_size_mobile = section.settings.step_size_mobile
  assign step_color = section.settings.step_color
  assign step_custom = section.settings.step_custom
  assign step_font = section.settings.step_font
  assign step_height = section.settings.step_height
-%}

{%- style -%}
  {{ heading_font | font_face: font_display: 'swap' }}
  {{ title_font | font_face: font_display: 'swap' }}
  {{ text_font | font_face: font_display: 'swap' }}
  {{ step_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .steps-body-{{ section.id }} {
    display: flex;
    gap: {{ layout_gap_mobile }}px;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .steps-content-{{ section.id }} {
    width: 100%;
    order: 2;
    justify-content: center;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
  }

  .steps-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
  }

  .steps-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 700;
  }

  .steps-heading-mobile-{{ section.id }} {
    display: block;
  }

  .steps-heading-desktop-{{ section.id }} {
    display: none;
  }

  .steps-title-{{ section.id }} {
    margin: 0;
    text-align: {{ title_align_mobile }};
    font-size: {{ title_size_mobile }}px;
    color: {{ title_color }};
    line-height: {{ title_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.25s ease 0s;
  }

  .steps-title-{{ section.id }}:hover {
    color: {{ title_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .steps-title-{{ section.id }}.active {
    color: {{ title_active_color }};
    transition: all 0.25s ease 0s;
  }

  .steps-text-{{ section.id }} {
    margin-top: {{ text_mt_mobile }}px;
  }

  .steps-text-{{ section.id }} * {
    margin: 0;
    text-align: {{ text_align_mobile }};
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.25s ease 0s;
  }

  .steps-text-{{ section.id }}:hover * {
    color: {{ text_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .steps-text-{{ section.id }}.active * {
    color: {{ text_active_color }};
    transition: all 0.25s ease 0s;
  }

  .steps-title-wrapper-{{ section.id }}:not(:first-child) {
    margin-top: {{ title_mt_mobile }}px;
  }

  .steps-image-{{ section.id }}.active {
    display: block;
    -webkit-animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;
    animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;    
  }

  @keyframes opacity{{ section.id | replace: '-', '' }} {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .steps-images-{{ section.id }} {
    padding: 0 {{ circle_size_mobile | divided_by: 2 }}px;
    order: 1;
    position: relative;
    overflow: hidden;
    margin-top: {{ image_mt_mobile }}px;
  }

  .steps-image-{{ section.id }} {
    display: none;
    width: 100%;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
    border-radius: {{ image_radius }}px;
    overflow: hidden;
  }

  .steps-image-{{ section.id }} img,
  .steps-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .steps-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .steps-progresg-wrapper-{{ section.id }} {
    flex-direction: column;
    display: flex;
    justify-content: center;
    gap: 15px;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
    overflow-y: scroll;
    scrollbar-width: none;
    height: 100%;
  }

  .steps-progresg-wrapper-{{ section.id }}::-webkit-scrollbar {
    display: none;
  }

  .steps-progresg-wrapper-mobile-{{ section.id }} {
    display: flex;
  }

  .steps-progresg-wrapper-desktop-{{ section.id }} {
    display: none;
  }

  .steps-circle-{{ section.id }} {
    position: relative;
    height: {{ circle_size_mobile }}px;
    cursor: pointer;
    border-radius: 50%;
    overflow: hidden;
  }

  .steps-circle-container-{{ section.id }} svg {
    width: {{ circle_size_mobile }}px;
    height: {{ circle_size_mobile }}px;
  }

  .steps-circle-{{ section.id }} span {
    margin: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: {{ step_size_mobile }}px;
    color: {{ step_color }};
    line-height: {{ step_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 700;
  }  
  
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .steps-body-{{ section.id }} {
      gap: {{ layout_gap }}px;
      flex-direction: row;
    }

    .steps-content-{{ section.id }} {
      width: 30%;
      order: 1;
      display: flex;
    }

    .steps-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .steps-heading-mobile-{{ section.id }} {
      display: none;
    }

    .steps-heading-desktop-{{ section.id }} {
      display: block;
    }

    .steps-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .steps-images-{{ section.id }} {
      margin-top: 0px;
    }

    .steps-image-{{ section.id }} {
      width: 70%;
    }

    .steps-title-{{ section.id }} {
      text-align: {{ title_align }};
      font-size: {{ title_size }}px;
    }

    .steps-title-wrapper-{{ section.id }}:not(:first-child) {
      margin-top: {{ title_mt }}px;
    }

    .steps-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
    }

    .steps-text-{{ section.id }} * {
      text-align: {{ text_align }};
      font-size: {{ text_size }}px;
    }

    .steps-images-{{ section.id }} {
      flex: 1 0;
      display: flex;      
      justify-content: space-between;
      align-items: center;
      order: 2;
      margin: 0;
    }

    .steps-circle-{{ section.id }} {
      height: {{ circle_size }}px;
    }

    .steps-circle-container-{{ section.id }} svg {
      width: {{ circle_size }}px;
      height: {{ circle_size }}px;
    }

    .steps-circle-{{ section.id }} span {
      font-size: {{ step_size }}px;
    }

    .steps-progresg-wrapper-{{ section.id }} {
      gap: 15px;
      position: static;
      transform: translate(0);
      height: auto;
      overflow: none;
    }

    .steps-progresg-wrapper-mobile-{{ section.id }} {
      display: none;
    }

    .steps-progresg-wrapper-desktop-{{ section.id }} {
      display: flex;
    }
  }
  
