            {% for block in section.blocks %}
              <div class="steps-circle-container-{{ section.id }}" data-circle="{{ block.id }}">
                <div class="steps-circle-{{ section.id }}" data-progress="{{ circle_progress }}" data-active-progress="{{ circle_active_progress }}">
                  <svg width="100" height="100" viewBox="0 0 36 36" style="background-color: {{ circle_bg_color  }};">
                    <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="{{ circle_progress }}" stroke-width="4" stroke-dasharray="100, 100"></path>
                  </svg>
