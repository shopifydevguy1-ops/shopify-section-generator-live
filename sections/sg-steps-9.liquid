<div class="section-{{ section.id }} steps-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      {% if heading != blank %}
        <div class="steps-heading-{{ section.id }} steps-heading-mobile-{{ section.id }}">{{ heading }}</div>
      {% endif %}
      <div class="steps-body-{{ section.id }}">
        <div class="steps-content-{{ section.id }}">
          {% if heading != blank %}
            <div class="steps-heading-{{ section.id }} steps-heading-desktop-{{ section.id }}">{{ heading }}</div>
          {% endif %}
          {% for block in section.blocks %}
            <div class="steps-title-wrapper-{{ section.id }}">
              <p class="steps-title-{{ section.id }} {% if forloop.first %}active{% endif %}" id="{{ block.id }}">{{ block.settings.title }}</p>
              <div class="steps-text-{{ section.id }} {% if forloop.first %}active{% endif %}">{{ block.settings.text }}</div>
