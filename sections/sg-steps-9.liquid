        <div class="steps-images-{{ section.id }}">
          {% for block in section.blocks %}
            <div class="steps-image-{{ section.id }} {% if forloop.first %}active{% endif %}" data-id="{{ block.id }}">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}loading="lazy"{% endif %}> 
              {% else %}  
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>
          {% endfor %}     
