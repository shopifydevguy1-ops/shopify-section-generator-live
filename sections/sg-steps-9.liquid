<script>
  /* Unique variables with underscores, avoiding "template--1234" syntax errors */
  let autoplayInterval_{{ section.id | replace: '-', '_' }};
  let animationFrame_{{ section.id | replace: '-', '_' }};

  function initSteps9_{{ section.id | replace: '-', '_' }}() {
    console.log("initSteps9_{{ section.id }} running!");

    /* Grab all elements tied to this section */
    const titles = document.querySelectorAll('.steps-title-{{ section.id }}');
    const images = document.querySelectorAll('.steps-image-{{ section.id }}');
    const circles = document.querySelectorAll('.steps-circle-{{ section.id }}');
    /* NEW: fetch the text elements too so we can toggle .active on them */
    const texts = document.querySelectorAll('.steps-text-{{ section.id }}');

    let currentIndex = 0;
    const autoplayTime = {{ autoplay_delay }} * 1000; // e.g. 8 => 8000ms

    /* --- Helper functions --- */

    /* Clears 'active' from titles, images, AND texts */
    function clearActiveClasses() {
      titles.forEach(title => title.classList.remove('active'));
      images.forEach(image => image.classList.remove('active'));
      texts.forEach(txt => txt.classList.remove('active'));
    }

    /* Fill previous circles fully (used to show which steps are done) */
    function fillPreviousCircles(index) {
      circles.forEach((circle, i) => {
        const activeCircle = circle.querySelector('.active-circle');
        if (!activeCircle) return;
        // If it's before or equal to our current, fill it
        activeCircle.setAttribute("stroke-dasharray", i <= index ? "110,110" : "0,100");
      });
    }

    /* Reset circle strokes to 0% for all steps */
    function resetAllCircles() {
      circles.forEach(circle => {
        const activeCircle = circle.querySelector('.active-circle');
        if (activeCircle) {
          activeCircle.setAttribute("stroke-dasharray", "0,100");
        }
      });
    }

    /* Ensure the SVG path for the circle is created if missing */
    function createCircleSVG(circle, progressColor, activeProgressColor, lineWidth, size) {
      const svgNamespace = "http://www.w3.org/2000/svg";
      let svg = circle.querySelector("svg");
      if (!svg) {
        svg = document.createElementNS(svgNamespace, "svg");
        svg.setAttribute("width", size);
        svg.setAttribute("height", size);
        svg.setAttribute("viewBox", "0 0 36 36");
        circle.appendChild(svg);
      }

      // Background circle
      let backgroundCircle = svg.querySelector('.background-circle');
      if (!backgroundCircle) {
        backgroundCircle = document.createElementNS(svgNamespace, "path");
        backgroundCircle.setAttribute("class", "background-circle");
        backgroundCircle.setAttribute("d", "M18 2 a 16 16 0 1 1 0 32 a 16 16 0 1 1 0 -32");
        backgroundCircle.setAttribute("fill", "none");
        backgroundCircle.setAttribute("stroke", progressColor);
        backgroundCircle.setAttribute("stroke-width", lineWidth - 1);
        svg.appendChild(backgroundCircle);
      }

      // Active circle
      let activeCircle = svg.querySelector('.active-circle');
      if (!activeCircle) {
        activeCircle = document.createElementNS(svgNamespace, "path");
        activeCircle.setAttribute("class", "active-circle");
        activeCircle.setAttribute("d", "M18 2 a 16 16 0 1 1 0 32 a 16 16 0 1 1 0 -32");
        activeCircle.setAttribute("fill", "none");
        activeCircle.setAttribute("stroke", activeProgressColor);
        activeCircle.setAttribute("stroke-width", lineWidth);
        activeCircle.setAttribute("stroke-dasharray", "0,100");
        svg.appendChild(activeCircle);
      }

      return activeCircle;
    }

    /**
     * Time-based circle fill from 0→120 over `autoplayTime`.
     * On complete, calls `onComplete()`.
     */
    function animateCircle(circle, onComplete) {
      const progressColor = circle.getAttribute('data-progress');
      const activeProgressColor = circle.getAttribute('data-active-progress');
      const lineWidth = parseFloat(circle.getAttribute('data-line')) || 4;
      const size = parseFloat(circle.getAttribute('data-size')) || 100;

      const activeCircle = createCircleSVG(circle, progressColor, activeProgressColor, lineWidth, size);

      const startTime = performance.now();
      const duration = autoplayTime; // e.g. 8000ms if autoplay_delay=8

      function stepAnimation(now) {
        const elapsed = now - startTime;
        if (elapsed >= duration) {
          // Fill complete
          activeCircle.setAttribute("stroke-dasharray", "120,120");
          if (onComplete) onComplete();
          return;
        }
        const fraction = elapsed / duration;
        const progress = 120 * fraction; // 0→120
        activeCircle.setAttribute("stroke-dasharray", `${progress},120`);

        animationFrame_{{ section.id | replace: '-', '_' }} = requestAnimationFrame(stepAnimation);
      }
      animationFrame_{{ section.id | replace: '-', '_' }} = requestAnimationFrame(stepAnimation);
    }

    /* Manages the entire step: clearing old, marking new, animating circle */
    function updateActiveStep(index) {
      // Cancel any existing circle animation
      if (animationFrame_{{ section.id | replace: '-', '_' }}) {
        cancelAnimationFrame(animationFrame_{{ section.id | replace: '-', '_' }});
      }

      clearActiveClasses();
      // Mark the "active" step for titles, images, AND text
      titles[index].classList.add('active');
      images[index].classList.add('active');
      texts[index].classList.add('active');

      // Animate the circle for this index
      animateCircle(circles[index], () => {
        currentIndex = index;

        // If it's the last step, after 0.5s reset to the first
        if (currentIndex === circles.length - 1) {
          setTimeout(() => {
            resetAllCircles();
            currentIndex = -1;
            nextStep();
          }, 50);
        }
      });

      fillPreviousCircles(index);
    }

    /* Move to next step, cyclical (if last, goes to first) */
    function nextStep() {
      currentIndex = (currentIndex + 1) % titles.length;
      updateActiveStep(currentIndex);
    }

    /* The setInterval controlling auto-advance */
    function startAutoplay() {
      if (autoplayInterval_{{ section.id | replace: '-', '_' }}) {
        clearInterval(autoplayInterval_{{ section.id | replace: '-', '_' }});
      }
      autoplayInterval_{{ section.id | replace: '-', '_' }} = setInterval(nextStep, autoplayTime);
    }

    /* If user clicks a step, jump there and restart */
    function handleStepClick(index) {
