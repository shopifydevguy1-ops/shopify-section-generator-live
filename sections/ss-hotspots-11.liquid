<script>
  function initHotspots11() {
    const hotspots = document.querySelectorAll('.hotspot-hotspot-{{ section.id }}');
    const hotspotImage = document.querySelector('.hotspot-image-{{ section.id }}');

    if (hotspots) {
      hotspots.forEach(hotspot => {
        hotspot.addEventListener('click', (event) => {
          event.stopPropagation();

          const content = hotspot.querySelector('.hotspot-hotspot-content-{{ section.id }}');

          if (hotspot.classList.contains('active')) {
            if (content) {
              content.style.transition = 'opacity 0.3s ease, scale 0.3s ease';
              content.style.opacity = '0';

              setTimeout(() => {
                hotspot.classList.remove('active');
              }, 300);
            } else {
              hotspot.classList.remove('active');
            }
          } else {
            hotspots.forEach(otherHotspot => {
              otherHotspot.classList.remove('active');
              const otherContent = otherHotspot.querySelector('.hotspot-hotspot-content-{{ section.id }}');
              if (otherContent) {
                otherContent.style.opacity = '0';
              }
            });

            hotspot.classList.add('active');
            if (content) {
              content.style.transition = 'opacity 0.3s ease,  scale 0.3s ease';
              content.style.opacity = '1';
            }
          }
        });
      });

      document.addEventListener('click', (event) => {
        if(event.target == hotspotImage) {
          const clickedInsideHotspot = Array.from(hotspots).some(hotspot => hotspot.contains(event.target));

          if (!clickedInsideHotspot) {
            hotspots.forEach(hotspot => {
              const content = hotspot.querySelector('.hotspot-hotspot-content-{{ section.id }}');
              if (content) {
                content.style.transition = 'opacity 0.25s ease, scale 0.3s ease';
                content.style.opacity = '0';

                setTimeout(() => {
                  hotspot.classList.remove('active');
                }, 300);
              } else {
                hotspot.classList.remove('active');
              }
            });
          }
        }     
      });

      const answerPaddingTop = {{ answer_padding_top }};
      const answerPaddingBottom = 0;

      const buttons = document.querySelectorAll('.hotspot-toggle-{{ section.id }}');
      const answers = document.querySelectorAll('.hotspot-answer-{{ section.id }}');
      const answersHeightCalElements = document.querySelectorAll('.hotspot-height-cal-{{ section.id }}');
      const faqIcons = document.querySelectorAll('.hotspot-icon-{{ section.id }}');

      let activeIndex = -1;

      function openAnswer(index) {
        const height = answersHeightCalElements[index].offsetHeight;

        answers[index].style.display = 'block';
        setTimeout(() => {
          answers[index].style.paddingTop = `${answerPaddingTop}px`;
          answers[index].style.paddingBottom = `${answerPaddingBottom}px`;
          answers[index].style.height = `${height}px`;
        });

        faqIcons[index].classList.add('active');
      }

      function closeAnswer(index) {
        answers[index].style.paddingTop = 0;
        answers[index].style.paddingBottom = 0;
        answers[index].style.height = 0;

        setTimeout(() => {
          answers[index].style.display = 'none';
        }, 300);

        faqIcons[index].classList.remove('active');
      }

      function toggleAnswer(index) {
        if (answers[index].style.display === 'none') {
          openAnswer(index);
          activeIndex = index;
        } else {
          closeAnswer(index);
          activeIndex = -1;
        }
      }

      function closeAllAnswersBut(index) {
        answers.forEach((answer, i) => {
          if (i !== index) {
            closeAnswer(i);
          }
        });
      }

      buttons.forEach((button, index) => {
        button.addEventListener('click', () => {
          toggleAnswer(index);
          closeAllAnswersBut(index);
        });
      });

      let resizeTimer;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(() => {
          if (activeIndex !== -1) {
            const height = answersHeightCalElements[activeIndex].offsetHeight;
            answers[activeIndex].style.height = `${height}px`;
          }
        }, 250);
      });
    }
    
    {% if first_open %}
    openAnswer(0);
    {% endif %}
  }

  document.addEventListener('DOMContentLoaded', initHotspots11);

  if (Shopify.designMode) {
    document.addEventListener('shopify:section:unload', initHotspots11);
    document.addEventListener('shopify:section:load', initHotspots11);
  }
</script>

