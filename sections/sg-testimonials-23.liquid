{%- style -%}
  {{ heading_font | font_face: font_display: 'swap' }}
  {{ toggle_font | font_face: font_display: 'swap' }}
  {{ text_font | font_face: font_display: 'swap' }}
  {{ job_title_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
    max-width: 100%;
  }

  .testimonials-heading-{{ section.id }} * {
    margin: 0;  
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
    font-weight: 700;
  }

  .testimonials-toggles-wrap-{{ section.id }} {
    overflow-x: scroll;
    scrollbar-width: none;
    margin-left: -{{ padding_horizontal_mobile }}rem;
    margin-right: -{{ padding_horizontal_mobile }}rem;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-toggles-wrap-{{ section.id }}::-webkit-scrollbar {
    display: none;
  }

  .testimonials-toggles-{{ section.id }} {
    display: flex;
    align-items: center;   
    justify-content: {{ toggles_horizontal_align_mobile }};
    margin-top: {{ toggles_mt_mobile }}px;
    gap: {{ toggles_gap_mobile }}px;  
    flex-wrap: nowrap;
  }  

  .testimonials-toggle-{{ section.id }} {
    margin: 0;  
    font-size: {{ toggle_size_mobile }}px;
    color: {{ toggle_color }};
    line-height: {{ toggle_height }}%;
    text-transform: unset;
    text-decoration: none;
    cursor: pointer;
    white-space: nowrap;
    padding-bottom: 5px;
    border-bottom: {{ toggle_border_thickness }}px solid transparent;
    transition: all 0.25s ease 0s;
  }  

  .testimonials-toggle-{{ section.id }}:hover {
    color: {{ toggle_hover_color }};
    border-bottom: {{ toggle_border_thickness }}px solid {{ toggle_border_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-toggle-{{ section.id }}.active {
    border-bottom: {{ toggle_border_thickness }}px solid {{ toggle_border_color }};
    color: {{ toggle_active_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-slider-{{ section.id }} {
    margin-top: {{ slider_mt_mobile }}px !important;
  }

  .testimonials-slide-{{ section.id }} {
    display: grid !important;    
    grid-template-columns: 1fr !important;
    align-items: start !important;
    gap: {{ slide_gap_mobile }}px !important;
  }

  .testimonials-slide-content-{{ section.id }} {
    grid-area: content;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .testimonials-slide-text-{{ section.id }} {
    text-align: {{ slide_content_align_mobile }};
  }

  .testimonials-slide-text-{{ section.id }} * {
    margin: 0;  
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
  }

  .testimonials-job-title-{{ section.id }} {
    margin: 0; 
    margin-top: {{ job_title_mt_mobile }}px; 
    text-align: {{ slide_content_align_mobile }};
    font-size: {{ job_title_size_mobile }}px;
    color: {{ job_title_color }};
    line-height: {{ job_title_height }}%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
  }

  .testimonials-slide-image-{{ section.id }} {
    grid-area: image;
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
    overflow: hidden;
  }

  .testimonials-slide-image-{{ section.id }} img,
  .testimonials-slide-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-slide-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-heading-{{ section.id }} {
      text-align: {{ heading_align }};
      max-width: {{ heading_max_width }}%;
    }
  
    .testimonials-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .testimonials-toggles-wrap-{{ section.id }} {    
      margin-left: 0rem !important;
      margin-right: 0rem !important;
      padding-left: 0rem !important;
      padding-right: 0rem !important;
    }

    .testimonials-toggles-{{ section.id }} {
      justify-content: {{ toggles_horizontal_align }};
      margin-top: {{ toggles_mt }}px;
      gap: {{ toggles_gap }}px;
    }

    .testimonials-toggle-{{ section.id }} { 
      white-space: wrap;
      font-size: {{ toggle_size }}px;
    }

    .testimonials-slider-{{ section.id }} {
      margin-top: {{ slider_mt }}px !important;
    }

    .testimonials-slide-{{ section.id }} {    
      grid-template-columns: 1fr 1fr !important;
      gap: {{ slide_gap}}px !important;
    }

    .testimonials-slide-content-{{ section.id }} {
      justify-content: {{ slide_content_vertical_align }};
    }

    .testimonials-slide-text-{{ section.id }} {
      text-align: {{ slide_content_align }};
    }

    .testimonials-slide-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .testimonials-job-title-{{ section.id }} {
      margin-top: {{ job_title_mt }}px; 
      text-align: {{ slide_content_align }};
      font-size: {{ job_title_size }}px;
    }
  }
  
