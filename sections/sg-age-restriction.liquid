<style>
  .age-restricted-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    text-align: center;
  }
  .age-restricted-popup-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-overlay-color, #000);
    opacity: var(--bg-overlay-opacity, 0.5);
  }
  .age-restricted-popup-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    padding: var(--py, 3rem) 1rem;
    /*height: 50%;*/
    background-color: var(--bg-content-color, #fff);
    border-radius: var(--border-radius, 5px);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }
  @media (min-width: 768px) {
    .age-restricted-popup-content {
      width: 40%;
    }
  }
  .age-restricted-popup-content-inner {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .age-restricted-popup-content-inner h2 {
    margin: 0 0 10px;
    font-size: var(--heading-font-size, 20px);
    font-weight: 700;
  }
  .age-restricted-popup-content-inner p {
    margin: 0;
    font-size: var(--text-font-size, 14px);
    font-weight: 400;
  }
  .age-restricted-popup-content-inner-button {
    width: 100%;
    height: 50px;
    text-align: center;
  }
  .age-restricted-popup-content-inner-button .age-restricted-popup-btn {
    display: inline-block;
    margin: 10px 5px;
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 700;
    line-height: 30px;
    text-decoration: none;
    color: #fff;
    border-radius: 5px;
    background-color: #000;
    cursor: pointer;
  }

  a {
    color: {{ section.settings.text_color }};
  }

  .age-restricted-popup-content-inner img {
    max-height: {{section.settings.image_height}}px;
    margin:10px;
  }
  
  .age-restricted-popup-content-inner {
    color:{{ section.settings.text_color }};
  }
 
</style>
<div
  class="age-restricted-popup age-restricted-popup--{{ section.id }}"
  style="
    display: none;
    --heading-font-size: {{ section.settings.heading_font_size }}px;
    --text-font-size: {{ section.settings.text_font_size }}px;
    --bg-content-color: {{ section.settings.bg_content_color }};
    --bg-overlay-color: {{ section.settings.bg_overlay_color }};
    --bg-overlay-opacity: {{ section.settings.bg_overlay_opacity }};
    --py: {{ section.settings.py }}px;
    --border-radius: {{ section.settings.border_radius }}px;
    --text-color: {{ section.settings.text_color }};
  "
>
  <div class="age-restricted-popup-overlay" style="display: block;"></div>
  <div class="age-restricted-popup-content">
    <div class="age-restricted-popup-content-inner">
      <div class="age-restricted-popup-content-inner-text">
        <h2 style="color: {{ section.settings.heading_color }}">
          {{ section.settings.heading }}
        </h2>
        {{ section.settings.richtext_1 }}
      </div>
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | img_url: 'large' }}"
          alt=""
          style="object-fit: contain;"
        >
      {% endif %}
      {{ section.settings.richtext_2 }}
      <div class="age-restricted-popup-content-inner-button">
        <button
          style="border-radius:{{ section.settings.border_radius }}px;"
          href="{{ video.url }}"
          class="age-restricted-popup-btn"
          type="button"
          data-close-popup
        >
          {{- section.settings.button_text_1 -}}
        </button>
        or
        <a
          style="border-radius:{{ section.settings.border_radius }}px;"
          href="{{ section.settings.button_link_2 }}"
          class="age-restricted-popup-btn"
        >
          {{- section.settings.button_text_2 -}}
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    {% if section.settings.always_show_popup %}
      localStorage.removeItem('ageRestrictedPopup');
    {% endif %}

    const popup = document.querySelector('.age-restricted-popup--{{ section.id }}');
    const closeBtn = popup.querySelector('[data-close-popup]');

    if (localStorage.getItem('ageRestrictedPopup') === null) {
      popup.style.display = 'block';
    }
    closeBtn.addEventListener('click', function () {
      popup.style.display = 'none';
      {% unless section.settings.always_show_popup %}
        localStorage.setItem('ageRestrictedPopup', 'true');
      {% endunless %}
    });
  })()
</script>

