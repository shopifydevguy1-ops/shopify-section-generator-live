  {
    "name": "SS - Split Slider",
     "presets": [
       {
         "name": "SS - Split Slider",
         "blocks": [
          {
            "type": "slide"
          },
          {
            "type": "slide"
          },
          {
            "type": "slide"
          }
        ]
       }
    ],
