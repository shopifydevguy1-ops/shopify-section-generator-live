-%}

{%- style -%}
  {{  text_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    overflow: hidden;
  }

  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
    position: relative;
  }

  .video-slider-slider-{{ section.id }} {
    overflow: hidden !important;
  }
  
  .video-slider-slide-{{ section.id }} {
    box-sizing: border-box !important;
    transition: all 0.25s ease 0s;
  }

  .video-slider-video-{{ section.id }} {
    position: relative;
    overflow: hidden;
    height: {{ video_height_active_mobile }}px;
    transition: all 0.25s ease 0s;
    display: flex;
    align-items: center;
  }

  .video-slider-video-element-{{ section.id }} {
    position: relative;
    height: {{ video_height_mobile }}px;
    transition: all 0.25s ease 0s;
    width: 100%;
  }

  .video-slider-video-{{ section.id }} video,
  .video-slider-video-{{ section.id }} iframe {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    box-shadow: none;
    border: 0px;
    border-radius: {{ video_radius }}px;
    border: {{ video_border_thickness }}px solid {{ video_border_color }};
  }

  .video-slider-slide-{{ section.id }}.swiper-slide-active .video-slider-video-element-{{ section.id }} {
    height: 100%;
    transition: all 0.25s ease 0s;
  }

  .video-slider-content-{{ section.id }} {
    margin-top: {{ content_mt_mobile }}px;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: {{ content_padding_vertical_mobile }}px {{ content_padding_horizontal_mobile }}px;
    border-radius: {{ content_radius }}px;
    border: {{ content_border_thickness }}px solid {{ content_border_color }};
    background-color: {{ content_bg_color }};
    transform: translateY(-{{ video_height_active_mobile | minus: video_height_mobile | times: 0.5 | round: 0 }}px);
    transition: all 0.25s ease 0s;
  }

  .video-slider-slide-{{ section.id }}.swiper-slide-active .video-slider-content-{{ section.id }} {
    transform: translateY(0);
    transition: all 0.25s ease 0s;
  }

  .video-slider-text-{{ section.id }} {
    text-align: {{ text_align_mobile }};
    flex: 1 1 auto;
  }

  .video-slider-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .video-slider-navigation-{{ section.id }} {
    margin-top: 20px;
    gap: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .video-slider-btn-prev-{{ section.id }},
  .video-slider-btn-next-{{ section.id }} {
    display: flex;
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: 0px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: {{ arrow_radius }}px;
    background: transparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
  }

  .video-slider-btn-prev-{{ section.id }} {
    left: 16px;
  }

  .video-slider-btn-next-{{ section.id }} {
    right: 16px;
  }

  .video-slider-btn-prev-{{ section.id }} .animate-icon,
  .video-slider-btn-next-{{ section.id }} .animate-icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .video-slider-btn-prev-{{ section.id }} .animate-icon:before,
  .video-slider-btn-next-{{ section.id }} .animate-icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile }}px;
    height: {{ arrow_icon_size_mobile }}px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .video-slider-btn-prev-{{ section.id }} .animate-icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .video-slider-btn-prev-{{ section.id }} .animate-icon:after,
  .video-slider-btn-next-{{ section.id }} .animate-icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile | minus: 0.3 }}px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .video-slider-btn-prev-{{ section.id }} span,
  .video-slider-btn-next-{{ section.id }} span {
    color: {{ arrow_color }};
  }

  .video-slider-btn-prev-{{ section.id }}.swiper-button-disabled,
  .video-slider-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0.5;
  }

  .video-slider-controls-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
    position: absolute;
    bottom: 0;
    right: 0;
    justify-content: end;
    z-index: 2;
    padding: 10px;
  }

  .video-slider-action-{{ section.id }} {
    width: {{ action_size_mobile }}px;
    height: {{ action_size_mobile }}px;
    border: {{ action_border_thickness }}px solid {{ action_border_color }};
    border-radius: 50%;
    background: {{ action_bg_color | hex_to_rgba: 0.3 }};
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    z-index: 2;
  }

  .video-slider-action-{{ section.id }} svg {
    height: {{ action_icon_size_mobile }}px;
    width: {{ action_icon_size_mobile }}px;
  }

  .video-slider-action-{{ section.id }} svg path {
    fill: {{ action_color }};
    transition: all 0.3s ease 0s;
  }

  .video-slider-action-{{ section.id }}:hover {
    transition: all 0.3s ease 0s;
    border: {{ action_border_thickness }}px solid {{ action_border_hover_color }};
    background: {{ action_bg_hover_color | hex_to_rgba: 0.3 }};
  }

  .video-slider-action-{{ section.id }}:hover svg path {
    fill: {{ action_hover_color }};
    transition: all 0.3s ease 0s;
  }

  .video-slider-action-{{ section.id }} .video-slider-unmute-{{ section.id }} {
    display: none !important;
  }

  .video-slider-action-{{ section.id }}.active .video-slider-unmute-{{ section.id }} {
    display: block !important;
  }

  .video-slider-action-{{ section.id }}.active .video-slider-mute-{{ section.id }} {
    display: none !important;
  }

  .video-slider-sound-{{ section.id }} {
    width: {{ sound_size_mobile }}px;
    height: {{ sound_size_mobile }}px;
    border: {{ sound_border_thickness }}px solid {{ action_border_color }};
    border-radius: 50%;
    background: {{ action_bg_color | hex_to_rgba: 0.3 }};
    display: flex !important;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    transition: all 0.25s ease 0s;
    z-index: 2;
  }

  .video-slider-sound-{{ section.id }}:hover {
    transition: all 0.25s ease 0s;
    border: {{ sound_border_thickness }}px solid {{ action_border_hover_color }};
    background: {{ action_bg_hover_color | hex_to_rgba: 0.3 }};
  }

  .video-slider-sound-{{ section.id }} svg {
    height: {{ sound_icon_size_mobile }}px;
    width: {{ sound_icon_size_mobile }}px;
  }

  .video-slider-sound-{{ section.id }} svg {
    fill: {{ action_color }};
    transition: all 0.25s ease 0s;
  }

  .video-slider-sound-{{ section.id }}:hover svg {
    fill: {{ action_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .video-slider-sound-{{ section.id }} .video-slider-unmute-{{ section.id }} {
    display: none;
  }

  .video-slider-sound-{{ section.id }}.active .video-slider-unmute-{{ section.id }} {
    display: block;
  }

  .video-slider-sound-{{ section.id }}.active .video-slider-mute-{{ section.id }} {
    display: none;
  }

  .video-slider-wrapper-{{ section.id }} {
    position: relative;
  }

  .video-slider-link-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px;
    width: {{ icon_size_mobile }}px;
    height: {{ icon_size_mobile }}px;
    flex-shrink: 0;
    border-radius: 50%;
    background-color: {{ icon_bg_color }};
    border: {{ icon_border_thickness }}px solid {{ icon_border_color }};
    transition: all 0.25s ease 0s;
  }

  .video-slider-link-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .video-slider-link-{{ section.id }} svg path {
    stroke: {{ icon_color }};
    transition: all 0.25s ease 0s;
  }

  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }

    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .video-slider-video-{{ section.id }} {
      height: {{ video_height_active }}px;
    }

    .video-slider-video-element-{{ section.id }} {
      height: {{ video_height }}px;
    }

    .video-slider-content-{{ section.id }} {
      margin-top: {{ content_mt }}px;
      padding: {{ content_padding_vertical }}px {{ content_padding_horizontal }}px;
      transform: translateY(-{{ video_height_active | minus: video_height | times: 0.5 | round: 0 }}px);
    }

    .video-slider-text-{{ section.id }} {
      text-align: {{ text_align }};
    }

    .video-slider-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .video-slider-btn-prev-{{ section.id }},
    .video-slider-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
      transition: all 0.25s ease 0s;
    }

    .video-slider-btn-prev-{{ section.id }} .animate-icon:before,
    .video-slider-btn-next-{{ section.id }} .animate-icon:before {
      width: {{ arrow_icon_size }}px;
      height: {{ arrow_icon_size }}px;
    }

    .video-slider-btn-prev-{{ section.id }} .animate-icon:after,
    .video-slider-btn-next-{{ section.id }} .animate-icon:after {
      width: {{ arrow_icon_size | minus: 0.3 }}px;
    }

    .video-slider-btn-prev-{{ section.id }} {
      left: 40px !important;
    }

    .video-slider-btn-next-{{ section.id }} {
      right: 40px !important;
    }

    .video-slider-action-{{ section.id }} {
      width: {{ action_size }}px;
      height: {{ action_size }}px;
    }

    .video-slider-action-{{ section.id }} svg {
      height: {{ action_icon_size }}px;
      width: {{ action_icon_size }}px;
    }

    .video-slider-sound-{{ section.id }} {
      width: {{ sound_size }}px;
      height: {{ sound_size }}px;
    }

    .video-slider-sound-{{ section.id }} svg {
      width: {{ sound_icon_size }}px;
      height: {{ sound_icon_size }}px;
    }

    .video-slider-link-{{ section.id }} {
      width: {{ icon_size }}px;
      height: {{ icon_size }}px;
    }

    .video-slider-link-{{ section.id }}:hover {
      background-color: {{ icon_bg_hover_color }};
      border-color: {{ icon_border_hover_color }};
      transition: all 0.25s ease 0s;
    }

    .video-slider-link-{{ section.id }}:hover svg path {
      stroke: {{ icon_hover_color }};
      transition: all 0.25s ease 0s;
    }
  }
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}px;
    }
  </style>
{% endunless %}

{% if text_custom %}
  <style>
    .video-slider-text-{{ section.id }} * {
      font-family: {{ text_font.family }}, {{ text_font.fallback_families }};
      font-weight: {{ text_font.weight }};
      font-style: {{ text_font.style }};
    }
  </style>
{% endif %}

{% if video_shadow %}
  <style>
    .video-slider-slider-{{ section.id }} {
      padding: 10px;
    }

    .video-slider-video-{{ section.id }} {
      box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    }
  </style>
{% endif %}

{% if content_shadow %}
  <style>
    .video-slider-slider-{{ section.id }} {
      padding: 10px;
    }

    .video-slider-content-{{ section.id }} {
      box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    }
  </style>
{% endif %}

{% if arrow_hover_effect == 'color' %}
  <style>
    .video-slider-btn-prev-{{ section.id }}:hover,
    .video-slider-btn-next-{{ section.id }}:hover {
      transition: all 0.3s ease 0s;
      border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
      background: {{ arrow_bg_hover_color }};
    }

    .video-slider-btn-prev-{{ section.id }}:hover .animate-icon,
    .video-slider-btn-next-{{ section.id }}:hover .animate-icon {
      color: {{ arrow_hover_color }};
    }
  </style>
{% elsif arrow_hover_effect == 'scale' %}
  <style>
    .video-slider-btn-prev-{{ section.id }}:hover,
    .video-slider-btn-next-{{ section.id }}:hover {
      transform: scale(0.9);
    }

    @media(min-width: 1024px) {
      .video-slider-btn-prev-{{ section.id }}:hover,
      .video-slider-btn-next-{{ section.id }}:hover {
        transform: scale(0.9);
      }
    }
  </style>
{% elsif arrow_hover_effect == 'arrow' %}
  <style>
    .video-slider-btn-next-{{ section.id }}:hover .animate-icon:before {
      transform: translate(calc(1 * 0.125rem)) rotate(calc(1 * 45deg));
    }

    .video-slider-btn-prev-{{ section.id }}:hover .animate-icon:before {
      transform: translate(calc(-1 * 0.125rem)) rotate(calc(1 * 45deg));
    }

    .video-slider-btn-prev-{{ section.id }}:hover .animate-icon:after,
    .video-slider-btn-next-{{ section.id }}:hover .animate-icon:after {
      opacity: 1;
      transform: scaleX(1);
    }
  </style>
{% endif %}

{% if arrow_show_mobile %}
  <style>
    .video-slider-navigation-{{ section.id }} {
      display: flex;
    }
  </style>
{% else %}
  <style>
    .video-slider-navigation-{{ section.id }} {
      display: none;
    }
  </style>
{% endif %}

{% if arrow_show_desktop %}
  <style>
    @media(min-width: 1024px) {
      .video-slider-navigation-{{ section.id }} {
        display: flex;
      }
    }
  </style>
{% else %}
  <style>
    @media(min-width: 1024px) {
      .video-slider-navigation-{{ section.id }} {
        display: none;
      }
    }
  </style>
{% endif %}

{% if arrow_shadow %}
  <style>
    .video-slider-btn-prev-{{ section.id }},
    .video-slider-btn-next-{{ section.id }} {
      box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15);
    }
  </style>
{% endif %}

{% if action_shadow %}
  <style>
    .video-slider-action-{{ section.id }} {
      box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15);
    }
  </style>
{% endif %}

{% if sound_shadow %}
  <style>
    .video-slider-sound-{{ section.id }} {
      box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15);
    }
  </style>
{% endif %}

{% comment %} PREVIEW {% endcomment %}
<style>
  .video-slider-slider-{{ section.id }}.preview .swiper-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
    gap: {{ section.settings.slider_gap }}px;
    padding: 10px;
  }

   .video-slider-slider-{{ section.id }}.preview .video-slider-slide-{{ section.id }} {
    width: calc((100% - ({{ section.settings.slider_gap }}px * ({{ section.settings.slider_view }} - 1))) / {{ section.settings.slider_view }});
  }

  .video-slider-slider-{{ section.id }}.preview .video-slider-slide-{{ section.id }}:not(:first-child) {
    margin-left: 0; /* Remove the existing margin */
  }

  @media(min-width: 1024px ) {
   .video-slider-slider-{{ section.id }}.preview .video-slider-slide-{{ section.id }} {
      width: 33%;
    }

    .video-slider-slider-{{ section.id }}.preview .video-slider-slide-{{ section.id }} {
      transform: scale(0.9) !important;
    }

    .video-slider-slider-{{ section.id }}.preview .video-slider-slide-{{ section.id }}:nth-child(2) {
      transform: scale(1) !important;
    }
  }
</style>

<div
  class="section-{{ section.id }} video-slider-{{ section.id }}"
  style="background-color:{{ background_color }}; background-image: {{ background_gradient }};"
>
  <div class="section-{{ section.id }}-settings">
    <div class="video-slider-wrapper-{{ section.id }}">
      <div class="video-slider-slider-{{ section.id }} preview"
        data-slider-view="{{ slider_view }}"
        data-slider-view-mobile="{{ slider_view_mobile }}"
        data-slider-view-tablet="{{ slider_view | times: 0.5 | round: 0 }}"
        data-slider-gap="{{ slider_gap }}"
        data-slider-gap-mobile="{{ slider_gap_mobile }}"
        data-slider-rotate="{{ slider_rotate }}">
        <div class="swiper-wrapper">
