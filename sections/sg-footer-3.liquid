{%- style -%}
  {{  input_font | font_face: font_display: 'swap' }}
  {{  submit_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  social_text_font | font_face: font_display: 'swap' }}
  {{  link_font | font_face: font_display: 'swap' }}
  {{  title_font | font_face: font_display: 'swap' }}
  {{  copy_font | font_face: font_display: 'swap' }}
  {{  main_title_font | font_face: font_display: 'swap' }}
  {{  thanks_text_font | font_face: font_display: 'swap' }}       

  .section-{{ section.id }} {
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .footer-top-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding-bottom: 40px;
  }

  .footer-newsletter-row-{{ section.id }} {
    position: relative;
  }

  .footer-newsletter-input-{{ section.id }} {
    width: 100%;
    margin: 0;
    box-shadow: none;
    border: 0px;
    padding: {{ input_padding_vertical | times: 0.75 | round: 0 }}px {{ input_padding_horizontal | times: 0.75 | round: 0 }}px;
    font-size: {{ input_size_mobile }}px;
    color: {{ input_color }};
    line-height: {{ input_height }}%;
    text-transform: unset;
    border-radius: {{ input_radius }}px;
    border: {{ input_border_thickness }}px solid {{ input_border_color | hex_to_rgba: 0.7 }};
    background-color: transparent;
  }

  .footer-newsletter-input-{{ section.id }}:focus {
    border: {{ input_border_thickness }}px solid {{ input_border_color | hex_to_rgba: 1 }};
  }

  .footer-newsletter-input-{{ section.id }}::placeholder {
    color: {{ input_placeholder_color }};
  }

  .footer-four-top-{{ section.id }} .footer-newsletter-input-{{ section.id }} {
    margin-bottom: 10px;
  }

  .footer-newsletter-submit-{{ section.id }} {
    margin-top: 16px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ submit_size_mobile }}px;
    color: {{ submit_color }};
    line-height: {{ submit_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ submit_padding_vertical | times: 0.75 | round: 0 }}px {{ submit_padding_horizontal | times: 0.75 | round: 0 }}px;
    border-radius: {{ submit_radius }}px;
    border: {{ submit_border_thickness }}px solid {{ submit_border_color }};
    background-color: {{ submit_bg_color }};
    transition: all 0.25s ease 0s;
    box-shadow: none;
    cursor: pointer;
  }

  .footer-newsletter-submit-{{ section.id }}:hover {
    color: {{ submit_hover_color }};
    border: {{ submit_border_thickness }}px solid {{ submit_border_hover_color }};
    background-color: {{ submit_bg_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .footer-newsletter-first-row-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
    margin-bottom: 10px;
  }

  .footer-newsletter-thanks-text-{{ section.id }} {
    display: none;
    margin: 0px;
    margin-top: {{ thanks_text_mt_mobile }}px;
    font-size: {{ thanks_text_size_mobile }}px;
    color: {{ thanks_text_color }};
    line-height: {{ thanks_text_height }}%;
    text-transform: unset;
   }

   .footer-newsletter-thanks-text-{{ section.id }}.active {
     display: block;
   }

  .footer-main-{{ section.id }} {
    display: grid;
    border-bottom: 1px solid {{ footer_border_color }};
  }

  .footer-main-{{ section.id }}.footer-second-main-{{ section.id }} {
    border-bottom: 0px;
  }

  .footer-second-main-{{ section.id }} {
    padding-top: 0px;
    padding-bottom: 30px;
    gap: 30px;
  }

  .footer-main-left-{{ section.id }} {
    padding-top: 16px;
    padding-bottom: 16px;
  }

  .footer-logo-{{ section.id }} {
    display: block;
    width: 100%;
    max-width: {{ logo_width_mobile }}px;
    margin-left: auto;
    margin-right: auto;
  }

  .footer-logo-{{ section.id }} img,
  .footer-logo-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .footer-logo-{{ section.id }} svg {
    background-color: #DEDEDE;
  }

  .footer-text-{{ section.id }} {
    margin-top: 0px;
    width: 100%;
  }

  .footer-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .footer-main-title-{{ section.id }} {
    margin: 0;
    font-size: {{ main_title_size_mobile }}px;
    color: {{ main_title_color }};
    line-height: {{ main_title_height }}%;
    text-transform: unset;
    margin-bottom: 16px;
  }
  
  .footer-third-main-{{ section.id }} .footer-text-{{ section.id }} * {
    text-decoration: none;
  }

  .footer-third-main-{{ section.id }} .footer-text-{{ section.id }} a:hover {
    text-decoration: underline;
  }

  .footer-main-right-top-{{ section.id }} {
    padding-bottom: 32px;
  }

  .footer-main-right-top-{{ section.id }} *,
  .footer-socials-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ social_text_size_mobile }}px;
    color: {{ social_text_color }};
    line-height: {{ social_text_height }}%;
    text-transform: unset;
  }

  .footer-main-right-top-{{ section.id }} a,
  .footer-socilas-text-{{ section.id }} a {
    color: {{ social_text_color }};
    text-decoration: none;
  }

  .footer-main-socials-{{ section.id }} {
    border-top: 1px solid {{ footer_border_color }};
    display: flex;
  }

  .footer-main-socials-{{ section.id }}.footer-main-second-socials-{{ section.id }} {
    margin-top: 30px;
    border: 0px;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }

  .footer-main-social-{{ section.id }} {
    flex: 0 1 auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-main-social-{{ section.id }} svg {
    width: {{ social_icon_mobile }}px;
    height: {{ social_icon_mobile }}px;
    display: block;
  }

  .footer-main-social-{{ section.id }} svg path {
    fill: {{ social_icon_color }};
  }

  .footer-bottom-{{ section.id }} {
    padding-top: 24px;
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .footer-list-{{ section.id }} {
    margin: 0px;
    padding: 0px;
  }

  .footer-list-{{ section.id }} li {
    list-style: none;
  }

  .footer-list-{{ section.id }} li a {
    margin: 0;
    font-size: {{ link_size_mobile }}px;
    color: {{ link_color }};
    line-height: {{ link_height }}%;
    text-transform: unset;
    text-decoration: none;
    position: relative;
  }

  .footer-list-{{ section.id }} li a:after {
    content: '';
    left: 0;
    bottom: -2px;
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: {{ link_hover_color }};
    opacity: 0;
    transtion: all 0.25s ease 0s;
  }

  .footer-list-{{ section.id }} li a:hover:after {
    opacity: 1;
    transtion: all 0.25s ease 0s;
  }

  .footer-list-title-{{ section.id }} {
    margin: 0;
    margin-bottom: 16px;
    font-size: {{ title_size_mobile }}px;
    color: {{ title_color }};
    line-height: {{ title_height }}%;
    text-transform: unset;
  }

  .footer-second-top-{{ section.id }} {
    padding-bottom: 30px;
    border-bottom: 1px solid {{ footer_border_color }};
    display: grid;
    grid-template-columns: repeat(60, minmax(0, 1fr));
    grid-auto-rows: auto;
    grid-auto-flow: dense;
    row-gap: 32px;
  }

  .footer-second-top-item-{{ section.id }} {
    grid-column: span 60;
    padding: 0px;
  }

  .footer-second-top-item-logo-{{ section.id }} .footer-logo-{{ section.id }} {
    margin-left: auto;
    margin-right: auto;
  }

  .footer-payments-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    margin-top: 16px;
    justify-content: start;
    flex-wrap: wrap;
    gap: 8px;
    padding: 0px;
  }

  .footer-payment-{{ section.id }} {
    flex: 0 1 38px;
    list-style: none;
  }

  .footer-payment-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .footer-copy-text-{{ section.id }} {
    margin-top: 16px;
    text-align: left;
    width: 100%;
  }

  .footer-copy-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ copy_size_mobile }}px;
    color: {{ copy_color }};
    line-height: {{ copy_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .footer-copy-text-{{ section.id }} a:hover {
    text-decoration: underline;
  }

  .footer-second-main-{{ section.id }} .footer-main-right-{{ section.id }} .footer-newsletter-submit-{{ section.id }} {
    margin-top: 0px;
    position: static !important;
    font-weight: 700;
  }

  .footer-third-main-{{ section.id }} .footer-main-right-{{ section.id }} .footer-newsletter-submit-{{ section.id }}{
    font-weight: 400;
  }

  .footer-second-main-{{ section.id }} .footer-main-right-{{ section.id }} .footer-newsletter-row-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .footer-second-top-item-{{ section.id }} .footer-socials-text-{{ section.id }} {
    margin-bottom: 30px;
  }

  .footer-third-top-{{ section.id }} .footer-main-socials-{{ section.id }} {
    justify-content: start;
  }

  .footer-main-left-top-{{ section.id }} {
    display: grid;
    gap: 20
  }

  @media(min-width: 768px) {

    .footer-first-main-socials-{{ section.id }} svg {
      width: {{ social_icon_mobile | times: 2 }}px;
      height: {{ social_icon_mobile | times: 2 }}px;
    }
    
    .footer-newsletter-submit-{{ section.id }} {
      margin-top: 0px;
      max-width: 220px !important;
    }
  }

  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }

    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .footer-top-{{ section.id }} {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .footer-newsletter-thanks-text-{{ section.id }} {
     margin-top: {{ thanks_text_mt }}px;
     font-size: {{ thanks_text_size }}px;
   }

    .footer-newsletter-text-{{ section.id }} {
      flex: 0 1 55%;
    }

    .footer-newsletter-form-{{ section.id }} {
      flex: 0 1 512px;
    }

    .footer-newsletter-input-{{ section.id }} {
      padding: {{ input_padding_vertical }}px {{ input_padding_horizontal }}px;
      font-size: {{ input_size }}px;
    }

    .footer-newsletter-submit-{{ section.id }} {
      padding: {{ submit_padding_vertical }}px {{ submit_padding_horizontal }}px;
      font-size: {{ submit_size }}px;
    }

    .footer-main-{{ section.id }} {
      grid-template-columns: 1fr 1fr;
    }

    .footer-logo-{{ section.id }} {
      max-width: {{ logo_width }}px;
      margin-left: 0px;
      margin-right: 0px;
    }

    .footer-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .footer-main-title-{{ section.id }} {
      font-size: {{ main_title_size }}px;
    }

    .footer-main-right-top-{{ section.id }} {
      padding-top: 32px;
      padding-bottom: 32px;
      padding-left: 10%;
      padding-right: 10%;
    }

    .footer-main-right-top-{{ section.id }} *,
    .footer-socials-text-{{ section.id }} * {
      margin: 0;
      font-size: {{ social_text_size }}px;
    }

    .footer-main-right-{{ section.id }} {
      border-left: 1px solid {{ footer_border_color }};
    }

    .footer-four-main-{{ section.id }} .footer-main-right-{{ section.id }} {
      border-left: 0px;
    }

    .footer-main-social-{{ section.id }} svg {
      width: {{ social_icon }}px;
      height: {{ social_icon }}px;
    }

    .footer-main-socials-{{ section.id }}.footer-main-second-socials-{{ section.id }} {
      margin-top: 5px;
    }

    .footer-list-{{ section.id }} li a {
      font-size: {{ link_size }}px;
    }

    .footer-bottom-{{ section.id }} {
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      flex-direction: row;
    }

    .footer-list-title-{{ section.id }} {
      font-size: {{ title_size }}px;
    }

    .footer-second-top-{{ section.id }} {
      row-gap: 15px;
    }

    .footer-second-top-item-{{ section.id }}:not(:first-child) {
      border-left: 1px solid {{ footer_border_color }};
    }

    .footer-second-top-item-{{ section.id }} {
      grid-column: span 12;
    }

    .footer-second-top-item-{{ section.id }}.footer-second-top-item-logo-{{ section.id }} {
      grid-column: span 24;
    }

    .footer-four-top-{{ section.id }} .footer-second-top-item-{{ section.id }} {
      grid-column: span 15;
      border: 0px !important;
    }

    .footer-third-top-{{ section.id }} .footer-second-top-item-{{ section.id }} {
      padding: 16px 32px 0px;
    }

    .footer-copy-text-{{ section.id }} * {
      font-size: {{ copy_size }}px;
    }

    .footer-second-main-{{ section.id }} .footer-main-right-{{ section.id }} {
