{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  sub_heading_font | font_face: font_display: 'swap' }}
  {{  button_font | font_face: font_display: 'swap' }}
  {{  title_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .hotspots-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
  }

  .hotspots-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .hotspots-subheading-{{ section.id }} {
    margin-top: {{ sub_heading_mt | times: 0.75 | round: 0 }}px;
    text-align: {{ sub_heading_align_mobile }};
  }

  .hotspots-subheading-{{ section.id }} * {
    margin: 0;
    font-size: {{ sub_heading_size_mobile }}px;
    color: {{ sub_heading_color }};
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
  }

  .hotspots-btn-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: fit-content;
    margin: 0;
    margin-top: {{ button_mt | times: 0.75 | round: 0 }}px;
    font-size: {{ button_size_mobile }}px;
    font-weight: 700;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical | times: 0.75 | round: 0 }}px {{ button_padding_horizontal | times: 0.75 | round: 0 }}px;
    border-radius: {{ button_radius }}px;
    border: {{ button_border_thickness }}px solid {{ button_border_color }};
    background-color: {{ button_bg_color }};
    transition: all 0.25s ease 0s;
  }

  .hotspots-btn-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    border: {{ button_border_thickness }}px solid {{ button_border_hover_color }};
    background-color: {{ button_bg_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .hotspots-body-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: {{ body_gap_mobile }}px;
    align-items: center; 
    padding: {{ body_padding_vertical | times: 0.75 | round: 0 }}px {{ body_padding_horizontal | times: 0.75 | round: 0 }}px;
    border-radius: {{ body_radius }}px;
    border: {{ body_border_thickness }}px solid {{ body_border_color }};
    background-color: {{ body_bg_color }};
  }

  .hotspots-image-{{ section.id }} {
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
    position: relative;
  }

  .hotspots-image-{{ section.id }} > img,
  .hotspots-image-{{ section.id }} > svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ image_radius }}px;
  }

  .hotspots-image-{{ section.id }} > svg {
    background-color: #DDDDDD;
  }

  .hotspots-item-{{ section.id }} {
    position: absolute;
    cursor: pointer;
  }

  .hotspots-item-inner-{{ section.id }} {
    position: relative;
    background-color: {{ item_bg }};
    border-radius: {{ item_radius }}px;
    border: {{ item_border_thickness }}px solid {{ item_border_color }};
    padding: {{ item_padding_vertical | times: 0.75 | round: 0 }}px {{ item_padding_horizontal | times: 0.75 | round: 0 }}px;
    z-index: 1;
  }

  .hotspots-item-inner-{{ section.id }}::before,
  .hotspots-item-inner-{{ section.id }}::after {
    position: absolute;
    z-index: -5;
    top: 0px;
    left: 0px;
    background: {{ item_bg }};
    border-radius: inherit;
    content: "";
    width: 100%;
    height: 100%;
  }

  .hotspots-item-inner-{{ section.id }}::before {
    z-index: -10;
    animation-delay: 2s;
  }

  .hotspots-item-top-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
  }

  .hotspots-item-top-{{ section.id }} svg path {
    fill: {{ item_icon_color }};
    stroke: {{ item_icon_color }};
  }

  .hotspots-item-title-{{ section.id }} {
    margin: 0px;
    font-size: {{ title_size_mobile }}px;
    color: {{ title_color }};
    line-height: {{ title_height }}%;
    text-transform: unset;
  }

  .hotspots-item-image-{{ section.id }} {
    width: {{ item_image_width_mobile }}px;
    border-radius: {{ item_image_radius }}px;
  }

  .hotspots-item-image-{{ section.id }} svg,
  .hotspots-item-image-{{ section.id }} img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ item_image_radius }}px;
  }

  .hotspots-item-image-{{ section.id }} svg {
    background-color: #DDDDDD;
  }

  .hotspots-item-body-{{ section.id }} {
    position: absolute;
    z-index: 2;
    left: 50%;
    transform: translateX(-50%);
    top: 130%;
    min-width: {{ item_content_width_mobile }}px;
    max-width: 90vw;
    padding: {{ item_content_padding_vertical | times: 0.75 | round: 0 }}px {{ item_content_padding_horizontal | times: 0.75 | round: 0 }}px;
    border-radius: {{ item_content_radius }}px;
    border: {{ item_content_border_thickness }}px solid {{ item_content_border_color }};
    background-color: {{ item_content_bg }};
    opacity: 0;
    pointer-events: none;
    transition: all 0.25s ease 0s;
  }

  .hotspots-item-{{ section.id }}:hover {
    z-index: 1;
  }

  .hotspots-item-{{ section.id }}:hover .hotspots-item-body-{{ section.id }} {
    opacity: 1;
    pointer-events: all;
    transition: all 0.25s ease 0s;
  }

  .hotspots-item-{{ section.id }}.active {
    z-index: 1;
  }

  .hotspots-item-{{ section.id }}.active .hotspots-item-body-{{ section.id }} {
    opacity: 1;
    pointer-events: all;
    transition: all 0.25s ease 0s;
  }

  .hotspots-item-content-{{ section.id }} {
    margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
  }

  .hotspots-item-content-{{ section.id }} * {
    margin: 0px;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .hotspots-item-video-{{ section.id }} {
    border-radius: {{ item_content_radius }}px;
  }

  .hotspots-item-video-{{ section.id }} iframe,
  .hotspots-item-video-{{ section.id }} video {
    display: block;
    width: 100%;
    height: 100%;
    box-shadow: none;
    border: 0px;
    object-fit: cover;
    border-radius: {{ item_content_radius }}px;
  }

  .hotspots-item-content-{{ section.id }}.non-margin {
    margin: 0px;
  }

  .hotspots-item-arrow-{{ section.id }} {
    display: block !important;
    width: 10px;
    height: 10px;
    z-index: -1;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .hotspots-item-arrow-{{ section.id }}:before {
    content: "";
    position: absolute;
    top: -{{ item_content_padding_vertical }}px;
    left: 0px;
    transform: rotate(45deg);
    width: 10px;
    height: 10px;
    background-color: {{ item_content_bg }};
  }
  
  @media(min-width: 768px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .hotspots-body-{{ section.id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ body_gap }}px;
      padding: {{ body_padding_vertical }}px {{ body_padding_horizontal }}px;
    }

    .hotspots-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .hotspots-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .hotspots-subheading-{{ section.id }} {
      margin-top: {{ sub_heading_mt }}px;
      text-align: {{ sub_heading_align }};
    }

    .hotspots-subheading-{{ section.id }} * {
      font-size: {{ sub_heading_size }}px;
    }

    .hotspots-btn-{{ section.id }} {
      margin-top: {{ button_mt }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }

    .hotspots-item-inner-{{ section.id }} {
      padding: {{ item_padding_vertical }}px {{ item_padding_horizontal }}px;
    }

    .hotspots-item-title-{{ section.id }} {
      font-size: {{ title_size }}px;
    }

    .hotspots-item-image-{{ section.id }} {
      width: {{ item_image_width }}px;
    }

    .hotspots-item-body-{{ section.id }} {
      min-width: {{ item_content_width }}px;
      padding: {{ item_content_padding_vertical }}px {{ item_content_padding_horizontal }}px;
    }

    .hotspots-item-content-{{ section.id }} {
      margin-top: {{ text_mt }}px;
    }

    .hotspots-item-content-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .hotspots-item-content-{{ section.id }}.non-margin {
      margin: 0px;
    }

    .hotspots-item-arrow-{{ section.id }}:before {
      top: -{{ item_content_padding_vertical | plus: 5 }}px;
    }
  }
  
{%- endstyle -%}

