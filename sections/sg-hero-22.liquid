{%- liquid 
  assign padding_horizontal = section.settings.padding_horizontal
  assign padding_horizontal_mobile = section.settings.padding_horizontal_mobile
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign border_color = section.settings.border_color
  assign border_thickness = section.settings.border_thickness
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign margin_horizontal_mobile = section.settings.margin_horizontal_mobile
  assign margin_horizontal = section.settings.margin_horizontal
  assign background_color = section.settings.background_color
  assign background_gradient = section.settings.background_gradient
  assign full_width = section.settings.full_width
  assign content_width = section.settings.content_width
  assign lazy = section.settings.lazy
  assign section_radius = section.settings.section_radius

  assign hero_height = section.settings.hero_height
  assign hero_fixed_height = section.settings.hero_fixed_height
  assign hero_fixed_height_mobile = section.settings.hero_fixed_height_mobile
  assign hero_bg_type = section.settings.hero_bg_type

  assign bg_image = section.settings.bg_image
  assign bg_video = section.settings.bg_video
  assign bg_video_url = section.settings.bg_video_url
-%}

{%- style -%}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
    position: relative;
  }

  .hero-bg-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-bg-image-{{ section.id }} {
    height: 100%
  }

  .hero-bg-image-{{ section.id }} img,
  .hero-bg-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-bg-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .hero-bg-video-{{ section.id }} {
    height: 100%;
    position: relative;
  }

  .hero-bg-video-{{ section.id }}:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-bg-video-{{ section.id }} video,
  .hero-bg-video-{{ section.id }} iframe {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: 0px;
    box-shadow: none;
  }

  .hero-body-{{ section.id }} {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }

  .hero-bottom-content-{{ section.id }} {
    display: flex;
    align-items: end;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 10px;
  }

  .hero-bottom-video-{{ section.id }} {
    position: relative;
  }

  .hero-bottom-video-play-{{ section.id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
  }

  .hero-modal-{{ section.id }} {
    width: 100vw;
    height: 100vh;
    position: fixed;
    bottom: 0; 
    right: 0; 
    display: flex;
    align-items: center; 
    justify-content: center; 
    opacity: 0;
    overflow: hidden;
    pointer-events: none;
    padding: 20px;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .hero-modal-{{ section.id }}.active {
    opacity: 1;
    z-index: 100;
    pointer-events: all;
    transition: all 250ms ease-in 0s;
  }

  .hero-modal-inner-{{ section.id }} {
    position: relative;
    max-height: 70vh;
    width: 100%;
    height: 100%;
    padding: 0;
    overflow: hidden;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-modal-video-{{ section.id }} {
    height: 100%;    
    position: relative;
    overflow: hidden;   
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-modal-video-{{ section.id }} video,
  .hero-modal-video-{{ section.id }} iframe {
    display: block;
    width: 100%;
    object-fit: cover;
    border: 0px;
    box-shadow: none;
    max-height: 100%;
  }

  .hero-modal-close-{{ section.id }} {
    position: absolute;
    bottom: 30px;
    top: unset;
    left: 50%;
    transform: translateX(-50%); 
    display: flex;
    align-items: center;
    transition: all 0.25s ease 0s;
  }  

  .hero-modal-close-{{ section.id }} svg rect {
    transition: all 0.25s ease 0s;
  }

  .portrait-video-{{ section.id }} {
    max-width: 100%;
    margin: 0px auto;
  }
  
  .landspace-video-{{ section.id }} {
    max-width: 100%;
    margin: 0px auto;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .hero-content-{{ section.id }} {
      display: block !important;
    }
    
    .hero-bottom-video-{{ section.id }} {
      display: block !important;
    }

    .hero-modal-inner-{{ section.id }} {
      max-height: 95vh;
      height: 100%;
      padding: 20px;
    }

    .hero-modal-close-{{ section.id }} {
      position: absolute;
      top: 30px;
      bottom: unset;
      left: 50%;
      cursor: pointer;
      transform: translateX(-50%);
    }

    .hero-modal-close-{{ section.id }}:hover { 
      transition: all 0.25s ease 0s;
    }
    
    .hero-modal-close-{{ section.id }}:hover svg rect {
      transition: all 0.25s ease 0s;
    }
    

    .portrait-video-{{ section.id }} {
      max-width: 40%;
    }

    .landspace-video-{{ section.id }} {
      max-width: 80%;
    }
  }
  
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}px;
    }
  </style>
{% endunless %}

{% if margin_horizontal_mobile > 0 %}
  <style>
    .section-{{ section.id }} {
      border-left: solid {{ border_color }} {{ border_thickness }}px;
      border-right: solid {{ border_color }} {{ border_thickness }}px;
    }
    
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: 0px;
        border-right: 0px;
      }
    }
  </style>
{% endif %}

{% if margin_horizontal > 0 %}
  <style>
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: solid {{ border_color }} {{ border_thickness }}px;
        border-right: solid {{ border_color }} {{ border_thickness }}px;
      }
    }
  </style>
{% endif %}

{% if hero_height == "full_screen" %}
  <style>
    .section-{{ section.id }}-settings {
      height: 100%;
    }

    .hero-{{ section.id }} {
      height: 95vh;
    }

    .hero-bg-image-{{ section.id }},
    .hero-bg-video-{{ section.id }} {
      height: 95vh;
    }
    @media(min-width: 1024px) {      
      .section-{{ section.id }}-settings {
        height: 100%;
      }

      .hero-{{ section.id }} {
        height: 95vh;
      }

      .hero-bg-image-{{ section.id }},
      .hero-bg-video-{{ section.id }} {
        height: 95vh;
      }
    }
  </style>
{% elsif hero_height == 'fixed_height' %}  
  <style>      
    .section-{{ section.id }}-settings {
      height: 100%;
    }

    .hero-{{ section.id }} {
      height: {{ hero_fixed_height_mobile }}px;
    }

    .hero-bg-image-{{ section.id }},
    .hero-bg-video-{{ section.id }} {
      height: {{ hero_fixed_height_mobile }}px;
    }

    @media(min-width: 1024px) {
      .section-{{ section.id }}-settings {
        height: 100%;
      }

      .hero-{{ section.id }} {
        height: {{ hero_fixed_height }}px;
      }

      .hero-bg-image-{{ section.id }},
      .hero-bg-video-{{ section.id }} {
        height: {{ hero_fixed_height }}px;
      }
    }
  </style>
{% endif %}

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'content' %}
      <style>
        {{ block.settings.heading_font | font_face: font_display: 'swap' }} 
        {{ block.settings.text_font | font_face: font_display: 'swap' }}   

        .hero-heading-{{ section.id }} {
          text-align: {{ block.settings.content_align_mobile }};
          width: 100%;
        }

        .hero-heading-{{ section.id }} * {
          margin: 0; 
          font-size: {{ block.settings.heading_size_mobile }}px;
          color: {{ block.settings.heading_color }};
          line-height: {{ block.settings.heading_height }}%;
          text-transform: unset;
          text-decoration: none;
          word-break: break-word;
        }

        .hero-text-{{ section.id }} {
          text-align: {{ block.settings.content_align_mobile }};
          margin-top: {{ block.settings.text_mt_mobile }}px;
          width: 100%;
        }

        .hero-text-{{ section.id }} * {
          margin: 0;  
          font-size: {{ block.settings.text_size_mobile }}px;
          color: {{ block.settings.text_color }};
          line-height: {{ block.settings.text_height }}%;
          text-transform: unset;
          text-decoration: none;
          word-break: break-word;
        }

        @media(min-width: 1024px) {

          .hero-content-{{ section.id }} {
            max-width: {{ block.settings.content_width }}%;
          }
          
          .hero-heading-{{ section.id }} {
            text-align: {{ block.settings.content_align }};
          }

          .hero-heading-{{ section.id }} * {    
            font-size: {{ block.settings.heading_size }}px;
          }

          .hero-text-{{ section.id }} {
            text-align: {{ block.settings.content_align }};
            margin-top: {{ block.settings.text_mt }}px;
          }

          .hero-text-{{ section.id }} * { 
            font-size: {{ block.settings.text_size }}px;
          }
        }
      </style>
      
      {% if block.settings.heading_custom %}
        <style>
          .hero-heading-{{ section.id }} * {
            font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
            font-weight: {{ block.settings.heading_font.weight }};
            font-style: {{ block.settings.heading_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.text_custom %}
        <style>
          .hero-text-{{ section.id }} * {
            font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
            font-weight: {{ block.settings.text_font.weight }};
            font-style: {{ block.settings.text_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.show_mobile %}
        <style>
           .hero-content-{{ section.id }} {
            display: block;
           }
        </style>
      {% else %}
        <style>
           .hero-content-{{ section.id }} {
            display: none;
           }
        </style>
      {% endif %}

    {% if block.settings.content_align == "center" %}
      <style>
        @media(min-width: 1024px) {
          .hero-content-{{ section.id }} {
            margin-left: auto;
            margin-right: auto;
          }
        }
      </style>
    {% elsif block.settings.content_align == "right" %}
      <style>
        @media(min-width: 1024px) {
          .hero-content-{{ section.id }} {
            margin-left: auto;
          }
        }
      </style>
    {% endif %}

    {% when 'button' %}
      <style>

        {{ block.settings.button_font | font_face: font_display: 'swap' }} 
        
         .hero-button-{{ section.id }} {
          display: flex;
          align-items: center;
          justify-content: center;
          max-width: fit-content;
          gap: 10px;
          width: 100%;
          margin: 0;
          margin-top: {{ block.settings.button_mt_mobile }}px;
          font-size: {{ block.settings.button_size_mobile }}px;
          color: {{ block.settings.button_color }};
          line-height: {{ block.settings.button_height }}%;
          text-align: center;
          text-transform: unset;
          text-decoration: none;
          padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
          border-radius: {{ block.settings.button_radius }}px;
          transition: all 0.25s ease 0s;
          background-color: transparent;
          border: 0px;
          cursor: pointer;
          font-weight: 700;
        }

        .hero-button-inner-{{ section.id }} {
          margin: 0px;
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 10px;
        }

        .hero-button-{{ section.id }}:hover {
          color: {{ block.settings.button_hover_color }};
          transition: all 0.25s ease 0s;
        }

        .hero-button-{{ section.id }} svg {
          width: 14px;
          height: 14px;
        }

        .hero-button-{{ section.id }} svg path {
          fill: {{ block.settings.button_color }};
          transition: all 0.25s ease 0s;
        }

        .hero-button-{{ section.id }}:hover svg path {
          fill: {{ block.settings.button_hover_color }};
          transition: all 0.25s ease 0s;
        }

        @media(min-width: 1024px) {        
          .hero-button-{{ section.id }} {
            display: flex !important;
            margin-top: {{ block.settings.button_mt }}px;
            padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
            font-size: {{ block.settings.button_size }}px;
          }
        }
      </style>
       {% if block.settings.button_custom %}
        <style>
          .hero-button-{{ section.id }} {
            font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};
            font-weight: {{ block.settings.button_font.weight }};
            font-style: {{ block.settings.button_font.style }};
          }
        </style>
      {% endif %} 

      {% if block.settings.use_shadow %}
        <style>
          .hero-button-{{ section.id }}:hover {
            -webkit-box-shadow: 0 0 25px 0 {{ block.settings.button_bg_hover_color | hex_to_rgba: 0.9 }};
            -moz-box-shadow: 0 0 25px 0 {{ block.settings.button_bg_hover_color | hex_to_rgba: 0.9 }};
            box-shadow: 0 0 25px 0 {{ block.settings.button_bg_hover_color | hex_to_rgba: 0.9 }};
            transition: all 0.25s ease 0s;
          }
        </style>
      {% endif %}
  
      {% if block.settings.button_style == "non_outline" or block.settings.button_style == "non_outline_arrow" %}
        <style>
          .hero-button-{{ section.id }} {
            background-color: {{ block.settings.button_bg_color }};
          }
  
          .hero-button-{{ section.id }}:hover {
            background-color: {{ block.settings.button_bg_hover_color }};
          }
        </style>
      {% elsif block.settings.button_style == "outline" or block.settings.button_style == "outline_arrow" %}
        <style>
          .hero-button-{{ section.id }} {
            background-color: {{ block.settings.button_bg_color }};
            border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_color }};
          }
  
          .hero-button-{{ section.id }}:hover {
            background-color: {{ block.settings.button_bg_hover_color }};
            border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_hover_color }};
          }
        </style>
      {% elsif block.settings.button_style == "link" %}
        <style>
          .hero-button-{{ section.id }} {
            padding: 0px !important;
          }
        </style>
      {% endif %}
      
      {% if block.settings.show_mobile %}
        <style>
           .hero-button-{{ section.id }} {
            display: flex;
           }
        </style>
      {% else %}
        <style>
           .hero-button-{{ section.id }} {
            display: none;
           }
        </style>
      {% endif %}

    {% when 'video' %} 
      <style>
        .hero-bottom-video-{{ section.id }} {
          display: block;
          border-radius: {{ block.settings.video_radius }}px;
          border: {{ block.settings.video_border_thickness }}px solid {{ block.settings.video_border_color }};
          max-width: {{ block.settings.video_width_mobile }}px;
          width: 100%;
          cursor: pointer;
          overflow: hidden;
        }

        .hero-bottom-video-{{ section.id }} video,
        .hero-bottom-video-{{ section.id }} iframe {
          border: none;
          display: block;
          width: 100%;
          height: 100%;
          object-fit: cover;
          border: 0px;
        }

        .hero-bottom-video-play-{{ section.id }} {
          width: {{ block.settings.play_width_mobile }}px;
        }

        .hero-bottom-video-play-{{ section.id }} svg {
          display: block;
          width: 100%;
          height: 100%;
          object-fit: cover;
        }

        .hero-bottom-video-play-{{ section.id }} svg path {
          fill: {{ block.settings.play_color }};
        }

        .hero-modal-video-element-{{ section.id }} {
          width: 100%;
          height: 100%;
          display: flex;
          align-items: center;
        }

        .hero-modal-video-element-{{ section.id }} video,
        .hero-modal-video-element-{{ section.id }} iframe {
          border: {{ block.settings.modal_video_border_thickness }}px solid {{ block.settings.modal_video_border_color }};
          border-radius: {{ block.settings.modal_video_radius }}px;
        }

        .hero-modal-{{ section.id }} {
          background: {{ block.settings.modal_overlay_color | hex_to_rgba: 0.5}};
        }

        .hero-modal-close-{{ section.id }} {
          padding: {{ block.settings.modal_close_icon_size_mobile | times: 0.5 }}px;
          border-radius: {{ block.settings.modal_close_radius }}px;
          background-color: {{ block.settings.modal_close_bg_color }};    
        }  

        .hero-modal-close-{{ section.id }} svg {
          width: {{ block.settings.modal_close_icon_size_mobile }}px;
          height: {{ block.settings.modal_close_icon_size_mobile }}px;
        }

        .hero-modal-close-{{ section.id }} svg rect {
          fill: {{ block.settings.modal_close_icon_color }};
        }

        @media(min-width: 1024px) {
          .hero-bottom-video-{{ section.id }} {
            max-width: {{ block.settings.video_width }}px;
          }
          .hero-bottom-video-play-{{ section.id }} {
            width: {{ block.settings.play_width }}px;
          }

          .hero-modal-inner-{{ section.id }} {
            width: 100%;
          }

          .hero-modal-close-{{ section.id }} {
            padding: {{ block.settings.modal_close_icon_size | times: 0.5 }}px;
          }

          .hero-modal-close-{{ section.id }}:hover {
            background-color: {{ block.settings.modal_close_bg_hover_color }};    
          }
          
          .hero-modal-close-{{ section.id }}:hover svg rect {
            fill: {{ block.settings.modal_close_icon_hover_color }};
          }
          
          .hero-modal-close-{{ section.id }} svg {
            width: {{ block.settings.modal_close_icon_size }}px;
            height: {{ block.settings.modal_close_icon_size }}px;
          }
        }
      </style> 
      
      {% if block.settings.video_ratio_mobile == "portrait" %}
        <style>
          .hero-bottom-video-{{ section.id }} {
            aspect-ratio: 9.6/13;
          }
        </style>
      {% elsif block.settings.video_ratio_mobile == "landscape" %}
        <style>
        .hero-bottom-video-{{ section.id }} {
          aspect-ratio: 12/8;
        }
        </style>
      {% elsif block.settings.video_ratio_mobile == "square" %}
        <style>
          .hero-bottom-video-{{ section.id }} {
            aspect-ratio: 12/12;
          }
        </style>
      {% else %}
        <style>
          .hero-bottom-video-{{ section.id }} {
          aspect-ratio: auto;
          }
        </style>
      {% endif %}

      {% if block.settings.video_ratio == "portrait" %}
        <style>
          @media(min-width: 1024px) {
            .hero-bottom-video-{{ section.id }} {
              aspect-ratio: 9.6/13;
            }
          }
        </style>
      {% elsif block.settings.video_ratio == "landscape" %}
        <style>
          @media(min-width: 1024px) {
            .hero-bottom-video-{{ section.id }} {
              aspect-ratio: 12/8;
            }
          }
        </style>
      {% elsif block.settings.video_ratio == "square" %}
        <style>
          @media(min-width: 1024px) {
            .hero-bottom-video-{{ section.id }} {
              aspect-ratio: 12/12;
            }
          }
        </style>
      {% else %}
        <style>
          @media(min-width: 1024px) {
            .hero-bottom-video-{{ section.id }} {
              aspect-ratio: auto;
            }
          }
        </style>
      {% endif %}

      {% if block.settings.video_shadow %}
        <style>
          .hero-bottom-video-{{ section.id }}:hover {
            -webkit-box-shadow: 0 0 25px 0 {{ block.settings.video_border_color | hex_to_rgba: 0.9 }};
            -moz-box-shadow: 0 0 25px 0 {{ block.settings.video_border_color | hex_to_rgba: 0.9 }};
            box-shadow: 0 0 25px 0 {{ block.settings.video_border_color | hex_to_rgba: 0.9 }};
            transition: all 0.25s ease 0s;
          }
        </style>
      {% endif %}

      {% if block.settings.show_mobile %}
        <style>
           .hero-bottom-video-{{ section.id }} {
            display: block;
           }
        </style>
      {% else %}
        <style>
           .hero-bottom-video-{{ section.id }} {
            display: none;
           }
        </style>
      {% endif %}

  {% endcase %}
{% endfor %}

<div class="section-{{ section.id }} hero-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      {% if hero_bg_type != 'color' %}
        <div class="hero-bg-{{ section.id }}">
          {% if hero_bg_type == 'video' %}
            <div class="hero-bg-video-{{ section.id }}">
              {% assign video_id = bg_video.id | default: bg_video_url.id %}
              {% assign loop = '&loop=1&playlist=' | append: video_id %}
              {%- if bg_video == null and bg_video_url != null -%}
              {%- if bg_video_url.type == 'youtube' -%}
              <iframe
                {% if lazy %}data-{% endif %}src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&mute=1&autoplay=1&controls=0&modestbranding=1&showinfo=0&rel=0{{ loop }}"
                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
                class="lazy"
              ></iframe>
