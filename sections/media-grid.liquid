<div class="section-{{ section.id }} media-grid-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings media-grid-items-{{ section.id }}">

      {% for block in section.blocks %}
        
        {% if block.settings.link == blank and block.settings.link_url != blank %}
          <a href="{{ block.settings.link_url }}" class="media-grid-item-{{ block.id }}">
          
        {% else %}
          <div class="media-grid-item-{{ block.id }}">   
        {% endif %}

          {% if block.type == "image" %}
            
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url }}" class="media-grid-image-{{ block.id }}" alt="media-grid-image-{{ forloop.index }}">
          {% endif %}

          {% else %}

            {% assign video_id = block.settings.video.id | default: block.settings.video_url.id %}

            {%- if block.settings.video == null and block.settings.video_url != null -%}
              
              <div class="media-grid-video-{{ block.id }}">
                {%- if block.settings.video_url.type == 'youtube' -%}

                  <iframe
                    data-src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&mute=1&autoplay=1"
                    allow="encrypted-media"
                    allowfullscreen
                    title="Grid Section Video"
                    class="lazy"
                  ></iframe>
                {%- else -%}
                  <iframe
                    data-src="https://player.vimeo.com/video/{{ video_id }}?enablejsapi=1&mute=1&autoplay=1"
                    allow=" encrypted-media"
                    allowfullscreen
                    title="Grid Section Video"
                    class="lazy"
                  ></iframe>
                {% endif %}
              </div>
            
            {% else %}
              
            <div class="media-grid-video-{{ block.id }}">
              <video data-src="{{ block.settings.video.sources[1].url }}" loop autoplay muted playsinline preload="none" class="lazy"></video>
            </div>
            
            {% endif %}
            
          {% endif %}

          <div class="media-grid-content-{{ block.id }}">

            {% if block.settings.heading != blank %}
              <h2 class="media-grid-heading-{{ block.id }}">{{ block.settings.heading }}</h2>
            {% endif %}

            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link_url }}" class="media-grid-link-{{ block.id }}">{{ block.settings.link }}</a>
            {% endif %}
        
          </div>
        
        {% if block.settings.link == blank and block.settings.link_url != blank %}
          </a>
            
        {% else %}
          </div>
        {% endif %}
        
      {% endfor %}
      
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@19.1.3/dist/lazyload.min.js"></script>

<script>
  function initMediaGrid() {
    let lazyLoadInstance = new LazyLoad();

    window.addEventListener(
      "LazyLoad::Initialized",
      function (event) {
        window.lazyLoadInstance = event.detail.instance;
      },
      false
    );
  }

  document.addEventListener('DOMContentLoaded', initMediaGrid);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initMediaGrid);
     document.addEventListener('shopify:section:load', initMediaGrid);
  }
  
</script>

