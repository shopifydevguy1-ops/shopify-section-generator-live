  <style>
    .shop-look-image-{{ section.id }}  {
      aspect-ratio: 12/12;
    }
    @media(min-width: 1024px) {
      .shop-look-image-{{ section.id }} {
        aspect-ratio: auto;
      }
    }
  </style>
{% else %}
  <style>
    .shop-look-image-{{ section.id }}  {
      aspect-ratio: auto;
    }
    @media(min-width: 1024px) {
      .shop-look-image-{{ section.id }} {
        aspect-ratio: auto;
      }
    }
  </style>
{% endif %}


{% if product_image_ratio_mobile == "portrait" %}
  <style>
    .shop-look-product-image-{{ section.id }} {
      aspect-ratio: 9.6/13;
    }
  </style>
{% elsif product_image_ratio_mobile == "landscape" %}
  <style>
  .shop-look-product-image-{{ section.id }} {
    aspect-ratio: 12/8;
  }
  </style>
