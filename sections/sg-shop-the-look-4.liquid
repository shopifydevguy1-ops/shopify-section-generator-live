  <style>
    .shop-look-image-{{ section.id }} {
      aspect-ratio: 9.6/13;
    }
    @media(min-width: 1024px) {
      .shop-look-image-{{ section.id }} {
        aspect-ratio: auto;
      }
    }
  </style>
