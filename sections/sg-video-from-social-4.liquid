<script>
(function(){
  // Функция для принудительной загрузки видео
  function forceLoadVideo(element) {
    if (!element) return;
    
    // Для video элементов
    if (element.tagName.toLowerCase() === 'video') {
      // Сохраняем старый src, если он есть
      var src = element.getAttribute('data-src') || element.getAttribute('src');
      if (!src) return;
      
      // Только устанавливаем src, если его еще нет
      if (!element.getAttribute('src')) {
        element.setAttribute('src', src);
        element.classList.remove('lazy');
        
        // Предзагрузка
        try {
          element.load();
        } catch(e) {}
        
        {% unless play_with_sound %}
        element.muted = true;
        {% endunless %}
        element.preload = "auto";
      }
    }
    
    // Для iframe элементов (YouTube, Vimeo)
    if (element.tagName.toLowerCase() === 'iframe') {
      var src = element.getAttribute('data-src') || element.getAttribute('src');
      if (!src) return;
      
      // Только устанавливаем src, если его еще нет
      if (!element.getAttribute('src')) {
        element.setAttribute('src', src);
        element.classList.remove('lazy');
      }
    }
  }

  // Предзагрузка всех видео в слайдере, чтобы избежать мигания
  function preloadAllSliderVideos() {
    var allVideos = document.querySelectorAll('.video-grid-slider-{{ section.id }} .swiper-slide video, .video-grid-slider-{{ section.id }} .swiper-slide iframe');
    for (var i = 0; i < allVideos.length; i++) {
      forceLoadVideo(allVideos[i]);
    }
  }

  // Инициализация слайдера
  function initSlider() {
    var sliderEl = document.querySelector('.video-grid-slider-{{ section.id }}');
    if (!sliderEl) return;

    sliderEl.classList.remove('preview');
    
    // Предзагрузка всех видео в слайдере перед инициализацией
    preloadAllSliderVideos();
    
    var swiper = new Swiper('.video-grid-slider-{{ section.id }}', {
      speed: 300,
      loop: true,
      slideToClickedSlide: false,
      loopAdditionalSlides: 1,
      slidesPerGroup: 1,
      preloadImages: true,
      {% if use_controls %}
      watchSlidesProgress: true,
      {% endif %}
      navigation: {
        nextEl: '.video-grid-btn-next-{{ section.id }}',
        prevEl: '.video-grid-btn-prev-{{ section.id }}',
      },
      on: {
        // Предзагрузка видео до начала анимации слайда
        beforeTransition: function() {
          var nextSlide = this.slides[this.activeIndex];
          if (nextSlide) {
            var mediaElements = nextSlide.querySelectorAll('video, iframe');
            for (var i = 0; i < mediaElements.length; i++) {
              forceLoadVideo(mediaElements[i]);
            }
          }
        },
        slideChangeTransitionStart: function() {
          // Предзагрузка видео при начале перехода
          var activeSlide = this.slides[this.activeIndex];
          if (activeSlide) {
            var mediaElements = activeSlide.querySelectorAll('video, iframe');
            for (var i = 0; i < mediaElements.length; i++) {
              forceLoadVideo(mediaElements[i]);
            }
          }
        },
        slideChangeTransitionEnd: function() {
          // И еще раз после завершения перехода
          var activeSlide = this.slides[this.activeIndex];
          if (activeSlide) {
            var mediaElements = activeSlide.querySelectorAll('video, iframe');
            for (var i = 0; i < mediaElements.length; i++) {
              forceLoadVideo(mediaElements[i]);
            }
          }
        }
      },
      breakpoints: {
        320: {
          spaceBetween: parseInt(sliderEl.dataset.gapMobile || 0),
          slidesPerView: parseFloat(sliderEl.dataset.viewMobile || 1),
        },
        768: {
          spaceBetween: parseInt(sliderEl.dataset.gap || 0),
          slidesPerView: parseFloat(sliderEl.dataset.view || 3),
        },
        1024: {
          spaceBetween: parseInt(sliderEl.dataset.gap || 0),
          slidesPerView: parseFloat(sliderEl.dataset.view || 3),
        }
      }
    });
    
    return swiper;
  }

  // Настройка воспроизведения видео
  function setupVideoPlayback() {
    var videoItems = document.querySelectorAll('.video-grid-video-{{ section.id }}');
    if (!videoItems || videoItems.length === 0) return;

    for (var i = 0; i < videoItems.length; i++) {
      (function(item) {
        var video = item.querySelector('video');
        var iframe = item.querySelector('iframe');
        var videoButton = item.querySelector('.video-grid-play-{{ section.id }}');
        var wrap = item.querySelector('.video-grid-video-wrap-{{ section.id }}');
        
        {% if use_controls %}
        if (video) {
          video.addEventListener('click', function(e) {
            e.stopPropagation();
          });
          
          item.addEventListener('click', function(e) {
            forceLoadVideo(video);
            e.stopPropagation();
          });
        }
        
        if (iframe) {
          iframe.addEventListener('click', function(e) {
            e.stopPropagation();
          });
          
          item.addEventListener('click', function(e) {
            forceLoadVideo(iframe);
            e.stopPropagation();
          });
        }
        {% endif %}
        
        {% unless use_controls %}
        if (wrap) {
          wrap.addEventListener('click', function(e) {
            e.stopPropagation();
            
            // Остановить другие видео
            for (var j = 0; j < videoItems.length; j++) {
              var otherItem = videoItems[j];
              var otherVideo = otherItem.querySelector('video');
              var otherIframe = otherItem.querySelector('iframe');
              var otherButton = otherItem.querySelector('.video-grid-play-{{ section.id }}');
              
              if (otherVideo && otherVideo !== video) {
                otherVideo.pause();
                if (otherButton) otherButton.classList.add('active'); 
              }
              
              if (otherIframe && otherIframe !== iframe) {
                if (otherIframe.getAttribute('data-src2')) {
                  otherIframe.src = otherIframe.getAttribute('data-src2');
                }
                if (otherButton) otherButton.classList.add('active');
              }
            }
            
            // Воспроизвести/остановить текущее видео
            if (videoButton && videoButton.classList.contains('active')) {
              if (video) {
                forceLoadVideo(video);
                video.play();
              }
              if (iframe && iframe.getAttribute('data-src1')) {
                iframe.src = iframe.getAttribute('data-src1');
              }
            } else {
              if (video) video.pause();
              if (iframe && iframe.getAttribute('data-src2')) {
                iframe.src = iframe.getAttribute('data-src2');
              }
            }
            
            if (videoButton) videoButton.classList.toggle('active');
          });
        }
        {% endunless %}
      })(videoItems[i]);
    }
  }

  // Инициализация анимации процентных кругов
  function initPercentCircles() {
    var circles = document.querySelectorAll('.video-grid-circle-{{ section.id }}');
    if (!circles || circles.length === 0) return;
    
    var animatedCircles = new Set();
    
    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        var circle = entry.target;
        
        if (animatedCircles.has(circle)) {
          return;
        }
        
        var progressColor = circle.getAttribute('data-progress');
        var activeProgressColor = circle.getAttribute('data-active-progress');
