    .product-tabs-wrapper-{{ section.id }}:hover .product-tabs-button-next-{{ section.id }}{
      opacity: 1;
      transition: all 0.25s ease 0s;
    }

    .product-tabs-wrapper-{{ section.id }}:hover .product-tabs-button-prev-{{ section.id }}.swiper-button-disabled,
