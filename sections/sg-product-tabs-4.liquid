      opacity: 0.3;
      transition: all 0.25s ease 0s;
    }

    .product-tabs-button-prev-{{ section.id }} {
      display: none;
    }

    .product-tabs-wrapper-{{ section.id }}.not-first .product-tabs-button-prev-{{ section.id }} {
