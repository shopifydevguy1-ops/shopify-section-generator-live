{% for block in section.blocks %}
  {% case block.type %}   
    {% when 'sub_heading' %}      
      <style>
        {{  block.settings.sub_heading_font | font_face: font_display: 'swap' }}    

        .modal-popup-subheading-{{ block.id }} {
          width: 100%;
          text-align: {{ content_align_mobile }};
          margin-top: {{ block.settings.sub_heading_mt_mobile }}px;
        }

        .modal-popup-subheading-{{ block.id }} * {
          margin: 0;
          font-size: {{ block.settings.sub_heading_size_mobile }}px;
          color: {{ block.settings.sub_heading_color }};
          line-height: {{ block.settings.sub_heading_height }}%;
          word-break: break-word;
          font-weight: 400;
          text-transform: unset;
        }

        @media(min-width: 1024px) {          
          .modal-popup-subheading-{{ block.id }} {
            text-align: {{ content_align }};
            margin-top: {{ block.settings.sub_heading_mt }}px;
          }

          .modal-popup-subheading-{{ block.id }} * {
            font-size: {{ block.settings.sub_heading_size }}px;
          }
        }
      </style>

      {% if block.settings.sub_heading_custom %}
        <style>
          .modal-popup-subheading-{{ block.id }} * {
            font-family: {{ block.settings.sub_heading_font.family }}, {{ block.settings.sub_heading_font.fallback_families }};
            font-weight: {{ block.settings.sub_heading_font.weight }};
            font-style: {{ block.settings.sub_heading_font.style }};
          }
        </style>
      {% endif %}
    {% when 'heading' %}     
      <style>       
        {{  block.settings.heading_font | font_face: font_display: 'swap' }}    
        .modal-popup-heading-{{ block.id }} {
          width: 100%;
          text-align: {{ content_align_mobile }};
          margin-top: {{ block.settings.heading_mt_mobile }}px;
        }

        .modal-popup-heading-{{ block.id }} * {
          margin: 0;
          font-size: {{ block.settings.heading_size_mobile }}px;
          color: {{ block.settings.heading_color }};
          line-height: {{ block.settings.heading_height }}%;
          word-break: break-word;
          font-weight: 700;
          text-transform: unset;
        }
        @media(min-width: 1024px) {

          .modal-popup-heading-{{ block.id }} {
            text-align: {{ content_align }};
            margin-top: {{ block.settings.heading_mt }}px;
          }

          .modal-popup-heading-{{ block.id }} * {
            font-size: {{ block.settings.heading_size }}px;
          }
        }
      </style> 

      {% if block.settings.heading_custom %}
        <style>
          .modal-popup-heading-{{ block.id }} * {
            font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
            font-weight: {{ block.settings.heading_font.weight }};
            font-style: {{ block.settings.heading_font.style }};
          }
        </style>
      {% endif %}

    {% when 'newsletter' %}    
      <style>
        {{  block.settings.input_font | font_face: font_display: 'swap' }}
        {{  block.settings.submit_font | font_face: font_display: 'swap' }}
        {{  block.settings.thanks_text_font | font_face: font_display: 'swap' }}

        .modal-popup-newsletter-row-{{ block.id }} {
          margin-top: 20px;
          position: relative;
          display: flex;
          align-items: {{ content_horizontal_align_mobile }};
          gap: 16px;
          flex-direction: column;
          max-width: 100%;
          margin-top: {{ block.settings.form_mt_mobile }}px;
        }
      
        .modal-popup-newsletter-input-{{ block.id }} {
          width: 100%;
          margin: 0;
          box-shadow: none;
          border: 0px;
          padding: {{ block.settings.input_padding_vertical_mobile }}px {{ block.settings.input_padding_horizontal_mobile }}px;
          font-size: {{ block.settings.input_size_mobile }}px;
          color: {{ block.settings.input_color }};
          line-height: {{ block.settings.input_height }}%;
          text-transform: unset;
          border-radius: {{ block.settings.input_radius }}px;
          background-color: transparent;
          background-color: {{ block.settings.input_bg_color }};
          font-family: inherit;
          border: {{ block.settings.input_border_thickness }}px solid {{ block.settings.input_border_color }};
        }
      
        .modal-popup-newsletter-input-{{ block.id }}:focus {
          border: {{ block.settings.input_border_thickness }}px solid {{ block.settings.input_border_color }};
        }

        .modal-popup-newsletter-input-{{ block.id }}:focus-visible {
          outline: .2rem solid {{ block.settings.input_border_focus_color }};
          outline-offset: 0rem; 
        }
      
        .modal-popup-newsletter-input-{{ block.id }}::placeholder {
          color: {{ block.settings.input_placeholder_color }};
        }
      
        .modal-popup-newsletter-submit-{{ block.id }} {
