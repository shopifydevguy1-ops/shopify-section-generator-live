{% endif %}

<div class="section-{{ section.id }} faq-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      <div class="faq-heading-{{ section.id }}">
        {{ section.settings.heading }}
      </div>
      <div class="faq-wrapper-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="faq-item-{{ section.id }}">
            <p class="faq-title-{{ section.id }}">{{ block.settings.title }}</p>
            <div class="faq-text-{{ section.id }}">
              {{ block.settings.text }}
            </div>
            <p class="faq-number-{{ section.id }}">
              {% assign number = forloop.index | plus: 0 %}
              {% if number < 10 %}
                0{{ number }}
              {% else %}
                {{ number }}
              {% endif %}
            </p>
          </div>
        {% endfor %}
      </div>
    </div>
</div>

<script>
  function initFaq() {
    document.querySelectorAll('.faq-item-{{ section.id }}').forEach((item, index) => {
      item.addEventListener('click', () => {
        document.querySelectorAll('.faq-item-{{ section.id }}, .faq-title-{{ section.id }}, .faq-text-{{ section.id }}, .faq-number-{{ section.id }}').forEach(el => {
          el.classList.remove('active');
        });

        item.classList.add('active');
        item.querySelector('.faq-title-{{ section.id }}').classList.add('active');
        item.querySelector('.faq-number-{{ section.id }}').classList.add('active');
        item.querySelector('.faq-text-{{ section.id }}').classList.add('active');
      });
    });
  }
  

  document.addEventListener('DOMContentLoaded', initFaq);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initFaq);
     document.addEventListener('shopify:section:load', initFaq);
  }

</script>


