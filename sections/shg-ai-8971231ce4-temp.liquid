<meta name="shogun_section_version" content="0.1">
{% style %}
.features-row {
  padding: 4rem 0;
}

.features-row__content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 3rem;
  align-items: start;
}

@media screen and (min-width: 750px) {
  .features-row__content {
    gap: 4rem;
  }
}

@media screen and (min-width: 990px) {
  .features-row {
    padding: 6rem 0;
  }
  
  .features-row__content {
    gap: 5rem;
  }
}

.feature-item {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  padding: 2rem 1rem;
}

.feature-item__icon {
  width: 6rem;
  height: 6rem;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 2rem;
  border-radius: 50%;
  background-color: rgba(var(--color-foreground), 0.05);
  transition: transform var(--duration-short) ease;
}

.feature-item__icon svg {
  width: 3rem;
  height: 3rem;
  fill: rgb(var(--color-foreground));
}

.feature-item:hover .feature-item__icon {
  transform: translateY(-0.2rem);
}

.feature-item__title {
  font-size: calc(var(--font-heading-scale) * 1.6rem);
  font-weight: var(--font-heading-weight);
  font-family: var(--font-heading-family);
  color: rgb(var(--color-foreground));
  margin: 0 0 1rem 0;
  line-height: 1.3;
}

.feature-item__description {
  font-size: 1.4rem;
  line-height: 1.5;
  color: rgba(var(--color-foreground), 0.7);
  margin: 0;
  max-width: 280px;
}

@media screen and (min-width: 750px) {
  .feature-item__icon {
    width: 7rem;
    height: 7rem;
    margin-bottom: 2.5rem;
  }
  
  .feature-item__icon svg {
    width: 3.5rem;
    height: 3.5rem;
  }
  
  .feature-item__title {
    font-size: calc(var(--font-heading-scale) * 1.8rem);
    margin-bottom: 1.5rem;
  }
  
  .feature-item__description {
    font-size: 1.5rem;
  }
}

/* Icon styles for different types */
.feature-item__icon--accent-1 {
  background-color: rgba(var(--color-base-accent-1), 0.1);
}

.feature-item__icon--accent-1 svg {
  fill: rgb(var(--color-base-accent-1));
}

.feature-item__icon--accent-2 {
  background-color: rgba(var(--color-base-accent-2), 0.1);
}

.feature-item__icon--accent-2 svg {
  fill: rgb(var(--color-base-accent-2));
}
{% endstyle %}

<div class="features-row color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="features-row__content">
      {% for block in section.blocks %}
        <div class="feature-item" {{ block.shopify_attributes }}>
          <div class="feature-item__icon feature-item__icon--{{ block.settings.icon_color }}">
            {% case block.settings.icon %}
              {% when 'shipping' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 7H16L19 10V17H17.5C17.5 18.3807 16.3807 19.5 15 19.5C13.6193 19.5 12.5 18.3807 12.5 17H8.5C8.5 18.3807 7.38071 19.5 6 19.5C4.61929 19.5 3.5 18.3807 3.5 17H1V7H3Z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
                  <path d="M3 11H16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="6" cy="17" r="1" fill="currentColor"/>
                  <circle cx="15" cy="17" r="1" fill="currentColor"/>
                </svg>
              {% when 'guarantee' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L15.09 8.26L22 9L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9L8.91 8.26L12 2Z" fill="currentColor"/>
                </svg>
              {% when 'support' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M21 15C21 15.5304 20.7893 16.0391 20.4142 16.4142C20.0391 16.7893 19.5304 17 19 17H7L3 21V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V15Z" fill="currentColor"/>
                </svg>
              {% when 'quality' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 1L15.09 8.26L22 9L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9L8.91 8.26L12 1Z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
                  <circle cx="12" cy="12" r="3" fill="currentColor"/>
                </svg>
              {% when 'returns' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 12C3 12 5.5 7 12 7S21 12 21 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                  <path d="M21 12C21 12 18.5 17 12 17S3 12 3 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                  <path d="M1 12H7M17 12H23" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
              {% when 'security' %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" fill="currentColor"/>
                  <path d="M9 12l2 2 4-4" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% else %}
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="12" cy="12" r="10" fill="currentColor"/>
                  <path d="M8 12l2 2 4-4" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            {% endcase %}
          </div>
          
          {% if block.settings.title != blank %}
            <h3 class="feature-item__title">{{ block.settings.title | escape }}</h3>
          {% endif %}
          
          {% if block.settings.description != blank %}
            <p class="feature-item__description">{{ block.settings.description | escape }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

