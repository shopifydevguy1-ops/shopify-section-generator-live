{%- style -%}
  {{ hotspot_title_font | font_face: font_display: 'swap' }}
  {{ hotspot_text_font | font_face: font_display: 'swap' }}
  {{ hotspot_button_font |  font_face: font_display: 'swap' }}
  {{ title_font | font_face: font_display: 'swap' }}
  {{ text_font | font_face: font_display: 'swap' }}
  {{ button_font |  font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }  

  .collection-body-{{ section.id }} {
    display: grid;
    gap: {{ layout_gap_mobile }}px;
  }

  .collection-slider-wrapper-{{ section.id }} {
    display: grid;
    position: relative !important;
  }

  .collection-slider-{{ section.id }} {
    grid-area: images;   
    min-width: 0px !important;
    width: 100% !important;
    height: 100%;
    position: relative !important;
    border: {{ image_border_thickness }}px solid {{ image_border_color }} !important;
    border-radius: {{ image_radius }}px !important;
    overflow: hidden !important;
  } 

  .collection-slide-{{ section.id }} {
    position: relative !important;
    box-sizing: border-box !important;
  }

  .collection-image-{{ section.id }} {
    width: 100%; 
    height: 100%;   
  }

  .collection-image-{{ section.id }} img,
  .collection-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .collection-hotspot-{{ section.id }} {
    background-color: {{ hotspot_circle_color }};
    border-radius: 100%;
    position: absolute;  
    z-index: 1;   
    cursor: pointer;
    height: {{ hotspot_size_mobile }}px;
    width: {{ hotspot_size_mobile }}px;
  }

  .collection-hotspot-{{ section.id }}::after {
    content: "";
    position: absolute;
    left: 50%; 
    top: 50%;   
    -webkit-animation: pulse{{ section.id | replace: '-', '' }} 2s ease-in-out infinite;
    animation: pulse{{ section.id | replace: '-', '' }} 2s ease-in-out infinite;
    border: 1px solid {{ hotspot_circle_color }};
    border-radius: 50%;
    box-sizing: border-box;
    transform: translate3d(-50%, -50%, 0);
    transition: opacity 0.25s linear;
    height: 100%;
    width: 100%;
    z-index: -1;
  }
  
  @keyframes pulse{{ section.id | replace: '-', '' }} {
    0% {
      transform: translate3d(-50%, -50%, 0) scale(1);
    }
    100% {
      transform: translate3d(-50%, -50%, 0) scale(1.5);
    }
  }

  .collection-hotspot-{{ section.id }}.active {
    background-color: transparent;
  }

  .collection-hotspot-{{ section.id }}.active::after  {
    transition: opacity 0.25s linear;
    opacity: 0;
    animation: none;
  }

  .collection-hotspot-content-{{ section.id }} {
    display: none;
    background-color: {{ hotspot_content_bg_color }};
    border-radius: {{ hotspot_content_radius }}px;
    border: {{ hotspot_content_border_thickness }}px solid {{ hotspot_content_border_color }};
    width: {{ hotspot_content_max_width_mobile }}px;
    padding: {{ hotspot_content_padding_vertical_mobile }}px {{ hotspot_content_padding_horizontal_mobile }}px;   
    flex-direction: column;
    align-items: {{ hotspot_content_horizontal_align_mobile }};
  }

  .collection-hotspot-{{ section.id }}.active .collection-hotspot-content-{{ section.id }} {
    display: flex;
    -webkit-animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;
    animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;    
  }
  
  @keyframes opacity{{ section.id | replace: '-', '' }} {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .collection-hotspot-text-{{ section.id }} {
    text-align: {{ hotspot_content_align_mobile }};
    margin: 0;
    font-size: {{ hotspot_text_size_mobile }}px;
    color: {{ hotspot_text_color }};
    line-height: {{ hotspot_text_height }}%;
    text-transform: unset;
    word-break: break-word;
  }

  .collection-hotspot-title-{{ section.id }} {
    margin: 0;   
    margin-top: {{ hotspot_title_mt_mobile }}px;
    font-size: {{ hotspot_title_size_mobile }}px;
    color: {{ hotspot_title_color }};
    line-height: {{ hotspot_title_height }}%;
    text-align: {{ hotspot_content_align_mobile }};
    text-transform: unset;
    word-break: break-word;
    font-weight: 700;
  }
  
  .collection-hotspot-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    box-sizing: border-box;
    width: 100%;
    max-width: fit-content;    
    margin: 0;
    margin-top: {{ hotspot_button_mt_mobile }}px;
    font-size: {{ hotspot_button_size_mobile }}px;
    color: {{ hotspot_button_color }};
    line-height: {{ hotspot_button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ hotspot_button_padding_vertical_mobile }}px {{ hotspot_button_padding_horizontal_mobile }}px;
    border-radius: {{ hotspot_button_radius }}px;
    transition: all 0.25s ease 0s;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
    font-weight: 700;
  }

  .collection-hotspot-button-inner-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .collection-hotspot-button-{{ section.id }}:hover {
    color: {{ hotspot_button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .collection-hotspot-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .collection-hotspot-button-{{ section.id }} svg path {
    fill: {{ hotspot_button_color }};
    transition: all 0.25s ease 0s;
  }

  .collection-hotspot-button-{{ section.id }}:hover svg path {
    fill: {{ hotspot_button_hover_color }};
    transition: all 0.25s ease 0s;
  }
   
  .collection-pagination-{{ section.id }} {
    position: absolute !important;
    bottom: 24px !important;
    left: 50% !important;
    z-index: 2;
    transform: translateX(-60%) !important;
    margin: 0px auto !important;
    width: 100% !important;
    max-width: fit-content;
    justify-content: center;
    align-items: center;
  }

  .collection-pagination-{{ section.id }} .swiper-pagination-bullet {
    width: {{ dots_size_mobile }}px !important;
    height: {{ dots_size_mobile }}px !important;
    border: 0px !important;
    background-color: {{ dots_color }} !important;
    opacity: 0.4 !important;
    transition: all 0.25s ease 0s;
  }

  .collection-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
    opacity: 1 !important;
    transition: all 0.25s ease 0s;
  }

  .collection-collections-{{ section.id }} {  
    display: grid;
    grid-template-columns: repeat({{ collections_per_row_mobile }}, 1fr);
    gap: {{ collections_gap_mobile }}px;
    grid-area: collections;
  }

  .collection-collection-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: {{ collection_radius }}px;
    padding: {{ collection_padding_vertical_mobile }}px {{ collection_padding_horizontal_mobile }}px;
  }

  .collection-text-{{ section.id }} {
    text-align: {{ collection_align_mobile }};
  }

  .collection-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ collection_text_size_mobile }}px;
    color: {{ collection_text_color }};
    line-height: {{ collection_text_height }}%;
    text-transform: unset;
    word-break: break-word;
  }  

  .collection-title-{{ section.id }} {
    margin: 0 0 8px 0;   
    margin-top: {{ collection_title_mt_mobile }}px;
    font-size: {{ collection_title_size_mobile }}px;
    color: {{ collection_title_color }};
    line-height: {{ collection_title_height }}%;
    text-align: {{ collection_align_mobile }};
    text-transform: unset;
    word-break: break-word;
    font-weight: 700;
  }    

  .collection-collection-bottom-{{ section.id }} {
    display: flex;
    align-items: end;
    gap: 20px;
  }

  .collection-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    box-sizing: border-box;
    width: 100%;
    max-width: fit-content;    
    margin: 0;
    margin-top: {{ button_mt_mobile }}px;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 0.25s ease 0s;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
    font-weight: 700;
  }

  .collection-button-inner-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .collection-button-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .collection-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .collection-button-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .collection-button-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .collection-collection-image-{{ section.id }} {
    border-radius: {{ collection_image_radius }}px;
    border: {{ collection_image_border_thickness }}px solid {{ collection_image_border_color }};
    overflow: hidden;
  }
 
  .collection-collection-image-{{ section.id }} img,
  .collection-collection-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-collection-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .collection-body-{{ section.id }} {
      gap: {{ layout_gap }}px;
    }

    .collection-slider-wrapper-{{ section.id }} {
      display: block;   
    }

    .collection-hotspot-{{ section.id }} {
      height: {{ hotspot_size }}px;
      width: {{ hotspot_size }}px;
    }

    .collection-hotspot-{{ section.id }}:hover {
      background-color: transparent;
    }

    .collection-hotspot-{{ section.id }}:hover::after {
      transition: opacity 0.25s linear;
      opacity: 0;
    }

    .collection-hotspot-content-{{ section.id }} {
      align-items: {{ hotspot_content_horizontal_align }};
      width: {{ hotspot_content_max_width }}px;
      padding: {{ hotspot_content_padding_vertical }}px {{ hotspot_content_padding_horizontal }}px;
    }

    .collection-hotspot-{{ section.id }}:hover .collection-hotspot-content-{{ section.id }} {
      display: flex;
      -webkit-animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;
      animation: opacity{{ section.id | replace: '-', '' }} 0.5s linear;    
    }

    .collection-hotspot-text-{{ section.id }} {
      text-align: {{ hotspot_content_align }};
      font-size: {{ hotspot_text_size }}px;
    }

    .collection-hotspot-title-{{ section.id }} {
      margin-top: {{ hotspot_title_mt }}px;
      font-size: {{ hotspot_title_size }}px;
      text-align: {{ hotspot_content_align }};
    }
    
