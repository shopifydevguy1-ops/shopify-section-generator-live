<script>
  function initContactForm2() {
    const section = document.querySelector('.contact-{{ section.id }}');
    const form = section.querySelector('form');
    const progressBar = section.querySelector('.contact-progresg-bar-{{ section.id }}');
    const fields = section.querySelectorAll('input, textarea, select');
    const fieldInnerContainers = section.querySelectorAll('.contact-field-inner-{{ section.id }}');     
    const succesMessage = document.querySelector('.contact-succesg-{{ section.id }}')
    const submitFormValue = localStorage.getItem('submitForm');

    if (!form || !progressBar || fields.length === 0) return;     

    if (succesMessage) {        
      console.log(submitFormValue);
      if (submitFormValue == 'true') {
        setTimeout(() => {
          succesMessage.classList.add('active');
        }, 3000);
        localStorage.setItem('submitForm', false);
      } else {
        succesMessage.classList.add('active');
      }     
    }

    form.addEventListener("submit", () => {
      localStorage.setItem('submitForm', true);
    })

    function updateProgressBar() {
      let filledFields = 0;
      let countableFields = 0;

      fieldInnerContainers.forEach(container => {
        let checkboxGroupChecked = false;
        let hasCheckbox = false;
        const containerFields = container.querySelectorAll('input, textarea, select');
        
        containerFields.forEach(field => {
          if (field.offsetParent !== null && !field.disabled && field.type !== 'submit') {
            if (field.type === 'checkbox') {
              hasCheckbox = true;
              if (field.checked) {
                checkboxGroupChecked = true;
              }
            } else {
              countableFields++;
              if (field.value.trim() !== '') {
                filledFields++;
              }
            }
          }
        });

        if (hasCheckbox) {
          countableFields++;
          if (checkboxGroupChecked) {
            filledFields++;
          }
        }
      });

      const progress = (filledFields / countableFields) * 100;
      progressBar.style.width = progress + '%';
    }

    progressBar.style.width = '0%';

    fields.forEach(field => {
      field.addEventListener('input', updateProgressBar);
      field.addEventListener('change', updateProgressBar);
    });

    updateProgressBar();
  }
  
  document.addEventListener('DOMContentLoaded', initContactForm2);
  
  if (Shopify.designMode) {
    document.addEventListener('shopify:section:unload', initContactForm2);
    document.addEventListener('shopify:section:load', initContactForm2);
  }
</script>

