<style>

  .sg-atc-button-style {
    border: none;
    background-color: {{ section.settings.first_color }};
    border-radius: 6px;
    color: {{ section.settings.text_color }};
    cursor: pointer;
    display: inline-block;
    text-transform: uppercase;
    padding: {{section.settings.sg-button_padding}}rem;
    font-weight: 600;
    font-size: 1em;
    outline: none;
    font-size: {{section.settings.sg-font-size}}px;
    margin-bottom:15px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: {{section.settings.sg-border-width}}px solid {{section.settings.border_color}};
  }
  .sg-atc-button-style svg path {
    fill: {{ section.settings.text_color }};
  }
  .sg-atc-button-style:before {
    -webkit-transform: translateY(7px);
    transform: translateY(7px);
    background-color: inherit;
    border-radius: 8px;
    z-index: -1;
    border-bottom: #b5b4b4 2px solid;
    box-shadow: inset 0 -6px 10px rgba(0, 0, 0, 0.5);
  }

  .sg-atc-button-style:hover {
    background-color: {{section.settings.button_hover_color}};
    color: {{section.settings.text_color_hover}};
  }
  
  .sg-atc-button-style:hover svg path{
    fill: {{section.settings.text_color_hover}} !important;
  }

  .sg-atc-button-style:active {
    background-color: {{section.settings.button_hover_color}};
    color: {{section.settings.text_color_hover}};
  }

  .sg-atc-button-style:after {
    --border-opacity:none!important;
  }

  svg.sg-atc-button-style {
    background-color:red;
  }


</style>

<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        const productATC = document.querySelector('{% if section.settings.custom_class_selector != blank %}{{ section.settings.custom_class_selector }}{% else %}.product-form__submit, .add-to-cart, .product-form__cart-submit, .button--addToCart, .product-buy-buttons--cta, .product__submit__add{% endif %}')

        if (!productATC) {
            return
        }

      productATC.insertAdjacentHTML('afterbegin','<svg style="margin-right: 10px;margin-bottom: 3px;" xmlns="http://www.w3.org/2000/svg" width="{{section.settings.sg-font-size}}" height="{{section.settings.sg-font-size}}" fill="currentColor" class="bi bi-bag-fill" viewBox="0 0 16 16"><path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5z"/></svg>');
      productATC.classList.add("sg-atc-button-style");
    });
</script>


