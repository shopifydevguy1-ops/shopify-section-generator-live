<script>
  function initFeaturedCollection9() {
    document.querySelector('.collection-slider-{{ section.id }}').classList.remove('preview')
    const slider = new Swiper(".collection-slider-{{ section.id }}", {
      speed: 1000,
      loop: true,       
      {% if autoplay %}
        autoplay: {
          delay: {{ autoplay_delay }}000,
        },
      {% endif %}
      navigation: {
        nextEl: '.collection-btn-next-{{ section.id }}',
        prevEl: '.collection-btn-prev-{{ section.id }}',
      },
      breakpoints: {
        320: {
          spaceBetween: {{ slider_gap_mobile }},
          slidesPerView: {{ slider_view_mobile }},
          centeredSlides: true, 
        },
        768: {
          spaceBetween: {{ slider_gap_mobile }},
          slidesPerView: {{ slider_view | times: 0.5 | round: 0 }},
          centeredSlides: true, 
        },
        1024: {
          spaceBetween: {{ slider_gap }},
          slidesPerView: {{ slider_view }},
          centeredSlides: true, 
        }
      },
      on: {
        slideChange: function () {
          setTimeout(() => {
            let activeSlide = slider.slides[slider.activeIndex];
            let background = activeSlide.getAttribute('data-background')
            let section = document.querySelector('.collection-{{ section.id }}')

            if (background && section) {
              section.style.backgroundColor = background;
            }
          }, 400)          
        }
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initFeaturedCollection9);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initFeaturedCollection9);
     document.addEventListener('shopify:section:load', initFeaturedCollection9);
  }
</script>

