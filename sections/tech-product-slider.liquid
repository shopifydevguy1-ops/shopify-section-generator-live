              style="width: {{ section.settings.icon_size }}px"
            >
              {% if section.settings.icon_left != blank %}
                <img
                  src="{{ section.settings.icon_left | img_url: '50x' }}"
                  alt="{{ section.settings.icon_left.alt }}"
                  style="width: {{ section.settings.icon_size }}px"
                >
              {% else %}
