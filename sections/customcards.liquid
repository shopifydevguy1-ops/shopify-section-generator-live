<div class="custom-cards-section" 
     style="--color-background: {{ section.settings.background_color }}; --color-text: {{ section.settings.text_color }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="page-width">
    <div class="custom-cards-grid" style="--cards-per-row: {{ section.settings.cards_per_row }};">
      {% for block in section.blocks %}
        <div class="custom-card__wrapper" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="custom-card__image-wrapper">
              {{ block.settings.image | image_url: width: 800 | image_tag: 
                loading: 'lazy',
                class: 'custom-card__image',
                widths: '165, 360, 535, 750, 1070, 1500'
              }}
            </div>
          {% endif %}

          <div class="custom-card__content">
            {% if block.settings.title != blank %}
              <div class="custom-card__title">
                {% if block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" class="custom-card__title-link">
                    {{ block.settings.title }}
                  </a>
                {% else %}
                  {{ block.settings.title }}
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "SG-Custom Cards",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "range",
      "id": "cards_per_row",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Cards per row (desktop)",
      "default": 4
    },
    {
      "type": "header",
      "content": "Section styling"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title",
          "default": "Card title"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Title link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SG-Custom Cards",
      "category": "Custom",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "title": "Product videos"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Payment icons"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Social proof"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Product tabs"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.custom-cards-section {
  background-color: var(--color-background, #ffffff);
  color: var(--color-text, #000000);
}

.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.custom-cards-grid {
  display: grid;
  grid-template-columns: repeat(var(--cards-per-row, 4), 1fr);
  gap: 24px;
}

.custom-card__wrapper {
  background: var(--color-background, #ffffff);
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: box-shadow 0.3s ease;
  display: flex;
  flex-direction: column;
}

.custom-card__wrapper:hover {
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.custom-card__image-wrapper {
  width: 100%;
  min-height: 200px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-background, #ffffff);
  overflow: hidden;
  border-bottom: 1px solid #e5e5e5;
}

.custom-card__image {
  width: 100%;
  height: auto;
  object-fit: contain;
  display: block;
  max-height: 300px;
}

.custom-card__content {
  padding: 20px 24px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.custom-card__title {
  font-size: 16px;
  font-weight: 500;
  line-height: 1.4;
  color: var(--color-text, #000000);
}

.custom-card__title-link {
  color: inherit;
  text-decoration: none;
  transition: opacity 0.2s ease;
}

.custom-card__title-link:hover {
  opacity: 0.7;
}

@media screen and (max-width: 989px) {
  .custom-cards-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
}

@media screen and (max-width: 749px) {
  .custom-cards-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .page-width {
    padding: 0 16px;
  }
  
  .custom-card__title {
    font-size: 15px;
  }
}
{% endstylesheet %}