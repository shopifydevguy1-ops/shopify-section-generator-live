  <div class="promotion-list-{{ section.id }}">
    {% for block in section.blocks %}
      {% if block.type == 'promotion' %}
        <{% if block.settings.url != blank %}a href="{{ block.settings.url }}"{% else %}div{% endif %} class="promotion-card-{{ section.id }} swiper-card">    
