{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  item_heading_font | font_face: font_display: 'swap' }}
  {{  date_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
    position: relative;
  }

  .section-{{ section.id }}-settings:before {
    content: '';
    position: absolute;
    top: 0;
    left: {{ padding_horizontal_mobile }}rem;
    height: 100%;
    width: 1px;
    background-color: {{ vertical_line_color }};
  }

  .timeline-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
    padding: 0 5%;
  }

  .timeline-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .timeline-items-{{ section.id }} {
    margin-top: {{ items_mt_mobile }}px;
  }

  .timeline-item-{{ section.id }} {
    display: grid;
    gap: {{ item_gap_mobile }}px;
  }

  .timeline-item-{{ section.id }}:not(:first-child) {
    margin-top: {{ item_mt_mobile }}px;
  }

  .timeline-images-wrapper-{{ section.id }} {
    position: relative;
    min-width: 0;
    width: 100%;
    order: 1;
  }

  .timeline-image-{{ section.id }} {
    overflow: hidden;
    position: relative;
    box-sizing: border-box;
  }

  .timeline-image-{{ section.id }} img,
  .timeline-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
  }

  .timeline-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .timeline-content-{{ section.id }} {
    order: 2;
    padding-left: 10%;
  }

  .timeline-title-{{ section.id }} {
    margin: 0;
    display: block;
    width: 100%;
    text-align: {{ item_heading_align_mobile }};
    font-size: {{ item_heading_size_mobile }}px;
    color: {{ item_heading_color }};
    line-height: {{ item_heading_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .timeline-date-{{ section.id }} {
    margin: 0;
    margin-top: {{ date_mt_mobile }}px;
    display: block;
    width: 100%;
    text-align: {{ date_align_mobile }};
    font-size: {{ date_size_mobile }}px;
    color: {{ date_color }};
    line-height: {{ date_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .timeline-text-{{ section.id }} {
    margin: 0;
    margin-top: {{ text_mt_mobile }}px;
    display: block;
    width: 100%;
    text-align: {{ text_align_mobile }};
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .timeline-btn-prev-{{ section.id }},
  .timeline-btn-next-{{ section.id }} {
    position: absolute;
    z-index: 2;
    top: 50%;
    transform: translateY(-50%);
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: 0px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: 50%;
    background: trasparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15);
  }

  .timeline-btn-prev-{{ section.id }} {
    left: 10px !important;
  }

  .timeline-btn-next-{{ section.id }} {
    right: 10px !important;
  }

  .timeline-btn-prev-{{ section.id }} svg,
  .timeline-btn-next-{{ section.id }} svg {
    height: {{ arrow_icon_size_mobile }}px;
    width: {{ arrow_icon_size_mobile }}px;
  }

  .timeline-btn-next-{{ section.id }} svg {
    transform: rotate(180deg);
    margin-left: 2px;
  }

  .timeline-btn-prev-{{ section.id }} svg {
    margin-left: -2px;
  }

  .timeline-btn-prev-{{ section.id }} svg path,
  .timeline-btn-next-{{ section.id }} svg path {
    fill: {{ arrow_color }};
    transition: all 0.3s ease 0s;
  }

  .timeline-btn-prev-{{ section.id }}:hover,
  .timeline-btn-next-{{ section.id }}:hover {
    transition: all 0.3s ease 0s;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
    background: {{ arrow_bg_hover_color }};
  }

  .timeline-btn-prev-{{ section.id }}:hover svg path,
  .timeline-btn-next-{{ section.id }}:hover svg path {
    fill: {{ arrow_hover_color }};
    transition: all 0.3s ease 0s;
  }

  .timeline-btn-prev-{{ section.id }}.swiper-button-disabled,
  .timeline-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .section-{{ section.id }}-settings:before {
      left: 25%;
    }

    .timeline-heading-{{ section.id }} {
      text-align: {{ heading_align }};
      padding: 0 0 0 30%;
    }

    .timeline-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .timeline-items-{{ section.id }} {
      margin-top: {{ items_mt }}px;
    }

    .timeline-item-{{ section.id }} {
      grid-template-columns: 40% 60%;
      gap: {{ item_gap }}px;
      align-items: start;
    }

    .timeline-content-{{ section.id }} {
      padding-left: 0;
    }

    .timeline-item-{{ section.id }}:not(:first-child) {
      margin-top: {{ item_mt }}px;
    }

    .timeline-item-{{ section.id }}:nth-child(even) {
      padding-right: 10%;
    }
  
    .timeline-item-{{ section.id }}:nth-child(odd) {
      padding-left: 10%;
    }

    .timeline-title-{{ section.id }} {
      text-align: {{ item_heading_align }};
      font-size: {{ item_heading_size }}px;
    }

    .timeline-date-{{ section.id }} {
      margin-top: {{ date_mt }}px;
      text-align: {{ date_align }};
      font-size: {{ date_size }}px;
    }

    .timeline-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ text_align }};
      font-size: {{ text_size }}px;
    }

    .timeline-btn-prev-{{ section.id }},
    .timeline-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
      transition: all 0.25s ease 0s;
      top: 50%;
    }
    
    .timeline-btn-prev-{{ section.id }}.swiper-button-disabled,
    .timeline-btn-next-{{ section.id }}.swiper-button-disabled {
      opacity: 0 !important;
    }

    .timeline-btn-prev-{{ section.id }} {
      left: -{{ arrow_size | times: 0.5 | round: 0 }}px !important;
    }
  
    .timeline-btn-next-{{ section.id }} {
      right: -{{ arrow_size | times: 0.5 | round: 0 }}px !important;
    }

    .timeline-btn-prev-{{ section.id }} svg,
    .timeline-btn-next-{{ section.id }} svg {
      height: {{ arrow_icon_size }}px;
      width: {{ arrow_icon_size }}px;
    }
  }
  
{%- endstyle -%}

