        <div class="timeline-heading-{{ section.id }}">{{ heading }}</div>
      {% endif %}

      <div class="timeline-items-{{ section.id }}">
        {% assign inside_item = false %}
        {% for block in section.blocks %}
          {% if block.type == "date" %}
            {% if inside_item %}
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
            
