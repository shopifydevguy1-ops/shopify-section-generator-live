<script>
  function initTimeline2() {
    {% for block in section.blocks %}
      const slider{{ block.id | replace: '-', '' }} = new Swiper(".timeline-images-{{ block.id }}", {
        speed: 300,
        spaceBetween: 0,
        loop: true,
        slidesPerView: 1,
        navigation: {
        nextEl: '.timeline-btn-next-{{ block.id }}',
        prevEl: '.timeline-btn-prev-{{ block.id }}',
      },
      });
    {% endfor %}
  }

  document.addEventListener('DOMContentLoaded', initTimeline2);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initTimeline2);
     document.addEventListener('shopify:section:load', initTimeline2);
  }
</script>

