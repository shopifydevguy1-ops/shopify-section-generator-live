                {% endif %}

                {% if block.settings.date != blank %}
                  <p class="timeline-date-{{ section.id }}">{{ block.settings.date }}</p>
                {% endif %}

                {% if block.settings.text != blank %}
                  <p class="timeline-text-{{ section.id }}">{{ block.settings.text }}</p>
                {% endif %}
              </div>

              <div class="timeline-images-wrapper-{{ section.id }}">
               <button class="timeline-btn-prev-{{ section.id }} timeline-btn-prev-{{ block.id }}">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g id="Left"><path d="M14,17a1,1,0,0,1-.707-.293l-4-4a1,1,0,0,1,0-1.414l4-4a1,1,0,1,1,1.414,1.414L11.414,12l3.293,3.293A1,1,0,0,1,14,17Z"/></g></svg>
