<style>

  .sg-atc-button-style {
    font-weight: 600;
    font-size: {{section.settings.sg-font_size}}px;
    color: {{section.settings.text_color}};
    text-transform: uppercase;
    padding: 1.25em 2em;
    background: {{section.settings.button_background_color}};
    border: 2px solid {{section.settings.button_border_color}};
    border-radius: 0.75em;
    transform-style: preserve-3d;
    transition: transform 150ms cubic-bezier(0, 0, 0.58, 1), background 150ms cubic-bezier(0, 0, 0.58, 1);
    margin-bottom:30px;
    border-opacity:none;
  }
  .sg-atc-button-style::before {
      position: absolute;
      content: '';
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: {{section.settings.button_middle_color}};
      border-radius: inherit;
      box-shadow: 0 0 0 2px {{section.settings.button_border_color}}, 0 0.625em 0 0 {{section.settings.button_shadow_color}};
      transform: translate3d(0, 0.75em, -1em);
      transition: transform 150ms cubic-bezier(0, 0, 0.58, 1), box-shadow 150ms cubic-bezier(0, 0, 0.58, 1);
    }
    .sg-atc-button-style:hover {
      background: {{section.settings.button_hover_color}};
      transform: translate(0, 0.25em);
      &::before {
        box-shadow: 0 0 0 2px {{section.settings.button_border_color}}, 0 0.5em 0 0 {{section.settings.button_shadow_color}};
        transform: translate3d(0, 0.5em, -1em);
      }
    }
    .sg-atc-button-style:active {
      background: {{section.settings.button_hover_color}};
      transform: translate(0em, 0.75em);
      .sg-atc-button-style::before {
        box-shadow: 0 0 0 2px {{section.settings.button_border_color}}, 0 0 {{section.settings.button_shadow_color}};
        transform: translate3d(0, 0, -1em);
      }
    }

   .sg-atc-button-style:after {
      --border-opacity:none!important;
   }
  
</style>

<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        const productForm = document.querySelector('{% if section.settings.custom_class_selector != blank %}{{ section.settings.custom_class_selector }}{% else %}.product-form__submit, .add-to-cart, .product-form__cart-submit, .button--addToCart, .product-buy-buttons--cta, .product__submit__add{% endif %}')

        if (!productForm) {
            return
        }
      
      productForm.classList.add("sg-atc-button-style");
    });
</script>


