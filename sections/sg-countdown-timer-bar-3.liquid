  {{  text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    overflow: hidden;
  }

  .section-{{ section.id }}-settings {
    margin: 0 auto;
    position: relative;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .timer-close-{{ section.id }} {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 9999;
    cursor: pointer;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4px;
  }

  .timer-close-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .timer-close-{{ section.id }} svg rect {
    fill: {{ close_color }};
  }

  .countdown-timer-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .countdown-timer-text-{{ section.id }} {
    max-width: 100%;
    text-align: center;
  }

  .countdown-timer-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 700;
  }

  .countdown-timer-text-{{ section.id }} a,
  .countdown-timer-text-{{ section.id }} a * {
    color: {{ text_link_color }} !important;
    text-decoration: none !important;
  }

  .countdown-timer-timer-{{ section.id }} {
    display: flex;
    position: relative;
    align-items: center;  
    background-color: {{ timer_bg_color }};
    gap: 15px;
    padding: {{ timer_padding_vertical_mobile }}px {{ timer_padding_horizontal_mobile }}px;
    border: {{ timer_border_thickness }}px solid {{ timer_border_color }};
    border-radius: {{ timer_radius }}px;
  }

  .countdown-timer-timer-{{ section.id }} .time-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
    gap: 6px;
    text-wrap: nowrap
  }

  .countdown-timer-timer-{{ section.id }} .time-block__num {
    display: flex;
    gap: 4px;
    margin: 0;
    font-size: {{ number_size_mobile }}px;
    color: {{ number_color }};
    line-height: {{ number_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .countdown-timer-timer-{{ section.id }} .time-block__num .digit {
    padding: {{ number_padding }}px;
    border-radius: {{ number_radius }}px;
    background-color: {{ number_bg_color }};
  }
  
  .countdown-timer-timer-{{ section.id }} .time-block__unit {
    margin: 0;
    font-size: {{ timer_text_size_mobile }}px;
    color: {{ timer_text_color }};
    line-height: {{ timer_text_height }}%;
    text-transform: unset;
    font-weight: 700;
    text-align: center;
  }

  .countdown-timer-completed-text-{{ section.id }} {
    display: none;
    position: relative;    
  }

  .countdown-timer-completed-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ completed_text_size_mobile }}px;
    color: {{ completed_text_color }};
    line-height: {{ completed_text_height }}%;
    text-transform: unset;
  }

  .countdown-timer-timer-{{ section.id }} .time-block__text {
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
