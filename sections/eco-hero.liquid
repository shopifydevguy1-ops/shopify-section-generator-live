<div class="section-{{ section.id }}-padding page-width">
  <div class="sg-row-grid">
    <div class="sg-col-grid-7">
      <div class="sg-banner-content">
        <h1 class="sg-title">{{section.settings.title}}</h1>
        <div class="sg-desc">{{section.settings.desc}}</div>
        <div class="sg-banner-flex">
          <div class="sg-b-button">
            <a class="sg-btn btn-outline" href="{{section.settings.linkurl}}">{{section.settings.linktitle}}</a>
          </div>
          <div class="sg-b-bold">
            <b>{{section.settings.subdesc}}</b>
          </div>
        </div>
      </div>
    </div>
    <div class="sg-col-grid-5">
      <div class="sg-banner__media">
        <div class="sg-media--{{ section.settings.height }} color-{{ section.settings.color_scheme }} {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
              {% if section.settings.height == 'adapt' and section.settings.image != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"{% endif %}
              >
          {%- if section.settings.image != blank -%}
            {{ section.settings.image| image_url: width: section.settings.image.width | image_tag: loading: 'lazy', alt: section.settings.image.alt}}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{%-liquid
  assign color1 = section.settings.wave_color_1 | remove: "#"
  assign color2 = section.settings.wave_color_2 | remove: "#"
  -%}
<style>

 .section-{{ section.id }}-padding {
    max-width: {{section.settings.section-width}}rem;
 }
  
.media {
  background-color:unset;
}
  
.banner-section {
  padding-top: 60px;
  position: relative;
  padding-bottom: 80px;
}
.banner-section::after {
  content: "";
  width: 100%;
  height: 200px;
  position: absolute;
  display: block;
  bottom: 0;
  left: 0;
  right: 0;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center bottom;
}
.banner-section .banner-curves > img {
  max-width: 100%;
  width: 100%;
  display: block;
}
.banner-section .sg-row-grid {
  display: flex;
  flex-wrap: wrap;
  margin-left: -10px;
  margin-right: -10px;
  align-items: flex-start;
}
.banner-section .sg-row-grid .sg-col-grid-7,
.banner-section .sg-row-grid .sg-col-grid-5{
  width:100%;
  min-height:1px;
  flex:0 0 auto;
  position:relative;
  padding-left:10px;
  padding-right:10px;
}
@media only screen and (min-width:768px){
  .banner-section .sg-row-grid .sg-col-grid-5{
    width:45%;
  }
  .banner-section .sg-row-grid .sg-col-grid-7{
    width:55%;
  }
}

.banner-section .sg-global-media-settings {
  background-color: transparent;
  border: none;
}
.banner-section .sg-banner__media {
  position: relative;
  z-index: 1;
}

.sg-banner-content {
  margin-bottom: 200px;
}
.banner-section .sg-title {
  font-family: 'Raleway', sans-serif;
  font-style: normal;
  font-weight: 800;
  margin-top: 0px;
  margin-bottom: 16px;
}
.banner-section .sg-desc {
  font-family: 'Raleway', sans-serif;
  font-style: normal;
  font-weight: 400;
  line-height: 1.3;
  margin-bottom: 30px;
}
.banner-section .sg-btn.btn-outline{
  background-color:#ffffff;
}
.banner-section .sg-b-bold{
  font-family: 'Raleway', sans-serif;
  font-style: normal;
  font-weight: 700;
  line-height: 1.3;
}

.sg-banner-flex {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
}
.sg-banner-flex .sg-b-button {
  margin-right: 28px;
}

@media only screen and (max-width:1499px){
  .banner-section {
    padding-top: 50px;
    padding-bottom: 50px;
  }
}
@media only screen and (max-width:1024px){
