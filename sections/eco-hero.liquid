    padding-bottom: 60px;
  }
  .banner-section::after {
    background-position: 70% 50%;
  }
  .sg-banner__media .sg-media--adapt.media {
  }
  .sg-banner__media img {
    object-fit: contain;
  }
  .sg-banner-flex {
    align-items: self-start;
    flex-wrap: wrap;
    flex-direction: column-reverse;
  }
  .banner-section .sg-desc {
    line-height:1.3;
    margin-bottom: 20px;
    font-size:{{section.settings.descsize  | times: 0.75 | round: 0  }}px;
  }
  .banner-section .sg-b-bold {
    margin-bottom: 20px;
    font-size:{{section.settings.subdescsize  | times: 0.75 | round: 0  }}px;
  }
  .banner-section .sg-title {
    font-size: {{ section.settings.titlesize  | times: 0.75 | round: 0  }}px;
    line-height: 1.3;
  }
}
@media only screen and (max-width:479px){
