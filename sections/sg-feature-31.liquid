{% endif %}

{% if feature_align_mobile == 'center' %}
  <style>   
    .feature-progresg-{{ section.id }} {
      flex-direction: row;
    }     
    .feature-progresg-text-{{ section.id }} {
      text-align: center;
    }     
  </style>  
{% elsif feature_align_mobile == 'right' %}
  <style>
    .feature-progresg-{{ section.id }} {
      flex-direction: row;
    }  
    .feature-progresg-text-{{ section.id }} {
      text-align: end;
    }
  </style>
{% else %}
  <style>
    .feature-progresg-{{ section.id }} {
      flex-direction: row;
    }    
    .feature-progresg-text-{{ section.id }} {
      text-align: center;
    }
  </style>
{% endif %}

{% if feature_align == 'center' %}
