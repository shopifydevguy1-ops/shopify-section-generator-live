          {% endfor %}   
        </div> 
        <div class="feature-features-wrapper-{{ section.id }}">
          <div class="feature-features-grid-{{ section.id }}">
            {% for block in section.blocks %}
              {% unless block.type == 'heading' or block.type == 'text' %}
                {% if block.type == 'feature' %}
                  <div class="feature-item-{{ section.id }}">
                    <div class="feature-progresg-{{ section.id }}">
                      {% if block.settings.percent > 0 %}
                        <p class="feature-progresg-text-{{ section.id }}">0%</p>
                        <div class="feature-circle-container-{{ section.id }}">
                          <div class="feature-circle-{{ section.id }}" data-percent="{{ block.settings.percent }}" data-progress="{{ circle_progress }}" data-active-progress="{{ circle_active_progress }}">
                            <svg width="100" height="100" viewBox="0 0 36 36" style="background-color: transparent;">
                              <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="{{ circle_progress }}" stroke-width="3" stroke-dasharray="100, 100"></path>
                            </svg>                    
                          </div>
                        </div>                     
                      {% endif %}   
                    </div>
                    {% if block.settings.text %}
                      <div class="feature-item-text-{{ section.id }}">{{ block.settings.text }}</div>
                    {% endif %}
                  </div>
                {% endif %}           
              {% endunless %}
            {% endfor %}
          </div>

          <div class="feature-slider-wrapper-{{ section.id }}">
            <div class="feature-features-slider-{{ section.id }} swiper">
              <div class="swiper-wrapper">
                {% for block in section.blocks %}
                  {% unless block.type == 'heading' or block.type == 'text' %}
                    {% if block.type == 'feature' %}
                      <div class="feature-item-{{ section.id }} swiper-slide">
                        <div class="feature-progresg-{{ section.id }}">
                          {% if block.settings.percent > 0 %}
                            <p class="feature-progresg-text-{{ section.id }}">0%</p>
                            <div class="feature-circle-container-{{ section.id }}">
                              <div class="feature-circle-{{ section.id }}" data-percent="{{ block.settings.percent }}" data-progress="{{ circle_progress }}" data-active-progress="{{ circle_active_progress }}">
                                <svg width="100" height="100" viewBox="0 0 36 36" style="background-color: transparent;">
                                  <path d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="{{ circle_progress }}" stroke-width="3" stroke-dasharray="100, 100"></path>
                                </svg>                    
                              </div>
                            </div>                     
                          {% endif %}   
                        </div>
                        {% if block.settings.text %}
                          <div class="feature-item-text-{{ section.id }}">{{ block.settings.text }}</div>
                        {% endif %}
                      </div>
                    {% endif %}           
                  {% endunless %}
                {% endfor %}
              </div>             
            </div>
            <div class="feature-pagination-{{ section.id }} swiper-pagination"></div>
          </div>
          

          {% if bottom_text != blank %}
            <div class="feature-bottom-text-{{ section.id }}">{{ bottom_text }}</div>
          {% endif %}
        </div>        
      </div>
      
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
function initFeature30() {
  const slider = new Swiper(".feature-features-slider-{{ section.id }}", {
    speed: 800,
    spaceBetween: 20,   
    pagination: {
      el: '.feature-pagination-{{ section.id }}',
      type: "bullets",
      clickable: true
    },
    slidesPerView: 1
  });

  let circles = document.querySelectorAll(`.feature-circle-{{ section.id }}`);
  let section = document.querySelector(`.feature-{{ section.id }}`);
  let animated = false;

  const observer = new IntersectionObserver((entries, observer) => {
    if (animated) return;

    let sectionInView = entries.some(entry => entry.isIntersecting);
    
    if (sectionInView) {
      animated = true;
      observer.unobserve(section); 

      circles.forEach(circle => {
        const progressText = circle.closest('.feature-progresg-{{ section.id }}')
                                  .querySelector(`.feature-progresg-text-{{ section.id }}`);
        const progressColor = circle.getAttribute('data-progress');
        const activeProgressColor = circle.getAttribute('data-active-progress');
        const percent = parseFloat(circle.getAttribute('data-percent')) || 25;
        const lineWidth = parseFloat(circle.getAttribute('data-line')) || 4;
        const size = parseFloat(circle.getAttribute('data-size')) || 100;
        const svgNamespace = "http://www.w3.org/2000/svg";

        let existingSvg = circle.querySelector("svg");
        if (existingSvg) existingSvg.remove();

        let svg = document.createElementNS(svgNamespace, "svg");
        svg.setAttribute("width", size);
        svg.setAttribute("height", size);
        svg.setAttribute("viewBox", "0 0 36 36");
        svg.style.backgroundColor = "transparent";

        let backgroundCircle = document.createElementNS(svgNamespace, "path");
        backgroundCircle.setAttribute("d", "M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831");
        backgroundCircle.setAttribute("fill", "none");
        backgroundCircle.setAttribute("stroke", progressColor);
        backgroundCircle.setAttribute("stroke-width", lineWidth);
