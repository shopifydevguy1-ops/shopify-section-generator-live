<script>
  function loadSwiper(callback) {
  if (window.Swiper) {
    callback();
  } else {
    const script = document.createElement('script');
    script.src = "https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js";
    script.onload = callback;
    document.head.appendChild(script);
  }
}

function initVideoGrid3(sectionId) {
  {% if lazy %}
    var lazyLoadInstance = new LazyLoad();
  
    window.addEventListener(
      "LazyLoad::Initialized",
      function (event) {
        window.lazyLoadInstance = event.detail.instance;
      },
      false
    );
  {% endif %}

  const slider = new Swiper(`.grid-slider-${sectionId}`, {
    speed: 300,
    spaceBetween: 20,
    breakpoints: {
      320: {
        spaceBetween: {{ body_gap_mobile }},
        slidesPerView: {{ body_row_mobile_slider }}
      },
      768: {
        spaceBetween: {{ body_gap_mobile }},
        slidesPerView: {{ body_row_mobile_slider | times: 2 | round: 0 }}
      }
    }
  });

  let posters = document.querySelectorAll(`.grid-poster-${sectionId}`);
  let btns = document.querySelectorAll(`.grid-button-${sectionId}`);
  let modals = document.querySelectorAll(`.grid-modal-${sectionId}`);

  function openModal(element, modalElement) {
    let video = modalElement.querySelector('video');
    let frame = modalElement.querySelector('iframe');
    
    modalElement.classList.add('active');
    document.body.style.overflow = 'hidden';

    if(video) {
      setTimeout(() => {
        video.play();
      }, 300);
    }

    if(frame) {
      setTimeout(() => {
        let dataSrc = frame.getAttribute('data-src1');
        let dataSrc3 = frame.getAttribute('data-src3');
        if(window.innerWidth >= 1024) {
          frame.src = dataSrc;
        } else {
          frame.src = dataSrc3; 
        }
      }, 300);
    }
  }

  function closeModal(modalElement) {
    let video = modalElement.querySelector('video');
    let frame = modalElement.querySelector('iframe');
    
    document.body.style.overflow = '';
    modalElement.classList.remove('active');

    if(video) {
      video.pause();
    }

    if(frame) {
      let dataSrc2 = frame.getAttribute('data-src2');
      frame.src = dataSrc2;
    }
  }

  if(posters) {
    posters.forEach(poster => {
      poster.addEventListener('click', () => {
        if(modals) {
          modals.forEach(modal => {
            let dataId = modal.getAttribute('data-id');
            if(poster.id == dataId) {
              openModal(poster, modal);
            }
          });
        }
      });
    });
  }

  if(btns) {
    btns.forEach(btn => {
      btn.addEventListener('click', () => {
        if(modals) {
          modals.forEach(modal => {
            let dataId = modal.getAttribute('data-id');
            if(btn.id == dataId) {
              openModal(btn, modal);
            }
          });
        }
      });
    });
  }

  if(modals) {
    modals.forEach(modal => {
      let closeBtn = modal.querySelector(`.grid-close-${sectionId}`);
      
      if(closeBtn) {
        closeBtn.addEventListener('click', () => {
          closeModal(modal);
        });
      }

      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          closeModal(modal);
        }
      });
    });
  }
}

function initializeAllVideoGrid3Sections() {
  const sections = document.querySelectorAll('[id^="shopify-section-"]');
  sections.forEach(section => {
    if (section.querySelector(`.grid-${section.id.replace('shopify-section-', '')}`)) {
      const sectionId = section.id.replace('shopify-section-', '');
      loadSwiper(() => initVideoGrid3(sectionId));
    }
  });
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', initializeAllVideoGrid3Sections);
} else {
  initializeAllVideoGrid3Sections();
}

if (Shopify.designMode) {
  document.addEventListener('shopify:section:load', (event) => {
    const sectionId = event.detail.sectionId;
    if (event.target.querySelector(`.grid-${sectionId}`)) {
      loadSwiper(() => initVideoGrid3(sectionId));
    }
  });
}
