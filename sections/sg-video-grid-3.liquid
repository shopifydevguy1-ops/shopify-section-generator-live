    }
  </style>
{% endif %}

{% if button_custom %}
  <style>
    .grid-button-{{ section.id }} {
      font-family: {{ button_font.family }}, {{ button_font.fallback_families }};
      font-weight: {{ button_font.weight }};
      font-style: {{ button_font.style }};
    }
  </style>
{% endif %}

{% if body_slider_mobile %}
  <style>
    .grid-heading-{{ section.id }} {
      padding-right: {{ padding_horizontal_mobile }}rem;
      padding-left: {{ padding_horizontal_mobile }}rem;
    }
    .section-{{ section.id }}-settings {
      padding-right: 0px;
      padding-left: 0px;
    }
    
    .grid-slider-{{ section.id }} {
      display: block !important;
    }

    .grid-body-{{ section.id }} {
      display: none !important;
    }

    @media(min-width: 1024px) {
      .grid-slider-{{ section.id }} {
        display: none !important;
      }

      .section-{{ section.id }}-settings {
        padding-right: {{ padding_horizontal }}rem;
        padding-left: {{ padding_horizontal }}rem;
      }
  
      .grid-body-{{ section.id }} {
        display: grid !important;
      }
    }
    
  </style>
{% endif %}

{% if button_align_mobile == "center" %}
  <style>
   .grid-button-{{ section.id }} {
      margin-left: auto;
      margin-right: auto;
    } 
  </style>
{% elsif button_align_mobile == "right" %}
  <style>
   .grid-button-{{ section.id }} {
      margin-left: auto;
    } 
  </style>
{% endif %}

{% if button_align == "center" %}
  <style>
    @media(min-width: 1024px) {
     .grid-button-{{ section.id }} {
        margin-left: auto !important;
        margin-right: auto !important;
      } 
    }
  </style>
{% elsif button_align == "right" %}
  <style>
    @media(min-width: 1024px) {
     .grid-button-{{ section.id }} {
        margin-left: auto !important;
        margin-right: 0px !important;
      } 
    }
  </style>
{% else %}
  <style>
    @media(min-width: 1024px) {
     .grid-button-{{ section.id }} {
        margin-left: 0px !important;
        margin-right: 0px !important;
      } 
    }
  </style>
{% endif %}

{% if image_ratio_mobile == "portrait" %}
  <style>
    .grid-poster-{{ section.id }} {
     aspect-ratio: 9.6/14; 
    }
  </style>
{% elsif image_ratio_mobile == "landscape" %}
  <style>
    .grid-poster-{{ section.id }} {
     aspect-ratio: 12/9; 
    }
  </style>
{% elsif image_ratio_mobile == "square" %}
  <style>
    .grid-poster-{{ section.id }} {
     aspect-ratio: 12/12; 
    }
  </style>
{% else%}
  <style>
    .grid-poster-{{ section.id }} {
     aspect-ratio: auto; 
    }
  </style>
{% endif %}

{% if image_ratio == "portrait" %}
  <style>
    @media(min-width: 1024px) {
     .grid-poster-{{ section.id }} {
       aspect-ratio: 9.6/14; 
      } 
    }
  </style>
{% elsif image_ratio == "landscape" %}
  <style>
    @media(min-width: 1024px) {
      .grid-poster-{{ section.id }} {
       aspect-ratio: 12/9; 
      }
    }
  </style>
{% elsif image_ratio == "square" %}
  <style>
    @media(min-width: 1024px) {
      .grid-poster-{{ section.id }} {
       aspect-ratio: 12/12; 
      }
    }
  </style>
{% else%}
  <style>
    @media(min-width: 1024px) {
      .grid-poster-{{ section.id }} {
       aspect-ratio: auto; 
      }
    }
  </style>
{% endif %}

{% unless adapt_video %}
  <style>
    .grid-modal-inner-{{ section.id }} {
      max-width: {{ modal_width_mobile }}%;
    }
    
    .grid-modal-inner-{{ section.id }} video,
    .grid-modal-inner-{{ section.id }} iframe {
      min-height: {{ modal_height_mobile }}vh;
    }
    
    @media(min-width: 1024px) {
      .grid-modal-inner-{{ section.id }} {
        max-width: {{ modal_width }}%;
      }
      
      .grid-modal-inner-{{ section.id }} video,
      .grid-modal-inner-{{ section.id }} iframe {
        min-height: {{ modal_height }}px;
      }
    }
  </style>
{% endunless %}

{% if adapt_video %}
  <style>
    .portrait-video-{{ section.id }} {
      max-width: 100%;
      margin: 0px auto;
    }

    .landscape-video-{{ section.id }} {
      max-width: 100%;
      margin: 0px auto;
    }

    @media(min-width: 1024px) {
      .portrait-video-{{ section.id }} {
        max-width: 40%;
      }
  
      .landscape-video-{{ section.id }} {
        max-width: 80%;
      }
    }
  </style>
{% endif %}

<div class="section-{{ section.id }} grid-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      {% if heading != blank %}
        <div class="grid-heading-{{ section.id }}">
          {{ heading }}
        </div>
      {% endif %}

      {% if body_slider_mobile %}
        <div class="grid-slider-{{ section.id }} swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="grid-item-{{ section.id }} swiper-slide">
                <div class="grid-poster-{{ section.id }}" id="{{ block.id }}">
                  {% if block.settings.poster != blank %}
                    <img src="{{ block.settings.poster | image_url }}" alt="{{ block.settings.poster.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                  <div class="grid-play-{{ section.id }}">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 55 65"><path d="M57.196,33.558 L0.828,66.143 L0.828,0.976 L57.196,33.558 Z"></path></svg>
                  </div>
                </div>
                <div class="grid-content-{{ section.id }}">
                  <div class="grid-top-{{ section.id }}">
                    {% if block.settings.title != blank %}
                      <div class="grid-title-{{ section.id }}">
                        {{ block.settings.title }}
                      </div>
                    {% endif %}
    
                    {% if block.settings.text != blank %}
                      <div class="grid-text-{{ section.id }}">
                        {{ block.settings.text }}
                      </div>
                    {% endif %}
                  </div>
    
                  {% if block.settings.button != blank %}
                    <button class="grid-button-{{ section.id }}" id="{{ block.id }}">
                      {{ block.settings.button }}
                    </button>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}

      <div class="grid-body-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="grid-item-{{ section.id }}">
            <div class="grid-poster-{{ section.id }}" id="{{ block.id }}">
              {% if block.settings.poster != blank %}
                <img src="{{ block.settings.poster | image_url }}" alt="{{ block.settings.poster.alt }}" {% if lazy %}loading="lazy"{% endif %}>
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
              <div class="grid-play-{{ section.id }}">
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 55 65"><path d="M57.196,33.558 L0.828,66.143 L0.828,0.976 L57.196,33.558 Z"></path></svg>
              </div>
            </div>
            <div class="grid-content-{{ section.id }}">
              <div class="grid-top-{{ section.id }}">
                {% if block.settings.title != blank %}
                  <div class="grid-title-{{ section.id }}">
                    {{ block.settings.title }}
                  </div>
                {% endif %}

                {% if block.settings.text != blank %}
                  <div class="grid-text-{{ section.id }}">
                    {{ block.settings.text }}
                  </div>
                {% endif %}
              </div>

              {% if block.settings.button != blank %}
                <button class="grid-button-{{ section.id }}" id="{{ block.id }}">
                  {{ block.settings.button }}
                </button>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
</div>

{% for block in section.blocks %}
  <div class="grid-modal-{{ section.id }}" data-id="{{ block.id }}">
