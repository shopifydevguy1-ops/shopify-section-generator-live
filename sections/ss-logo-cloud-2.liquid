                <div class="cloud-heading-{{ block.id }}">{{ block.settings.heading }}</div>
              {% endif %}
            {% when 'text' %}  
              {% if block.settings.text != blank %}
                <div class="cloud-text-{{ block.id }}">{{ block.settings.text }}</div>
              {% endif %}  
          {% endcase %}
        {% endfor %}
        <div class="cloud-cards-{{ section.id }}">
          {% for block in section.blocks %}
            {% if block.type == 'card' %}
              <{% if block.settings.url != blank %}a href="{{ block.settings.url }}"{% else %}div{% endif %} class="cloud-card-{{ section.id }} cloud-card-{{ block.id }}">
                <div class="cloud-card-image-{{ section.id }}">
