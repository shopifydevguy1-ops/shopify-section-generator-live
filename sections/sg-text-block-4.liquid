{% endif %}

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'heading' %}  
      <style>
        {{  block.settings.heading_font | font_face: font_display: 'swap' }}

        .text-block-heading-{{ block.id }} {
          margin-top: {{ block.settings.heading_mt_mobile }}px;
          text-align: {{ block.settings.heading_align_mobile }};
        }
      
        .text-block-heading-{{ block.id }} * {
          margin: 0;
          font-size: {{ block.settings.heading_size_mobile }}px;
          color: {{ block.settings.heading_color }};
          line-height: {{ block.settings.heading_height }}%;
          text-transform: unset;
          word-break: break-word;
        }

        .text-block-heading-{{ block.id }} * strong {
          text-decoration: underline {{ block.settings.heading_border_color }};
        }

        @media(min-width: 1024px) {
          
          .text-block-heading-{{ block.id }} {
            margin-top: {{ block.settings.heading_mt }}px;
            text-align: {{ block.settings.heading_align }};
          }
        
          .text-block-heading-{{ block.id }} * {
            font-size: {{ block.settings.heading_size }}px;
          }
        }          
      </style>
        
      {% if block.settings.heading_custom %}
        <style>
          .text-block-heading-{{ block.id }} * {
            font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
            font-weight: {{ block.settings.heading_font.weight }};
            font-style: {{ block.settings.heading_font.style }};
          }
        </style>
      {% endif %}       
  {% endcase %}
{% endfor %}

<div class="section-{{ section.id }} text-block-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      {% for block in section.blocks %}
        {% if block.type == 'heading' %}
          {% if block.settings.heading != blank %}
            <div class="text-block-heading-{{ block.id }}">{{ block.settings.heading }}</div>
          {% endif %}
        {% endif %}
      {% endfor %}
      <div class="text-block-text-{{ section.id }}">
        <h3>
          {% for block in section.blocks %}
            {% if block.type == 'text' %}
              {% if block.settings.text != blank or block.settings.image != blank %}
                {{ block.settings.text }}
                {% if block.settings.image != blank %}
                  <span class="text-block-image-wrapper-{{ section.id }}">
                    <{% if block.settings.url != blank %}a href="{{ block.settings.url }}"{% else %}div{% endif %} class="text-block-image-{{ section.id }}">
                      {%- capture sizes -%}(min-width: {{ content_width }}px) {{ content_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2){%- endcapture -%}
                        {{ block.settings.image | image_url: width: 700 | image_tag:
                          loading: loading_attribute,
                          sizes: sizes,
                          widths: '535, 750, 1070, 1500'
                        }}
                    </{% if block.settings.url %}a{% else %}div{% endif %}>
                  </span>                  
                {% endif %}
              {% endif %}
            {% endif %}
          {% endfor %}
        </h3>
      </div>
    </div>
</div>

