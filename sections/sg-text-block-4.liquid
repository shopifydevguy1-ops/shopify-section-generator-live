    .text-block-image-{{ section.id }} {
      aspect-ratio: 12/12;
    }

    .text-block-image-wrapper-{{ section.id }} {
      top: 8px;
    }
  </style>
{% else %}
  <style>
    .text-block-image-{{ section.id }} {
      aspect-ratio: auto;
    }

    .text-block-image-wrapper-{{ section.id }} {
      top: 8px;
    }
  </style>
{% endif %}

{% if image_ratio == "portrait" %}
  <style>
    @media(min-width: 1024px) {
      .text-block-image-{{ section.id }} {
