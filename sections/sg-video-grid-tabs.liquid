<script>
  
  function initVideoGridTabs() {
  // Initialize Swiper sliders for each tab
  {% for block in section.blocks %}
    let btnNext{{ block.id | replace: '-', '' }} = document.querySelector(`.video-slider-{{ block.id }} .video-btn-next-{{ section.id }}`);
    let btnPrev{{ block.id | replace: '-', '' }} = document.querySelector(`.video-slider-{{ block.id }} .video-btn-prev-{{ section.id }}`);
    const slider{{ forloop.index }} = new Swiper('.video-slider-{{ block.id }}', {
      speed: 300,
      loop: true,
      spaceBetween: {{ grid_gap_mobile }},
      slidesPerView: {{ grid_row_mobile }},
      navigation: {
        nextEl: btnNext{{ block.id | replace: '-', '' }},
        prevEl: btnPrev{{ block.id | replace: '-', '' }}
      }
    });

    // Add slideChange event handler after initialization
    slider{{ forloop.index }}.on('slideChange', function() {
      // Find all videos and iframes in this slider
      const videos = this.$el[0].querySelectorAll('video, iframe');
      videos.forEach(video => {
        if (video.tagName === 'VIDEO') {
          // Handle HTML5 video
          video.pause();
        } else if (video.tagName === 'IFRAME') {
          // Handle YouTube/Vimeo iframes
          const videoSrc = video.src;
          video.src = videoSrc; // Reset iframe src to stop video
        }
      });
    });
  {% endfor %}
  
  let tabs{{ section.id | replace: '-', '' }} = document.querySelectorAll(`.video-tab-{{ section.id }}`);
  let grids{{ section.id | replace: '-', '' }} = document.querySelectorAll(`.video-grid-{{ section.id }}`);
  let sliders{{ section.id | replace: '-', '' }} = document.querySelectorAll(`.video-slider-{{ section.id }}`);
  let navigations{{ section.id | replace: '-', '' }} = document.querySelectorAll(`.video-navigation-{{ section.id }}`);

  // Function to load videos in the active tab
  function loadVideosInActiveTab(activeTabId) {
    const activeGrid = document.querySelector(`.video-grid-{{ section.id }}[data-id="${activeTabId}"]`);
    const activeSlider = document.querySelector(`.video-slider-{{ section.id }}[data-id="${activeTabId}"]`);
    
    // Function to load video sources
    function loadVideoSources(container) {
      if (!container) return;
      
      const lazyElements = container.querySelectorAll('[data-src]');
      lazyElements.forEach(element => {
        if (!element.src) {
          element.src = element.dataset.src;
        }
      });
    }

    // Load videos in both grid and slider (depending on viewport)
    if (window.innerWidth > 1023) {
      loadVideoSources(activeGrid);
    } else {
      loadVideoSources(activeSlider);
    }
  }

  // Load videos in the initially active tab
  const initialActiveTab = tabs{{ section.id | replace: '-', '' }}[0];
  if (initialActiveTab) {
    loadVideosInActiveTab(initialActiveTab.getAttribute('data-id'));
  }
  
  tabs{{ section.id | replace: '-', '' }}.forEach(el => {
    el.addEventListener('click', () => {
      // Remove 'active' class from all tabs
      tabs{{ section.id | replace: '-', '' }}.forEach(element => {
        element.classList.remove('active');
      });
  
      // Add 'active' class to the clicked tab
      el.classList.add('active');
  
      let data = el.getAttribute("data-id");
      
      // Load videos in the newly active tab
      loadVideosInActiveTab(data);
  
      // Check screen width for responsive behavior
      if (window.innerWidth > 1023) {
        grids{{ section.id | replace: '-', '' }}.forEach(grid => {
          grid.classList.remove('active');
        });
  
        let matchingGrid = Array.from(grids{{ section.id | replace: '-', '' }}).find(grid => {
          return grid.getAttribute("data-id") === data;
        });
  
        if (matchingGrid) {
          matchingGrid.classList.add('active');
        }
      } else {
        sliders{{ section.id | replace: '-', '' }}.forEach(slider => {
          slider.classList.remove('active');
        });
  
        navigations{{ section.id | replace: '-', '' }}.forEach(navigation => {
          navigation.classList.remove('active');
        });
  
        let matchingSlider = Array.from(sliders{{ section.id | replace: '-', '' }}).find(slider => {
          return slider.getAttribute("data-id") === data;
        });
  
        let matchingNavigation = Array.from(navigations{{ section.id | replace: '-', '' }}).find(navigation => {
          return navigation.getAttribute("data-id") === data;
        });
  
        if (matchingSlider) {
          matchingSlider.classList.add('active');
        }
  
        if (matchingNavigation) {
          matchingNavigation.classList.add('active');
        }
      }
    });
  });
}

document.addEventListener('DOMContentLoaded', initVideoGridTabs);

if (Shopify.designMode) {
