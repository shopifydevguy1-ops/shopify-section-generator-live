<div class="section-{{ section.id }} instafeed-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      {% if bg_text != blank %}
        <div class="instafeed-background-text-{{ section.id }}">{{ bg_text }}</div>
      {% endif %}
      
      {% if heading != blank %}
        <div class="instafeed-heading-{{ section.id }} {% if heading_mobile != blank %}instafeed-heading-desktop-{{ section.id }}{% endif %}">
          {{ heading }}
        </div>
      {% endif %}

      {% if heading_mobile != blank %}
        <div class="instafeed-heading-{{ section.id }} instafeed-heading-mobile-{{ section.id }}">
          {{ heading_mobile }}
        </div>
      {% endif %}

      <div class="instafeed-slider-wrapper-{{ section.id }}">
        <div class="instafeed-slider-{{ section.id }} swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="instafeed-slide-{{ section.id }} swiper-slide">
                <div class="instafeed-image-{{ section.id }}">
                  {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}

                  {% if block.settings.tag != blank %}
                    <{% if block.settings.tag_url != blank %}a href="{{ block.settings.tag_url }}"{% else %}p{% endif %} class="instafeed-tag-{{ section.id }}">
                      {{ block.settings.tag }}
                    </{% if block.settings.tag_url != blank %}a{% else %}p{% endif %}>
                  {% endif %}
                </div>
                {% if block.settings.text != blank %}
                  <div class="instafeed-text-{{ section.id }}">
                    {{ block.settings.text }}
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
          <div class="instafeed-pagination-{{ section.id }} swiper-pagination"></div>
        </div>
        <div class="instafeed-navigation-{{ section.id }}">
