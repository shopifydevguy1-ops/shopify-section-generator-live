{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  bg_text_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  tag_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
  }

  .section-{{ section.id }} * {
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
    position: relative;
  }

  .instafeed-background-text-{{ section.id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: none;
    margin: 0px;
    font-size: {{ bg_text_size }}px;
    color: {{ bg_text_color }};
    line-height: {{ bg_text_height }}%;
    text-transform: unset;
    font-weight: 700;
    /* mix-blend-mode: plus-lighter; */
  }

  .instafeed-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
  }

  .instafeed-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    word-break: break-word;
  }

  .instafeed-heading-desktop-{{ section.id }} {
    display: none;
  }

  .instafeed-slider-wrapper-{{ section.id }} {
    margin-top: {{ slider_mt_mobile }}px;
    position: relative;
    width: 100%;
    max-width: {{ slider_width_mobile }}%;
    margin-left: auto;
    margin-right: auto;
  }

  .instafeed-image-{{ section.id }} {
    border-radius: {{ item_image_radius }}px;
    border: {{ item_image_border_thickness }}px solid {{ item_image_border_color }};
    overflow: hidden;
    position: relative;
  }

  .instafeed-image-{{ section.id }} img,
  .instafeed-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .instafeed-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .instafeed-text-{{ section.id }} {
    margin-top: {{ text_mt_mobile }}px;
    text-align: {{ text_align_mobile }};
  }

  .instafeed-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .instafeed-text-{{ section.id }} a,
  .instafeed-text-{{ section.id }} a * {
    color: {{ text_link_color }};
    transition: all 0.25s ease 0s;
  }

  .instafeed-text-{{ section.id }} a:hover,
  .instafeed-text-{{ section.id }} a:hover * {
    color: {{ text_link_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .instafeed-tag-{{ section.id }} {
    position: absolute;
    bottom: 10px;
    left: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    max-width: fit-content;
    margin: 0;
    font-size: {{ tag_size_mobile }}px;
    color: {{ tag_color }};
    background-color: {{ tag_bg_color }};
    border: {{ tag_border_thickness }}px solid {{ tag_border_color }};
    line-height: {{ tag_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ tag_padding_vertical_mobile }}px {{ tag_padding_horizontal_mobile }}px;
    border-radius: {{ tag_radius }}px;
    transition: all 0.25s ease 0s;
    font-weight: 700;
    z-index: 2;
    box-sizing: border-box;
  }

  .instafeed-tag-{{ section.id }}:hover {
    transition: all 0.25s ease 0s;
    color: {{ tag_hover_color }};
    background-color: {{ tag_bg_hover_color }};
    border-color: {{ tag_border_hover_color }};
  }

  .instafeed-pagination-{{ section.id }} {
    margin-top: 20px;
    position: static !important;
    width: 100% !important;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .instafeed-pagination-{{ section.id }} .swiper-pagination-bullet {
    margin: 0px !important;
    width: {{ dots_size_mobile }}px !important;
    height: {{ dots_size_mobile }}px !important;
    background-color: {{ dots_color }} !important;
    border-radius: 50% !important;
    opacity: 0.6 !important;
    transition: all 0.25s ease 0s;
  }

  .instafeed-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
    opacity: 1 !important;
    width: {{ dots_size_mobile }}px !important;
    height: {{ dots_size_mobile  }}px !important;
    transition: all 0.25s ease 0s !important;
  }

  .instafeed-navigation-{{ section.id }} {
    gap: 10px;
    align-items: center;
    max-width: fit-content;
    margin-left: auto;
    margin-right: auto;
    margin-top: 20px;
  }

  .instafeed-btn-prev-{{ section.id }},
  .instafeed-btn-next-{{ section.id }} {
    background: transparent;
    border: 0px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0px;
  }

  .instafeed-btn-prev-{{ section.id }} svg,
  .instafeed-btn-next-{{ section.id }} svg {
    height: {{ arrow_icon_size_mobile }}px;
    width: {{ arrow_icon_size_mobile }}px;
  }

  .instafeed-btn-next-{{ section.id }} svg {
    transform: rotate(180deg);
    margin-left: 2px;
  }

  .instafeed-btn-prev-{{ section.id }} svg {
    margin-left: -2px;
  }

  .instafeed-btn-prev-{{ section.id }} svg path,
  .instafeed-btn-next-{{ section.id }} svg path {
    fill: {{ arrow_color }};
    transition: all 0.3s ease 0s;
  }

  .instafeed-btn-prev-{{ section.id }}:hover svg path,
  .instafeed-btn-next-{{ section.id }}:hover svg path {
    fill: {{ arrow_hover_color }};
    transition: all 0.3s ease 0s;
  }

  .instafeed-btn-prev-{{ section.id }}.swiper-button-disabled,
  .instafeed-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .instafeed-background-text-{{ section.id }} {
      display: block;
    }

    .instafeed-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .instafeed-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .instafeed-heading-mobile-{{ section.id }} {
      display: none;
    }

    .instafeed-heading-desktop-{{ section.id }} {
      display: block;
    }

    .instafeed-slider-wrapper-{{ section.id }} {
      margin-top: {{ slider_mt }}px;
      max-width: {{ slider_width }}%;
      padding: 0px {{ arrow_icon_size | times: 2 | plus: 30 }}px;
    }

    .instafeed-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ text_align }};
    }

    .instafeed-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .instafeed-tag-{{ section.id }} {
      padding: {{ tag_padding_vertical }}px {{ tag_padding_horizontal }}px;
      font-size: {{ tag_size }}px;
    }

    .instafeed-pagination-{{ section.id }} .swiper-pagination-bullet {
      width: {{ dots_size }}px !important;
      height: {{ dots_size }}px !important;
    }

    .instafeed-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
      width: {{ dots_size }}px !important;
      height: {{ dots_size }}px !important;
    }

    .instafeed-navigation-{{ section.id }} {
      margin: 0px;
      position: absolute;
      z-index: 2;
      right: 0px;
      bottom: 17%;
    }

    .instafeed-btn-prev-{{ section.id }} svg,
    .instafeed-btn-next-{{ section.id }} svg {
      height: {{ arrow_icon_size }}px;
      width: {{ arrow_icon_size }}px;
    }
    
  }
  
{%- endstyle -%}

