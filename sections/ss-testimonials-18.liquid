{%- style -%}
  {{ heading_font | font_face: font_display: 'swap' }}
  {{ text_font | font_face: font_display: 'swap' }}
  {{ button_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ content_horizontal_align_mobile }};
    margin: 0 auto;
    max-width: 90%;
    position: sticky;
    top: 19%;
    z-index: 0;
  }

  .testimonials-heading-{{ section.id }} {
    word-wrap: break-word;
    text-align: {{ content_text_align_mobile }};    
  }

  .testimonials-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .testimonials-text-{{ section.id }} {
    word-wrap: break-word;
    text-align: {{ content_text_align_mobile }};
    margin-top: {{ text_mt_mobile }}px;
  }

  .testimonials-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .testimonials-buttons-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-top: {{ button_mt_mobile }}px;
  }

  .testimonials-first-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: fit-content;
    gap: 10px;
    width: 100%;
    margin: 0; 
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 1s ease 0s;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
    font-weight: 700;
  }

  .testimonials-first-button-inner-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .testimonials-first-button-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-first-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .testimonials-first-button-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-first-button-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }
  
  .testimonials-second-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: fit-content;
    gap: 10px;
    width: 100%;
    margin: 0;
    font-size: {{ button_size_mobile }}px;
    color: {{ second_button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 1s ease 0s;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
    font-weight: 700;
  }

  .testimonials-second-button-inner-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .testimonials-second-button-{{ section.id }}:hover {
    color: {{ second_button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-second-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .testimonials-second-button-{{ section.id }} svg path {
    fill: {{ second_button_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-second-button-{{ section.id }}:hover svg path {
    fill: {{ second_button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-list-{{ section.id }} {
    display: flex;
    flex-direction: column;
    margin-top: {{ items_mt_mobile }}px;
  }

  .testimonials-item-{{ section.id }} {
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 50;
    border: {{ item_border_thickness }}px solid {{ item_border_color }};
    padding: {{ item_padding_vertical_mobile }}px {{ item_padding_horizontal_mobile }}px;
    width: {{ item_width_mobile }}px;
    border-radius: {{ item_radius }}px;
    background-color: {{ item_background_color }};
  }

  .testimonials-item-{{ section.id }}:nth-child(odd) {
    align-self: flex-start;
  }

  .testimonials-item-{{ section.id }}:nth-child(even) {
    align-self: flex-end;
  }

  .testimonials-item-{{ section.id }}:not(:last-child) {
    margin-bottom: {{ items_gap_mobile }}px;
  }

  .testimonials-title-{{ section.id }} {
    word-wrap: break-word;
    text-align: {{ title_align_mobile }};
  }

  .testimonials-title-{{ section.id }} * {
    margin: 0;
    font-size: {{ title_size_mobile }}px;
    color: {{ title_color }};
    line-height: {{ title_height }}%;
    text-transform: unset;
  }

  .testimonials-item-text-{{ section.id }} {
    word-wrap: break-word;
    text-align: {{ item_text_align_mobile }};
    margin-top: {{ item_text_mt_mobile }}px;
  }

  .testimonials-item-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ item_text_size_mobile }}px;
    color: {{ item_text_color }};
    line-height: {{ item_text_height }}%;
    text-transform: unset;
  }

  .testimonials-raiting-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: {{ name_mt_mobile }}px;
  }

  .testimonials-name-{{ section.id }} {
    word-wrap: break-word;
    margin: 0;
    font-size: {{ name_size_mobile }}px;
    color: {{ name_color }};
    line-height: {{ name_height }}%;
    text-transform: unset;
  }

  .testimonials-stars-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 1px;
    max-width: fit-content;
  }

  .testimonials-stars-{{ section.id }} svg,
  .testimonials-stars-{{ section.id }} img {
    display: block;
    width: {{ stars_size_mobile }}px;
    height: {{ stars_size_mobile }}px;
    object-fit: cover;
  }

  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-content-{{ section.id }} {
      align-items: {{ content_horizontal_align }};
      text-align: {{ content_text_align }};
      max-width: 60%;
      top: 35%;
    }

    .testimonials-heading-{{ section.id }} {
      text-align: {{ content_text_align }};
    }
  
    .testimonials-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }
    
    .testimonials-text-{{ section.id }} {
      text-align: {{ content_text_align }};
      margin-top: {{ text_mt }}px;
    }

    .testimonials-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .testimonials-buttons-{{ section.id }} {
      margin-top: {{ button_mt }}px;
    }

    .testimonials-first-button-{{ section.id }} {
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }

    .testimonials-second-button-{{ section.id }} {
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }

    .testimonials-list-{{ section.id }} {
      margin-top: {{ items_mt }}px;
    }

    .testimonials-item-{{ section.id }} {
      padding: {{ item_padding_vertical }}px {{ item_padding_horizontal }}px;
      width: {{ item_width }}px;
    }

    .testimonials-item-{{ section.id }}:not(:last-child) {
      margin-bottom: {{ items_gap }}px;      
    }

    .testimonials-title-{{ section.id }} {
      text-align: {{ title_align }};
    }

    .testimonials-title-{{ section.id }} * {
      font-size: {{ title_size }}px;
    }

    .testimonials-item-text-{{ section.id }} {
      text-align: {{ item_text_align }};
      margin-top: {{ item_text_mt }}px;
    }

    .testimonials-item-text-{{ section.id }} * {
      font-size: {{ item_text_size }}px;
    }

    .testimonials-raiting-{{ section.id }} {
      margin-top: {{ name_mt }}px;
    }

    .testimonials-name-{{ section.id }} {
      font-size: {{ name_size }}px;
    }

    .testimonials-stars-{{ section.id }} svg,
    .testimonials-stars-{{ section.id }} img {
      width: {{ stars_size }}px;
      height: {{ stars_size }}px;
    }
  }
  
{%- endstyle -%}

