  {{ number_font | font_face: font_display: 'swap' }}
  {{ title_font | font_face: font_display: 'swap' }}
  {{ text_font | font_face: font_display: 'swap' }}
  {{ button_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
    position: relative;
  }

  .hero-block-body-{{ section.id }} {
    position: relative;
  }

  .hero-block-{{ section.id }} {
    position: relative;
    height: 100%;
  }

  .hero-heading-{{ section.id }} {
    position: absolute;
    top: calc(100% / {{ section.blocks.size }} / 2);
    left: 50%;
    transform: translate(-50%, -50%);  
    z-index: 2;
    transition: top 0.05s ease; 
    pointer-events: none;
    width: 100%;
    text-align: {{ heading_align_mobile }};
  }

  .hero-heading-{{ section.id }} * {
    margin: 0;
    font-weight: 700;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-decoration: none;
  }  

  .hero-heading-{{ section.id }} img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-image-{{ section.id }} {    
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .hero-image-{{ section.id }} img,
  .hero-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .hero-image-desktop-{{ section.id }} {
    display: none !important;
  }

  .hero-content-{{ section.id }} {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    padding: {{ content_padding_vertical_mobile }}px {{ content_padding_horizontal_mobile }}px;
    opacity: 0;
    transition: all 0.25s ease 0s;
  }  

  .hero-number-{{ section.id }} {
    margin: 0;
    font-size: {{ number_size_mobile }}px;
    color: {{ number_color }};
    line-height: {{ number_height }}%;
    text-transform: unset;
    word-wrap: break-word;
  }

  .hero-title-{{ section.id }} {
    margin: 0;
    margin-top: {{ title_mt_mobile }}px;
    font-size: {{ title_size_mobile }}px;
    color: {{ title_color }};
    line-height: {{ title_height }}%;
    text-transform: unset;
    word-wrap: break-word;
  }

  .hero-text-{{ section.id }} {
    margin-top: {{ text_mt_mobile }}px;
  }

  .hero-text-{{ section.id }} * {
    margin: 0;    
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    word-wrap: break-word;
  }

  .hero-button-{{ section.id }} {
    position: absolute;
    bottom: 30px;
    right: 30px;
    z-index: 2;
    margin: 0;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    cursor: pointer;
    text-transform: unset;
    text-decoration: none;
    word-wrap: break-word;
    transition: all 0.25s ease 0s;
  }

  .hero-button-{{ section.id }}:hover {
    opacity: 0.5;
    transition: all 0.25s ease 0s;
  }
  
