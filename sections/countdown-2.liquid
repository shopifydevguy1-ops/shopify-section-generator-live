  <style>
    .countdown-banner-{{ section.id }}-wrapper {
      padding-top: var(--pt);
      padding-bottom: var(--pb);
    }
    @media screen and (min-width: 750px) {
      .countdown-banner-{{ section.id }}-wrapper {
        padding-top: var(--pt-desktop);
        padding-bottom: var(--pb-desktop);
      }
    }
    .countdown-banner-{{ section.id }} {
      position: relative;
      padding: 32px;
    }
    @media screen and (min-width: 750px) {
      .countdown-banner-{{ section.id }} {
        padding: 25px 32px;
      }
    }
  </style>
  <div
    class="
      countdown-banner-{{ section.id }}-wrapper
      {% unless section.settings.full_width %}
      page-width
      {% endunless %}
    "
    style="
      --pt: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      --pt-desktop: {{ section.settings.padding_top }}px;
      --pb: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      --pb-desktop: {{ section.settings.padding_bottom }}px;
    "
  >
    <style>
      .countdown-banner-{{ section.id }} {
        position: relative;
        padding: 32px;
      }
      @media screen and (min-width: 750px) {
        .countdown-banner-{{ section.id }} {
          padding-left: 4%;
          padding-right: 4%;
        }
      }
    </style>

    <div
      class="countdown-banner-{{ section.id }}"
      style="
        background-color:{{ section.settings.bg_color }};
        padding-top: {{ section.settings.pt }}px;
        padding-bottom: {{ section.settings.pb }}px;

        {% unless section.settings.full_width %}
        border-radius: {{ section.settings.border_radius }}px;
        {% endunless %}
      "
    >
      <style>
        .countdown-banner-content-{{ section.id }} {
          position: relative;
          z-index: 1;
          overflow: hidden;
          width: 100%;
          height: 100%;
          display: flex;
          justify-content: center;
          align-items: center;
          flex-wrap: wrap;
          gap: 2rem;
          text-align: center;
          line-height: 1.1;
        }
        @media screen and (min-width: 750px) {
          .countdown-banner-content-{{ section.id }} {
            flex-wrap: nowrap;
          }
        }
      </style>
      <div
        class="
          countdown-banner-content-{{ section.id }}
          {% if section.settings.full_width %}
          page-width
          {% endif %}
        "
      >
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'text' %}
              <style>
                .countdown-banner-text-{{ section.id }}-{{ block.id }} {
                  display: flex;
                  flex-direction: column;
                  justify-content: center;
                  text-align:center;
                  margin-top: 16px;
                  margin-bottom: 16px;
                  gap: 20px;
                }
                @media screen and (min-width: 750px) {
                  .countdown-banner-text-{{ section.id }}-{{ block.id }} {
                    text-align:left;
                  }
                }
              </style>
              <div class="countdown-banner-text-{{ section.id }}-{{ block.id }}">
                {% if block.settings.heading != blank %}
                  <style>
                    .countdown-banner-heading-{{ section.id }}-{{ block.id }} {
                      font-weight: 700;
                    }
                  </style>
                  <div
                    class="countdown-banner-heading-{{ section.id }}-{{ block.id }}"
                    style="
                      font-size: {{ block.settings.font_size }}px;
                      color: {{ block.settings.color }};
                    "
                  >
                    {{ block.settings.heading }}
                  </div>
                {% endif %}
                {% if block.settings.richtext != blank %}
                  <style>
                    .countdown-banner-richtext-{{ section.id }}-{{ block.id }} p {
                      margin: 0;
                      line-height: 1.5;
                    }
                  </style>
                  <div
                    class="countdown-banner-richtext-{{ section.id }}-{{ block.id }}"
                    style="
                      font-size: {{ block.settings.richtext_font_size }}px;
                      color: {{ block.settings.richtext_color }};
                    "
                  >
                    {{ block.settings.richtext }}
                  </div>
                {% endif %}
              </div>
            {% when 'timer' %}
              <style>
                .countdown-timer-{{ section.id }}-{{ block.id }} {
                  display: flex;
                  justify-content: center;
                  align-items: center;
                  flex-grow: 1;
                  margin-top: 16px;
                  margin-bottom: 16px;
                  align-items: stretch;
                }
                .countdown-timer-{{ section.id }}-{{ block.id }} .time-block {
                  position: relative;
                  border-radius: 12px;
                  /*padding: 20px;*/
                  padding: 0 1rem;
                }
                .countdown-timer-{{ section.id }}-{{ block.id }} .time-block__num,
                .countdown-timer-{{ section.id }}-{{ block.id }} .time-block__unit {
                  display: block;
                  text-align: center;
                }
                .countdown-timer-{{ section.id }}-{{ block.id }} .time-block__num {
                  font-size: 25px;
                  line-height: 1.2;
                  font-weight: 700;
                  margin-bottom: 4px;
                }
                .countdown-timer-{{ section.id }}-{{ block.id }} .time-block__unit {
                  text-transform: uppercase;
                  margin-top: 6px;
                  font-size: 10px;
                }
                @media (min-width: 750px) {
                  .countdown-timer-{{ section.id }}-{{ block.id }} .time-block__unit {
                    font-size: 12px;
                  }
                }
                .countdown-timer-{{ section.id }}-{{ block.id }} .time-divier {
                  position: relative;
                  width: 1px;
                  min-height: 100%;
                  background-color: var(--color);
                }
              </style>

              <div
                class="countdown-timer-{{ section.id }}-{{ block.id }}"
                {{ block.shopify_attributes }}
                style="
                  color: {{ block.settings.color }};
                  --color: {{ block.settings.color }};
                "
              >
                <div class="time-block">
                  <span class="time-block__num js-timer-days">00</span>
                  <span class="time-block__unit">{{ block.settings.days_translated }}</span>
                </div>
                {% comment %} <span class="time-colon">:</span> {% endcomment %}
                <span class="time-divier"></span>
                <div class="time-block">
                  <span class="time-block__num js-timer-hours">00</span>
                  <span class="time-block__unit">{{ block.settings.hours_translated }}</span>
                </div>
                {% comment %} <span class="time-colon">:</span> {% endcomment %}
