                </div>
                {% assign button_open = false %}
              {% endif %}
              
                
            {% endcase %}
          {% endfor %}
        </div>

        {% if media_type_right == 'image' %}
          <div class="video-media-{{ section.id }} video-right-media-{{ section.id }}">
            {% if image_right != blank %}
              <img src="{{ image_right | image_url }}" alt="{{ image_right.alt }}" {% if lazy %}loading="lazy"{% endif %}>
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>
        {% elsif media_type_right == 'video' %}  
          <div class="video-media-{{ section.id }} video-right-media-{{ section.id }}">
            {% assign video_id = video_right.id | default: video_url_right.id %}
            {% assign loop = '&loop=1&playlist=' | append: video_id %}
            {%- if video_right == null and video_url_right != null -%}
