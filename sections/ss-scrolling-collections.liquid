<div class="section-{{ section.id }} scrolling-collections-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
	<div class="section-{{ section.id }}-settings">
    {% if heading != blank %}
      <div class="scrolling-collections-heading-{{ section.id }}"> {{ heading }}</div> 
