{%- style -%}
  {{  heading_font | font_face: font_display: 'swap' }}
  {{  button_font | font_face: font_display: 'swap' }}
  {{  author_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .testimonials-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-heading-{{ section.id }} * {
    margin: 0px;
    font-size: {{ heading_size_mobile }}px;
    line-height: {{ heading_height }}%;
    color: {{ heading_color }};
    text-transform: unset;
    word-break: break-word;
    font-weight: 700;
  }

  .testimonials-columns-{{ section.id }} {
    position: relative;
    display: flex;
    justify-content: center;
    width: 100vw;
    margin-top: {{ testimonials_mt_mobile }}px;
    gap: {{ testimonials_gap_mobile }}px;
  }

  .testimonials-columns-{{ section.id }}::after {
    content: "";
    display: block;
    z-index: 2;
    position: absolute;
    top: 0;
    left: -20%;
    right: 0;
    bottom: -32px;
    pointer-events: none;
    background: linear-gradient(180deg, {{ background_color }}00 40%, {{ background_color }}F2 90%);
    width: 150vw;
  }

  .testimonials-column-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: {{ testimonials_gap_mobile }}px;
    flex: 1 0;
  }

  
  .testimonials-column-{{ section.id }}:first-child,
  .testimonials-column-{{ section.id }}:last-child {
    margin-top: {{ testimonials_mt_mobile | divided_by: 2 }}px;
  }

  .testimonials-card-{{ section.id }} {
    min-width: 300px;
    border: {{ card_border_thickness }}px solid {{ card_border_color }};
    border-radius: {{ card_radius }}px;
    background-color: {{ card_bg_color }};
    padding: {{ card_padding_vertical_mobile }}px {{ card_padding_horizontal_mobile }}px;
  }

  .testimonials-stars-{{ section.id }} {
    display: flex;
    align-items: end;
    justify-content: {{ card_content_horizontal_align_mobile }};
    gap: 5px;
  }

  .testimonials-stars-{{ section.id }} svg,
  .testimonials-stars-{{ section.id }} img {
    display: block;
    width: {{ stars_size_mobile }}px;
    height: {{ stars_size_mobile }}px;
    object-fit: cover;
  }

  .testimonials-stars-{{ section.id }} svg {
    background-color: {{ stars_bg_color }}; 
  }
    
  .testimonials-text-{{ section.id }} {
    margin-top: {{ text_mt_mobile }}px;
    text-align: {{ card_content_align_mobile }};
    text-wrap: wrap;
  }

  .testimonials-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .testimonials-author-{{ section.id }} {
    display: flex;
    align-items: center;
    margin-top: {{ author_wrapper_mt_mobile }}px;
    justify-content: {{ card_content_horizontal_align_mobile }};
    gap: {{ author_wrapper_gap_mobile }}px;
  }

  .testimonials-author-image-{{ section.id }} {
    flex-shrink: 0;
    width: {{ author_image_width_mobile }}px;    
    border-radius: {{ author_image_radius }}px;
    overflow: hidden;
    aspect-ratio: 1/1;
  }
  
  .testimonials-author-image-{{ section.id }} img,
  .testimonials-author-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-author-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .testimonials-author-text-{{ section.id }} {    
    margin: 0;
    font-size: {{ author_size_mobile }}px;
    color: {{ author_color }};
    line-height: {{ author_height }}%;
    text-transform: unset;
    word-wrap: break-word;
    text-align: {{ card_content_align_mobile }};
    font-weight: 700;
  }

  .testimonials-button-wrapper-{{ section.id }} {
    display: flex;
    width: 100%;
    justify-content: {{ button_horizontal_align_mobile }};
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    max-width: fit-content;
    margin: 0;
    z-index: 2;
    margin-top: {{ button_mt_mobile }}px;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 0.25s ease 0s;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
    font-weight: 700;
  }

  .testimonials-button-inner-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .testimonials-button-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .testimonials-button-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-button-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }  
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-columns-{{ section.id }} {
      flex-direction: row;
      width: auto;
      margin-top: {{ testimonials_mt }}px;
      gap: {{ testimonials_gap }}px;
    }

    .testimonials-column-{{ section.id }} {
      gap: {{ testimonials_gap }}px;
    }

    .testimonials-column-{{ section.id }}:first-child,
    .testimonials-column-{{ section.id }}:last-child {
      margin-top: {{ testimonials_mt  }}px;
    }

    .testimonials-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .testimonials-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .testimonials-stars-{{ section.id }} {
      justify-content: {{ card_content_horizontal_align }};
    }


    .testimonials-stars-{{ section.id }} svg,
    .testimonials-stars-{{ section.id }} img {
      width: {{ stars_size }}px;
      height: {{ stars_size }}px;
    }

    .testimonials-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ card_content_align }};
    }

    .testimonials-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .testimonials-card-{{ section.id }} {
      padding: {{ card_padding_vertical }}px {{ card_padding_horizontal }}px;
      min-width: auto;
    }

    .testimonials-author-{{ section.id }} {
      margin-top: {{ author_wrapper_mt }}px;
      justify-content: {{ card_content_horizontal_align }};
      gap: {{ author_wrapper_gap }}px;
    }

    .testimonials-author-image-{{ section.id }} {
      width: {{ author_image_width }}px;    
    }

    .testimonials-author-text-{{ section.id }} {    
      font-size: {{ author_size }}px;
      text-align: {{ card_content_align }};
    }

    .testimonials-button-wrapper-{{ section.id }} {
      justify-content: {{ button_horizontal_align }};
    }

    .testimonials-button-{{ section.id }} {
      margin-top: {{ button_mt }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }
  }
  
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}px;
    }
  </style>
{% endunless %}

