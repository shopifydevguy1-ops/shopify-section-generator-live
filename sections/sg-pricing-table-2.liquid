  <style>
    .pricing-table-list-{{ section.id }} li:before {
      content: '';
      display: inline-block;
      margin-right: 10px;
      width: {{ elements_size_mobile }}px;
      height: {{ elements_size_mobile }}px;
      background-image: url('{{ elements_icon | image_url }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      position: relative;
      top: {{ elements_size_mobile | divided_by: 8 }}px;
    }
    @media(min-width: 1024px) {
      .pricing-table-list-{{ section.id }} li:before {
        width: {{ elements_size }}px;
        height: {{ elements_size }}px;
        top: {{ elements_size | divided_by: 8 }}px;
      }
    }
  </style>
{% endif %}

<div class="section-{{ section.id }} pricing-table-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings ">
      {% if heading != blank %}
        <div class="pricing-table-heading-{{ section.id }}">{{ heading }}</div>
      {% endif %}

      {% if sub_heading != blank %}
        <div class="pricing-table-subheading-{{ section.id }}">{{ sub_heading }}</div>
      {% endif %}

      <div class="pricing-table-items-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="pricing-table-item-{{ section.id }} {% if block.settings.active %}active-item-{{ section.id }}{% endif %}">
            <div class="pricing-table-top-{{ section.id }}">
              <div class="pricing-table-icon-{{ section.id }}">
                {% if block.settings.icon != blank %}
                  <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.icon.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              </div>
              {% if block.settings.heading != blank %}
                <p class="pricing-table-title-{{ section.id }}">{{ block.settings.heading }}</p>
              {% endif %}
              <p class="pricing-table-price-{{ section.id }}" {% if block.settings.currency == blank and block.settings.time == blank %}style="display: flex; align-items: center; justify-content: center;"{% endif %}>{% if block.settings.currency != blank %}<sup>{{ block.settings.currency }}</sup>{% endif %}{{ block.settings.price }}{% if block.settings.time != blank %}<sub>/ {{ block.settings.time }}</sub>{% endif %}</p>
              {% unless block.settings.active %}
                <div class="pricing-table-border-{{ section.id }}"></div>
              {% endunless %}
            </div>
            <div class="pricing-table-bottom-{{ section.id }}">
              <div class="pricing-table-list-{{ section.id }}">
                {% assign elements = block.settings.elements | split: ',' %}
                <ul>
                  {% for element in elements %}
                  <li>{{ element }}</li>
                {% endfor %}
                </ul>
              </div>
              {% if block.settings.button_text != blank %}
                <a href="{{ block.settings.button_url }}" class="pricing-table-btn-{{ section.id }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
</div>

<script>
  function displayTextWidth(text, font) {
    let canvas = displayTextWidth.canvas || (displayTextWidth.canvas = document.createElement("canvas"));
    let context = canvas.getContext("2d");
    console.log(context);
    context.font = font;
    let metrics = context.measureText(text);
    return metrics.width;
  }

  function initPricingTable2() {
    let texts = document.querySelectorAll('.pricing-table-text-element-{{ section.id }}');
    texts.forEach(el => {
      console.log("Text Width: " + displayTextWidth(el.textContent, {{ elements_font.family }}));
      el.style.maxWidth = displayTextWidth(el.textContent, {{ elements_font.family }}) * 1.5 + "px";
    })
  }

  document.addEventListener('DOMContentLoaded', initPricingTable2);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initPricingTable2);
     document.addEventListener('shopify:section:load', initPricingTable2);
  }
</script>

{% schema %}
{
  "name": "SG-Pricing Table #2",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<h2>PRICING <strong>PLAN</strong></h2>",
      "info": "Make a word bold to replace color"
    },
    {
      "type": "checkbox",
