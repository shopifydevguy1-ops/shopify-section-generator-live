      margin-top: calc(-{{ card_padding_vertical | times: 0.75 | round: 0 }}px - 40px);
    }
    .pricing-table-item-{{ section.id }}:not(:first-child) {
      margin-top: {{ table_gap_mobile | plus: 40 }}px;
    }
