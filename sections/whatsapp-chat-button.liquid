#ss-whatsapp-dialog-header-img-wrapper {
    margin-right: 1rem;
    position: relative;
}

#ss-whatsapp-dialog-header-img-wrapper::after {
    content: "";
    content: "";
    position: absolute;
    bottom: 4px;
    right: 2px;
    width: 14px;
    height: 14px;
