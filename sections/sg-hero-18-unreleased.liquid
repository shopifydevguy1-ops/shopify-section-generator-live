<script>
function initHero18() {
    const heroSection = document.querySelector('.section-{{ section.id }}');
    const heroImage = document.querySelector('.hero-image-{{ section.id }}');
    const heroContent = document.querySelector('.hero-content-{{ section.id }}');
    const heroHeading = document.querySelector('.hero-heading-{{ section.id }} *');

    const initialTransform = getComputedStyle(heroImage).transform;
    let initialScale = 1;
    let initialTranslateY = 0;
    let currentProgress = 0;

    if (initialTransform !== 'none') {
        const matrixValues = initialTransform.match(/matrix.*\((.+)\)/)[1].split(', ');
        initialScale = parseFloat(matrixValues[0]);
        initialTranslateY = parseFloat(matrixValues[5]);
    }

    const initialBorderRadius = {
        topLeft: parseInt(getComputedStyle(heroImage).borderTopLeftRadius, 10) || 0,
        topRight: parseInt(getComputedStyle(heroImage).borderTopRightRadius, 10) || 0
    };

    const initialHeadingColor = '{{ heading_color }}';
    const finalHeadingColor = '{{ heading_animation_color }}';

    function mixColors(color1, color2, percentage) {
        const r1 = parseInt(color1.slice(1, 3), 16);
        const g1 = parseInt(color1.slice(3, 5), 16);
        const b1 = parseInt(color1.slice(5, 7), 16);
        
        const r2 = parseInt(color2.slice(1, 3), 16);
        const g2 = parseInt(color2.slice(3, 5), 16);
        const b2 = parseInt(color2.slice(5, 7), 16);
        
        const r = Math.round(r1 + (r2 - r1) * percentage);
        const g = Math.round(g1 + (g2 - g1) * percentage);
        const b = Math.round(b1 + (b2 - b1) * percentage);
        
        return `#${((1 << 24) + (r << 16) + (g << 8) + b).toString(16).slice(1)}`;
    }

    function lerp(start, end, factor) {
        return start + (end - start) * factor;
    }

    function updateAnimation() {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const windowHeight = window.innerHeight;
        const windowWidth = window.innerWidth;
        
        const sectionRect = heroSection.getBoundingClientRect();
        const sectionTop = sectionRect.top;
        const sectionBottom = sectionRect.bottom;
        
        if (sectionBottom < 0 || sectionTop > windowHeight) {
            return;
        }
        
        const animationDistance = windowHeight * 0.75;
        const targetProgress = Math.min(Math.max(scrollTop / animationDistance, 0), 1);
        
        currentProgress = lerp(currentProgress, targetProgress, 0.03);
        
        const smoothProgress = currentProgress * currentProgress * (3 - 2 * currentProgress);
        const imageProgress = Math.min(smoothProgress * 2, 1);

        const currentScale = initialScale + (1 - initialScale) * imageProgress;
        const currentTranslateY = initialTranslateY * (1 - imageProgress);
        heroImage.style.transform = `translate3d(0, ${currentTranslateY}px, 0) scale(${currentScale})`;

        const currentBorderRadius = {
            topLeft: initialBorderRadius.topLeft * (1 - imageProgress),
            topRight: initialBorderRadius.topRight * (1 - imageProgress)
        };
        heroImage.style.borderTopLeftRadius = `${currentBorderRadius.topLeft}px`;
        heroImage.style.borderTopRightRadius = `${currentBorderRadius.topRight}px`;

        const currentColor = mixColors(initialHeadingColor, finalHeadingColor, imageProgress);
        heroHeading.style.color = currentColor;

        if (windowWidth >= 1024) {
            const contentRect = heroContent.getBoundingClientRect();
            const maxContentTranslate = Math.min(15, (sectionBottom - contentRect.height) / 2);

            if (sectionTop <= contentRect.top && contentRect.bottom <= sectionBottom) {
                const contentTranslateY = Math.min(maxContentTranslate * smoothProgress, maxContentTranslate);
                heroContent.style.transform = `translate3d(0, ${contentTranslateY}%, 0)`;
            }
        } else {
            heroContent.style.transform = 'none';
        }

        requestAnimationFrame(updateAnimation);
    }

    function onScroll() {
        requestAnimationFrame(updateAnimation);
    }

    window.addEventListener('scroll', onScroll, { passive: true });
    updateAnimation();
    
    return () => {
        window.removeEventListener('scroll', onScroll);
    };
}

document.addEventListener('DOMContentLoaded', initHero18);

if (Shopify.designMode) {
    document.addEventListener('shopify:section:unload', initHero18);
    document.addEventListener('shopify:section:load', initHero18);
}
</script>

