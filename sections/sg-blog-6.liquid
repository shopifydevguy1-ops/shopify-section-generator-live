        tab.addEventListener('click', () => {
          tabs.forEach(tab => tab.classList.remove('active'));
          blogs.forEach(blog => blog.classList.remove('active'));
          leftArticles.forEach(articles => articles.classList.remove('active'));

          blogs.forEach(blog => {
