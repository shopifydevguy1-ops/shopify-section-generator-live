{%- style -%}
  {{  heading_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  button_font | font_face: font_display: 'swap' }}
  {{  badge_font | font_face: font_display: 'swap' }}
  {{  title_font | font_face: font_display: 'swap' }}
  {{  price_font | font_face: font_display: 'swap' }}
  

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .scrolling-body-{{ section.id }} {
    display: grid;    
    grid-template-columns: 1fr;
    gap: {{ layout_gap_mobile }}px;
  }

  .scrolling-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: {{ content_vertical_align }};
    align-items: {{ content_horizontal_align_mobile }};
    grid-area: content;
  }

  .scrolling-heading-{{ section.id }} {
    text-align: {{ content_align_mobile }};
  }

  .scrolling-heading-{{ section.id }} * {
    margin: 0px;
    font-size: {{ heading_size_mobile }}px;
    line-height: {{ heading_height }}%;
    color: {{ heading_color }};
    text-transform: unset;
    word-break: break-word;
  }
  
  .scrolling-text-{{ section.id }} {
    text-align: {{ content_align_mobile }};
    margin-top: {{ text_mt_mobile }}px;
  }

  .scrolling-text-{{ section.id }} * {
    margin: 0px;
    font-size: {{ text_size_mobile }}px;
    line-height: {{ text_height }}%;
    color: {{ text_color }};
    text-transform: unset;
    word-break: break-word;
  }

  .scrolling-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    max-width: fit-content;
    margin: 0;
    margin-top: {{ button_mt_mobile }}px;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 0.25s ease 0s;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
  }

  .scrolling-button-inner-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .scrolling-button-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .scrolling-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .scrolling-button-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .scrolling-button-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .scrolling-wrapper-{{ section.id }} {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: nowrap;
    flex-wrap: nowrap;
    position: relative;
    z-index: 0;
    gap: {{ scrolling_gap_mobile }}px;
    background-attachment: scroll !important;    
    grid-area: slider !important;
    margin-right: 0;
    padding-right: 0;
    overflow: hidden;
  }

  .scrolling-list-{{ section.id }} {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    white-space: nowrap;
    background-attachment: scroll !important;
    -webkit-animation: ticker{{ section.id | replace: '-', '' }} {{ scrolling_velocity_mobile | times: 2 }}s infinite linear;
    animation: ticker{{ section.id | replace: '-', '' }} {{ scrolling_velocity_mobile | times: 2 }}s infinite linear;
    gap: {{ scrolling_gap_mobile }}px;
  }

  .scrolling-card-{{ section.id }} {
    position: relative;
    width: {{ card_width_mobile }}px;
  }

  .scrolling-badge-{{ section.id }} {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ badge_padding_vertical_mobile }}px {{ badge_padding_horizontal_mobile }}px;
    background-color: {{ badge_bg_color }};
    border: {{ badge_border_thickness }}px solid {{ badge_border_color }};
    border-radius: {{ badge_radius }}px;
    margin: 0;
    font-size: {{ badge_size_mobile }}px;
    color: {{ badge_color }};
    word-break: break-word;
    line-height: {{ badge_height }}%;
    overflow: hidden;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    transition: all 0.25s ease 0s;
  }

  .scrolling-slide-image-{{ section.id }} {
    display: block;
    position: relative;
  }

  .scrolling-slide-image-{{ section.id }} img,
  .scrolling-slide-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .scrolling-slide-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .scrolling-slide-content-{{ section.id }} {
    padding: {{ slide_content_padding_vertical_mobile }}px {{ slide_content_padding_horizontal_mobile }}px;
  }

  .scrolling-slide-title-{{ section.id }} {
    margin: 0;   
    display: block; 
    text-align: {{ slide_content_align_mobile }};
    font-size: {{ title_size_mobile }}px;
    color: {{ title_color }};
    line-height: {{ title_height }}%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
  }    

  .scrolling-slide-price-{{ section.id }} {
    margin-top: {{ price_mt_mobile }}px;  
    display: flex;
    align-items: center;
    gap: 5px;
    justify-content: {{ slide_content_horizontal_align_mobile }};
  }

  .scrolling-slide-price-{{ section.id }} * {
    margin: 0;        
    display: block;
    text-align: {{ slide_content_align_mobile }};
    font-size: {{ price_size_mobile }}px;
    color: {{ price_color }};
    line-height: {{ price_height }}%;
    text-transform: unset;
    word-break: break-word;
    transition: all 0.25s ease 0s;
  }   

  .scrolling-slide-compare-price-{{ section.id }} {
    text-decoration: line-through;
    color: {{ price_original_color }};
  }

  .scrolling-image-{{ section.id }} {
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
    border-radius: {{ image_radius }}px;
    overflow: hidden;
  }

  .scrolling-images-slider-{{ section.id }} {
    position: relative !important;
    overflow: hidden !important;
    border: {{ image_border_thickness }}px solid {{ image_border_color }} !important;
    border-radius: {{ image_radius }}px !important;
  }
  
  .scrolling-btn-prev-{{ section.id }},
  .scrolling-btn-next-{{ section.id }} {
    display: flex;
    flex-shrink: 0;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    width: {{ media_arrow_size_mobile }}px;
    height: {{ media_arrow_size_mobile }}px;
    padding: 0;
    border: 0px;
    border: {{ media_arrow_border_thickness }}px solid {{ media_arrow_border_color }};
    border-radius: {{ media_arrow_radius }}px;
    background: transparent;
    background: {{ media_arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    /* box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15); */
  }

  .scrolling-btn-prev-{{ section.id }} {
    left: 5px;
  }

  .scrolling-btn-next-{{ section.id }} {
    right: 5px;
  }

  .scrolling-btn-prev-{{ section.id }} .animate-icon,
  .scrolling-btn-next-{{ section.id }} .animate-icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .scrolling-btn-prev-{{ section.id }} .animate-icon:before,
  .scrolling-btn-next-{{ section.id }} .animate-icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ media_arrow_icon_size_mobile }}px;
    height: {{ media_arrow_icon_size_mobile }}px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .scrolling-btn-prev-{{ section.id }} .animate-icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .scrolling-btn-prev-{{ section.id }} .animate-icon:after,
  .scrolling-btn-next-{{ section.id }} .animate-icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ media_arrow_icon_size_mobile | minus: 0.3 }}px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .scrolling-btn-prev-{{ section.id }} span,
  .scrolling-btn-next-{{ section.id }} span {
    color: {{ media_arrow_color }};
  }

  .scrolling-btn-prev-{{ section.id }}.swiper-button-disabled,
  .scrolling-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0;
  }

  .scrolling-btn-prev-{{ section.id }}.swiper-button-lock,
  .scrolling-btn-next-{{ section.id }}.swiper-button-lock {
    opacity: 0;
    pointer-events: none;
  }  

  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .scrolling-wrapper-{{ section.id }} {
      gap: {{ scrolling_gap }}px;
    }

    .scrolling-list-{{ section.id }} {
      -webkit-animation: ticker{{ section.id | replace: '-', '' }} {{ scrolling_velocity | times: 2 }}s infinite linear;
      animation: ticker{{ section.id | replace: '-', '' }} {{ scrolling_velocity | times: 2 }}s infinite linear;
      gap: {{ scrolling_gap }}px;
    }

    .scrolling-card-{{ section.id }} {
      width: {{ card_width }}px;
    }

    .scrolling-body-{{ section.id }} {
      gap: {{ layout_gap }}px;
    }

    .scrolling-content-{{ section.id }} {
      align-items: {{ content_horizontal_align }};
    }
      
    .scrolling-heading-{{ section.id }} {
      text-align: {{ content_align }};
    }

    .scrolling-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }
    
    .scrolling-text-{{ section.id }} {
      text-align: {{ content_align }};
      margin-top: {{ text_mt }}px;
    }

    .scrolling-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .scrolling-button-{{ section.id }} {
      margin-top: {{ button_mt }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }

    .scrolling-badge-{{ section.id }} {
      padding: {{ badge_padding_vertical }}px {{ badge_padding_horizontal}}px;
      font-size: {{ badge_size }}px;
    }

    .scrolling-slide-content-{{ section.id }} {
      padding: {{ slide_content_padding_vertical }}px {{ slide_content_padding_horizontal }}px;
    }

    .scrolling-slide-title-{{ section.id }} {     
      text-align: {{ slide_content_align }};
      font-size: {{ title_size }}px;
    }  
    
    .scrolling-slide-price-{{ section.id }} {
      margin-top: {{ price_mt }}px;
      justify-content: {{ slide_content_horizontal_align }};
    }

    .scrolling-slide-price-{{ section.id }} * {     
      text-align: {{ slide_content_align }};   
      font-size: {{ price_size }}px;
    } 
    
    .scrolling-btn-prev-{{ section.id }},
    .scrolling-btn-next-{{ section.id }} {
      width: {{ media_arrow_size }}px;
      height: {{ media_arrow_size }}px;
      transition: all 0.25s ease 0s;
    }

    .scrolling-btn-prev-{{ section.id }} .animate-icon:before,
    .scrolling-btn-next-{{ section.id }} .animate-icon:before {
      width: {{ media_arrow_icon_size }}px;
      height: {{ media_arrow_icon_size }}px;
    }

    .scrolling-btn-prev-{{ section.id }} .animate-icon:after,
    .scrolling-btn-next-{{ section.id }} .animate-icon:after {
      width: {{ media_arrow_icon_size | minus: 0.3 }}px;
    }
  }
  
