<script>
  function initTestimonials45() {
    const slider = new Swiper(`.testimonials-slider-{{ section.id }}`, {
      speed: 300,
      loop: true,
      spaceBetween: 1,
      effect: 'fade',
    });

    const mediaQuery = window.matchMedia('(min-width: 1024px)');
    let scrollingVelocity;
    
    if (mediaQuery.matches) {
      scrollingVelocity = {{ scrolling_velocity }};
    } else {
      scrollingVelocity = {{ scrolling_velocity_mobile }};
    }

    const slideCount = {{ slide_count }};
    const timePerSlide = (scrollingVelocity / slideCount) * 1000;


    function autoAdvanceSlider() {
      slider.slideNext();
      
      setTimeout(autoAdvanceSlider, timePerSlide);
    }
    
    setTimeout(autoAdvanceSlider, timePerSlide);
  }

  document.addEventListener('DOMContentLoaded', initTestimonials45);

  if (Shopify.designMode) {
    document.addEventListener('shopify:section:unload', initTestimonials45);
    document.addEventListener('shopify:section:load', initTestimonials45);
  }
</script>

