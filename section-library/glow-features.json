{
  "id": "glow-features",
  "name": "CUSTOM Glow - Feature",
  "description": "Section: CUSTOM Glow - Feature",
  "tags": [
    "glow",
    "feature"
  ],
  "type": "feature",
  "liquid_code": "<div class=\"feature__wrapper\" id=\"feature__wrapper\">\n  <div class=\"feature__info\">\n    <p class=\"feature__info-title\"><span>{{ section.settings.header_gradient }}</span> {{ section.settings.header }}</p>\n    <p class=\"feature__info-desc\">{{ section.settings.description }}</p>\n    <a class=\"feature__info-link\" href=\"{{ section.settings.button_url }}\">{{ section.settings.button_text }}</a>\n  </div>\n  <div class=\"feature__items\">\n    {% for block in section.blocks %}\n      <div class=\"feature__item\">\n        <div class=\"feature__item-img\">\n          <img style=\"max-width: {{block.settings.feature_icon_size}};\" src=\"{{ block.settings.feature_icon | img_url: 'medium' }}\" alt=\"\">\n        </div>\n        <p style=\"color:{{block.settings.feature_font_color}}; font-size:{{block.settings.feature_font_size}}\">{{ block.settings.feature_text }}</p>\n      </div>\n    {% endfor %}\n  </div>\n</div>\n\n<style>\n\n  .feature__wrapper {\n    max-width: 125rem;\n    margin: 0 auto;\n    padding: 7rem 5rem;\n    display: flex;\n    justify-content: space-between;\n  }\n  .feature__info-title {\n    margin-block-start: inherit;\n    margin-block-end: inherit;\n    font-weight: 600;\n    line-height: 1.3;\n    font-size: {{section.settings.header_font_size}}px;\n    color: {{section.settings.header_color}};\n  }\n  .feature__info {\n    flex: 0 1 85%;\n    padding-left: 20px;\n    display: flex;\n    flex-direction: column;\n  }\n  .feature__info p span {\n    background: linear-gradient(to right, {{section.settings.gradient_color_1}} 0%,{{section.settings.gradient_color_2}} 50%, {{section.settings.gradient_color_3}});\n    -webkit-background-clip: text;\n    -webkit-text-fill-color: transparent;\n  }\n  .feature__info-desc {\n    font-weight: normal;\n    line-height: 2;\n    font-size: {{section.settings.description_font_size}}px;\n    color: {{section.settings.description_color}};\n  }\n  .feature__info-link {\n    font-weight: 500;\n    line-height: 42px;\n    text-transform: uppercase;\n    text-decoration: none;\n    background: linear-gradient(to right, {{section.settings.gradient_color_1}} 0%,{{section.settings.gradient_color_2}} 50%, {{section.settings.gradient_color_3}});\n    -webkit-background-clip: text;\n    -webkit-text-fill-color: transparent;\n    font-size: 16px;\n    width: fit-content;\n  }\n  .feature__items {\n    padding-left: 30px;\n    display: flex;\n    justify-content: flex-end;\n    flex-wrap: wrap;\n  }\n  .feature__item {\n    background: #FFFFFF;\n    box-shadow: 4px 4px 20px {{section.settings.blur_color}};\n    border-radius: 15px;\n    max-width: 188px;\n    max-height: 167px;\n    flex: 0 1 50%;\n    display: flex;\n    flex-direction: column;\n    align-items: center;\n    justify-content: center;\n    margin-right: 20px;\n    margin-bottom: 20px;\n  }\n  .feature__item p {\n      text-align: center;\n      padding: 0 7px;\n      font-style: normal;\n      font-weight: 500;\n      font-size: 16px;\n      line-height: 24px;\n    }\n  .feature__item-img {\n    background: linear-gradient(to right, {{section.settings.gradient_color_1}} 0%,{{section.settings.gradient_color_2}} 50%, {{section.settings.gradient_color_3}});\n    margin-bottom: 25px;\n    border-radius: 50%;\n    width: 50px;\n    height: 50px;\n    display: flex;\n    align-items: center;\n    justify-content: center;\n  }\n\n  @media (max-width: 1024px) {\n    .feature__item p {max-width: 190px;}\n    .feature__wrapper {\n      padding: 50px 1.5rem;\n      flex-direction: column;\n    }\n    .feature__items {\n      justify-content: center;\n      margin-top: 40px;\n    }\n    .feature__item {\n      max-width: 360px;\n      margin-bottom: 38px;\n    }\n  }\n\n  @media (max-width: 890px) {\n    .feature__items {\n      padding-left: 0;\n    }\n    .feature__item {\n      width: 100%;\n      flex: auto;\n    }\n    .feature__info-link {\n        margin: 0 auto;\n    }\n    .feature__info {\n      padding-right: 0;\n      padding-left: 0;\n    }\n  }\n  @media (max-width: 767px) {\n    .feature__info-title { \n      font-size: {{ section.settings.header_mob_font_size}}px;\n    }\n    .feature__item {\n      margin-right: 0px;\n    }\n  }\n\n</style>",
  "variables": {
    "header_gradient": {
      "type": "text",
      "default": "Facinated",
      "label": "Gradient header part",
      "description": "Gradient header part"
    },
    "header": {
      "type": "text",
      "default": "By The Intricacies and Mysteries Of Outer-Space?",
      "label": "Without gradient header",
      "description": "Without gradient header"
    },
    "header_color": {
      "type": "color",
      "default": "#0B1128",
      "label": "Header Font color",
      "description": "Header Font color"
    },
    "header_font_size": {
      "type": "text",
      "default": "42",
      "label": "Header Font Size",
      "description": "Header Font Size"
    },
    "description": {
      "type": "textarea",
      "default": "Our best-selling space lamps feature meticulous craftsmanship using actual high-resolution NASA satellite imagery to produce device. Pair it with some peaceful music, kick off your shoes, and feel the stress of the day melt away.",
      "label": "Description text",
      "description": "Description text"
    },
    "description_color": {
      "type": "color",
      "default": "#0B1128",
      "label": "Description Font color",
      "description": "Description Font color"
    },
    "header_mob_font_size": {
      "type": "text",
      "default": "28",
      "label": "Mobile Header Font Size",
      "description": "Mobile Header Font Size"
    },
    "description_font_size": {
      "type": "text",
      "default": "16",
      "label": "Description Font Size",
      "description": "Description Font Size"
    },
    "button_text": {
      "type": "text",
      "default": "SHOP NOW",
      "label": "Button text",
      "description": "Button text"
    },
    "button_url": {
      "type": "text",
      "default": "/collections/all",
      "label": "Button url",
      "description": "Button url"
    },
    "blur_color": {
      "type": "color",
      "default": "#B8B1DC",
      "label": "Feature Icon Blur color",
      "description": "Feature Icon Blur color"
    },
    "gradient_color_1": {
      "type": "color",
      "default": "#4222DE",
      "label": "Gradient color 1",
      "description": "Gradient color 1"
    },
    "gradient_color_2": {
      "type": "color",
      "default": "#659BFF",
      "label": "Gradient color 2",
      "description": "Gradient color 2"
    },
    "gradient_color_3": {
      "type": "color",
      "default": "#7FF6E8",
      "label": "Gradient color 3",
      "description": "Gradient color 3"
    }
  }
}