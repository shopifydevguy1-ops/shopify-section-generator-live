  "liquid_code": "<div class=\"call_wrapper\" id=\"call_wrapper\">\n    <div class=\"call_out\">\n        <div class=\"call_icon\">\n            <img src=\"{{ section.settings.header_icon | img_url: 'medium' }}\" alt=\"\">\n        </div>\n        <div class=\"call_content\">\n            <p class=\"call_content-title\">{{ section.settings.header }} <span class=\"call_content-title_gradient\">{{ section.settings.header_gradient }}</span></p>\n            <p class=\"call_content-subheader\">{{ section.settings.subheader }}</p>\n            <a class=\"call_content-button\" href=\"{{ section.settings.button_url }}\">{{ section.settings.button_text }}</a>\n        </div>\n    </div>\n</div>\n\n<style>\n  \t\n    .call_wrapper .button, .call_wrapper .icon, .call_wrapper .header-gradient {\n        background: linear-gradient(to right, {{section.settings.gradient_color_1}} 0%,{{section.settings.gradient_color_2}} 50%, {{section.settings.gradient_color_3}});\n    }\n  \t.call_icon img {\n       \tmax-height: 60px;\n  \t\tmax-width: 60px;\n  \t}\n    .call_wrapper {\n        max-width: 125rem;\n        margin: 150px auto 100px auto;\n      \tpadding: 0 5rem;\n    }\n    .call_out {\n        position: relative;\n        border-radius: 59px 59px 12px 12px;\n        background: linear-gradient(119.19deg, {{section.settings.body_gradient_color_1}} -3.63%, {{section.settings.body_gradient_color_2}} -3.62%, {{section.settings.body_gradient_color_3}} 27.59%, {{section.settings.body_gradient_color_4}} 54.32%, {{section.settings.body_gradient_color_5}} 71.73%, {{section.settings.body_gradient_color_6}} 99.72%);\n    }\n    .call_icon {\n        background: linear-gradient(to right, {{section.settings.gradient_color_1}} 0%,{{section.settings.gradient_color_2}} 50%, {{section.settings.gradient_color_3}});\n        border-radius: 50%;\n        width: 94px;\n        height: 94px;\n        display: flex;\n        align-items: center;\n        justify-content: center; \n        position: absolute;\n        top: -50px;\n        left: 50%;\n        transform: translateX(-50%);\n    }\n    .call_content {\n        padding: 50px 50px;\n        text-align: center;\n    }\n    .call_content-title {\n          font-weight:900;\n        font-family: \"Recoleta-Bold\";\n        font-size: {{ section.settings.header_font_size }}px;\n        color: {{ section.settings.header_color }};\n        line-height: 1.3;\n      \tmargin-top:40px;\n      \tmargin-bottom:40px;\n    }\n    .call_content-title_gradient {\n        background: linear-gradient(to right, {{section.settings.gradient_color_1}} 0%,{{section.settings.gradient_color_2}} 50%, {{section.settings.gradient_color_3}});\n        -webkit-background-clip: text;\n        -webkit-text-fill-color: transparent;\n    }\n    .call_content-subheader {\n        font-family: 'Red Hat Text';\n        font-size: {{ section.settings.subheader_font_size }}px;\n        color: {{ section.settings.subheader_color }};\n    }\n    .call_content-button { \n        border-radius: 15px;\n        margin: 40px auto 0 auto;\n        width: 100%;\n        max-width: 188px;\n        padding: 16px 24px;\n        display: flex;\n        align-items: center;\n        justify-content: center;\n        background: linear-gradient(to right, {{section.settings.gradient_color_1}} 0%,{{section.settings.gradient_color_2}} 50%, {{section.settings.gradient_color_3}});\n        font-family: 'Red Hat Text';\n        font-size: {{ section.settings.button_font_size }}px;\n        color: {{ section.settings.subheader_color }};\n        text-decoration: none;\n    }\n    @media (max-width: 1024px) {\n      \n      \n        .call_wrapper {\n            padding: 0 1.5rem;\n          \tmargin: 100px auto 70px auto;\n        }\n    }\n    @media (max-width: 767px) {\n      .call_content {\n        padding: 50px 30px;\n      }\n      .call_wrapper {\n            padding: 0 1.5rem;\n          \tmargin: 100px auto 70px auto;\n        }\n        .call_content-title {\n            margin-top: 10px;\n            font-size: {{ section.settings.header_mob_font_size }}px;\n            line-height: 1.3;\n        }\n        .call_content-subheader {\n          font-size: {{section.settings.subheader_mob_font_size}}px;\n        }\n        .call_content-button {\n        }\n        .call_icon {\n            top: -30px;\n            width: 60px;\n            height: 60px;\n        }\n        .call_icon img {\n            max-width: 40px;\n            max-height: 40px;\n        }\n    }\n</style>",
