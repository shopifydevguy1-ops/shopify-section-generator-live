      "type": "text",
      "default": "",
      "label": "Image",
      "description": "Image"
    },
    "title": {
      "type": "text",
      "default": "Shop the look",
      "label": "Title",
      "description": "Title"
    },
    "title_font_size": {
      "type": "text",
      "default": "40",
      "label": "Title font size",
      "description": "Title font size"
    },
    "title_color": {
