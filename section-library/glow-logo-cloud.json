{
  "id": "glow-logo-cloud",
  "name": "Glow Logo Cloud",
  "description": "Section: Glow Logo Cloud",
  "tags": [
    "glow"
  ],
  "type": "custom",
  "liquid_code": "<link rel=\"preconnect\" href=\"https://fonts.googleapis.com\">\n<link rel=\"preconnect\" href=\"https://fonts.gstatic.com\" crossorigin>\n<link href=\"https://fonts.googleapis.com/css2?family=Red+Hat+Text:wght@500&display=swap\" rel=\"stylesheet\">\n\n<style>\n  \n@font-face {\n    font-family: \"Recoleta-Bold\";\n    src: url({{ \"Recoleta-Bold.woff\" | asset_url }}) format(\"woff\"), url({{ \"Recoleta-Bold.woff2\" | asset_url }}) format(\"woff2\");\n}\n@font-face {\n    font-family: \"Recoleta-SemiBold\";\n    src: url({{ \"Recoleta-SemiBold.woff\" | asset_url }}) format(\"woff\"), url({{ \"Recoleta-SemiBold.woff2\" | asset_url }}) format(\"woff2\");\n}\n@font-face {\n    font-family: \"Recoleta-Medium\";\n    src: url({{ \"Recoleta-Medium.woff\" | asset_url }}) format(\"woff\"), url({{ \"Recoleta-Medium.woff2\" | asset_url }}) format(\"woff2\");\n}\n  \n.glow-logo-section {\n\tpadding:0 40px;\n    padding-top: {{ section.settings.padding_top }}px;\n    padding-bottom: {{ section.settings.padding_bottom }}px;\n}\n \n.glow-logo-header {\n  \tfont-family: \"Recoleta-SemiBold\";\n    font-weight: 600;\n\ttext-align:center;\n    margin: 0 0 30px 0;\n}\n\n.glow-logo-cloud-section {\n    display: flex;\n    text-align: center;\n\tjustify-content: center;\n    align-items: center;\n}\n.glow-logo-img-div {\n  width:{{ section.settings.image_width }};\n  max-width:{{ section.settings.image_width }};\n  margin: 0 27.5px 35px;\n}\n  \n@media (max-width:767px){\n  .glow-logo-cloud-section {\n    flex-wrap:wrap;\n  }\n  .glow-logo-img-div {\n    max-width:33%;\n  }\n  .glow-logo-section {\n    padding: 20px;\n    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;\n    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;\n  }\n}\n\n</style>\n<div class=\"glow-logo-section\" id=\"glow-logo-section\">\n  <h2 class=\"glow-logo-header {% if section.settings.heading_size == 'medium' %}h1{% else %}h0{% endif %}\"><span>{{ section.settings.custom_text_title_first }}</span>\n  \t<span style=\"background: linear-gradient(96.1deg, {{ section.settings.color_1 }} 0%, {{ section.settings.color_2 }} 53.03%, {{ section.settings.color_3 }} 103.23%);-webkit-background-clip: text;-webkit-text-fill-color: transparent;\" class=\"glow-logo-header {% if section.settings.heading_size == 'medium' %}h1{% else %}h0{% endif %}\"> {{ section.settings.custom_text_title_gradient }}</span>\n      <span class=\"glow-logo-header {% if section.settings.heading_size == 'medium' %}h1{% else %}h0{% endif %}\">{{ section.settings.custom_text_title_second }}</span>\n  </h2>\n  <div class=\"glow-logo-cloud-section\">\n    {% for block in section.blocks %}\n     <div class=\"glow-logo-img-div\" style=\"{{ block.shopify_attributes }}\">\n     {% if block.settings.image != blank %}\n\t\t\t<img style=\"max-width:100%;\" src=\"{{ block.settings.image| img_url: 'medium' }}\" alt=\"\">\n          {% else %}\n            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}\n      {% endif %}\n    </div>\n    {% endfor %}\n  </div>\n</div>",
  "variables": {
    "custom_text_title_first": {
      "type": "text",
      "default": "Logo",
      "label": "Header first part",
      "description": "Header first part"
    },
    "custom_text_title_gradient": {
      "type": "text",
      "default": "cloud",
      "label": "Header gradient part",
      "description": "Header gradient part"
    },
    "custom_text_title_second": {
      "type": "text",
      "default": "goes here",
      "label": "Header second part",
      "description": "Header second part"
    },
    "heading_size": {
      "type": "text",
      "default": "medium",
      "label": "Medium",
      "description": "Medium"
    },
    "color_1": {
      "type": "color",
      "default": "#4222DE",
      "label": "First Color",
      "description": "First Color"
    },
    "color_2": {
      "type": "color",
      "default": "#659BFF",
      "label": "Second Color",
      "description": "Second Color"
    },
    "color_3": {
      "type": "color",
      "default": "#7FF6E8",
      "label": "Third Color",
      "description": "Third Color"
    },
    "color_4": {
      "type": "color",
      "default": "#302E2E",
      "label": "Standard Color",
      "description": "Standard Color"
    },
    "image_width": {
      "type": "text",
      "default": "",
      "label": "Image size",
      "description": "Image size"
    },
    "padding_top": {
      "type": "text",
      "default": "36",
      "label": "Padding top",
      "description": "Padding top"
    },
    "padding_bottom": {
      "type": "text",
      "default": "16",
      "label": "Padding bottom",
      "description": "Padding bottom"
    }
  }
}