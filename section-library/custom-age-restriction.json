{
  "id": "custom-age-restriction",
  "name": "CUSTOM Age restriction",
  "description": "Section: CUSTOM Age restriction",
  "tags": [
    "age"
  ],
  "type": "custom",
  "liquid_code": "<style>\n  .age-restricted-popup {\n    position: fixed;\n    top: 0;\n    left: 0;\n    width: 100%;\n    height: 100%;\n    z-index: 9999;\n    text-align: center;\n  }\n  .age-restricted-popup-overlay {\n    position: absolute;\n    top: 0;\n    left: 0;\n    width: 100%;\n    height: 100%;\n    background-color: var(--bg-overlay-color, #000);\n    opacity: var(--bg-overlay-opacity, 0.5);\n  }\n  .age-restricted-popup-content {\n    position: absolute;\n    top: 50%;\n    left: 50%;\n    transform: translate(-50%, -50%);\n    width: 90%;\n    padding: var(--py, 3rem) 1rem;\n    /*height: 50%;*/\n    background-color: var(--bg-content-color, #fff);\n    border-radius: var(--border-radius, 5px);\n    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);\n  }\n  @media (min-width: 768px) {\n    .age-restricted-popup-content {\n      width: 40%;\n    }\n  }\n  .age-restricted-popup-content-inner {\n    position: relative;\n    width: 100%;\n    height: 100%;\n    display: flex;\n    flex-direction: column;\n    justify-content: center;\n    align-items: center;\n  }\n  .age-restricted-popup-content-inner h2 {\n    margin: 0 0 10px;\n    font-size: var(--heading-font-size, 20px);\n    font-weight: 700;\n  }\n  .age-restricted-popup-content-inner p {\n    margin: 0;\n    font-size: var(--text-font-size, 14px);\n    font-weight: 400;\n  }\n  .age-restricted-popup-content-inner-button {\n    width: 100%;\n    height: 50px;\n    text-align: center;\n  }\n  .age-restricted-popup-content-inner-button .age-restricted-popup-btn {\n    display: inline-block;\n    margin: 10px 5px;\n    padding: 10px 20px;\n    font-size: 14px;\n    font-weight: 700;\n    line-height: 30px;\n    text-decoration: none;\n    color: #fff;\n    border-radius: 5px;\n    background-color: #000;\n    cursor: pointer;\n  }\n\n  a {\n    color: {{ section.settings.text_color }};\n  }\n\n  .age-restricted-popup-content-inner img {\n    max-height: {{section.settings.image_height}}px;\n    margin:10px;\n  }\n  \n  .age-restricted-popup-content-inner {\n    color:{{ section.settings.text_color }};\n  }\n \n</style>\n<div\n  class=\"age-restricted-popup age-restricted-popup--{{ section.id }}\"\n  style=\"\n    display: none;\n    --heading-font-size: {{ section.settings.heading_font_size }}px;\n    --text-font-size: {{ section.settings.text_font_size }}px;\n    --bg-content-color: {{ section.settings.bg_content_color }};\n    --bg-overlay-color: {{ section.settings.bg_overlay_color }};\n    --bg-overlay-opacity: {{ section.settings.bg_overlay_opacity }};\n    --py: {{ section.settings.py }}px;\n    --border-radius: {{ section.settings.border_radius }}px;\n    --text-color: {{ section.settings.text_color }};\n  \"\n>\n  <div class=\"age-restricted-popup-overlay\" style=\"display: block;\"></div>\n  <div class=\"age-restricted-popup-content\">\n    <div class=\"age-restricted-popup-content-inner\">\n      <div class=\"age-restricted-popup-content-inner-text\">\n        <h2 style=\"color: {{ section.settings.heading_color }}\">\n          {{ section.settings.heading }}\n        </h2>\n        {{ section.settings.richtext_1 }}\n      </div>\n      {% if section.settings.image != blank %}\n        <img\n          src=\"{{ section.settings.image | img_url: 'large' }}\"\n          alt=\"\"\n          style=\"object-fit: contain;\"\n        >\n      {% endif %}\n      {{ section.settings.richtext_2 }}\n      <div class=\"age-restricted-popup-content-inner-button\">\n        <button\n          style=\"border-radius:{{ section.settings.border_radius }}px;\"\n          href=\"{{ video.url }}\"\n          class=\"age-restricted-popup-btn\"\n          type=\"button\"\n          data-close-popup\n        >\n          {{- section.settings.button_text_1 -}}\n        </button>\n        or\n        <a\n          style=\"border-radius:{{ section.settings.border_radius }}px;\"\n          href=\"{{ section.settings.button_link_2 }}\"\n          class=\"age-restricted-popup-btn\"\n        >\n          {{- section.settings.button_text_2 -}}\n        </a>\n      </div>\n    </div>\n  </div>\n</div>\n\n<script>\n  (function () {\n    {% if section.settings.always_show_popup %}\n      localStorage.removeItem('ageRestrictedPopup');\n    {% endif %}\n\n    const popup = document.querySelector('.age-restricted-popup--{{ section.id }}');\n    const closeBtn = popup.querySelector('[data-close-popup]');\n\n    if (localStorage.getItem('ageRestrictedPopup') === null) {\n      popup.style.display = 'block';\n    }\n    closeBtn.addEventListener('click', function () {\n      popup.style.display = 'none';\n      {% unless section.settings.always_show_popup %}\n        localStorage.setItem('ageRestrictedPopup', 'true');\n      {% endunless %}\n    });\n  })()\n</script>",
  "variables": {
    "heading": {
      "type": "text",
      "default": "This video is age restricted",
      "label": "Heading",
      "description": "Heading"
    },
    "richtext_1": {
      "type": "textarea",
      "default": "",
      "label": "Text 1",
      "description": "Text 1"
    },
    "image": {
      "type": "text",
      "default": "",
      "label": "Image",
      "description": "Image"
    },
    "image_height": {
      "type": "text",
      "default": "150",
      "label": "Image height",
      "description": "Image height"
    },
    "richtext_2": {
      "type": "textarea",
      "default": "",
      "label": "Text 2",
      "description": "Text 2"
    },
    "button_text_1": {
      "type": "text",
      "default": "",
      "label": "Button text 1",
      "description": "Button text 1"
    },
    "button_text_2": {
      "type": "text",
      "default": "",
      "label": "Button text 2",
      "description": "Button text 2"
    },
    "button_link_2": {
      "type": "text",
      "default": "https://www.google.com",
      "label": "Button link 2",
      "description": "Button link 2"
    },
    "bg_overlay_color": {
      "type": "color",
      "default": "#000",
      "label": "Background overlay color",
      "description": "Background overlay color"
    },
    "bg_overlay_opacity": {
      "type": "text",
      "default": "0.5",
      "label": "Background overlay opacity",
      "description": "Background overlay opacity"
    },
    "bg_content_color": {
      "type": "color",
      "default": "#fff",
      "label": "Background content color",
      "description": "Background content color"
    },
    "heading_color": {
      "type": "color",
      "default": "#000",
      "label": "Heading color",
      "description": "Heading color"
    },
    "text_color": {
      "type": "color",
      "default": "#000",
      "label": "Text color",
      "description": "Text color"
    },
    "heading_font_size": {
      "type": "text",
      "default": "20",
      "label": "Heading font size",
      "description": "Heading font size"
    },
    "text_font_size": {
      "type": "text",
      "default": "14",
      "label": "Text font size",
      "description": "Text font size"
    },
    "py": {
      "type": "text",
      "default": "36",
      "label": "Vertical Padding",
      "description": "Vertical Padding"
    },
    "border_radius": {
      "type": "text",
      "default": "8",
      "label": "Border radius",
      "description": "Border radius"
    },
    "always_show_popup": {
      "type": "text",
      "default": "false",
      "label": "Always show popup",
      "description": "This will always show the popup, even if the user has already seen it."
    }
  }
}