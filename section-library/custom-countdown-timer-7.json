  "type": "custom",
  "liquid_code": "<link href=\"https://cdn.jsdelivr.net/npm/@pqina/flip@1.8.4/dist/flip.min.css\" rel=\"stylesheet\">\n\n{%- liquid\n  assign padding_horizontal = section.settings.padding_horizontal\n  assign padding_horizontal_mobile = section.settings.padding_horizontal_mobile\n  assign padding_top = section.settings.padding_top\n  assign padding_bottom = section.settings.padding_bottom\n  assign border_color = section.settings.border_color\n  assign border_thickness = section.settings.border_thickness\n  assign margin_top = section.settings.margin_top\n  assign margin_bottom = section.settings.margin_bottom\n  assign margin_horizontal_mobile = section.settings.margin_horizontal_mobile\n  assign margin_horizontal = section.settings.margin_horizontal\n  assign background_color = section.settings.background_color\n  assign background_gradient = section.settings.background_gradient\n  assign full_width = section.settings.full_width\n  assign content_width = section.settings.content_width\n  assign section_radius = section.settings.section_radius\n\n  assign content_align = section.settings.content_align\n  assign content_align_mobile = section.settings.content_align_mobile\n\n  assign content_horizontal_align = ''\n  if content_align == 'center'\n    assign content_horizontal_align = 'center'\n  elsif content_align == 'right'\n    assign content_horizontal_align = 'end'\n  else\n    assign content_horizontal_align = 'start'\n  endif\n\n  assign content_horizontal_align_mobile = ''\n  if content_align_mobile == 'center'\n    assign content_horizontal_align_mobile = 'center'\n  elsif content_align_mobile == 'right'\n    assign content_horizontal_align_mobile = 'end'\n  else\n    assign content_horizontal_align_mobile = 'start'\n  endif\n-%}\n\n{%- style -%}\n  .section-{{ section.id }} {\n    border-top: solid {{ border_color }} {{ border_thickness }}px;\n    border-bottom: solid {{ border_color }} {{ border_thickness }}px;\n    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;\n    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;\n    margin-left: {{ margin_horizontal_mobile }}rem;\n    margin-right: {{ margin_horizontal_mobile }}rem;\n    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;\n    overflow: hidden;\n  }\n\n  .section-{{ section.id }}-settings {\n    margin: 0 auto;\n    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;\n    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;\n    padding-left: {{ padding_horizontal_mobile }}rem;\n    padding-right: {{ padding_horizontal_mobile }}rem;\n  }\n\n  .countdown-body-{{ section.id }} {\n    display: flex;\n    flex-direction: column;\n    align-items: {{ content_horizontal_align_mobile }};\n  }\n\n  @media(min-width: 1024px) {\n    .section-{{ section.id }} {\n      margin-top: {{ margin_top }}px;\n      margin-bottom: {{ margin_bottom }}px;\n      margin-left: {{ margin_horizontal }}rem;\n      margin-right: {{ margin_horizontal }}rem;\n      border-radius: {{ section_radius }}px;\n    }\n\n    .section-{{ section.id }}-settings {\n      padding: 0 5rem;\n      padding-top: {{ padding_top }}px;\n      padding-bottom: {{ padding_bottom }}px;\n      padding-left: {{ padding_horizontal }}rem;\n      padding-right: {{ padding_horizontal }}rem;\n    }\n\n    .countdown-body-{{ section.id }} {\n      flex-direction: rows;\n      align-items: {{ content_horizontal_align }};\n    }\n  }\n{%- endstyle -%}\n\n{% unless full_width %}\n  <style>\n    .section-{{ section.id }}-settings {\n      max-width: {{ content_width }}px;\n    }\n  </style>\n{% endunless %}\n\n{% if margin_horizontal_mobile > 0 %}\n  <style>\n    .section-{{ section.id }} {\n      border-left: solid {{ border_color }} {{ border_thickness }}px;\n      border-right: solid {{ border_color }} {{ border_thickness }}px;\n    }\n\n    @media(min-width: 1024px) {\n      .section-{{ section.id }} {\n        border-left: 0px;\n        border-right: 0px;\n      }\n    }\n  </style>\n{% endif %}\n\n{% if margin_horizontal > 0 %}\n  <style>\n    @media(min-width: 1024px) {\n      .section-{{ section.id }} {\n        border-left: solid {{ border_color }} {{ border_thickness }}px;\n        border-right: solid {{ border_color }} {{ border_thickness }}px;\n      }\n    }\n  </style>\n{% endif %}\n\n{% for block in section.blocks %}\n  {% case block.type %}\n    {% when 'heading' %}\n      <style>\n        {{  block.settings.heading_font | font_face: font_display: 'swap' }}\n\n        .countdown-heading-{{ block.id }} {\n          margin-top: {{ block.settings.heading_mt_mobile }}px;\n          text-align: {{ content_align_mobile }};\n        }\n\n        .countdown-heading-{{ block.id }} * {\n          margin: 0;\n          font-size: {{ block.settings.heading_size_mobile }}px;\n          color: {{ block.settings.heading_color }};\n          line-height: {{ block.settings.heading_height }}%;\n          text-transform: unset;\n          text-decoration: none;\n          word-break: break-word;\n          font-weight: 700;\n        }\n\n        @media(min-width: 1024px) {\n          .countdown-heading-{{ block.id }} {\n            margin-top: {{ block.settings.heading_mt }}px;\n            text-align: {{ content_align }};\n          }\n\n          .countdown-heading-{{ block.id }} * {\n            font-size: {{ block.settings.heading_size }}px;\n          }\n        }\n      </style>\n\n      {% if block.settings.heading_custom %}\n        <style>\n          .countdown-heading-{{ block.id }} * {\n            font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};\n            font-weight: {{ block.settings.heading_font.weight }};\n            font-style: {{ block.settings.heading_font.style }};\n          }\n        </style>\n      {% endif %}\n\n    {% when 'text' %}\n      <style>\n        {{  block.settings.text_font | font_face: font_display: 'swap' }}\n\n        .countdown-text-{{ block.id }} {\n          margin-top: {{ block.settings.text_mt_mobile }}px;\n          text-align: {{ content_align_mobile }};\n          max-width: {{ block.settings.text_max_width_mobile }}%;\n        }\n\n        .countdown-text-{{ block.id }} * {\n          margin: 0;\n          font-size: {{ block.settings.text_size_mobile }}px;\n          color: {{ block.settings.text_color }};\n          line-height: {{ block.settings.text_height }}%;\n          text-transform: unset;\n          text-decoration: none;\n          word-break: break-word;\n        }\n\n        .countdown-text-{{ block.id }} strong {\n          color: {{ block.settings.text_active_color }};\n        }\n\n        @media(min-width: 1024px) {\n          .countdown-text-{{ block.id }} {\n            margin-top: {{ block.settings.text_mt }}px;\n            text-align: {{ content_align }};\n            max-width: {{ block.settings.text_max_width }}%;\n          }\n\n          .countdown-text-{{ block.id }} * {\n            font-size: {{ block.settings.text_size }}px;\n          }\n        }\n      </style>\n\n      {% if block.settings.text_custom %}\n        <style>\n          .countdown-text-{{ block.id }} * {\n            font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};\n            font-weight: {{ block.settings.text_font.weight }};\n            font-style: {{ block.settings.text_font.style }};\n          }\n        </style>\n      {% endif %}\n\n    {% when 'timer' %}\n      <style>\n         {{  block.settings.number_font | font_face: font_display: 'swap' }}\n         {{  block.settings.completed_text_font | font_face: font_display: 'swap' }}\n         {{  block.settings.timer_text_font | font_face: font_display: 'swap' }}\n\n         .countdown-{{ block.id }} {\n           margin-top: {{ block.settings.timer_mt_mobile }}px;\n           display: flex;\n           align-items: center;\n           gap: {{ block.settings.timer_gap_mobile }}px;\n           flex-wrap: wrap !important;\n         }\n\n         .countdown-{{ block.id }} .countdown-numbers-{{ block.id }} {\n           display: flex;\n           gap: 5px;\n           align-items: center;\n         }\n\n         .countdown-{{ block.id }} .tick-flip {\n           margin: 0;\n           font-size: {{ block.settings.number_size_mobile }}px;\n           color: {{ block.settings.number_color }};\n           line-height: {{ block.settings.number_height }}%;\n           text-transform: unset;\n           font-weight: 700;\n         }\n\n        .countdown-{{ block.id }} .tick-flip-panel {\n          color: {{ block.settings.number_color }};\n        }\n\n         .countdown-{{ block.id }} .time-block__text {\n           margin-top: {{ block.settings.timer_text_mt_mobile }}px;\n         }\n\n         .tick-credits {\n           display: none !important;\n         }\n\n         .countdown-{{ block.id }} .tick-label.tick-text {\n           margin: 0;\n           width: 100%;\n           text-align: {{ block.settings.timer_text_align_mobile }};\n           margin-top: {{ block.settings.timer_text_mt_mobile }}px;\n           font-size: {{ block.settings.timer_text_size_mobile }}px;\n           color: {{ block.settings.timer_text_color }};\n           line-height: {{ block.settings.timer_text_height }}%;\n           text-transform: unset;\n         }\n\n         .countdown-{{ block.id }} .tick-flip-panel {\n           padding: 0px;\n           background-color: {{ block.settings.number_bg_color }};\n         }\n\n         .countdown-completed-text-{{ block.id }} {\n           display: none;\n           position: relative;\n         }\n\n         .countdown-completed-text-{{ block.id }} * {\n           margin: 0;\n           margin-top: {{ block.settings.completed_text_mt_mobile }}px;\n           font-size: {{ block.settings.completed_text_size_mobile }}px;\n           color: {{ block.settings.completed_text_color }};\n           line-height: {{ block.settings.completed_text_height }}%;\n           text-transform: unset;\n         }\n\n         @media (min-width: 1024px) {\n           .countdown-{{ block.id }} {\n             margin-top: {{ block.settings.timer_mt }}px;\n             gap: {{ block.settings.timer_gap }}px;\n           }\n\n           .countdown-{{ block.id }} .tick-flip {\n             font-size: {{ block.settings.number_size }}px;\n           }\n\n           .countdown-{{ block.id }} .time-block__text {\n             margin-top: {{ block.settings.timer_text_mt }}px;\n           }\n\n           .countdown-{{ block.id }} .tick-label.tick-text {\n             text-align: {{ block.settings.timer_text_align }};\n             margin-top: {{ block.settings.timer_text_mt }}px;\n             font-size: {{ block.settings.timer_text_size }}px;\n           }\n\n           .countdown-completed-text-{{ block.id }} * {\n             margin-top: {{ block.settings.completed_text_mt }}px;\n             font-size: {{ block.settings.completed_text_size }}px;\n           }\n\n           .countdown-{{ block.id }} .tick-flip-panel {\n             padding: 0px 15px;\n             background-color: {{ block.settings.number_bg_color }};\n           }\n         }\n      </style>\n      {% if block.settings.number_custom %}\n        <style>\n          .countdown-{{ block.id }} .tick-flip {\n            font-family: {{ block.settings.number_font.family }}, {{ block.settings.number_font.fallback_families }};\n            font-weight: {{ block.settings.number_font.weight }};\n            font-style: {{ block.settings.number_font.style }};\n          }\n        </style>\n      {% endif %}\n\n      {% if block.settings.timer_text_custom %}\n        <style>\n          .countdown-{{ block.id }} .tick-label.tick-text {\n            font-family: {{ block.settings.timer_text_font.family }}, {{ block.settings.timer_text_font.fallback_families }};\n            font-weight: {{ block.settings.timer_text_font.weight }};\n            font-style: {{ block.settings.timer_text_font.style }};\n          }\n        </style>\n      {% endif %}\n\n      {% if block.settings.completed_text_custom %}\n        <style>\n          .countdown-completed-text-{{ block.id }} * {\n            font-family: {{ block.settings.completed_text_font.family }}, {{ block.settings.completed_text_font.fallback_families }};\n            font-weight: {{ block.settings.completed_text_font.weight }};\n            font-style: {{ block.settings.completed_text_font.style }};\n          }\n        </style>\n      {% endif %}\n\n      {% if block.settings.wrapper_align_mobile == 'center' %}\n        <style>\n          .countdown-wrapper-{{ block.id }} {\n            align-items: center;\n          }\n        </style>\n      {% elsif block.settings.wrapper_align_mobile == 'left' %}\n        <style>\n          .countdown-wrapper-{{ block.id }} {\n            align-items: start;\n          }\n        </style>\n      {% else %}\n        <style>\n          .countdown-wrapper-{{ block.id }} {\n            align-items: end;\n          }\n        </style>\n      {% endif %}\n\n      {% if block.settings.wrapper_align == 'center' %}\n        <style>\n          @media (min-width: 1024px) {\n            .countdown-wrapper-{{ block.id }} {\n              align-items: center;\n            }\n          }\n        </style>\n      {% elsif block.settings.wrapper_align == 'left' %}\n        <style>\n          @media (min-width: 1024px) {\n            .countdown-wrapper-{{ block.id }} {\n              align-items: start;\n            }\n          }\n        </style>\n      {% else %}\n        <style>\n          @media (min-width: 1024px) {\n            .countdown-wrapper-{{ block.id }} {\n              align-items: end;\n            }\n          }\n        </style>\n      {% endif %}\n\n    {% when 'button' %}\n      <style>\n        {{  block.settings.button_font | font_face: font_display: 'swap' }}\n\n        .contdown-button-wrapper-{{ block.id }} {\n          display: flex;\n          justify-content: {{ content_horizontal_align_mobile }};\n        }\n\n        .countdown-button-{{ block.id }} {\n          display: flex;\n          align-items: center;\n          justify-content: center;\n          max-width: fit-content;\n          gap: 10px;\n          width: 100%;\n          margin: 0;\n          margin-top: {{ block.settings.button_mt_mobile }}px;\n          font-size: {{ block.settings.button_size_mobile }}px;\n          color: {{ block.settings.button_color }};\n          line-height: {{ block.settings.button_height }}%;\n          text-align: center;\n          text-transform: unset;\n          text-decoration: none;\n          padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;\n          border-radius: {{ block.settings.button_radius }}px;\n          transition: all 0.3s ease 0s;\n          background-color: transparent;\n          border: 0px;\n          cursor: pointer;\n          font-weight: 700;\n        }\n\n        .countdown-button-inner-{{ block.id }} {\n          margin: 0px;\n          display: flex;\n          align-items: center;\n          justify-content: center;\n          gap: 10px;\n          text-decoration: none;\n        }\n\n        .countdown-button-{{ block.id }}:hover {\n          color: {{ block.settings.button_hover_color }};\n          transition: all 0.25s ease 0s;\n        }\n\n        .countdown-button-{{ block.id }} svg {\n          width: 14px;\n          height: 14px;\n        }\n\n        .countdown-button-{{ block.id }} svg path {\n          fill: {{ block.settings.button_color }};\n          transition: all 0.25s ease 0s;\n        }\n\n        .countdown-button-{{ block.id }}:hover svg path {\n          fill: {{ block.settings.button_hover_color }};\n          transition: all 0.25s ease 0s;\n        }\n\n        @media (min-width: 1024px) {\n          .contdown-button-wrapper-{{ block.id }} {\n            display: flex;\n            justify-content: {{ content_horizontal_align }};\n          }\n\n          .countdown-button-{{ block.id }} {\n            margin-top: {{ block.settings.button_mt }}px;\n            padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;\n            font-size: {{ block.settings.button_size }}px;\n          }\n        }\n      </style>\n\n      {% if block.settings.use_shadow %}\n        <style>\n          .countdown-button-{{ block.id }}:hover {\n            -webkit-box-shadow: 0px 0px 8px 2px {{ block.settings.button_bg_color }};\n            -moz-box-shadow: 0px 0px 8px 2px {{ block.settings.button_bg_color }};\n            box-shadow: 0px 0px 8px 2px {{ block.settings.button_bg_color }};\n          }\n        </style>\n      {% endif %}\n\n      {% if block.settings.button_custom %}\n        <style>\n          .countdown-button-{{ block.id }} {\n            font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};\n            font-weight: {{ block.settings.button_font.weight }};\n            font-style: {{ block.settings.button_font.style }};\n          }\n        </style>\n      {% endif %}\n\n      {% if block.settings.button_style == 'non_outline' or block.settings.button_style == 'non_outline_arrow' %}\n        <style>\n          .countdown-button-{{ block.id }} {\n            transition: all 0.3s ease 0s;\n            background-color: {{  block.settings.button_bg_color }};\n          }\n\n          .countdown-button-{{ block.id }}:hover {\n            transition: all 0.3s ease 0s;\n            background-color: {{  block.settings.button_bg_hover_color }};\n          }\n        </style>\n      {% elsif block.settings.button_style == 'outline' or block.settings.button_style == 'outline_arrow' %}\n        <style>\n          .countdown-button-{{ block.id }} {\n            transition: all 0.3s ease 0s;\n            background-color: {{  block.settings.button_bg_color }};\n            border: {{  block.settings.button_border_thickness }}px solid {{  block.settings.button_border_color }};\n          }\n\n          .countdown-button-{{ block.id }}:hover {\n            transition: all 0.3s ease 0s;\n            background-color: {{  block.settings.button_bg_hover_color }};\n            border: {{  block.settings.button_border_thickness }}px solid {{ block.settings. button_border_hover_color }};\n          }\n        </style>\n      {% elsif block.settings.button_style == 'link' %}\n        <style>\n          .countdown-button-{{ block.id }} {\n            padding: 0px !important;\n            -webkit-box-shadow: none !important;\n            -moz-box-shadow: none !important;\n            box-shadow: none !important;\n          }\n        </style>\n      {% endif %}\n  {% endcase %}\n{% endfor %}\n\n<div\n  class=\"section-{{ section.id }} countdown-{{ section.id }}\"\n  style=\"background-color:{{ background_color }}; background-image: {{ background_gradient }};\"\n>\n  <div class=\"section-{{ section.id }}-settings\">\n    <div class=\"countdown-body-{{ section.id }}\">\n      {% for block in section.blocks %}\n        {% case block.type %}\n          {% when 'heading' %}\n            {% if block.settings.heading != blank %}\n              <div class=\"countdown-heading-{{ block.id }}\">{{ block.settings.heading }}</div>\n            {% endif %}\n\n          {% when 'button' %}\n            {% if block.settings.button != blank %}\n              <div class=\"contdown-button-wrapper-{{ block.id }}\">\n                <a\n                  href=\"{{ block.settings.url }}\"\n                  {% if block.settings.new_tab %}\n                    target=\"_blank\"\n                  {% endif %}\n                  class=\"countdown-button-{{ block.id }}\"\n                >\n                  <p class=\"countdown-button-inner-{{ block.id }}\">\n                    {{ block.settings.button }}\n                    {% if block.settings.button_style == 'non_outline_arrow'\n                      or block.settings.button_style == 'outline_arrow'\n                    %}\n                      <svg\n                        width=\"192\"\n                        height=\"192\"\n                        viewBox=\"0 0 192 192\"\n                        fill=\"none\"\n                        xmlns=\"http://www.w3.org/2000/svg\"\n                      >\n                        <path d=\"M187.827 98.7858C188.123 98.4749 188.123 98.4749 188.123 98.1761C188.419 97.8652 188.419 97.5663 188.704 97.5663C189 96.9566 189 96.6458 189 96.0361C189 95.4263 189 94.8166 188.704 94.5058C188.704 94.195 188.408 93.8961 188.123 93.5852C188.123 93.2744 187.827 93.2744 187.827 92.9755L103.287 4.21945C102.41 3.29889 101.533 3 100.668 3C99.791 3 98.6295 3.31083 98.0488 4.21945C97.1719 5.14 96.8872 6.06058 96.8872 6.96919C96.8872 7.88974 97.1833 9.10918 98.0488 9.7189L175.587 92.0539H6.79206C4.75371 92.0539 3 93.895 3 96.0351C3 98.1751 4.75365 100.016 6.79206 100.016H175.575L97.7543 182.042C96.2967 183.572 96.2967 186.322 97.7543 187.852C99.2119 189.383 101.831 189.383 103.288 187.852L187.827 98.7858Z\" fill=\"black\"></path>\n                        <path fill-rule=\"evenodd\" clip-rule=\"evenodd\" d=\"M188.607 97.5657C188.432 97.5657 188.365 97.6788 188.27 97.8382C188.211 97.9378 188.141 98.0554 188.027 98.1748C188.027 98.4734 188.027 98.4734 187.731 98.7839L103.281 187.759C101.825 189.287 99.2085 189.287 97.7524 187.759C96.2963 186.23 96.2963 183.483 97.7524 181.954L175.492 100.013L6.88489 100.013C4.8486 100.013 3.09677 98.1739 3.09677 96.036C3.09677 93.8982 4.84866 92.059 6.88489 92.059L175.504 92.059L98.0465 9.80878C97.182 9.19968 96.8862 7.9815 96.8862 7.0619C96.8862 6.15422 97.1706 5.2346 98.0465 4.315C98.6267 3.40732 99.787 3.0968 100.663 3.0968C101.527 3.0968 102.403 3.39539 103.279 4.315L187.731 92.9796C187.731 93.1274 187.804 93.2021 187.877 93.2774C187.952 93.3543 188.027 93.4319 188.027 93.5887