down-{{ block.id }}\"\n                data-repeat=\"true\"\n                data-layout=\"horizontal fit\"\n                data-transform=\"preset(d, h, m, s) -> delay\"\n              >\n                <div class=\"tick-group\">\n                  <div\n                    data-key=\"value\"\n                    data-repeat=\"true\"\n                    data-transform=\"pad(00) -> split -> delay\"\n                    class=\"countdown-numbers-{{ block.id }}\"\n                  >\n                    <span data-view=\"flip\"></span>\n                  </div>\n\n                  <span data-key=\"label\" data-view=\"text\" class=\"tick-label\"></span>\n                </div>\n              </div>\n            </div>\n\n            <div class=\"countdown-completed-text-{{ block.id }}\">\n              {{ block.settings.completed_text }}\n            </div>\n        {% endcase %}\n      {% endfor %}\n    </div>\n  </div>\n</div>\n\n<script src=\"https://cdn.jsdelivr.net/npm/@pqina/flip@latest/dist/flip.min.js\"></script>\n\n{% for block in section.blocks %}\n  {% if block.type == 'timer' %}\n    <script>\n      function handleTickInit_{{ block.id }}(tick) {\n        \n        function debounce(func, delay) {\n          let timeout;\n          return function(...args) {\n            const context = this;\n            clearTimeout(timeout);\n            timeout = setTimeout(() => func.apply(context, args), delay);\n          };\n        }\n        \n        const endDateString = `{{ block.settings.year }}/{{ block.settings.month }}/{{ block.settings.day }} {{ block.settings.hour }}:{{ block.settings.minute }}:00`;\n        const endDate = new Date(endDateString);\n\n        const completedMessageElement = document.querySelector('.countdown-completed-text-{{ block.id }}');\n        const timerWrapperElement = tick.root;\n\n         function setTickFlipWidth() {\n          const tickFlipElements = document.querySelectorAll('.countdown-numbers-{{ block.id }} .tick-flip');\n          let maxWidth = 0;\n\n          tickFlipElements.forEach(el => {\n            el.style.width = ''; // Сброс ширины\n            const currentWidth = el.offsetWidth;\n            if (currentWidth > maxWidth) maxWidth = currentWidth;\n          });\n      \n          if (maxWidth) {\n            tickFlipElements.forEach(el => el.style.width = `${maxWidth}px`);\n          }\n        }\n      \n        const debouncedSetTickFlipWidth = debounce(setTickFlipWidth, 250);\n        setTimeout(debouncedSetTickFlipWidth, 50); \n      \n        window.addEventListener('resize', debouncedSetTickFlipWidth);\n\n        const counter = Tick.count.down(endDate, {\n          format: ['d', 'h', 'm', 's']\n        });\n\n        counter.onupdate = function(value) {\n          tick.value = value;\n\n          if (tick.root) {\n            tick.root.setAttribute('aria-label',\n              `Осталось: ${value.days} дней, ${value.hours} часов, ${value.minutes} минут, ${value.seconds} секунд`);\n          }\n\n          const labels = {\n            d: \"{{ block.settings.days_text }}\",\n            h: \"{{ block.settings.hours_text }}\",\n            m: \"{{ block.settings.minutes_text }}\",\n            s: \"{{ block.settings.seconds_text }}\"\n          };\n\n          tick.root.querySelectorAll('[data-key=\"label\"]').forEach((el, index) => {\n            const keys = ['d', 'h', 'm', 's'];\n            const key = keys[index];\n            el.textContent = labels[key];\n          });\n        };\n\n        counter.onended = function() {\n          {% if block.settings.hide_timer_on_completed %}\n            if (timerWrapperElement) {\n              timerWrapperElement.style.display = 'none';\n            }\n            if (completedMessageElement) {\n              completedMessageElement.style.display = 'block';\n            }\n          {% else %}\n            tick.value = { days: 0, hours: 0, minutes: 0, seconds: 0 };\n            if (completedMessageElement) {\n              completedMessageElement.style.display = 'block';\n            }\n          {% endif %}\n        };\n      }\n\n      if (window.Shopify && Shopify.designMode) {\n        document.addEventListener('shopify:section:load', function(event) {\n          if (event.detail.sectionId === '{{ section.id }}') {\n            const tickElements = event.detail.section.querySelectorAll('.tick-{{ block.id }}');\n            tickElements.forEach(tickElement => {\n              if (tickElement.Tick) {\n                tickElement.Tick.unmount();\n              }\n              Tick.mount(tickElement);\n            });\n          }\n        });\n\n        document.addEventListener('shopify:section:unload', function(event) {\n          if (event.detail.sectionId === '{{ section.id }}') {\n            const tickElements = event.detail.section.querySelectorAll('.tick-{{ block.id }}');\n            tickElements.forEach(tickElement => {\n              if (tickElement.Tick) {\n                tickElement.Tick.unmount();\n              }\n            });\n          }\n        });\n      }\n    </script>\n  {% endif %}\n{% endfor %}",
