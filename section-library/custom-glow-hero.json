  "liquid_code": "<link rel=\"preconnect\" href=\"https://fonts.googleapis.com\">\n<link rel=\"preconnect\" href=\"https://fonts.gstatic.com\" crossorigin>\n<link href=\"https://fonts.googleapis.com/css2?family=Red+Hat+Text:wght@500&display=swap\" rel=\"stylesheet\">\n\n<div class=\"hero_banner\">\n  <div class=\"hero_wrapper\">\n    <div class=\"hero_content\">\n      <div class=\"hero_content-title\">\n        <span>{{ section.settings.header }}</span>\n        <p>{{ section.settings.subheader }}</p>\n      </div>\n      <div class=\"hero_img\">\n        <img src=\"{{ section.settings.main_image | img_url: 'master' }}\" alt=\"\">\n      </div>\n      <div class=\"hero_content-bottom\">\n        <div class=\"hero_content-btn\">\n          <a class=\"hero_content-btn_shop\" href=\"{{ section.settings.button_1_url }}\">{{ section.settings.button_1_text }}</a>\n          <a class=\"hero_content-btn_arrow\" href=\"{{ section.settings.button_2_url }}\"><span>{{ section.settings.button_2_text }}</span><svg xmlns=\"http://www.w3.org/2000/svg\" width=\"24\" height=\"24\" fill=\"white\" class=\"bi bi-arrow-right\" viewBox=\"0 0 16 16\">\n  <path fill-rule=\"evenodd\" d=\"M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z\"/>\n</svg></a>\n        </div>\n        <div class=\"hero_content-block\">\n          <div class=\"hero_block-satisfied\">\n            <span>{{section.settings.features_left_num}}</span>\n            <p>{{section.settings.features_left_text}}</p>\n          </div>\n          <div class=\"hero_block-custom\">\n            <span>{{section.settings.features_right_num}}</span>\n            <p>{{section.settings.features_right_text}}</p>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</div>\n\n<style>\n@font-face {\n    font-family: \"Recoleta-Bold\";\n    src: url({{ \"Recoleta-Bold.woff\" | asset_url }}) format(\"woff\"), url({{ \"Recoleta-Bold.woff2\" | asset_url }}) format(\"woff2\"),\n       url({{ \"Recoleta-Bold.ttf\" | asset_url }}) format(\"truetype\"), url({{ \"Recoleta-Bold.svg#svgFontName\" | asset_url }}) format(\"svg\");\n}\n@font-face {\n    font-family: \"Recoleta-SemiBold\";\n    src: url({{ \"Recoleta-SemiBold.woff\" | asset_url }}) format(\"woff\"), url({{ \"Recoleta-SemiBold.woff2\" | asset_url }}) format(\"woff2\");\n}\n@font-face {\n    font-family: \"Recoleta-Medium\";\n    src: url({{ \"Recoleta-Medium.woff\" | asset_url }}) format(\"woff\"), url({{ \"Recoleta-Medium.woff2\" | asset_url }}) format(\"woff2\");\n}\n.hero-section { padding: 0 {{section.settings.section_padding_desktop}}px }\n.hero_content-block {\n  display: flex;\n  padding-top: 25px;\n}\n.hero_content-block p {\n\ttext-shadow: \n\t\t-0   -1px 0   #5769EB,\n\t\t 0   -1px 0   #5769EB,\n\t\t-0    1px 0   #5769EB,\n\t\t 0    1px 0   #5769EB,\n\t\t-1px -0   0   #5769EB,\n\t\t 1px -0   0   #5769EB,\n\t\t-1px  0   0   #5769EB,\n\t\t 1px  0   0   #5769EB,\n\t\t-1px -1px 0   #5769EB,\n\t\t 1px -1px 0   #5769EB,\n\t\t-1px  1px 0   #5769EB,\n\t\t 1px  1px 0   #5769EB,\n\t\t-1px -1px 0   #5769EB,\n\t\t 1px -1px 0   #5769EB,\n\t\t-1px  1px 0   #5769EB,\n\t\t 1px  1px 0   #5769EB;\n}\n.hero_block-satisfied {\n  max-width: 188px;\n  width: 100%;\n  padding: 20px;\n  margin-right: 20px;\n  text-align: center;\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  justify-content: center;\n  position: relative;\n  color: {{ section.settings.features_color }};\n}\n.hero_block-satisfied::after {\n  content:\"\";\n  position:absolute;\n  top:0;\n  left:0;\n  right:0;\n  bottom:0;\n  border-radius: 15px; \n  padding: 2px; \n  background:linear-gradient({{section.settings.global_gradient_color_1}}, {{section.settings.global_gradient_color_3}}, {{section.settings.global_gradient_color_2}});\n  -webkit-mask: \n     linear-gradient(#fff 0 0) content-box, \n     linear-gradient(#fff 0 0);\n  -webkit-mask-composite: xor;\n          mask-composite: exclude; \n}\n.hero_block-satisfied span {\n  font-weight:600;\n  font-family: \"Recoleta-Bold\";\n  font-size: {{ section.settings.features_num_font_size }}px;\n}\n.hero_block-satisfied p {\n  font-weight:600;\n  margin: 15px 0 0 0;\n  font-size: {{ section.settings.features_font_size }}px;\n}\n.hero_block-custom {\n  max-width: 188px;\n  width: 100%;\n  text-align: center;\n  padding: 20px;\n  margin-left: 20px;\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  justify-content: center;\n  position: relative;\n  color: {{ section.settings.features_color }};\n}\n.hero_block-custom::after {\n  content:\"\";\n  position:absolute;\n  top:0;\n  left:0;\n  right:0;\n  bottom:0;\n  border-radius: 15px; \n  padding: 2px; \n  background:linear-gradient({{section.settings.global_gradient_color_1}}, {{section.settings.global_gradient_color_3}}, {{section.settings.global_gradient_color_2}});\n  -webkit-mask: \n     linear-gradient(#fff 0 0) content-box, \n     linear-gradient(#fff 0 0);\n  -webkit-mask-composite: xor;\n          mask-composite: exclude; \n}\n.hero_block-custom span {\n  font-weight: 600;\n  font-family: \"Recoleta-Bold\";\n  font-size: {{ section.settings.features_num_font_size }}px;\n  line-height: 1.3em;\n}\n.hero_block-custom p {\n  font-weight: 600;\n  font-size: {{ section.settings.features_font_size }}px;\n  margin: 16px 0 0 0;\n}\n\n.hero_content {\n  display: flex;\n  flex-wrap: wrap;\n}\n.hero_content-title {\n  flex: 0 1 50%;\n  padding-bottom: 20px;\n  font-weight: 600;\n}\n.hero_img {\n  flex: 0 1 50%;\n  height: 10px;\n}\n.hero_img img {\n  margin-top: 50px;\n  max-width: 100%;\n}\n.hero_wrapper {\n  max-width: 125rem;\n  margin: 0 auto;\n  padding: 80px 25px;\n  display: flex;\n}\n.hero_content-title span {\n  font-family: \"Recoleta-Bold\";\n  font-weight: bold;\n  line-height: 1.1;\n  color: {{section.settings.header_color}};\n  font-size: {{section.settings.header_font_size}}px;\n}\n.hero_content-title p {\n  font-family: 'Red Hat Text';\n  font-weight: normal;\n  line-height: 1.5;\n  color: #fff;\n  font-size: 18px;\n}\n.hero_content-btn {\n  font-family: 'Red Hat Text';\n  display: flex;\n  align-items: center;\n  justify-content: space-between;\n  margin-bottom: 25px;\n}\n.hero_content-btn_arrow {\n  flex: 0 1 40%;\n  display: flex;\n  align-items: center;\n  text-decoration: none;\n}\n.hero_content-btn_arrow span {\n  font-weight: 500;\n  font-size: 16px;\n  line-height: 42px;\n  color: #FFFFFF;\n  padding-right: 10px;\n}\n.hero_content-btn_shop {\n  border-radius: 15px;\n  padding: {{section.settings.button_1_font_size}}px;\n  flex: 0 1 40%;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  background: linear-gradient(to right, {{section.settings.global_gradient_color_1}} 0%,{{section.settings.global_gradient_color_2}} 50%, {{section.settings.global_gradient_color_3}});\n  font-family: 'Red Hat Text';\n  font-size: {{ section.settings.button_1_font_size }}px;\n  color: {{ section.settings.button_1_color }};\n  text-decoration: none;\n}\n\n\n@media (max-width: 1100px) {\n  .hero_img img {\n    padding: 0;\n    max-width: 100%;\n  }\n  .hero_img {\n    height: auto;\n    margin: 0 auto;\n  }\n  .hero_content-btn_arrow span {\n    display: block;\n  }\n}\n\n@media (max-width: 1020px) {\n  .hero-section { padding: 0 {{section.settings.section_padding_tab}}px }\n\n  .hero_content {\n    flex-direction: column;\n  }\n  .hero_content-title {\n    flex: auto;\n  }\n  .hero_img {\n    flex: auto;\n  }\n  .hero_content-bottom {\n  }\n}\n\n@media (max-width: 767px) {\n\n  .hero_content-block {\n  padding-top: 0px;\n}\n  \n  .hero_img img {\n    margin-top: 0px;\n  }\n  .hero-section { padding: 0 {{section.settings.section_padding_mob}}px }\n  .hero_wrapper {\n    padding: 40px 15px;\n  }\n  .hero_content-btn_arrow {\n    flex: auto;\n    padding-left: 20px;\n  }\n  .hero_block-custom {\n    max-width: 140px;\n  }\n  .hero_block-satisfied {\n    max-width: 140px;\n  }\n  .hero_content-title {\n    padding-bottom: 0px;\n  }\n  .hero_content-title span {\n    line-height: 1.1em;\n    font-size: {{section.settings.header_font_mob_size}}px;\n  }\n  .hero_block-satisfied span {\n    font-weight:600;\n    font-size: {{ section.settings.features_num_font_mob_size }}px;\n  }\n  .hero_block-satisfied p {\n    margin: 15px 0 0 0;\n    font-size: {{ section.settings.features_font_mob_size }}px;\n  }\n\n  .hero_block-custom span {\n  font-size: {{ section.settings.features_num_font_mob_size }}px;\n  line-height: 1.3em;\n    \n  }\n  .hero_block-custom p {\n    font-size: {{ section.settings.features_font_mob_size }}px;\n  }\n}\n\n@media (max-width: 425px) {\n  .hero_content-btn_shop {\n  \tmargin:20px;\n    padding: 14px 24px;\n  }\n  .hero_content-btn{\n    flex-flow: column;\n  }\n  .hero_content-block {\n    justify-content: space-around;\n  }\n  .hero_block-satisfied {\n    margin: 0;\n  }\n  .hero_block-custom {\n    margin: 0;\n  }\n}\n\n.hero_banner {\n  background: linear-gradient(119.19deg, {{section.settings.body_gradient_color_1}} -3.63%, {{section.settings.body_gradient_color_2}} -3.62%, {{section.settings.body_gradient_color_3}} 27.59%, {{section.settings.body_gradient_color_4}} 54.32%, {{section.settings.body_gradient_color_5}} 71.73%, #12173D 99.72%);\n}\n\n\n\n</style>",
