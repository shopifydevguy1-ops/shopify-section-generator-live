  "type": "hero",
  "liquid_code": "<header class=\"header\">\n    <div class=\"container\">\n      <div class=\"cover\">\n        <div class=\"cover__image image\">\n          <div class=\"image__cover\">\n                {%- if section.settings.section_image -%}\n                    {{ section.settings.section_image | image_url: width: section.settings.section_image.width | image_tag: class: \"image__nft\", alt: section.settings.heading }}\n                {%- else -%}\n                    {{ 'image' | placeholder_svg_tag }}\n                {%- endif -%}\n          </div>\n        </div>\n        <div class=\"cover__content nft\">\n          <h1 class=\"nft__title\">{{section.settings.heading}}</h1>\n          <div class=\"nft__author-wrapper\">\n            <div class=\"nft__author-logo-wrapper\">\n                {%- if section.settings.author_logo -%}\n                    {{ section.settings.author_logo | image_url: width: section.settings.author_logo.width | image_tag: class: \"nft__author-logo\", alt: section.settings.heading }}\n                {%- else -%}\n                    {{ 'image' | placeholder_svg_tag }}\n                {%- endif -%}\n            </div>\n            <div class=\"nft__author-nickname\">{{section.settings.author_nickname}}</div>\n          </div>\n          <div class=\"nft__price-wrapper\">\n            <div class=\"current-price\">\n              <div class=\"current-price__title\">Current Price</div>\n              <div class=\"current-price__eth\">\n                {{section.settings.price__eth}}\n                <span>{{section.settings.price__eth_units}}</span>\n              </div>\n              <div class=\"current-price__usd\">{{section.settings.price_usd}}</div>\n            </div>\n            <div class=\"collection-info\">\n              <div class=\"collection-info__title\">Collection Info</div>\n              <div class=\"collection-info__wrapper-quantity-marketcap\">\n                <div class=\"collection-info__quantity-wrapper\">\n                  <div class=\"collection-info__quantity-all\">{{section.settings.collection_quantity_all}}</div>\n                  <div class=\"collection-info__quantity-name\">{{section.settings.collection_quantity_name}}</div>\n                </div>\n                <div class=\"collection-info__marketcap-wrapper\">\n                  <div class=\"collection-info__marketcap-all\">{{section.settings.collection_marketcap_all}}</div>\n                  <div class=\"collection-info__marketcap-name\">{{section.settings.collection_marketcap_name}}</div>\n                </div>\n              </div>\n            </div>\n          </div>\n          <div class=\"collection-info__button-wrapper\">\n            <div class=\"button-wrapper\">\n              <a href=\"{{section.settings.buynow_url}}\" class=\"button button__buy-now\">{{section.settings.buynow_text}}</a>\n            </div>\n            <div class=\"button-wrapper\">\n              <a href=\"{{section.settings.seeall_url}}\" class=\"button button__see-all\">{{section.settings.seeall_text}}</a>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </header>",
