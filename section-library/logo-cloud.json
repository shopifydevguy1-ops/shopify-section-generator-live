    },
    "padding_top": {
      "type": "text",
      "default": "12",
      "label": "Padding top",
      "description": "Padding top"
    },
    "padding_bottom": {
      "type": "text",
      "default": "12",
      "label": "Padding bottom",
      "description": "Padding bottom"
    },
    "section-width": {
      "type": "text",
      "default": "120",
      "label": "Section content width",
      "description": "Section content width"
    }
  }
