{
  "id": "slideshow-2",
  "name": "Banner slider 2",
  "description": "Section: Banner slider 2",
  "tags": [
    "slideshow"
  ],
  "type": "custom",
  "liquid_code": "<style>\n  .section-{{ section.id }}-padding {\n    padding-top: var(--pt);\n    padding-bottom: var(--pb);\n  }\n\n  @media screen and (min-width: 750px) {\n    .section-{{ section.id }}-padding {\n      padding-top: var(--pt-desktop);\n      padding-bottom: var(--pb-desktop);\n    }\n  }\n</style>\n{% assign content_font_family = section.settings.content_text_font %}\n<style>\n  {{ content_font_family | font_face }}\n</style>\n<style>\n  .swiper-{{ section.id }} {\n    --swiper-pagination-bullet-inactive-color: #D9D9D9;\n    --swiper-pagination-bullet-inactive-opacity: 1;\n    --swiper-pagination-bullet-horizontal-gap: 0;\n    --swiper-pagination-bottom: 40px;\n    --swiper-pagination-bullet-width: 15px;\n    --swiper-pagination-bullet-height: 15px;\n    font-family: var(--font-family);\n    height: var(--mobile-height);\n  }\n  @media screen and (min-width: 750px) {\n    .swiper-{{ section.id }} {\n      height: var(--desktop-height);\n    }\n  }\n  @media screen and (max-width: 749.5px) {\n    .swiper-{{ section.id }} {\n      --swiper-pagination-bottom: 23px;\n    }\n  }\n  .swiper-{{ section.id }} .swiper-slide {\n    position: relative;\n    height: auto;\n  }\n  .swiper-{{ section.id }} img {\n    width: 100%;\n    height: 100%;\n    object-fit: cover;\n  }\n  div.swiper-button-next-{{ section.id }},\n  div.swiper-button-prev-{{ section.id }} {\n    display: block;\n    bottom: 16px;\n    top: unset;\n    margin-top: unset;\n    width: 66px;\n    height: 66px;\n    display: flex;\n    justify-content: center;\n    align-items: center;\n    border: 1px solid var(--swiper-navigation-color);\n    border-radius: 50%;\n    --swiper-navigation-size: 22px;\n  }\n  div.swiper-button-next-{{ section.id }} {\n    right: 25px;\n    left: unset;\n  }\n  div.swiper-button-prev-{{ section.id }} {\n    right: 100px;\n    left: unset;\n  }\n  main div.swiper-pagination-{{ section.id }} {\n    width: fit-content !important;\n    border-radius: 16px;\n    left: unset;\n    transform: unset;\n    background: var(--swiper-pagination-bg-color);\n    padding: 11px 20px;\n    display: flex;\n    gap: 17px;\n  }\n  .swiper-pagination-{{ section.id }} span {\n    --swiper-pagination-bullet-inactive-color: transparent;\n    border: 1px solid var(--swiper-pagination-color);\n  }\n  .overlay-{{ section.id }} {\n    background-color: rgba(0, 0, 0, var(--overlay-opacity));\n    position: absolute;\n    top: 0;\n    left: 0;\n    width: 100%;\n    height: 100%;\n    display: block !important;\n  }\n  .text-content-{{ section.id }} {\n    position: absolute;\n    top: 45%;\n    left: 50%;\n    transform: translate(-50%, -50%);\n    color: var(--text-color);\n    text-align: center;\n    width: 87%;\n    line-height: 1.4;\n  }\n  .p-{{ section.id }} {\n     margin-bottom: 30px;\n     max-width: 570px;\n     margin-left: auto;\n     margin-right: auto;\n  }\n  @media screen and (min-width: 750px) {\n    .text-content-{{ section.id }} {\n      text-align: left;\n    }\n    .p-{{ section.id }} {\n      margin-left: unset;\n    }\n    main div.swiper-pagination-{{ section.id }} {\n      left: 50% !important;\n      transform: translateX(-50%);\n      gap: 25px;\n    }\n    div.swiper-button-next-{{ section.id }},\n    div.swiper-button-prev-{{ section.id }} {\n      bottom: 32px;\n    }\n  }\n  .banner-desktop-only {\n    display: none;\n  }\n  @media screen and (min-width: 750px) {\n\n    .swiper-{{ section.id }} {\n      --swiper-pagination-bullet-width: 20px;\n      --swiper-pagination-bullet-height: 20px;\n    }\n\n    .text-content-{{ section.id }} {\n      top: 50%;\n    }\n    \n    .banner-mobile-only {\n      display: none;\n    }\n    .banner-desktop-only {\n      display: block;\n    }\n  }\n  .button-wrapper-{{ section.id }} {\n    display: flex;\n    justify-content: center;\n    gap: 27px;\n  }\n  @media screen and (min-width: 750px) {\n    .button-wrapper-{{ section.id }} {\n        justify-content: flex-start;\n    }\n  }\n\n  .btn-{{ section.id }} {\n    border-radius: 20px;\n    display: flex;\n    justify-content: center;\n    align-items: center;\n    padding: 20px 30px;\n    max-width: 217px;\n    text-decoration: none;\n  }\n  .swiper-slide-image-{{ section.id }},\n  .swiper-slide-image-{{ section.id }} svg {\n    height: 100%;\n    width: 100%;\n    object-fit: cover;\n  }\n</style>\n{% assign height = section.settings.height %}\n{% assign mobile_height = section.settings.mobile_height %}\n<div\n  class=\"section-{{ section.id }}-padding\"\n  style=\"\n    background-color:{{ section.settings.background-color }};\n    --pt: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;\n    --pt-desktop: {{ section.settings.padding_top }}px;\n    --pb: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;\n    --pb-desktop: {{ section.settings.padding_bottom }}px;\n    --swiper-pagination-color: {{ section.settings.pagination_color }};\n    --swiper-pagination-bg-color: transparent;\n    --swiper-navigation-color: {{ section.settings.navigation_color }};\n    --font-family: {{ content_font_family.family | escape }};\n    --swiper-pagination-bullet-size: 20px;\n  \"\n>\n  <div\n    class=\"swiper swiper-{{ section.id }}\"\n    style=\"\n      --overlay-opacity: {{ section.settings.overlay | divided_by: 100.0 }};\n      --text-color: {{ section.settings.text_color }};\n      --desktop-height: {{ height }}px;\n      --mobile-height: {{ mobile_height }}px;\n    \"\n  >\n    <div class=\"swiper-wrapper\">\n      {% for block in section.blocks %}\n        <div\n          class=\"swiper-slide\"\n          style=\"\"\n          {{ block.shopify_attributes }}\n        >\n          {% if block.settings.image != blank %}\n            {% assign image = block.settings.image %}\n\n            <img\n              src=\"{{ image | img_url: '1200x' }}\"\n              alt=\"{{ image.alt | escape }}\"\n              srcset=\"\n                {{ image | img_url: '300x' }} 300w,\n                {{ image | img_url: '600x' }} 600w,\n                {{ image | img_url: '900x' }} 900w,\n                {{ image | img_url: '1200x' }} 1200w,\n                {{ image | img_url: '1500x' }} 1500w,\n                {{ image | img_url: '1800x' }} 1800w,\n                {{ image | img_url: '2100x' }} 2100w,\n                {{ image | img_url: 'master' }} 3000w\n              \"\n              class=\"{% if block.settings.mobile_image != blank %} banner-desktop-only {% endif %} swiper-slide-image-{{ section.id }}\"\n              {% if section.settings.lazy %}loading=\"lazy\"{% endif %}\n            >\n            {% if block.settings.mobile_image != blank %}\n              {% assign image = block.settings.mobile_image %}\n              <img\n                src=\"{{ image | img_url: '1200x' }}\"\n                alt=\"{{ image.alt | escape }}\"\n                srcset=\"\n                  {{ image | img_url: '300x' }} 300w,\n                  {{ image | img_url: '600x' }} 600w,\n                  {{ image | img_url: '900x' }} 900w,\n                  {{ image | img_url: '1200x' }} 1200w,\n                  {{ image | img_url: '1500x' }} 1500w,\n                  {{ image | img_url: '1800x' }} 1800w,\n                  {{ image | img_url: '2100x' }} 2100w,\n                  {{ image | img_url: 'master' }} 3000w\n                \"\n                class=\"banner-mobile-only swiper-slide-image-{{ section.id }}\"\n                {% if section.settings.lazy %}loading=\"lazy\"{% endif %}\n                {% if mobile_height %}\n                  style=\"height: {{ mobile_height }}px;\"\n                {% endif %}\n              >\n            {% endif %}\n          {% else %}\n            {% comment %} Check https://www.shopify.com/partners/blog/placeholder-images {% endcomment %}\n            <div\n              class=\"banner-desktop-only swiper-slide-image-{{ section.id }}\"\n              {% if height %}\n                style=\"height: {{ height }}px;\"\n              {% endif %}\n            >\n              {{ 'lifestyle-1' | placeholder_svg_tag }}\n            </div>\n            <div\n              class=\"banner-mobile-only swiper-slide-image-{{ section.id }}\"\n            >\n              {{ 'collection-1' | placeholder_svg_tag }}\n            </div>\n          {% endif %}\n\n          <div\n            class=\"overlay-{{ section.id }}\"\n            style=\"\n              {% if block.settings.overlay > 0 %}\n                --overlay-opacity: {{ block.settings.overlay | divided_by: 100.0 }};\n              {% endif %}\n            \"\n          ></div>\n\n          <div class=\"text-content-{{ section.id }}\">\n            {% if block.settings.title != blank %}\n              <div\n                style=\"\n                  color: {{ section.settings.title_color }};\n                  font-size: {{ section.settings.title_size }}px;\n                  margin-bottom: 16px;\n                  line-height:1.1;\n                \"\n              >\n                {{ block.settings.title }}\n              </div>\n            {% endif %}\n            {% if block.settings.text != blank %}\n              <p\n                class=\"p-{{ section.id }}\"\n                style=\"\n                  color: {{ section.settings.text_color }};\n                  font-size: {{ section.settings.text_size }}px;\n                \"\n              >\n                {{ block.settings.text }}\n              </p>\n            {% endif %}\n            <div class=\"button-wrapper-{{ section.id }}\">\n              {% if block.settings.link_text != blank %}\n                <a\n                  href=\"{{ block.settings.link }}\"\n                  class=\"btn-{{ section.id }}\"\n                  style=\"\n                    color: {{ section.settings.button_text_color }};\n                    background-color: transparent;\n                    border: 1px solid {{ section.settings.button_color }};\n                    font-size: {{ section.settings.button_font_size }}px;\n                  \"\n                >\n                  {{- block.settings.link_text -}}\n                </a>\n              {% endif %}\n            </div>\n          </div>\n        </div>\n      {% endfor %}\n    </div>\n    <div class=\"swiper-pagination swiper-pagination-{{ section.id }}\"></div>\n    <div class=\"swiper-button-next swiper-button-next-{{ section.id }}\"></div>\n    <div class=\"swiper-button-prev swiper-button-prev-{{ section.id }}\"></div>\n  </div>\n</div>\n\n<link\n  rel=\"stylesheet\"\n  href=\"https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css\"\n>\n\n<script\n  src=\"https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js\"\n  defer\n></script>\n\n<script>\n  // load the swiper css and js only once:\n  (function () {\n    function loadSwiperOnBannerSlider2() {\n      if (typeof Swiper === 'undefined') {\n        setTimeout(loadSwiperOnBannerSlider2, 100);\n        return;\n      }\n      try {\n        new Swiper('.swiper-{{ section.id }}', {\n          slidesPerView: 1,\n          navigation: {\n            nextEl: '.swiper-button-next-{{ section.id }}',\n            prevEl: '.swiper-button-prev-{{ section.id }}',\n          },\n          pagination: {\n            el: '.swiper-pagination-{{ section.id }}',\n            clickable: true,\n          },\n          loop: true,\n          {% if section.settings.autoplay %}\n            autoplay: {\n              delay: {{ section.settings.autoplay_delay | times: 1000 }},\n            },\n          {% endif %}\n        });\n      } catch (e) {\n        console.log('Swiper not loaded');\n        console.log(e);\n      }\n    }\n    //document.addEventListener('swiper:loaded', loadSwiperOnBannerSlider2);\n    loadSwiperOnBannerSlider2();\n    if (window.Shopify && Shopify.designMode) {\n      document.addEventListener(\n        'shopify:section:load',\n        loadSwiperOnBannerSlider2\n      );\n    }\n  })();\n</script>",
  "variables": {
    "height": {
      "type": "text",
      "default": "600",
      "label": "Section height",
      "description": "Section height"
    },
    "mobile_height": {
      "type": "text",
      "default": "550",
      "label": "Section height (mobile)",
      "description": "Section height (mobile)"
    },
    "overlay": {
      "type": "text",
      "default": "50",
      "label": "Overlay",
      "description": "Will be applied to all slides"
    },
    "content_text_font": {
      "type": "text",
      "default": "open_sans_n4",
      "label": "Font family",
      "description": "Font family"
    },
    "title_size": {
      "type": "text",
      "default": "40",
      "label": "Title",
      "description": "Title"
    },
    "text_size": {
      "type": "text",
      "default": "16",
      "label": "Content",
      "description": "Content"
    },
    "button_font_size": {
      "type": "text",
      "default": "20",
      "label": "Button",
      "description": "Button"
    },
    "autoplay": {
      "type": "text",
      "default": "",
      "label": "Autoplay",
      "description": "Autoplay"
    },
    "autoplay_delay": {
      "type": "text",
      "default": "3",
      "label": "Autoplay Delay",
      "description": "Autoplay Delay"
    },
    "title_color": {
      "type": "color",
      "default": "#FFFFFF",
      "label": "Title Color",
      "description": "Title Color"
    },
    "text_color": {
      "type": "color",
      "default": "#FFFFFF",
      "label": "Content Text Color",
      "description": "Content Text Color"
    },
    "button_text_color": {
      "type": "color",
      "default": "#FFFFFF",
      "label": "Button text color",
      "description": "Button text color"
    },
    "button_color": {
      "type": "color",
      "default": "#FFFFFF",
      "label": "Button border color",
      "description": "Button border color"
    },
    "pagination_color": {
      "type": "color",
      "default": "#FFFFFF",
      "label": "Pagination (dot) color",
      "description": "Pagination (dot) color"
    },
    "navigation_color": {
      "type": "color",
      "default": "#FFFFFF",
      "label": "Navigation (arrow) color",
      "description": "Navigation (arrow) color"
    },
    "padding_top": {
      "type": "text",
      "default": "0",
      "label": "Padding top",
      "description": "Padding top"
    },
    "padding_bottom": {
      "type": "text",
      "default": "36",
      "label": "Padding bottom",
      "description": "Padding bottom"
    },
    "lazy": {
      "type": "text",
      "default": "false",
      "label": "Lazy load",
      "description": "Lazy load images below fold for speed optimisation"
    }
  }
}