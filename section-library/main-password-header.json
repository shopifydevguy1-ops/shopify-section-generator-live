{
  "id": "main-password-header",
  "name": "t:sections.main-password-header.name",
  "description": "Section: t:sections.main-password-header.name",
  "tags": [
    "main"
  ],
  "type": "custom",
  "liquid_code": "<style type=\"text/css\">\n  .password-logo {\n    max-width: {{ section.settings.logo_max_width }}px;\n  }\n</style>\n\n<div class=\"color-{{ section.settings.color_scheme }} gradient\">\n  <div class=\"password-header\">\n    {%- if section.settings.logo != blank -%}\n      {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}\n      {%- assign logo_height = section.settings.logo_max_width | divided_by: section.settings.logo.aspect_ratio -%}\n      {{ section.settings.logo | image_url: width: section.settings.logo.width | image_tag:\n        class: 'password-logo',\n        widths: '50, 100, 150, 200, 250, 300, 400, 500',\n        width: section.settings.logo_max_width,\n        height: logo_height,\n        alt: logo_alt\n      }}\n    {%- else -%}\n      <h1 class=\"h2\">{{ shop.name }}</h1>\n    {%- endif -%}\n\n    {%- if shop.password_message != blank -%}\n      <div class=\"password-content\">\n        {{ shop.password_message }}\n      </div>\n    {%- endif -%}\n\n    <password-modal>\n      <details class=\"password-modal modal\">\n        <summary class=\"modal__toggle\" aria-haspopup=\"dialog\">\n          <div class=\"modal__toggle-open password-link link underlined-link\">\n            {% render 'icon-padlock' %}\n            {{ 'general.password_page.login_password_button' | t }}\n          </div>\n          <div class=\"modal__toggle-close\" aria-hidden=\"true\">\n            {% render 'icon-close' %}\n          </div>\n        </summary>\n        <div\n          class=\"modal__content\"\n          role=\"dialog\"\n          aria-labelledby=\"DialogHeading\"\n          aria-modal=\"true\"\n        >\n          <div class=\"password-modal__content\" tabindex=\"-1\">\n            <button type=\"button\" class=\"modal__close-button link\" aria-label=\"{{ 'accessibility.close' | t }}\">\n              {% render 'icon-close' %}\n            </button>\n            <h2 class=\"password-modal__content-heading\" id=\"DialogHeading\">\n              {{ 'general.password_page.login_form_heading' | t }}\n            </h2>\n            {%- form 'storefront_password', class: 'password-form' -%}\n              <div class=\"password-field field{% if form.errors %} password-field--error{% endif %}\">\n                <input\n                  type=\"password\"\n                  name=\"password\"\n                  id=\"Password\"\n                  class=\"field__input\"\n                  autocomplete=\"current-password\"\n                  {% if form.errors %}\n                    aria-invalid=\"true\"\n                    aria-describedby=\"PasswordLoginForm-password-error\"\n                  {%- endif -%}\n                  placeholder=\"{{ 'general.password_page.login_form_password_placeholder' | t }}\"\n                >\n                <label class=\"field__label\" for=\"{{ 'general.password_page.login_form_password_label' | t }}\">{{ 'general.password_page.login_form_password_placeholder' | t }}</label>\n                {%- if form.errors -%}\n                  <div id=\"PasswordLoginForm-password-error\" role=\"status\">\n                    <span class=\"visually-hidden\">{{ 'accessibility.error' | t }}</span>\n                    <span class=\"form__message\">{% render 'icon-error' %} {{ 'general.password_page.login_form_error' | t }}</span>\n                  </div>\n                {%- endif -%}\n              </div>\n              <button name=\"commit\" class=\"password-button button button--outline\">\n                {{ 'general.password_page.login_form_submit' | t }}\n              </button>\n            {%- endform -%}\n            <small class=\"password__footer-text\">{{ 'general.password_page.admin_link_html' | t }}</small>\n          </div>\n        </div>\n      </details>\n    </password-modal>\n  </div>\n</div>\n{%- if section.settings.color_scheme == 'background-1' -%}<hr>{%- endif -%}",
  "variables": {
    "logo": {
      "type": "text",
      "default": "",
      "label": "t:sections.main-password-header.settings.logo.label",
      "description": "t:sections.main-password-header.settings.logo.label"
    },
    "logo_max_width": {
      "type": "text",
      "default": "100",
      "label": "t:sections.main-password-header.settings.logo_max_width.label",
      "description": "t:sections.main-password-header.settings.logo_max_width.label"
    },
    "color_scheme": {
      "type": "text",
      "default": "background-1",
      "label": "t:sections.all.colors.label",
      "description": "t:sections.all.colors.label"
    }
  }
}