{
  "id": "glow-faq",
  "name": "Glow FAQ",
  "description": "Section: Glow FAQ",
  "tags": [
    "glow",
    "faq"
  ],
  "type": "faq",
  "liquid_code": "<link rel=\"preconnect\" href=\"https://fonts.googleapis.com\">\n<link rel=\"preconnect\" href=\"https://fonts.gstatic.com\" crossorigin>\n<link href=\"https://fonts.googleapis.com/css2?family=Red+Hat+Text:wght@500&display=swap\" rel=\"stylesheet\">\n\n{% assign cards = section.blocks | where: \"type\", \"card\" %}\n<div class=\"glow-faq-section\" id=\"glow-faq-section\">\n  <h2 class=\"grodas-accordion-section__title\">{{ section.settings.title }}</h2>\n  <div class=\"grodas-ac-cards js-grodas-ac-cards\" data-collapse=\"{{ section.settings.collapse_other }}\">\n    {% for card in cards %}\n      <div class=\"grodas-ac-card js-grodas-ac-card {% if forloop.first %}grodas-ac-card--active{% endif %}\">\n        <div class=\"grodas-ac-card__wrapper js-grodas-ac-card-wrapper\">\n          <button class=\"grodas-ac-card__button js-grodas-ac-card-button\" type=\"button\"></button>\n          <h3 class=\"grodas-ac-card__title\">{{ card.settings.title }}</h3>\n          <p class=\"grodas-ac-card__content\">{{ card.settings.content | newline_to_br }}</p>\n        </div>\n      </div>\n    {% endfor %}\n  </div>\n</div>",
  "variables": {
    "title": {
      "type": "textarea",
      "default": "<p>Frequently Asked Questions</p>",
      "label": "Title",
      "description": "Title"
    },
    "collapse_other": {
      "type": "text",
      "default": "true",
      "label": "Collapse other cards on click",
      "description": "Collapse other cards on click"
    },
    "header_font_size": {
      "type": "text",
      "default": "42",
      "label": "Header Font Size",
      "description": "Header Font Size"
    },
    "header_mob_font_size": {
      "type": "text",
      "default": "28",
      "label": "Mobile Header Font Size",
      "description": "Mobile Header Font Size"
    },
    "blur_color": {
      "type": "color",
      "default": "#DBD7F2",
      "label": "Accordion Icon Blur color",
      "description": "Accordion Icon Blur color"
    },
    "gradient_color_1": {
      "type": "color",
      "default": "#4222DE",
      "label": "Gradient color 1",
      "description": "Gradient color 1"
    },
    "gradient_color_2": {
      "type": "color",
      "default": "#659BFF",
      "label": "Gradient color 2",
      "description": "Gradient color 2"
    },
    "gradient_color_3": {
      "type": "color",
      "default": "#7FF6E8",
      "label": "Gradient color 3",
      "description": "Gradient color 3"
    }
  }
}